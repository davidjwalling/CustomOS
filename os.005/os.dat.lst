  1382                                  ;
  1383                                  ;       Loader Data
  1384                                  ;
  1385                                  ;       The loader data is updated to include constants defining the initial (Loader) TSS and LDT selectors in the
  1386                                  ;       GDT, a work area to build the GDTR, and additional text messages.
  1387                                  ;
  1388                                  ;-----------------------------------------------------------------------------------------------------------------------
  1389                                                          align   2
  1390                                  cwLoaderLDT             dw      EGDTLOADERLDT                                   ;loader local descriptor table selector
  1391                                  cwLoaderTSS             dw      EGDTLOADERTSS                                   ;loader task state segment selector
  1392                                  cbLoaderGDT             times   5 db 0                                          ;6-byte GDTR work area
  1393                                  cbLoaderGDTHiByte       db      0                                               ;hi-order byte
  1394                                  czCPUErrorMsg           db      "The operating system requires an i386 or later processor.",13,10
  1395                                                          db      "Please press any key to restart the computer.",13,10,0
  1396                                  czCPUOKMsg              db      "CPU OK",13,10,0                                ;CPU level ok message
  1397                                  czGDTOKMsg              db      "GDT prepared",13,10,0                          ;global descriptor table ok message
  1398                                  czKernelLoadedMsg       db      "Kernel loaded",13,10,0                         ;kernel loaded message
  1399                                  czStartingMsg           db      "Starting OS",13,10,0                           ;starting message
  1400                                                          times   1024-($-$$) db 0h                               ;zero fill to end of sector
