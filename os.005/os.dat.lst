  2011                                                          je      irq1.50                                         ;yes, toggle lamps and flags
  2012                                                          mov     al,EKEYFLOCKSCROLL                              ;scroll-lock flag
  2013                                                          cmp     ah,EKEYBSCROLLDOWN                              ;scroll-lock key down code?
  2014                                                          je      irq1.50                                         ;yes, toggle lamps and flags
  2015                                                          cmp     ah,EKEYBCODEEXT0                                ;extended scan code 0?
  2016                                                          jne     irq1.70                                         ;no, skip ahead
  2017                                                          call    WaitForKeyOutBuffer                             ;controller timeout?
  2018                                                          jz      irq1.140                                        ;yes, skip ahead
  2019                                                          in      al,EKEYBPORTDATA                                ;read scan code 1
  2020                                                          mov     [wbConsoleScan1],al                             ;save scan code 1
  2021                                                          mov     ah,al                                           ;copy scan code 1
  2022                                                          mov     al,EKEYFCTRLRIGHT                               ;right control flag
  2023                                                          cmp     ah,EKEYBCTRLDOWN                                ;control key down code?
  2024                                                          je      irq1.30                                         ;yes, set flag
  2025                                                          cmp     ah,EKEYBCTRLUP                                  ;control key up code?
  2026                                                          je      irq1.40                                         ;yes, reset flag
  2027                                                          mov     al,EKEYFALTRIGHT                                ;right alt flag
  2028                                                          cmp     ah,EKEYBALTDOWN                                 ;alt key down code?
  2029                                                          je      irq1.30                                         ;yes, set flag
  2030                                                          cmp     ah,EKEYBALTUP                                   ;alt key up code?
  2031                                                          je      irq1.40                                         ;yes, reset flag
  2032                                                          cmp     ah,EKEYBSLASH                                   ;slash down code?
  2033                                                          je      irq1.80                                         ;yes, skip ahead
