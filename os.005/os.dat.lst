  2499                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the secondary PIC.
  2500                                  ;
  2501                                  ;-----------------------------------------------------------------------------------------------------------------------
  2502                                  PutSecondaryEndOfInt    sti                                                     ;enable maskable interrupts
  2503                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  2504                                                          out     EPICPORTSEC,al                                  ;send EOI to secondary PIC
  2505                                                          ret                                                     ;return
  2506                                  ;-----------------------------------------------------------------------------------------------------------------------
  2507                                  ;
  2508                                  ;       Routine:        SetKeyboardLamps
  2509                                  ;
  2510                                  ;       Description:    This routine sends the set/reset mode indicators command to the keyboard device.
  2511                                  ;
  2512                                  ;       In:             BH      00000CNS (C:Caps Lock,N:Num Lock,S:Scroll Lock)
  2513                                  ;
  2514                                  ;-----------------------------------------------------------------------------------------------------------------------
  2515                                  SetKeyboardLamps        call    WaitForKeyInBuffer                              ;wait for input buffer ready
  2516                                                          mov     al,EKEYBCMDLAMPS                                ;set/reset lamps command
  2517                                                          out     EKEYBPORTDATA,al                                ;send command to 8042
  2518                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2519                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  2520                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  2521                                                          mov     al,bh                                           ;set/reset lamps value
  2522                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  2523                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2524                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  2525                                                          ret                                                     ;return
  2526                                  ;-----------------------------------------------------------------------------------------------------------------------
  2527                                  ;
  2528                                  ;       Routine:        WaitForKeyInBuffer
  2529                                  ;
  2530                                  ;       Description:    This routine waits for keyboard input buffer to be ready for input.
  2531                                  ;
  2532                                  ;       Out:            ZF      1 = Input buffer ready
  2533                                  ;                               0 = Input buffer not ready after timeout
  2534                                  ;
  2535                                  ;-----------------------------------------------------------------------------------------------------------------------
  2536                                  WaitForKeyInBuffer      push    ecx                                             ;save non-volatile regs
  2537                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  2538                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  2539                                                          test    al,EKEYBBITIN                                   ;is input buffer still full?
  2540                                                          loopnz  .10                                             ;yes, repeat till timeout
  2541                                                          pop     ecx                                             ;restore non-volatile regs
  2542                                                          ret                                                     ;return
  2543                                  ;-----------------------------------------------------------------------------------------------------------------------
  2544                                  ;
  2545                                  ;       Routine:        WaitForKeyOutBuffer
  2546                                  ;
  2547                                  ;       Description:    This routine waits for keyboard output buffer to have data to read.
  2548                                  ;
  2549                                  ;       Out:            ZF      1 = Output buffer has data from controller
  2550                                  ;                               0 = Output buffer empty after timeout
  2551                                  ;
  2552                                  ;-----------------------------------------------------------------------------------------------------------------------
  2553                                  WaitForKeyOutBuffer     push    ecx                                             ;save non-volatile regs
  2554                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  2555                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  2556                                                          test    al,EKEYBBITOUT                                  ;output buffer status bit
  2557                                                          loopz   .10                                             ;loop until output buffer bit
  2558                                                          pop     ecx                                             ;restore non-volatile regs
  2559                                                          ret                                                     ;return
  2560                                  ;-----------------------------------------------------------------------------------------------------------------------
  2561                                  ;
  2562                                  ;       End of the Kernel Function Library
  2563                                  ;
  2564                                  ;-----------------------------------------------------------------------------------------------------------------------
  2565                                                          times   8192-($-$$) db 0h                               ;zero fill to end of section
  2566                                  ;=======================================================================================================================
  2567                                  ;
  2568                                  ;       Console Task
  2569                                  ;
  2570                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  2571                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  2572                                  ;       screen and responds to user commands.
  2573                                  ;
  2574                                  ;=======================================================================================================================
  2575                                  ;-----------------------------------------------------------------------------------------------------------------------
  2576                                  ;
  2577                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  2578                                  ;
  2579                                  ;       This is the stack for the console task. It supports 448 nested calls.
  2580                                  ;
  2581                                  ;-----------------------------------------------------------------------------------------------------------------------
  2582                                  section                 constack                                                ;console task stack
  2583                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  2584                                  ;-----------------------------------------------------------------------------------------------------------------------
  2585                                  ;
  2586                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  2587                                  ;
  2588                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  2589                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  2590                                  ;       16 descriptors. Six are initially defined.
  2591                                  ;
  2592                                  ;-----------------------------------------------------------------------------------------------------------------------
  2593                                  section                 conldt                                                  ;console local descriptors
  2594                                                          dq      004093004780007Fh                               ;04 TSS alias
  2595                                                          dq      004093004700007Fh                               ;0c LDT alias
  2596                                                          dq      00409300400006FFh                               ;14 stack
  2597                                                          dq      00CF93000000FFFFh                               ;1c data
  2598                                                          dq      00409B0050000FFFh                               ;24 code
  2599                                                          dq      00409300480007FFh                               ;2c message queue
  2600                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  2601                                  ;-----------------------------------------------------------------------------------------------------------------------
  2602                                  ;
  2603                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  2604                                  ;
  2605                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  2606                                  ;       segment. CS to console code.
  2607                                  ;
  2608                                  ;-----------------------------------------------------------------------------------------------------------------------
  2609                                  section                 contss                                                  ;console task state segment
  2610                                                          dd      0                                               ;00 back-link tss
  2611                                                          dd      0700h                                           ;04 esp ring 0
  2612                                                          dd      0014h                                           ;08 ss ring 0
  2613                                                          dd      0700h                                           ;0c esp ring 1
  2614                                                          dd      0014h                                           ;10 es ring 1
  2615                                                          dd      0700h                                           ;14 esp ring 2
  2616                                                          dd      0014h                                           ;18 ss ring 2
  2617                                                          dd      0                                               ;1c cr ring 3
  2618                                                          dd      0                                               ;20 eip
  2619                                                          dd      0200h                                           ;24 eflags
  2620                                                          dd      0                                               ;28 eax
  2621                                                          dd      0                                               ;2c ecx
  2622                                                          dd      0                                               ;30 edx
  2623                                                          dd      0                                               ;34 ebx
  2624                                                          dd      0700h                                           ;38 esp ring 3
  2625                                                          dd      0                                               ;3c ebp
  2626                                                          dd      0                                               ;40 esi
  2627                                                          dd      0                                               ;44 edi
  2628                                                          dd      001Ch                                           ;48 es
  2629                                                          dd      0024h                                           ;4c cs
  2630                                                          dd      0014h                                           ;50 ss ring 3
  2631                                                          dd      001Ch                                           ;54 ds
  2632                                                          dd      0                                               ;58 fs
  2633                                                          dd      0                                               ;5c gs
  2634                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  2635                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  2636                                  ;-----------------------------------------------------------------------------------------------------------------------
  2637                                  ;
  2638                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  2639                                  ;
  2640                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  2641                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  2642                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  2643                                  ;       event.
  2644                                  ;
  2645                                  ;-----------------------------------------------------------------------------------------------------------------------
  2646                                  section                 conmque                                                 ;console message queue
  2647                                                          dd      8                                               ;head pointer
  2648                                                          dd      8                                               ;tail pointer
  2649                                                          times   510 dd 0                                        ;queue elements
  2650                                  ;-----------------------------------------------------------------------------------------------------------------------
  2651                                  ;
  2652                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  2653                                  ;
  2654                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  2655                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  2656                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  2657                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  2658                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  2659                                  ;       board input, echoing to the console screen and responding to user commands.
  2660                                  ;
  2661                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  2662                                  ;
  2663                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  2664                                  ;                               |  Real Mode Interrupt Vectors                  |
  2665                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  2666                                  ;                               |  Reserved BIOS Memory Area                    |
  2667                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  2668                                  ;                               |  Shared Kernel Memory Area                    |
  2669                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  2670                                  ;                               |  Global Descriptor Table (GDT)                |
  2671                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  2672                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  2673                                  ;                       002000  +-----------------------------------------------+
  2674                                  ;                               |  Interrupt Handlers                           |
  2675                                  ;                               |  Kernel Function Library                      |
  2676                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  2677                                  ;                               |  Console Task Stack Area                      |
  2678                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  2679                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  2680                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  2681                                  ;                               |  Console Task Task State Segment (TSS)        |
  2682                                  ;                       004800  +-----------------------------------------------+
  2683                                  ;                               |  Console Task Message Queue                   |
  2684                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  2685                                  ;                               |  Console Task Code                            |
  2686                                  ;                               |  Console Task Constants                       |
  2687                                  ;                       006000  +===============================================+
  2688                                  ;
  2689                                  ;-----------------------------------------------------------------------------------------------------------------------
  2690                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  2691                                  ;
  2692                                  ;       Initialize console work areas to low values.
  2693                                  ;
  2694                                  ConCode                 mov     edi,ECONDATA                                    ;OS console data address
  2695                                                          xor     al,al                                           ;initialization value
  2696                                                          mov     ecx,ECONDATALEN                                 ;size of OS console data
  2697                                                          cld                                                     ;forward strings
  2698                                                          rep     stosb                                           ;initialize data
  2699                                  ;
  2700                                  ;       Initialize the active panel variables.
  2701                                  ;
  2702                                                          mov     eax,czPnlCon001                                 ;initial console panel
  2703                                                          mov     [wdConsolePanel],eax                            ;save panel template address
  2704                                  ;
  2705                                  ;       Address the console screen memory.
  2706                                  ;
  2707                                                          push    EGDTCGA                                         ;load CGA video selector...
  2708                                                          pop     es                                              ;...into extra segment reg
  2709                                  ;
  2710                                  ;       Initialize the Operator Information Area (OIA) (This is done once).
  2711                                  ;
  2712                                                          mov     edi,ECONROWS*ECONROWBYTES                       ;target offset
  2713                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2714                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2715                                                          rep     stosd                                           ;reset OIA
  2716                                  ;
  2717                                  ;       Clear the console rows. (This is done after every attention key).
  2718                                  ;
  2719                                  .20                     xor     edi,edi                                         ;target offset
  2720                                                          mov     ecx,ECONROWS*ECONROWDWORDS                      ;double-words to clear
  2721                                                          mov     eax,ECONCLEARDWORD                              ;initialization value
  2722                                                          rep     stosd                                           ;reset screen body
  2723                                  ;
  2724                                  ;       Reset the input field row and column. Address the panel template.
  2725                                  ;
  2726                                                          xor     eax,eax                                         ;zero register
  2727                                                          mov     [wdConsoleInput],eax                            ;zero input addr
  2728                                                          mov     [wbConsoleRow],al                               ;zero console row
  2729                                                          mov     [wbConsoleColumn],al                            ;zero console column
  2730                                  ;
  2731                                  ;       Load the field address. Exit loop if address is null.
  2732                                  ;
  2733                                                          mov     esi,[wdConsolePanel]                            ;panel template
  2734                                  .30                     lodsd                                                   ;field value addr
  2735                                                          test    eax,eax                                         ;end of panel?
  2736                                                          jz      .70                                             ;yes, exit loop
  2737                                                          mov     ebx,eax                                         ;field value addr
  2738                                  ;
  2739                                  ;       Load the field row, column, color and length.
  2740                                  ;
  2741                                                          lodsb                                                   ;attributes
  2742                                                          mov     ch,al                                           ;row
  2743                                                          lodsb                                                   ;column
  2744                                                          mov     cl,al                                           ;column
  2745                                                          lodsb                                                   ;color
  2746                                                          mov     dh,al                                           ;color
  2747                                                          lodsb                                                   ;length
  2748                                                          mov     dl,al                                           ;length
  2749                                  ;
  2750                                  ;       Test the row high-bit for input field indication
  2751                                  ;
  2752                                                          test    ch,080h                                         ;input field?
  2753                                                          jz      .40                                             ;no, branch
  2754                                                          and     ch,07Fh                                         ;clear input field indicator
  2755                                  ;
  2756                                  ;       Save the row and column if this is the first input field
  2757                                  ;
  2758                                                          mov     al,[wbConsoleRow]                               ;console row
  2759                                                          or      al,[wbConsoleColumn]                            ;already have an input field?
  2760                                                          jnz     .40                                             ;yes, branch
  2761                                                          mov     [wbConsoleRow],ch                               ;update console row
  2762                                                          mov     [wbConsoleColumn],cl                            ;update console column
  2763                                  ;
  2764                                  ;       Compute the target offset.
  2765                                  ;
  2766                                  .40                     movzx   eax,ch                                          ;row
  2767                                                          mov     ah,ECONCOLS                                     ;columns per row
  2768                                                          mul     ah                                              ;row offset
  2769                                                          add     al,cl                                           ;add column
  2770                                                          adc     ah,0                                            ;handle overflow
  2771                                                          shl     eax,1                                           ;two-bytes per column
  2772                                                          mov     edi,eax                                         ;target offset
  2773                                  ;
  2774                                  ;       Display the field contents
  2775                                  ;
  2776                                                          xchg    ebx,esi                                         ;swap panel and field addr
  2777                                                          movzx   ecx,dl                                          ;length
  2778                                                          mov     ah,dh                                           ;color
  2779                                  .50                     lodsb                                                   ;character
  2780                                                          test    al,al                                           ;end of value?
  2781                                                          jz      .60                                             ;yes, branch
  2782                                                          stosw                                                   ;store character and color
  2783                                                          loop    .50                                             ;next character
  2784                                  .60                     xchg    ebx,esi                                         ;swap panel and field addr
  2785                                                          jmp     short .30                                       ;next field
  2786                                  ;
  2787                                  ;       Place the cursor if we have an input field
  2788                                  ;
  2789                                  .70                     mov     ah,[wbConsoleRow]                               ;field row
  2790                                                          mov     al,[wbConsoleColumn]                            ;field column
  2791                                                          or      al,ah                                           ;input field?
  2792                                                          jz      .80                                             ;no, branch
  2793                                                          placeCursor                                             ;position the cursor
  2794                                  ;
  2795                                  ;       Enter halt loop
  2796                                  ;
  2797                                  .80                     sti                                                     ;enable interrupts
  2798                                                          hlt                                                     ;halt until interrupt
  2799                                                          jmp     .80                                             ;continue halt loop
