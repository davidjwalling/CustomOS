  2741                                  ;
  2742                                  ;       Routine:        PutPrimaryEndOfInt
  2743                                  ;
  2744                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the primary PIC.
  2745                                  ;
  2746                                  ;-----------------------------------------------------------------------------------------------------------------------
  2747                                  PutPrimaryEndOfInt      sti                                                     ;enable maskable interrupts
  2748                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  2749                                                          out     EPICPORTPRI,al                                  ;send EOI to primary PIC
  2750                                                          ret                                                     ;return
  2751                                  ;-----------------------------------------------------------------------------------------------------------------------
  2752                                  ;
  2753                                  ;       Routine:        PutSecondaryEndOfInt
  2754                                  ;
  2755                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the secondary PIC.
  2756                                  ;
  2757                                  ;-----------------------------------------------------------------------------------------------------------------------
  2758                                  PutSecondaryEndOfInt    sti                                                     ;enable maskable interrupts
  2759                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  2760                                                          out     EPICPORTSEC,al                                  ;send EOI to secondary PIC
  2761                                                          ret                                                     ;return
  2762                                  ;-----------------------------------------------------------------------------------------------------------------------
  2763                                  ;
  2764                                  ;       Routine:        SetKeyboardLamps
  2765                                  ;
  2766                                  ;       Description:    This routine sends the set/reset mode indicators command to the keyboard device.
  2767                                  ;
  2768                                  ;       In:             BH      00000CNS (C:Caps Lock,N:Num Lock,S:Scroll Lock)
  2769                                  ;
  2770                                  ;-----------------------------------------------------------------------------------------------------------------------
  2771                                  SetKeyboardLamps        call    WaitForKeyInBuffer                              ;wait for input buffer ready
  2772                                                          mov     al,EKEYBCMDLAMPS                                ;set/reset lamps command
  2773                                                          out     EKEYBPORTDATA,al                                ;send command to 8042
  2774                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2775                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  2776                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  2777                                                          mov     al,bh                                           ;set/reset lamps value
  2778                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  2779                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2780                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  2781                                                          ret                                                     ;return
  2782                                  ;-----------------------------------------------------------------------------------------------------------------------
  2783                                  ;
  2784                                  ;       Routine:        WaitForKeyInBuffer
  2785                                  ;
  2786                                  ;       Description:    This routine waits for keyboard input buffer to be ready for input.
  2787                                  ;
  2788                                  ;       Out:            ZF      1 = Input buffer ready
  2789                                  ;                               0 = Input buffer not ready after timeout
  2790                                  ;
  2791                                  ;-----------------------------------------------------------------------------------------------------------------------
  2792                                  WaitForKeyInBuffer      push    ecx                                             ;save non-volatile regs
  2793                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  2794                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  2795                                                          test    al,EKEYBBITIN                                   ;is input buffer still full?
  2796                                                          loopnz  .10                                             ;yes, repeat till timeout
  2797                                                          pop     ecx                                             ;restore non-volatile regs
  2798                                                          ret                                                     ;return
  2799                                  ;-----------------------------------------------------------------------------------------------------------------------
  2800                                  ;
  2801                                  ;       Routine:        WaitForKeyOutBuffer
  2802                                  ;
  2803                                  ;       Description:    This routine waits for keyboard output buffer to have data to read.
  2804                                  ;
  2805                                  ;       Out:            ZF      1 = Output buffer has data from controller
  2806                                  ;                               0 = Output buffer empty after timeout
  2807                                  ;
  2808                                  ;-----------------------------------------------------------------------------------------------------------------------
  2809                                  WaitForKeyOutBuffer     push    ecx                                             ;save non-volatile regs
  2810                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  2811                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  2812                                                          test    al,EKEYBBITOUT                                  ;output buffer status bit
  2813                                                          loopz   .10                                             ;loop until output buffer bit
  2814                                                          pop     ecx                                             ;restore non-volatile regs
  2815                                                          ret                                                     ;return
