  2272                                                          shr     al,4                                            ;hi-order nybble
  2273                                                          call    .10                                             ;make ASCII and store
  2274                                                          pop     eax                                             ;byte value
  2275                                                          and     al,0Fh                                          ;lo-order nybble
  2276                                  .10                     or      al,030h                                         ;apply ASCII zone
  2277                                                          cmp     al,03Ah                                         ;numeric?
  2278                                                          jb      .20                                             ;yes, skip ahead
  2279                                                          add     al,7                                            ;add ASCII offset for alpha
  2280                                  .20                     call    SetConsoleChar                                  ;display ASCII character
  2281                                                          ret                                                     ;return
