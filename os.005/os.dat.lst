  2429                                                          shr     al,4                                            ;hi-order nybble
  2430                                                          or      al,030h                                         ;apply ASCII zone
  2431                                                          cmp     al,03ah                                         ;numeric?
  2432                                                          jb      .10                                             ;yes, skip ahead
  2433                                                          add     al,7                                            ;add ASCII offset for alpha
  2434                                  .10                     call    SetConsoleChar                                  ;display ASCII character
  2435                                                          mov     al,bl                                           ;byte value
  2436                                                          and     al,0fh                                          ;lo-order nybble
  2437                                                          or      al,30h                                          ;apply ASCII zone
  2438                                                          cmp     al,03ah                                         ;numeric?
  2439                                                          jb      .20                                             ;yes, skip ahead
  2440                                                          add     al,7                                            ;add ASCII offset for alpha
