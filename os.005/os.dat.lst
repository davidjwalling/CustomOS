  2831                                  czFldTitleCon001        db      "CustomOS Version 1.0"                          ;main console panel title
  2832                                  czFldDatTmCon001        db      "DD-MMM-YYYY HH:MM"                             ;panel date and time template
  2833                                  czFldPrmptCon001        db      ":"                                             ;command prompt
  2834                                                          times   4096-($-$$) db 0h                               ;zero fill to end of section
  2835                                  %endif
