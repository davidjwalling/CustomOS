  1956                                                          menter  keyboard                                        ;keyboard interrrupt
  1957                                                          push    eax                                             ;save non-volatile regs
  1958                                                          push    ebx                                             ;
  1959                                                          push    ecx                                             ;
  1960                                                          push    esi                                             ;
  1961                                                          push    ds                                              ;
  1962                                                          push    EGDTOSDATA                                      ;load OS data selector ...
