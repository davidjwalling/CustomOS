  2710                                  ;
  2711                                  ;       Routine:        PlaceCursor
  2712                                  ;
  2713                                  ;       Description:    This routine positions the cursor on the console.
  2714                                  ;
  2715                                  ;       In:             DS      OS data selector
  2716                                  ;
  2717                                  ;-----------------------------------------------------------------------------------------------------------------------
  2718                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  2719                                                          mov     al,[wbConsoleRow]                               ;AL = row
  2720                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  2721                                                          mul     ah                                              ;row offset
  2722                                                          add     al,[wbConsoleColumn]                            ;add column
  2723                                                          adc     ah,0                                            ;add overflow
  2724                                                          mov     ecx,eax                                         ;screen offset
  2725                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  2726                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  2727                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  2728                                                          out     dx,al                                           ;select register
  2729                                                          inc     edx                                             ;data port
  2730                                                          mov     al,ch                                           ;hi-order cursor loc
  2731                                                          out     dx,al                                           ;store hi-order loc
  2732                                                          dec     edx                                             ;register select port
  2733                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
  2734                                                          out     dx,al                                           ;select register
  2735                                                          inc     edx                                             ;data port
  2736                                                          mov     al,cl                                           ;lo-order cursor loc
  2737                                                          out     dx,al                                           ;store lo-order loc
  2738                                                          pop     ecx                                             ;restore non-volatile regs
  2739                                                          ret                                                     ;return
