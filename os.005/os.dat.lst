  2430                                                          movzx   eax,ch                                          ;row
  2431                                                          mov     ah,ECONCOLS                                     ;cols/row
  2432                                                          mul     ah                                              ;row * cols/row
  2433                                                          add     al,cl                                           ;add column
  2434                                                          adc     ah,0                                            ;handle carry
  2435                                                          shl     eax,1                                           ;screen offset
  2436                                                          mov     [es:eax],dl                                     ;store character
  2437                                                          inc     cl                                              ;next column
  2438                                                          ret                                                     ;return
