  2571                                  ;
  2572                                  ;       Routine:        PutConsoleString
  2573                                  ;
  2574                                  ;       Description:    This routine writes a sequence of ASCII characters to the console until null and updates the
  2575                                  ;                       console position as needed.
  2576                                  ;
  2577                                  ;       In:             EDX     source address
  2578                                  ;                       DS      OS data selector
  2579                                  ;
  2580                                  ;-----------------------------------------------------------------------------------------------------------------------
  2581                                  PutConsoleString        push    esi                                             ;save non-volatile regs
  2582                                                          mov     esi,edx                                         ;source address
  2583                                                          cld                                                     ;forward strings
  2584                                  .10                     lodsb                                                   ;ASCII character
  2585                                                          or      al,al                                           ;end of string?
  2586                                                          jz      .40                                             ;yes, skip ahead
  2587                                                          cmp     al,EASCIIRETURN                                 ;carriage return?
  2588                                                          jne     .20                                             ;no, skip ahead
  2589                                                          call    FirstConsoleColumn                              ;move to start of row
  2590                                                          jmp     .10                                             ;next character
  2591                                  .20                     cmp     al,EASCIILINEFEED                               ;line feed?
  2592                                                          jne     .30                                             ;no, skip ahead
  2593                                                          call    NextConsoleRow                                  ;move to next row
  2594                                                          jmp     .10                                             ;next character
  2595                                  .30                     call    PutConsoleChar                                  ;output character to console
  2596                                                          call    NextConsoleColumn                               ;advance to next column
  2597                                                          jmp     .10                                             ;next character
  2598                                  .40                     pop     esi                                             ;restore non-volatile regs
  2599                                                          ret                                                     ;return
