  2015                                                          jz      irq1.140                                        ;yes, skip ahead
  2016                                                          in      al,EKEYBPORTDATA                                ;read scan code 1
  2017                                                          mov     [wbConsoleScan1],al                             ;save scan code 1
  2018                                                          mov     ah,al                                           ;copy scan code 1
