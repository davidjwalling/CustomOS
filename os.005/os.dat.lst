  2358                                  ;
  2359                                  ;       Routine:        NextConsoleColumn
  2360                                  ;
  2361                                  ;       Description:    This routine advances the console position one column. The columnn is reset to zero and the row
  2362                                  ;                       incremented if the end of the current row is reached.
  2363                                  ;
  2364                                  ;       In:             DS      OS data selector
  2365                                  ;
  2366                                  ;-----------------------------------------------------------------------------------------------------------------------
  2367                                  NextConsoleColumn       mov     al,[wbConsoleColumn]                            ;current column
  2368                                                          inc     al                                              ;increment column
  2369                                                          mov     [wbConsoleColumn],al                            ;save column
  2370                                                          cmp     al,ECONCOLS                                     ;end of row?
  2371                                                          jb      .10                                             ;no, skip ahead
  2372                                                          call    FirstConsoleColumn                              ;reset column to start of row
  2373                                                          call    NextConsoleRow                                  ;line feed to next row
  2374                                  .10                     ret                                                     ;return
