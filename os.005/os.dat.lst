  2153                                  ;	Routine:	PutConsoleOIAChar
  2154                                  ;
  2155                                  ;	Description:	This routine updates the Operator Information Area (OIA).
  2156                                  ;
  2157                                  ;	In:		DS	OS data selector
  2158                                  ;
  2159                                  ;-----------------------------------------------------------------------------------------------------------------------
  2160                                  PutConsoleOIAChar	push	ebx						;save non-volatile regs
  2161                                  			push	ecx						;
  2162                                  			push	esi						;
  2163                                  			push	ds						;
  2164                                  			push	es						;
  2165                                  			push	ESELDAT						;load OS data selector ...
  2166                                  			pop	ds						;... into data segment register
  2167                                  			push	ESELCGA						;load CGA selector ...
  2168                                  			pop	es						;... into extra segment register
  2169                                  			mov	esi,wbConsoleScan0				;scan codes address
  2170                                  			mov	bh,ECONOIAROW					;OIA row
  2171                                  			mov	bl,0						;starting column
  2172                                  			mov	ecx,6						;maximum scan codes
  2173                                  .10			push	ecx						;save remaining count
  2174                                  			mov	ecx,ebx						;row, column
  2175                                  			lodsb							;read scan code
  2176                                  			or	al,al						;scan code present?
  2177                                  			jz	.20						;no, skip ahead
  2178                                  			call	PutConsoleHexByte				;display scan code
  2179                                  			jmp	.30						;continue
  2180                                  .20			mov	al,' '						;ASCII space
  2181                                  			call	SetConsoleChar					;display space
  2182                                  			inc	cl
  2183                                  			mov	al,' '						;ASCII space
  2184                                  			call	SetConsoleChar					;display space
  2185                                  .30			add	bl,2						;next column (+2)
  2186                                  			pop	ecx						;restore remaining
  2187                                  			loop	.10						;next code
  2188                                  			mov	al,[wbConsoleChar]				;console ASCII character
  2189                                  			cmp	al,32						;printable? (lower-bounds)
  2190                                  			jb	.40						;no, skip ahead
  2191                                  			cmp	al,126						;printable? (upper-bounds)
  2192                                  			ja	.40						;no, skip ahead
  2193                                  			mov	ch,bh						;OIA row
  2194                                  			mov	cl,40						;character display column
  2195                                  			call	SetConsoleChar					;display ASCII character
  2196                                  .40			pop	es						;restore non-volatile regs
  2197                                  			pop	ds						;
  2198                                  			pop	esi						;
  2199                                  			pop	ecx						;
  2200                                  			pop	ebx						;
