  2612                                  ;
  2613                                  ;       Routine:        ClearConsoleScreen
  2614                                  ;
  2615                                  ;       Description:    This routine clears the console (CGA) screen.
  2616                                  ;
  2617                                  ;-----------------------------------------------------------------------------------------------------------------------
  2618                                  ClearConsoleScreen      push    ecx                                             ;save non-volatile regs
  2619                                                          push    edi                                             ;
  2620                                                          push    ds                                              ;
  2621                                                          push    es                                              ;
  2622                                                          push    EGDTOSDATA                                      ;load OS Data selector ...
  2623                                                          pop     ds                                              ;... into DS register
  2624                                                          push    EGDTCGA                                         ;load CGA selector ...
  2625                                                          pop     es                                              ;... into ES register
  2626                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  2627                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  2628                                                          xor     edi,edi                                         ;target offset
  2629                                                          cld                                                     ;forward strings
  2630                                                          rep     stosd                                           ;reset screen body
  2631                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2632                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2633                                                          rep     stosd                                           ;reset OIA line
  2634                                                          xor     al,al                                           ;zero register
  2635                                                          mov     [wbConsoleRow],al                               ;reset console row
  2636                                                          mov     [wbConsoleColumn],al                            ;reset console column
  2637                                                          call    PlaceCursor                                     ;place cursor at current position
  2638                                                          pop     es                                              ;restore non-volatile regs
  2639                                                          pop     ds                                              ;
  2640                                                          pop     edi                                             ;
  2641                                                          pop     ecx                                             ;
  2642                                                          ret                                                     ;return
  2643                                  ;-----------------------------------------------------------------------------------------------------------------------
  2644                                  ;
  2645                                  ;       Routine:        ScrollConsoleRow
  2646                                  ;
  2647                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  2648                                  ;
  2649                                  ;-----------------------------------------------------------------------------------------------------------------------
  2650                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  2651                                                          push    esi                                             ;
  2652                                                          push    edi                                             ;
  2653                                                          push    ds                                              ;
  2654                                                          push    es                                              ;
  2655                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2656                                                          pop     ds                                              ;... into DS
  2657                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2658                                                          pop     es                                              ;... into ES
  2659                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  2660                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  2661                                                          xor     edi,edi                                         ;EDI = target (line 1)
  2662                                                          cld                                                     ;forward strings
  2663                                                          rep     movsd                                           ;move 24 lines up
  2664                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  2665                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2666                                                          rep     stosd                                           ;clear bottom row
  2667                                                          pop     es                                              ;restore non-volatile regs
  2668                                                          pop     ds                                              ;
  2669                                                          pop     edi                                             ;
  2670                                                          pop     esi                                             ;
  2671                                                          pop     ecx                                             ;
  2672                                                          ret                                                     ;return
  2673                                  ;-----------------------------------------------------------------------------------------------------------------------
  2674                                  ;
  2675                                  ;       Routine:        SetConsoleChar
  2676                                  ;
  2677                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  2678                                  ;
  2679                                  ;       In:             AL      ASCII character
  2680                                  ;                       CL      column
  2681                                  ;                       CH      row
  2682                                  ;                       ES      CGA selector
  2683                                  ;
  2684                                  ;       Out:            EAX     last target address written (ES:)
  2685                                  ;                       CL      column + 1
  2686                                  ;
  2687                                  ;-----------------------------------------------------------------------------------------------------------------------
  2688                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  2689                                                          movzx   eax,ch                                          ;row
  2690                                                          mov     ah,ECONCOLS                                     ;cols/row
  2691                                                          mul     ah                                              ;row * cols/row
  2692                                                          add     al,cl                                           ;add column
  2693                                                          adc     ah,0                                            ;handle carry
  2694                                                          shl     eax,1                                           ;screen offset
  2695                                                          mov     [es:eax],dl                                     ;store character
  2696                                                          inc     cl                                              ;next column
  2697                                                          ret                                                     ;return
