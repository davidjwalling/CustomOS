  1804                                  ;
  1805                                  ;       Hardware Device Interupts
  1806                                  ;
  1807                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  1808                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  1809                                  ;       (BX=2028h).
  1810                                  ;
  1811                                  ;=======================================================================================================================
  1812                                  ;-----------------------------------------------------------------------------------------------------------------------
  1813                                  ;
  1814                                  ;       IRQ0    Clock Tick Interrupt
  1815                                  ;
  1816                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  1817                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  1818                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  1819                                  ;
  1820                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  1821                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  1822                                  ;
  1823                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  1824                                  ;       zero, the floppy disk motors are turned off.
  1825                                  ;
  1826                                  ;-----------------------------------------------------------------------------------------------------------------------
  1827                                                          menter  clocktick                                       ;clock tick interrupt
  1828                                                          push    eax                                             ;save non-volatile regs
  1829                                                          push    edx                                             ;
  1830                                                          push    ds                                              ;
  1831                                  ;
  1832                                  ;       Update the clock tick count and the elapsed days as needed.
  1833                                  ;
  1834                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  1835                                                          pop     ds                                              ;... into data segment register
  1836                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  1837                                                          inc     eax                                             ;increment clock ticks
  1838                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  1839                                                          jb      irq0.10                                         ;no, skip ahead
  1840                                                          inc     byte [wbClockDays]                              ;increment clock days
  1841                                                          xor     eax,eax                                         ;reset clock ticks
  1842                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  1843                                  ;
  1844                                  ;       Decrement floppy disk motor timeout.
  1845                                  ;
  1846                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  1847                                                          je      irq0.20                                         ;yes, skip ahead
  1848                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  1849                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  1850                                  ;
  1851                                  ;       Turn off the floppy disk motor if appropriate.
  1852                                  ;
  1853                                                          sti                                                     ;enable maskable interrupts
  1854                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  1855                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  1856                                                          in      al,dx                                           ;FDC main status byte
  1857                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  1858                                                          jnz     irq0.15                                         ;wait while busy
  1859                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  1860                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  1861                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  1862                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  1863                                                          out     dx,al                                           ;turn motor off
  1864                                  ;
  1865                                  ;       Signal the end of the hardware interrupt.
  1866                                  ;
  1867                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  1868                                  ;
  1869                                  ;       Restore and return.
  1870                                  ;
  1871                                                          pop     ds                                              ;restore modified regs
  1872                                                          pop     edx                                             ;
  1873                                                          pop     eax                                             ;
  1874                                                          iretd                                                   ;return
