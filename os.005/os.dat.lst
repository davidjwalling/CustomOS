  2246                                  ;	Routine:	ClearConsoleScreen
  2247                                  ;
  2248                                  ;	Description:	This routine clears the console (CGA) screen.
  2249                                  ;
  2250                                  ;-----------------------------------------------------------------------------------------------------------------------
  2251                                  ClearConsoleScreen	push	ecx						;save non-volatile regs
  2252                                  			push	edi						;
  2253                                  			push	ds						;
  2254                                  			push	es						;
  2255                                  			push	ESELDAT						;load OS Data selector ...
  2256                                  			pop	ds						;... into DS register
  2257                                  			push	ESELCGA						;load CGA selector ...
  2258                                  			pop	es						;... into ES register
  2259                                  			mov	eax,ECONCLEARDWORD				;initializtion value
  2260                                  			mov	ecx,ECONROWDWORDS*(ECONROWS)			;double-words to clear
  2261                                  			xor	edi,edi						;target offset
  2262                                  			cld							;forward strings
  2263                                  			rep	stosd						;reset screen body
  2264                                  			mov	eax,ECONOIADWORD				;OIA attribute and space
  2265                                  			mov	ecx,ECONROWDWORDS				;double-words per row
  2266                                  			rep	stosd						;reset OIA line
  2267                                  			xor	al,al						;zero register
  2268                                  			mov	[wbConsoleRow],al				;reset console row
