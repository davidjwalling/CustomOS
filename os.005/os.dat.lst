  1878                                  ;
  1879                                  ;       Hardware Device Interupts
  1880                                  ;
  1881                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  1882                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  1883                                  ;       (BX=2028h).
  1884                                  ;
  1885                                  ;=======================================================================================================================
  1886                                  ;-----------------------------------------------------------------------------------------------------------------------
  1887                                  ;
  1888                                  ;       IRQ0    Clock Tick Interrupt
  1889                                  ;
  1890                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  1891                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  1892                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  1893                                  ;
  1894                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  1895                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  1896                                  ;
  1897                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  1898                                  ;       zero, the floppy disk motors are turned off.
  1899                                  ;
  1900                                  ;-----------------------------------------------------------------------------------------------------------------------
  1901                                                          menter  clocktick                                       ;clock tick interrupt
  1902                                                          push    eax                                             ;save non-volatile regs
  1903                                                          push    edx                                             ;
  1904                                                          push    ds                                              ;
  1905                                  ;
  1906                                  ;       Update the clock tick count and the elapsed days as needed.
  1907                                  ;
  1908                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  1909                                                          pop     ds                                              ;... into data segment register
  1910                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  1911                                                          inc     eax                                             ;increment clock ticks
  1912                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  1913                                                          jb      irq0.10                                         ;no, skip ahead
  1914                                                          inc     byte [wbClockDays]                              ;increment clock days
  1915                                                          xor     eax,eax                                         ;reset clock ticks
  1916                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  1917                                  ;
  1918                                  ;       Decrement floppy disk motor timeout.
  1919                                  ;
  1920                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  1921                                                          je      irq0.20                                         ;yes, skip ahead
  1922                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  1923                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  1924                                  ;
  1925                                  ;       Turn off the floppy disk motor if appropriate.
  1926                                  ;
  1927                                                          sti                                                     ;enable maskable interrupts
  1928                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  1929                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  1930                                                          in      al,dx                                           ;FDC main status byte
  1931                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  1932                                                          jnz     irq0.15                                         ;wait while busy
  1933                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  1934                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  1935                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  1936                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  1937                                                          out     dx,al                                           ;turn motor off
  1938                                  ;
  1939                                  ;       Signal the end of the hardware interrupt.
  1940                                  ;
  1941                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  1942                                  ;
  1943                                  ;       Restore and return.
  1944                                  ;
  1945                                                          pop     ds                                              ;restore modified regs
  1946                                                          pop     edx                                             ;
  1947                                                          pop     eax                                             ;
  1948                                                          iretd                                                   ;return
