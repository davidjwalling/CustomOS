  2296                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2297                                                          pop     ds                                              ;... into data segment register
  2298                                                          push    EGDTCGA                                         ;load CGA selector ...
  2299                                                          pop     es                                              ;... into extra segment register
  2300                                                          mov     esi,wbConsoleScan0                              ;scan codes address
  2301                                                          mov     bh,ECONOIAROW                                   ;OIA row
  2302                                                          mov     bl,0                                            ;starting column
  2303                                                          mov     ecx,6                                           ;maximum scan codes
  2304                                  .10                     push    ecx                                             ;save remaining count
  2305                                                          mov     ecx,ebx                                         ;row, column
