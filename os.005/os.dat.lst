  2204                                  ;	Routine:	PutConsoleHexByte
  2205                                  ;
  2206                                  ;	Description:	This routine writes two ASCII characters to the console screen representing the value of a byte.
  2207                                  ;
  2208                                  ;	In:		AL	byte value
  2209                                  ;			CH	row
  2210                                  ;			CL	column
  2211                                  ;			DS	OS data selector
  2212                                  ;			ES	CGA selector
  2213                                  ;
  2214                                  ;-----------------------------------------------------------------------------------------------------------------------
  2215                                  PutConsoleHexByte	push	ebx						;save non-volatile regs
  2216                                  			mov	bl,al						;save byte value
  2217                                  			shr	al,4						;hi-order nybble
  2218                                  			or	al,030h						;apply ASCII zone
  2219                                  			cmp	al,03ah						;numeric?
  2220                                  			jb	.10						;yes, skip ahead
  2221                                  			add	al,7						;add ASCII offset for alpha
  2222                                  .10			call	SetConsoleChar					;display ASCII character
  2223                                  			inc	cl						;increment column
  2224                                  			mov	al,bl						;byte value
  2225                                  			and	al,0fh						;lo-order nybble
  2226                                  			or	al,30h						;apply ASCII zone
  2227                                  			cmp	al,03ah						;numeric?
  2228                                  			jb	.20						;yes, skip ahead
  2229                                  			add	al,7						;add ASCII offset for alpha
  2230                                  .20			call	SetConsoleChar					;display ASCII character
  2231                                  			pop	ebx						;restore non-volatile regs
  2232                                  			ret							;return
