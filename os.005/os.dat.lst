  2503                                  ;
  2504                                  ;-----------------------------------------------------------------------------------------------------------------------
  2505                                  PutConsoleOIAShift      push    ecx                                             ;save non-volatile regs
  2506                                                          push    es                                              ;
  2507                                                          push    EGDTCGA                                         ;load CGA selector ...
  2508                                                          pop     es                                              ;... into ES register
  2509                                                          mov     ch,ECONOIAROW                                   ;OIA row
  2510                                                          mov     al,EASCIISPACE                                  ;space is default character
  2511                                                          test    bl,EKEYFSHIFTLEFT                               ;left-shift indicated?
  2512                                                          jz      .10                                             ;no, skip ahead
  2513                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2514                                  .10                     mov     cl,14                                           ;indicator column
  2515                                                          call    SetConsoleChar                                  ;display ASCII character
  2516                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2517                                                          test    bl,EKEYFSHIFTRIGHT                              ;right-shift indicated?
  2518                                                          jz      .20                                             ;no, skip ahead
  2519                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2520                                  .20                     mov     cl,64                                           ;indicator column
  2521                                                          call    SetConsoleChar                                  ;display ASCII character
  2522                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2523                                                          test    bl,EKEYFCTRLLEFT                                ;left-ctrl indicated?
  2524                                                          jz      .30                                             ;no, skip ahead
  2525                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2526                                  .30                     mov     cl,15                                           ;indicator column
  2527                                                          call    SetConsoleChar                                  ;display ASCII character
  2528                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2529                                                          test    bl,EKEYFCTRLRIGHT                               ;right-ctrl indicated?
  2530                                                          jz      .40                                             ;no, skip ahead
  2531                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2532                                  .40                     mov     cl,63                                           ;indicator column
  2533                                                          call    SetConsoleChar                                  ;display ASCII character
  2534                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2535                                                          test    bl,EKEYFALTLEFT                                 ;left-alt indicated?
  2536                                                          jz      .50                                             ;no, skip ahead
  2537                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  2538                                  .50                     mov     cl,16                                           ;indicator column
  2539                                                          call    SetConsoleChar                                  ;display ASCII character
  2540                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2541                                                          test    bl,EKEYFALTRIGHT                                ;right-alt indicated?
  2542                                                          jz      .60                                             ;no, skip ahead
  2543                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  2544                                  .60                     mov     cl,62                                           ;indicator column
  2545                                                          call    SetConsoleChar                                  ;display ASCII character
  2546                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2547                                                          test    bh,EKEYFLOCKCAPS                                ;caps-lock indicated?
  2548                                                          jz      .70                                             ;no, skip ahead
  2549                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2550                                  .70                     mov     cl,78                                           ;indicator column
  2551                                                          call    SetConsoleChar                                  ;display ASCII character
  2552                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2553                                                          test    bh,EKEYFLOCKNUM                                 ;num-lock indicated?
  2554                                                          jz      .80                                             ;no, skip ahead
  2555                                                          mov     al,'N'                                          ;yes, indicate with 'N'
  2556                                  .80                     mov     cl,77                                           ;indicator column
  2557                                                          call    SetConsoleChar                                  ;display ASCII character
  2558                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2559                                                          test    bh,EKEYFLOCKSCROLL                              ;scroll-lock indicated?
  2560                                                          jz      .90                                             ;no, skip ahead
  2561                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2562                                  .90                     mov     cl,76                                           ;indicator column
  2563                                                          call    SetConsoleChar                                  ;display ASCII character
  2564                                                          pop     es                                              ;restore non-volatile regs
  2565                                                          pop     ecx                                             ;
  2566                                                          ret                                                     ;return
