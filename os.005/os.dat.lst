  2609                                  ;
  2610                                  ;       Routine:        ClearConsoleScreen
  2611                                  ;
  2612                                  ;       Description:    This routine clears the console (CGA) screen.
  2613                                  ;
  2614                                  ;-----------------------------------------------------------------------------------------------------------------------
  2615                                  ClearConsoleScreen      push    ecx                                             ;save non-volatile regs
  2616                                                          push    edi                                             ;
  2617                                                          push    ds                                              ;
  2618                                                          push    es                                              ;
  2619                                                          push    EGDTOSDATA                                      ;load OS Data selector ...
  2620                                                          pop     ds                                              ;... into DS register
  2621                                                          push    EGDTCGA                                         ;load CGA selector ...
  2622                                                          pop     es                                              ;... into ES register
  2623                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  2624                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  2625                                                          xor     edi,edi                                         ;target offset
  2626                                                          cld                                                     ;forward strings
  2627                                                          rep     stosd                                           ;reset screen body
  2628                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2629                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2630                                                          rep     stosd                                           ;reset OIA line
  2631                                                          xor     al,al                                           ;zero register
  2632                                                          mov     [wbConsoleRow],al                               ;reset console row
  2633                                                          mov     [wbConsoleColumn],al                            ;reset console column
  2634                                                          call    PlaceCursor                                     ;place cursor at current position
  2635                                                          pop     es                                              ;restore non-volatile regs
  2636                                                          pop     ds                                              ;
  2637                                                          pop     edi                                             ;
  2638                                                          pop     ecx                                             ;
  2639                                                          ret                                                     ;return
  2640                                  ;-----------------------------------------------------------------------------------------------------------------------
  2641                                  ;
  2642                                  ;       Routine:        ScrollConsoleRow
  2643                                  ;
  2644                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  2645                                  ;
  2646                                  ;-----------------------------------------------------------------------------------------------------------------------
  2647                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  2648                                                          push    esi                                             ;
  2649                                                          push    edi                                             ;
  2650                                                          push    ds                                              ;
  2651                                                          push    es                                              ;
  2652                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2653                                                          pop     ds                                              ;... into DS
  2654                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2655                                                          pop     es                                              ;... into ES
  2656                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  2657                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  2658                                                          xor     edi,edi                                         ;EDI = target (line 1)
  2659                                                          cld                                                     ;forward strings
  2660                                                          rep     movsd                                           ;move 24 lines up
  2661                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  2662                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2663                                                          rep     stosd                                           ;clear bottom row
  2664                                                          pop     es                                              ;restore non-volatile regs
  2665                                                          pop     ds                                              ;
  2666                                                          pop     edi                                             ;
  2667                                                          pop     esi                                             ;
  2668                                                          pop     ecx                                             ;
  2669                                                          ret                                                     ;return
  2670                                  ;-----------------------------------------------------------------------------------------------------------------------
  2671                                  ;
  2672                                  ;       Routine:        SetConsoleChar
  2673                                  ;
  2674                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  2675                                  ;
  2676                                  ;       In:             AL      ASCII character
  2677                                  ;                       CL      column
  2678                                  ;                       CH      row
  2679                                  ;                       ES      CGA selector
  2680                                  ;
  2681                                  ;       Out:            EAX     last target address written (ES:)
  2682                                  ;                       CL      column + 1
  2683                                  ;
  2684                                  ;-----------------------------------------------------------------------------------------------------------------------
  2685                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  2686                                                          movzx   eax,ch                                          ;row
  2687                                                          mov     ah,ECONCOLS                                     ;cols/row
  2688                                                          mul     ah                                              ;row * cols/row
  2689                                                          add     al,cl                                           ;add column
  2690                                                          adc     ah,0                                            ;handle carry
  2691                                                          shl     eax,1                                           ;screen offset
  2692                                                          mov     [es:eax],dl                                     ;store character
  2693                                                          inc     cl                                              ;next column
  2694                                                          ret                                                     ;return
