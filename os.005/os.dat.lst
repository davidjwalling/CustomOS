  2278                                  ;	Routine:	ScrollConsoleRow
  2279                                  ;
  2280                                  ;	Description:	This routine scrolls the console (text) screen up one row.
  2281                                  ;
  2282                                  ;-----------------------------------------------------------------------------------------------------------------------
  2283                                  ScrollConsoleRow	push	ecx						;save non-volatile regs
  2284                                  			push	esi						;
  2285                                  			push	edi						;
  2286                                  			push	ds						;
  2287                                  			push	es						;
  2288                                  			push	ESELCGA						;load CGA video selector ...
  2289                                  			pop	ds						;... into DS
  2290                                  			push	ESELCGA						;load CGA video selector ...
  2291                                  			pop	es						;... into ES
  2292                                  			mov	ecx,ECONROWDWORDS*(ECONROWS-1)			;double-words to move
  2293                                  			mov	esi,ECONROWBYTES				;esi = source (line 2)
  2294                                  			xor	edi,edi						;edi = target (line 1)
  2295                                  			cld							;forward strings
  2296                                  			rep	movsd						;move 24 lines up
  2297                                  			mov	eax,ECONCLEARDWORD				;attribute and ASCII space
  2298                                  			mov	ecx,ECONROWDWORDS				;double-words per row
  2299                                  			rep	stosd						;clear bottom row
  2300                                  			pop	es						;restore non-volatile regs
  2301                                  			pop	ds						;
  2302                                  			pop	edi						;
  2303                                  			pop	esi						;
  2304                                  			pop	ecx						;
  2305                                  			ret							;return
