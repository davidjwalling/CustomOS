  2489                                                          mov     cl,40                                           ;character display column
  2490                                                          call    SetConsoleChar                                  ;display ASCII character
  2491                                  .40                     pop     es                                              ;restore non-volatile regs
  2492                                                          pop     ds                                              ;
  2493                                                          pop     esi                                             ;
  2494                                                          pop     ecx                                             ;
  2495                                                          pop     ebx                                             ;
  2496                                                          ret                                                     ;return
