  2448                                  ;       Description:    This routine updates the Operator Information Area (OIA).
  2449                                  ;
  2450                                  ;       In:             DS      OS data selector
  2451                                  ;
  2452                                  ;-----------------------------------------------------------------------------------------------------------------------
  2453                                  PutConsoleOIAChar       push    ebx                                             ;save non-volatile regs
  2454                                                          push    ecx                                             ;
  2455                                                          push    esi                                             ;
  2456                                                          push    ds                                              ;
  2457                                                          push    es                                              ;
  2458                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2459                                                          pop     ds                                              ;... into data segment register
  2460                                                          push    EGDTCGA                                         ;load CGA selector ...
  2461                                                          pop     es                                              ;... into extra segment register
  2462                                                          mov     esi,wbConsoleScan0                              ;scan codes address
  2463                                                          mov     bh,ECONOIAROW                                   ;OIA row
  2464                                                          mov     bl,0                                            ;starting column
  2465                                                          mov     ecx,6                                           ;maximum scan codes
  2466                                  .10                     push    ecx                                             ;save remaining count
  2467                                                          mov     ecx,ebx                                         ;row, column
  2468                                                          lodsb                                                   ;read scan code
  2469                                                          or      al,al                                           ;scan code present?
  2470                                                          jz      .20                                             ;no, skip ahead
  2471                                                          call    PutConsoleHexByte                               ;display scan code
  2472                                                          jmp     .30                                             ;continue
  2473                                  .20                     mov     al,' '                                          ;ASCII space
  2474                                                          call    SetConsoleChar                                  ;display space
  2475                                                          mov     al,' '                                          ;ASCII space
  2476                                                          call    SetConsoleChar                                  ;display space
  2477                                  .30                     add     bl,2                                            ;next column (+2)
  2478                                                          pop     ecx                                             ;restore remaining
  2479                                                          loop    .10                                             ;next code
  2480                                                          mov     al,[wbConsoleChar]                              ;console ASCII character
  2481                                                          cmp     al,32                                           ;printable? (lower-bounds)
  2482                                                          jb      .40                                             ;no, skip ahead
  2483                                                          cmp     al,126                                          ;printable? (upper-bounds)
  2484                                                          ja      .40                                             ;no, skip ahead
  2485                                                          mov     ch,bh                                           ;OIA row
  2486                                                          mov     cl,40                                           ;character display column
  2487                                                          call    SetConsoleChar                                  ;display ASCII character
  2488                                  .40                     pop     es                                              ;restore non-volatile regs
  2489                                                          pop     ds                                              ;
  2490                                                          pop     esi                                             ;
  2491                                                          pop     ecx                                             ;
  2492                                                          pop     ebx                                             ;
  2493                                                          ret                                                     ;return
