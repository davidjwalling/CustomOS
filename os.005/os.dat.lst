  1875                                  ;
  1876                                  ;       Hardware Device Interupts
  1877                                  ;
  1878                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  1879                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  1880                                  ;       (BX=2028h).
  1881                                  ;
  1882                                  ;=======================================================================================================================
  1883                                  ;-----------------------------------------------------------------------------------------------------------------------
  1884                                  ;
  1885                                  ;       IRQ0    Clock Tick Interrupt
  1886                                  ;
  1887                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  1888                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  1889                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  1890                                  ;
  1891                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  1892                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  1893                                  ;
  1894                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  1895                                  ;       zero, the floppy disk motors are turned off.
  1896                                  ;
  1897                                  ;-----------------------------------------------------------------------------------------------------------------------
  1898                                                          menter  clocktick                                       ;clock tick interrupt
  1899                                                          push    eax                                             ;save modified regs
  1900                                                          push    edx                                             ;
  1901                                                          push    ds                                              ;
  1902                                  ;
  1903                                  ;       Update the clock tick count and the elapsed days as needed.
  1904                                  ;
  1905                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  1906                                                          pop     ds                                              ;... into data segment register
  1907                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  1908                                                          inc     eax                                             ;increment clock ticks
  1909                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  1910                                                          jb      irq0.10                                         ;no, skip ahead
  1911                                                          inc     byte [wbClockDays]                              ;increment clock days
  1912                                                          xor     eax,eax                                         ;reset clock ticks
  1913                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  1914                                  ;
  1915                                  ;       Decrement floppy disk motor timeout.
  1916                                  ;
  1917                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  1918                                                          je      irq0.20                                         ;yes, skip ahead
  1919                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  1920                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  1921                                  ;
  1922                                  ;       Turn off the floppy disk motor if appropriate.
  1923                                  ;
  1924                                                          sti                                                     ;enable maskable interrupts
  1925                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  1926                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  1927                                                          in      al,dx                                           ;FDC main status byte
  1928                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  1929                                                          jnz     irq0.15                                         ;wait while busy
  1930                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  1931                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  1932                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  1933                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  1934                                                          out     dx,al                                           ;turn motor off
  1935                                  ;
  1936                                  ;       Signal the end of the hardware interrupt.
  1937                                  ;
  1938                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  1939                                  ;
  1940                                  ;       Restore and return.
  1941                                  ;
  1942                                                          pop     ds                                              ;restore modified regs
  1943                                                          pop     edx                                             ;
  1944                                                          pop     eax                                             ;
  1945                                                          iretd                                                   ;return
