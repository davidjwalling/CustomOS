  2023                                                          je      irq1.40                                         ;yes, reset flag
  2024                                                          mov     al,EKEYFALTRIGHT                                ;right alt flag
  2025                                                          cmp     ah,EKEYBALTDOWN                                 ;alt key down code?
  2026                                                          je      irq1.30                                         ;yes, set flag
  2027                                                          cmp     ah,EKEYBALTUP                                   ;alt key up code?
