  2475                                                          jmp     .30                                             ;continue
  2476                                  .20                     mov     al,' '                                          ;ASCII space
  2477                                                          call    SetConsoleChar                                  ;display space
  2478                                                          mov     al,' '                                          ;ASCII space
  2479                                                          call    SetConsoleChar                                  ;display space
