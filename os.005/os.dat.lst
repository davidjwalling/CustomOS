  2458                                                          push    esi                                             ;
  2459                                                          push    ds                                              ;
  2460                                                          push    es                                              ;
  2461                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2462                                                          pop     ds                                              ;... into data segment register
  2463                                                          push    EGDTCGA                                         ;load CGA selector ...
  2464                                                          pop     es                                              ;... into extra segment register
  2465                                                          mov     esi,wbConsoleScan0                              ;scan codes address
  2466                                                          mov     bh,ECONOIAROW                                   ;OIA row
  2467                                                          mov     bl,0                                            ;starting column
  2468                                                          mov     ecx,6                                           ;maximum scan codes
  2469                                  .10                     push    ecx                                             ;save remaining count
  2470                                                          mov     ecx,ebx                                         ;row, column
  2471                                                          lodsb                                                   ;read scan code
  2472                                                          or      al,al                                           ;scan code present?
