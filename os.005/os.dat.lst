  2291                                                          cmp     al,maxtsvc                                      ;is our function out of range?
  2292                                                          jae     svc90                                           ;yes, skip ahead
  2293                                                          movzx   eax,al                                          ;function
  2294                                                          shl     eax,2                                           ;offset into table
  2295                                                          call    dword [cs:tsvc+eax]                             ;far call to indirect address
  2296                                  svc90                   iretd                                                   ;return from interrupt
