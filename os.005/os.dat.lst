  1993                                                          je      irq1.30                                         ;yes, set flag
  1994                                                          cmp     ah,EKEYBSHIFTRUP                                ;right shift key up code?
  1995                                                          je      irq1.40                                         ;yes, reset flag
  1996                                                          mov     al,EKEYFCTRLLEFT                                ;left control flag
  1997                                                          cmp     ah,EKEYBCTRLDOWN                                ;control key down code?
  1998                                                          je      irq1.30                                         ;yes, set flag
  1999                                                          cmp     ah,EKEYBCTRLUP                                  ;control key up code?
  2000                                                          je      irq1.40                                         ;yes, reset flag
