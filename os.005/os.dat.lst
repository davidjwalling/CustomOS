  2713                                  ;
  2714                                  ;       Routine:        PlaceCursor
  2715                                  ;
  2716                                  ;       Description:    This routine positions the cursor on the console.
  2717                                  ;
  2718                                  ;       In:             DS      OS data selector
  2719                                  ;
  2720                                  ;-----------------------------------------------------------------------------------------------------------------------
  2721                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  2722                                                          mov     al,[wbConsoleRow]                               ;AL = row
  2723                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  2724                                                          mul     ah                                              ;row offset
  2725                                                          add     al,[wbConsoleColumn]                            ;add column
  2726                                                          adc     ah,0                                            ;add overflow
  2727                                                          mov     ecx,eax                                         ;screen offset
  2728                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  2729                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  2730                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  2731                                                          out     dx,al                                           ;select register
  2732                                                          inc     edx                                             ;data port
  2733                                                          mov     al,ch                                           ;hi-order cursor loc
  2734                                                          out     dx,al                                           ;store hi-order loc
  2735                                                          dec     edx                                             ;register select port
  2736                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
  2737                                                          out     dx,al                                           ;select register
  2738                                                          inc     edx                                             ;data port
  2739                                                          mov     al,cl                                           ;lo-order cursor loc
  2740                                                          out     dx,al                                           ;store lo-order loc
  2741                                                          pop     ecx                                             ;restore non-volatile regs
  2742                                                          ret                                                     ;return
