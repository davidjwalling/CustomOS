  1981                                  ;	Routine:	PutConsoleString
  1982                                  ;
  1983                                  ;	Description:	This routine writes a sequence of ASCII characters to the console until null and updates the
  1984                                  ;			console position as needed.
  1985                                  ;
  1986                                  ;	In:		EDX	source address
  1987                                  ;			DS	OS data selector
  1988                                  ;
  1989                                  ;-----------------------------------------------------------------------------------------------------------------------
  1990                                  PutConsoleString	push	esi						;save non-volatile regs
  1991                                  			mov	esi,edx						;source address
  1992                                  			cld							;forward strings
  1993                                  .10			lodsb							;ASCII character
  1994                                  			or	al,al						;end of string?
  1995                                  			jz	.40						;yes, skip ahead
  1996                                  			cmp	al,EASCIIRETURN					;carriage return?
  1997                                  			jne	.20						;no, skip ahead
  1998                                  			call	FirstConsoleColumn				;move to start of row
  1999                                  			jmp	.10						;next character
  2000                                  .20			cmp	al,EASCIILINEFEED				;line feed?
  2001                                  			jne	.30						;no, skip ahead
  2002                                  			call	NextConsoleRow					;move to next row
  2003                                  			jmp	.10						;next character
  2004                                  .30			call	PutConsoleChar					;output character to console
  2005                                  			call	NextConsoleColumn				;advance to next column
  2006                                  			jmp	.10						;next character
  2007                                  .40			pop	esi						;restore non-volatile regs
  2008                                  			ret							;return
