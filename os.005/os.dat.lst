  2503                                  ;       In:             BL      shift flags
  2504                                  ;                       BH      lock flags
  2505                                  ;                       DS      OS data selector
  2506                                  ;
  2507                                  ;-----------------------------------------------------------------------------------------------------------------------
  2508                                  PutConsoleOIAShift      push    ecx                                             ;save non-volatile regs
  2509                                                          push    es                                              ;
  2510                                                          push    EGDTCGA                                         ;load CGA selector ...
  2511                                                          pop     es                                              ;... into ES register
  2512                                                          mov     ch,ECONOIAROW                                   ;OIA row
  2513                                                          mov     al,EASCIISPACE                                  ;space is default character
  2514                                                          test    bl,EKEYFSHIFTLEFT                               ;left-shift indicated?
  2515                                                          jz      .10                                             ;no, skip ahead
  2516                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2517                                  .10                     mov     cl,14                                           ;indicator column
  2518                                                          call    SetConsoleChar                                  ;display ASCII character
  2519                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2520                                                          test    bl,EKEYFSHIFTRIGHT                              ;right-shift indicated?
  2521                                                          jz      .20                                             ;no, skip ahead
  2522                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2523                                  .20                     mov     cl,64                                           ;indicator column
  2524                                                          call    SetConsoleChar                                  ;display ASCII character
  2525                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2526                                                          test    bl,EKEYFCTRLLEFT                                ;left-ctrl indicated?
  2527                                                          jz      .30                                             ;no, skip ahead
  2528                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2529                                  .30                     mov     cl,15                                           ;indicator column
  2530                                                          call    SetConsoleChar                                  ;display ASCII character
  2531                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2532                                                          test    bl,EKEYFCTRLRIGHT                               ;right-ctrl indicated?
  2533                                                          jz      .40                                             ;no, skip ahead
  2534                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2535                                  .40                     mov     cl,63                                           ;indicator column
  2536                                                          call    SetConsoleChar                                  ;display ASCII character
  2537                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2538                                                          test    bl,EKEYFALTLEFT                                 ;left-alt indicated?
  2539                                                          jz      .50                                             ;no, skip ahead
  2540                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  2541                                  .50                     mov     cl,16                                           ;indicator column
  2542                                                          call    SetConsoleChar                                  ;display ASCII character
  2543                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2544                                                          test    bl,EKEYFALTRIGHT                                ;right-alt indicated?
  2545                                                          jz      .60                                             ;no, skip ahead
  2546                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  2547                                  .60                     mov     cl,62                                           ;indicator column
  2548                                                          call    SetConsoleChar                                  ;display ASCII character
  2549                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2550                                                          test    bh,EKEYFLOCKCAPS                                ;caps-lock indicated?
  2551                                                          jz      .70                                             ;no, skip ahead
  2552                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  2553                                  .70                     mov     cl,78                                           ;indicator column
  2554                                                          call    SetConsoleChar                                  ;display ASCII character
  2555                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2556                                                          test    bh,EKEYFLOCKNUM                                 ;num-lock indicated?
  2557                                                          jz      .80                                             ;no, skip ahead
  2558                                                          mov     al,'N'                                          ;yes, indicate with 'N'
  2559                                  .80                     mov     cl,77                                           ;indicator column
  2560                                                          call    SetConsoleChar                                  ;display ASCII character
  2561                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2562                                                          test    bh,EKEYFLOCKSCROLL                              ;scroll-lock indicated?
  2563                                                          jz      .90                                             ;no, skip ahead
  2564                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  2565                                  .90                     mov     cl,76                                           ;indicator column
  2566                                                          call    SetConsoleChar                                  ;display ASCII character
  2567                                                          pop     es                                              ;restore non-volatile regs
  2568                                                          pop     ecx                                             ;
  2569                                                          ret                                                     ;return
