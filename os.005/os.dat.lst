  1919                                                          je      irq1.30                                         ;yes, set flag
  1920                                                          cmp     ah,EKEYBSHIFTRUP                                ;right shift key up code?
  1921                                                          je      irq1.40                                         ;yes, reset flag
  1922                                                          mov     al,EKEYFCTRLLEFT                                ;left control flag
  1923                                                          cmp     ah,EKEYBCTRLDOWN                                ;control key down code?
  1924                                                          je      irq1.30                                         ;yes, set flag
