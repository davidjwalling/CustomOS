  3485                                  ;
  3486                                  ;       Routine:        PlaceCursor
  3487                                  ;
  3488                                  ;       Description:    This routine positions the cursor on the console.
  3489                                  ;
  3490                                  ;       In:             DS      OS data selector
  3491                                  ;
  3492                                  ;-----------------------------------------------------------------------------------------------------------------------
  3493                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  3494                                                          mov     al,[wbConsoleRow]                               ;AL = row
  3495                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  3496                                                          mul     ah                                              ;row offset
  3497                                                          add     al,[wbConsoleColumn]                            ;add column
  3498                                                          adc     ah,0                                            ;add overflow
  3499                                                          mov     ecx,eax                                         ;screen offset
  3500                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  3501                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  3502                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  3503                                                          out     dx,al                                           ;select register
  3504                                                          inc     edx                                             ;data port
  3505                                                          mov     al,ch                                           ;hi-order cursor loc
  3506                                                          out     dx,al                                           ;store hi-order loc
  3507                                                          dec     edx                                             ;register select port
  3508                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
  3509                                                          out     dx,al                                           ;select register
  3510                                                          inc     edx                                             ;data port
  3511                                                          mov     al,cl                                           ;lo-order cursor loc
  3512                                                          out     dx,al                                           ;store lo-order loc
  3513                                                          pop     ecx                                             ;restore non-volatile regs
  3514                                                          ret                                                     ;return
