  2902                                  ;
  2903                                  ;       Routine:        GetConsoleString
  2904                                  ;
  2905                                  ;       Description:    This routine accepts keyboard input into a buffer.
  2906                                  ;
  2907                                  ;       In:             DS:EDX  target buffer address
  2908                                  ;                       ECX     maximum number of characters to accept
  2909                                  ;                       BH      echo to terminal
  2910                                  ;                       BL      terminating character
  2911                                  ;
  2912                                  ;-----------------------------------------------------------------------------------------------------------------------
  2913                                  GetConsoleString        push    ecx                                             ;save non-volatile regs
  2914                                                          push    esi                                             ;
  2915                                                          push    edi                                             ;
  2916                                                          push    es                                              ;
  2917                                                          push    ds                                              ;load data segment selector ...
  2918                                                          pop     es                                              ;... into extra segment register
  2919                                                          mov     edi,edx                                         ;edi = target buffer
  2920                                                          push    ecx                                             ;save maximum characters
  2921                                                          xor     al,al                                           ;zero register
  2922                                                          cld                                                     ;forward strings
  2923                                                          rep     stosb                                           ;zero fill buffer
  2924                                                          pop     ecx                                             ;maximum characters
  2925                                                          mov     edi,edx                                         ;edi = target buffer
  2926                                                          mov     esi,edx                                         ;esi = target buffer
  2927                                  .10                     jecxz   .50                                             ;exit if max-length is zero
  2928                                  .20                     call    GetConsoleChar                                  ;al = next input char
  2929                                                          cmp     al,bl                                           ;is this the terminator?
  2930                                                          je      .50                                             ;yes, exit
  2931                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  2932                                                          jne     .30                                             ;no, skip ahead
  2933                                                          cmp     esi,edi                                         ;at start of buffer?
  2934                                                          je      .20                                             ;yes, get next character
  2935                                                          dec     edi                                             ;backup target pointer
  2936                                                          mov     byte [edi],0                                    ;zero previous character
  2937                                                          inc     ecx                                             ;increment remaining chars
  2938                                                          test    bh,1                                            ;echo to console?
  2939                                                          jz      .20                                             ;no, get next character
  2940                                                          call    PreviousConsoleColumn                           ;backup console position
  2941                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2942                                                          call    PutConsoleChar                                  ;write space to console
  2943                                                          call    PlaceCursor                                     ;position the cursor
  2944                                                          jmp     .20                                             ;get next character
  2945                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  2946                                                          jb      .20                                             ;no, get another character
  2947                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  2948                                                          ja      .20                                             ;no, get another character
  2949                                                          stosb                                                   ;store character in buffer
  2950                                                          test    bh,1                                            ;echo to console?
  2951                                                          jz      .40                                             ;no, skip ahead
  2952                                                          call    PutConsoleChar                                  ;write character to console
  2953                                                          call    NextConsoleColumn                               ;advance console position
  2954                                                          call    PlaceCursor                                     ;position the cursor
  2955                                  .40                     dec     ecx                                             ;decrement remaining chars
  2956                                                          jmp     .10                                             ;next
  2957                                  .50                     xor     al,al                                           ;null
  2958                                                          stosb                                                   ;terminate buffer
  2959                                                          pop     es                                              ;restore non-volatile regs
  2960                                                          pop     edi                                             ;
  2961                                                          pop     esi                                             ;
  2962                                                          pop     ecx                                             ;
  2963                                                          ret                                                     ;return
