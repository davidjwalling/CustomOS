  3613                                  ;=======================================================================================================================
  3614                                  ;
  3615                                  ;       Console Task
  3616                                  ;
  3617                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  3618                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  3619                                  ;       screen and responds to user commands.
  3620                                  ;
  3621                                  ;=======================================================================================================================
  3622                                  ;-----------------------------------------------------------------------------------------------------------------------
  3623                                  ;
  3624                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  3625                                  ;
  3626                                  ;       This is the stack for the console task. It supports 448 nested calls.
  3627                                  ;
  3628                                  ;-----------------------------------------------------------------------------------------------------------------------
  3629                                  section                 constack                                                ;console task stack
  3630                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  3631                                  ;-----------------------------------------------------------------------------------------------------------------------
  3632                                  ;
  3633                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  3634                                  ;
  3635                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  3636                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  3637                                  ;       16 descriptors. Six are initially defined.
  3638                                  ;
  3639                                  ;-----------------------------------------------------------------------------------------------------------------------
  3640                                  section                 conldt                                                  ;console local descriptors
  3641                                                          dq      004093004780007Fh                               ;04 TSS alias
  3642                                                          dq      004093004700007Fh                               ;0c LDT alias
  3643                                                          dq      00409300400006FFh                               ;14 stack
  3644                                                          dq      00CF93000000FFFFh                               ;1c data
  3645                                                          dq      00409B0050000FFFh                               ;24 code
  3646                                                          dq      00409300480007FFh                               ;2c message queue
  3647                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  3648                                  ;-----------------------------------------------------------------------------------------------------------------------
  3649                                  ;
  3650                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  3651                                  ;
  3652                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  3653                                  ;       segment. CS to console code.
  3654                                  ;
  3655                                  ;-----------------------------------------------------------------------------------------------------------------------
  3656                                  section                 contss                                                  ;console task state segment
  3657                                                          dd      0                                               ;00 back-link tss
  3658                                                          dd      0700h                                           ;04 esp ring 0
  3659                                                          dd      0014h                                           ;08 ss ring 0
  3660                                                          dd      0700h                                           ;0c esp ring 1
