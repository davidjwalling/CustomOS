  2305                                                          push    eax                                             ;save non-volatile regs
  2306                                                          push    edx                                             ;
  2307                                                          push    ds                                              ;
  2308                                  ;
  2309                                  ;       Update the clock tick count and the elapsed days as needed.
  2310                                  ;
  2311                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2312                                                          pop     ds                                              ;... into data segment register
  2313                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  2314                                                          inc     eax                                             ;increment clock ticks
  2315                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  2316                                                          jb      irq0.10                                         ;no, skip ahead
