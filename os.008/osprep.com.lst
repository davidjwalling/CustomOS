  3424                                  ;
  3425                                  ;       Routine:        SetConsoleChar
  3426                                  ;
  3427                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  3428                                  ;
  3429                                  ;       In:             AL      ASCII character
  3430                                  ;                       CL      column
  3431                                  ;                       CH      row
  3432                                  ;                       ES      CGA selector
  3433                                  ;
  3434                                  ;       Out:            EAX     last target address written (ES:)
  3435                                  ;                       CL      column + 1
  3436                                  ;
  3437                                  ;-----------------------------------------------------------------------------------------------------------------------
  3438                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  3439                                                          movzx   eax,ch                                          ;row
  3440                                                          mov     ah,ECONCOLS                                     ;cols/row
  3441                                                          mul     ah                                              ;row * cols/row
  3442                                                          add     al,cl                                           ;add column
  3443                                                          adc     ah,0                                            ;handle carry
  3444                                                          shl     eax,1                                           ;screen offset
  3445                                                          mov     [es:eax],dl                                     ;store character
  3446                                                          inc     cl                                              ;next column
  3447                                                          ret                                                     ;return
  3448                                  ;-----------------------------------------------------------------------------------------------------------------------
  3449                                  ;
  3450                                  ;       Routine:        SetConsoleString
  3451                                  ;
  3452                                  ;       Description:    This routine outputs a sequence of ASCII character at the given row and column.
  3453                                  ;
  3454                                  ;       In:             ESI     source offset (DS:)
  3455                                  ;                       CL      column
  3456                                  ;                       CH      row
  3457                                  ;                       ES      CGA selector
  3458                                  ;
  3459                                  ;-----------------------------------------------------------------------------------------------------------------------
  3460                                  SetConsoleString        push    esi                                             ;save non-volatile regs
  3461                                                          cld                                                     ;forward strings
  3462                                  .10                     lodsb                                                   ;next ASCII character
  3463                                                          test    al,al                                           ;end of string?
  3464                                                          jz      .20                                             ;yes, branch
  3465                                                          call    SetConsoleChar                                  ;store character
  3466                                                          jmp     .10                                             ;continue
  3467                                  .20                     pop     esi                                             ;restore non-volatile regs
  3468                                                          ret                                                     ;return
