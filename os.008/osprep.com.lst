  2331                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  2332                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  2333                                                          in      al,dx                                           ;FDC main status byte
