  3684                                  ;
  3685                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  3686                                  ;
  3687                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  3688                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  3689                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  3690                                  ;       event.
  3691                                  ;
  3692                                  ;-----------------------------------------------------------------------------------------------------------------------
  3693                                  section                 conmque                                                 ;console message queue
  3694                                                          dd      8                                               ;head pointer
  3695                                                          dd      8                                               ;tail pointer
  3696                                                          times   510 dd 0                                        ;queue elements
  3697                                  ;-----------------------------------------------------------------------------------------------------------------------
  3698                                  ;
  3699                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  3700                                  ;
  3701                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  3702                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  3703                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  3704                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  3705                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  3706                                  ;       board input, echoing to the console screen and responding to user commands.
  3707                                  ;
  3708                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  3709                                  ;
  3710                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  3711                                  ;                               |  Real Mode Interrupt Vectors                  |
  3712                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  3713                                  ;                               |  Reserved BIOS Memory Area                    |
  3714                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  3715                                  ;                               |  Shared Kernel Memory Area                    |
  3716                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  3717                                  ;                               |  Global Descriptor Table (GDT)                |
  3718                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  3719                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  3720                                  ;                       002000  +-----------------------------------------------+
  3721                                  ;                               |  Interrupt Handlers                           |
  3722                                  ;                               |  Kernel Function Library                      |
  3723                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  3724                                  ;                               |  Console Task Stack Area                      |
  3725                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  3726                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  3727                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  3728                                  ;                               |  Console Task Task State Segment (TSS)        |
  3729                                  ;                       004800  +-----------------------------------------------+
  3730                                  ;                               |  Console Task Message Queue                   |
  3731                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  3732                                  ;                               |  Console Task Code                            |
  3733                                  ;                               |  Console Task Constants                       |
  3734                                  ;                       006000  +===============================================+
  3735                                  ;
  3736                                  ;-----------------------------------------------------------------------------------------------------------------------
  3737                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  3738                                  ConCode                 call    ConInitializeData                               ;initialize console variables
  3739                                  
  3740                                                          clearConsoleScreen                                      ;clear the console screen
  3741                                                          putConsoleString czTitle                                ;display startup message
  3742                                  .10                     putConsoleString czPrompt                               ;display input prompt
  3743                                                          placeCursor                                             ;set CRT cursor location
  3744                                                          getConsoleString wzConsoleInBuffer,79,1,13              ;accept keyboard input
  3745                                                          putConsoleString czNewLine                              ;newline
  3746                                  
  3747                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer
  3748                                                          mov     ebx,wzConsoleToken                              ;token buffer
  3749                                                          call    ConTakeToken                                    ;handle console input
  3750                                                          mov     edx,wzConsoleToken                              ;token buffer
  3751                                                          call    ConDetermineCommand                             ;determine command number
  3752                                                          cmp     eax,ECONJMPTBLCNT                               ;valid command number?
  3753                                                          jb      .20                                             ;yes, branch
  3754                                  
  3755                                                          putConsoleString czUnknownCommand                       ;display error message
  3756                                  
  3757                                                          jmp     .10                                             ;next command
  3758                                  .20                     shl     eax,2                                           ;index into jump table
  3759                                                          mov     edx,tConJmpTbl                                  ;jump table base address
  3760                                                          mov     eax,[edx+eax]                                   ;command handler routine address
  3761                                                          call    eax                                             ;call command handler
  3762                                                          jmp     .10                                             ;next command
  3763                                  ;-----------------------------------------------------------------------------------------------------------------------
  3764                                  ;
  3765                                  ;       Routine:        ConInitializeData
  3766                                  ;
  3767                                  ;       Description:    This routine initializes console task variables.
  3768                                  ;
  3769                                  ;-----------------------------------------------------------------------------------------------------------------------
  3770                                  ConInitializeData       push    ecx                                             ;save non-volatile regs
  3771                                                          push    edi                                             ;
  3772                                                          push    es                                              ;
  3773                                  ;
  3774                                  ;       Initialize console work areas.
  3775                                  ;
  3776                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3777                                                          pop     es                                              ;... into extra segment register
  3778                                                          mov     edi,ECONDATA                                    ;OS console data address
  3779                                                          xor     al,al                                           ;initialization value
  3780                                                          mov     ecx,ECONDATALEN                                 ;size of OS console data
  3781                                                          cld                                                     ;forward strings
  3782                                                          rep     stosb                                           ;initialize data
  3783                                  ;
  3784                                  ;       Restore and return.
  3785                                  ;
  3786                                                          pop     es                                              ;restore non-volatile regs
  3787                                                          pop     edi                                             ;
  3788                                                          pop     ecx                                             ;
  3789                                                          ret                                                     ;return
  3790                                  ;-----------------------------------------------------------------------------------------------------------------------
  3791                                  ;
  3792                                  ;       Routine:        ConTakeToken
  3793                                  ;
  3794                                  ;       Description:    This routine extracts the next token from the given source buffer.
  3795                                  ;
  3796                                  ;       In:             DS:EDX  source buffer address
  3797                                  ;                       DS:EBX  target buffer address
  3798                                  ;
  3799                                  ;       Out:            DS:EDX  source buffer address
  3800                                  ;                       DS:EBX  target buffer address
  3801                                  ;
  3802                                  ;       Command Form:   Line    = *3( *SP 1*ALNUM )
  3803                                  ;
  3804                                  ;-----------------------------------------------------------------------------------------------------------------------
  3805                                  ConTakeToken            push    esi                                             ;save non-volatile regs
  3806                                                          push    edi                                             ;
  3807                                                          push    es                                              ;
  3808                                                          push    ds                                              ;load data segment selector ...
  3809                                                          pop     es                                              ;... into extra segment reg
  3810                                                          mov     esi,edx                                         ;source buffer address
  3811                                                          mov     edi,ebx                                         ;target buffer address
  3812                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  3813                                                          cld                                                     ;forward strings
  3814                                  .10                     lodsb                                                   ;load byte
  3815                                                          cmp     al,EASCIISPACE                                  ;space?
  3816                                                          je      .10                                             ;yes, continue
  3817                                                          test    al,al                                           ;end of line?
  3818                                                          jz      .40                                             ;yes, branch
  3819                                  .20                     stosb                                                   ;store byte
  3820                                                          lodsb                                                   ;load byte
  3821                                                          test    al,al                                           ;end of line?
  3822                                                          jz      .40                                             ;no, continue
  3823                                                          cmp     al,EASCIISPACE                                  ;space?
  3824                                                          jne     .20                                             ;no, continue
  3825                                  .30                     lodsb                                                   ;load byte
  3826                                                          cmp     al,EASCIISPACE                                  ;space?
  3827                                                          je      .30                                             ;yes, continue
  3828                                                          dec     esi                                             ;pre-position
  3829                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  3830                                                          mov     edi,edx                                         ;source buffer address
  3831                                  .50                     lodsb                                                   ;remaining byte
  3832                                                          stosb                                                   ;move to front of buffer
  3833                                                          test    al,al                                           ;end of line?
  3834                                                          jnz     .50                                             ;no, continue
  3835                                                          pop     es                                              ;restore non-volatile regs
  3836                                                          pop     edi                                             ;
  3837                                                          pop     esi                                             ;
  3838                                                          ret                                                     ;return
  3839                                  ;-----------------------------------------------------------------------------------------------------------------------
  3840                                  ;
  3841                                  ;       Routine:        ConDetermineCommand
  3842                                  ;
  3843                                  ;       Description:    This routine determines the command number for the command at DS:EDX.
  3844                                  ;
  3845                                  ;       input:          DS:EDX  command address
  3846                                  ;
  3847                                  ;       output:         EAX     >=0     = command nbr
  3848                                  ;                               0       = unknown command
  3849                                  ;
  3850                                  ;-----------------------------------------------------------------------------------------------------------------------
  3851                                  ConDetermineCommand     push    ebx                                             ;save non-volatile regs
  3852                                                          push    ecx                                             ;
  3853                                                          push    esi                                             ;
  3854                                                          push    edi                                             ;
  3855                                  
  3856                                                          upperCaseString                                         ;upper-case string at EDX
  3857                                  
  3858                                                          mov     esi,tConCmdTbl                                  ;commands table
  3859                                                          xor     edi,edi                                         ;intialize command number
  3860                                                          cld                                                     ;forward strings
  3861                                  .10                     lodsb                                                   ;command length
  3862                                                          movzx   ecx,al                                          ;command length
  3863                                                          jecxz   .20                                             ;branch if end of table
  3864                                                          mov     ebx,esi                                         ;table entry address
  3865                                                          add     esi,ecx                                         ;next table entry address
  3866                                  
  3867                                                          compareMemory                                           ;compare byte arrays at EDX, EBX
  3868                                  
  3869                                                          jecxz   .20                                             ;branch if equal
  3870                                                          inc     edi                                             ;increment command nbr
  3871                                                          jmp     .10                                             ;repeat
  3872                                  .20                     mov     eax,edi                                         ;command number
  3873                                                          pop     edi                                             ;restore non-volatile regs
  3874                                                          pop     esi                                             ;
  3875                                                          pop     ecx                                             ;
  3876                                                          pop     ebx                                             ;
  3877                                                          ret                                                     ;return
  3878                                  ;-----------------------------------------------------------------------------------------------------------------------
