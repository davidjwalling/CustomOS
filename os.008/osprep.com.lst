  3235                                  ;
  3236                                  ;       Routine:        PutConsoleString
  3237                                  ;
  3238                                  ;       Description:    This routine writes a sequence of ASCII characters to the console until null and updates the
  3239                                  ;                       console position as needed.
  3240                                  ;
  3241                                  ;       In:             EDX     source address
  3242                                  ;                       DS      OS data selector
  3243                                  ;
  3244                                  ;-----------------------------------------------------------------------------------------------------------------------
  3245                                  PutConsoleString        push    esi                                             ;save non-volatile regs
  3246                                                          mov     esi,edx                                         ;source address
  3247                                                          cld                                                     ;forward strings
  3248                                  .10                     lodsb                                                   ;ASCII character
  3249                                                          or      al,al                                           ;end of string?
  3250                                                          jz      .40                                             ;yes, skip ahead
  3251                                                          cmp     al,EASCIIRETURN                                 ;carriage return?
  3252                                                          jne     .20                                             ;no, skip ahead
  3253                                                          call    FirstConsoleColumn                              ;move to start of row
  3254                                                          jmp     .10                                             ;next character
  3255                                  .20                     cmp     al,EASCIILINEFEED                               ;line feed?
  3256                                                          jne     .30                                             ;no, skip ahead
  3257                                                          call    NextConsoleRow                                  ;move to next row
  3258                                                          jmp     .10                                             ;next character
  3259                                  .30                     call    PutConsoleChar                                  ;output character to console
  3260                                                          call    NextConsoleColumn                               ;advance to next column
  3261                                                          jmp     .10                                             ;next character
  3262                                  .40                     pop     esi                                             ;restore non-volatile regs
  3263                                                          ret                                                     ;return
