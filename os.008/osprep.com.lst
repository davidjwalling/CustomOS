  3283                                  ;
  3284                                  ;       Routine:        GetMessage
  3285                                  ;
  3286                                  ;       Description:    This routine reads and removes a message from the message queue.
  3287                                  ;
  3288                                  ;       Out:            EAX     lo-order message data
  3289                                  ;                       EDX     hi-order message data
  3290                                  ;
  3291                                  ;                       CY      0 = message read
  3292                                  ;                               1 = no message to read
  3293                                  ;
  3294                                  ;-----------------------------------------------------------------------------------------------------------------------
  3295                                  GetMessage              push    ebx                                             ;save non-volatile regs
  3296                                                          push    ecx                                             ;
  3297                                                          push    ds                                              ;
  3298                                                          push    ELDTMQ                                          ;load message queue selector ...
  3299                                                          pop     ds                                              ;... into data segment register
  3300                                                          mov     ebx,[MQHead]                                    ;head ptr
  3301                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  3302                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  3303                                                          or      eax,edx                                         ;is queue empty?
  3304                                                          stc                                                     ;assume queue is emtpy
  3305                                                          jz      .20                                             ;yes, skip ahead
  3306                                                          xor     ecx,ecx                                         ;store zero
  3307                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  3308                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  3309                                                          add     ebx,8                                           ;next queue element
  3310                                                          and     ebx,03fch                                       ;at end of queue?
  3311                                                          jnz     .10                                             ;no, skip ahead
  3312                                                          mov     bl,8                                            ;reset to 1st entry
  3313                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  3314                                                          clc                                                     ;indicate message read
  3315                                  .20                     pop     ds                                              ;restore non-volatile regs
  3316                                                          pop     ecx                                             ;
  3317                                                          pop     ebx                                             ;
  3318                                                          ret                                                     ;return
  3319                                  ;-----------------------------------------------------------------------------------------------------------------------
  3320                                  ;
  3321                                  ;       Routine:        PutMessage
  3322                                  ;
  3323                                  ;       Description:    This routine adda a message to the message queue.
  3324                                  ;
  3325                                  ;       In:             ECX     hi-order data word
  3326                                  ;                       EDX     lo-order data word
  3327                                  ;
  3328                                  ;       Out:            CY      0 = success
  3329                                  ;                               1 = fail: queue is full
  3330                                  ;
  3331                                  ;-----------------------------------------------------------------------------------------------------------------------
  3332                                  PutMessage              push    ds                                              ;save non-volatile regs
  3333                                                          push    ELDTMQ                                          ;load task message queue selector ...
  3334                                                          pop     ds                                              ;... into data segment register
  3335                                                          mov     eax,[MQTail]                                    ;tail ptr
  3336                                                          cmp     dword [eax],0                                   ;is queue full?
  3337                                                          stc                                                     ;assume failure
  3338                                                          jne     .20                                             ;yes, cannot store
  3339                                                          mov     [eax],edx                                       ;store lo-order data
  3340                                                          mov     [eax+4],ecx                                     ;store hi-order data
  3341                                                          add     eax,8                                           ;next queue element adr
  3342                                                          and     eax,03fch                                       ;at end of queue?
  3343                                                          jnz     .10                                             ;no, skip ahead
  3344                                                          mov     al,8                                            ;reset to top of queue
  3345                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  3346                                                          clc                                                     ;indicate success
  3347                                  .20                     pop     ds                                              ;restore non-volatile regs
  3348                                                          ret                                                     ;return
