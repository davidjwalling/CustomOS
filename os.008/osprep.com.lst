  3202                                                          test    bl,EKEYFALTLEFT                                 ;left-alt indicated?
  3203                                                          jz      .50                                             ;no, skip ahead
  3204                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  3205                                  .50                     mov     cl,16                                           ;indicator column
  3206                                                          call    SetConsoleChar                                  ;display ASCII character
  3207                                                          mov     al,EASCIISPACE                                  ;ASCII space
  3208                                                          test    bl,EKEYFALTRIGHT                                ;right-alt indicated?
  3209                                                          jz      .60                                             ;no, skip ahead
  3210                                                          mov     al,'A'                                          ;yes, indicate with 'A'
  3211                                  .60                     mov     cl,62                                           ;indicator column
  3212                                                          call    SetConsoleChar                                  ;display ASCII character
  3213                                                          mov     al,EASCIISPACE                                  ;ASCII space
  3214                                                          test    bh,EKEYFLOCKCAPS                                ;caps-lock indicated?
  3215                                                          jz      .70                                             ;no, skip ahead
  3216                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  3217                                  .70                     mov     cl,78                                           ;indicator column
  3218                                                          call    SetConsoleChar                                  ;display ASCII character
  3219                                                          mov     al,EASCIISPACE                                  ;ASCII space
  3220                                                          test    bh,EKEYFLOCKNUM                                 ;num-lock indicated?
  3221                                                          jz      .80                                             ;no, skip ahead
  3222                                                          mov     al,'N'                                          ;yes, indicate with 'N'
  3223                                  .80                     mov     cl,77                                           ;indicator column
