  3528                                  ;       Routine:        PutSecondaryEndOfInt
  3529                                  ;
  3530                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the secondary PIC.
  3531                                  ;
  3532                                  ;-----------------------------------------------------------------------------------------------------------------------
  3533                                  PutSecondaryEndOfInt    sti                                                     ;enable maskable interrupts
  3534                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
