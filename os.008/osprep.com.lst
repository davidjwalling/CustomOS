  3363                                  ;       Routine:        ClearConsoleScreen
  3364                                  ;
  3365                                  ;       Description:    This routine clears the console (CGA) screen.
  3366                                  ;
  3367                                  ;-----------------------------------------------------------------------------------------------------------------------
  3368                                  ClearConsoleScreen      push    ecx                                             ;save non-volatile regs
  3369                                                          push    edi                                             ;
  3370                                                          push    ds                                              ;
  3371                                                          push    es                                              ;
  3372                                                          push    EGDTOSDATA                                      ;load OS Data selector ...
  3373                                                          pop     ds                                              ;... into DS register
  3374                                                          push    EGDTCGA                                         ;load CGA selector ...
  3375                                                          pop     es                                              ;... into ES register
  3376                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  3377                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  3378                                                          xor     edi,edi                                         ;target offset
  3379                                                          cld                                                     ;forward strings
  3380                                                          rep     stosd                                           ;reset screen body
  3381                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  3382                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  3383                                                          rep     stosd                                           ;reset OIA line
  3384                                                          xor     al,al                                           ;zero register
  3385                                                          mov     [wbConsoleRow],al                               ;reset console row
  3386                                                          mov     [wbConsoleColumn],al                            ;reset console column
  3387                                                          call    PlaceCursor                                     ;place cursor at current position
  3388                                                          pop     es                                              ;restore non-volatile regs
  3389                                                          pop     ds                                              ;
  3390                                                          pop     edi                                             ;
  3391                                                          pop     ecx                                             ;
  3392                                                          ret                                                     ;return
  3393                                  ;-----------------------------------------------------------------------------------------------------------------------
  3394                                  ;
  3395                                  ;       Routine:        ScrollConsoleRow
  3396                                  ;
  3397                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  3398                                  ;
  3399                                  ;-----------------------------------------------------------------------------------------------------------------------
  3400                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  3401                                                          push    esi                                             ;
  3402                                                          push    edi                                             ;
  3403                                                          push    ds                                              ;
  3404                                                          push    es                                              ;
  3405                                                          push    EGDTCGA                                         ;load CGA video selector ...
  3406                                                          pop     ds                                              ;... into DS
  3407                                                          push    EGDTCGA                                         ;load CGA video selector ...
  3408                                                          pop     es                                              ;... into ES
  3409                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  3410                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  3411                                                          xor     edi,edi                                         ;EDI = target (line 1)
  3412                                                          cld                                                     ;forward strings
  3413                                                          rep     movsd                                           ;move 24 lines up
  3414                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  3415                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  3416                                                          rep     stosd                                           ;clear bottom row
  3417                                                          pop     es                                              ;restore non-volatile regs
  3418                                                          pop     ds                                              ;
  3419                                                          pop     edi                                             ;
  3420                                                          pop     esi                                             ;
  3421                                                          pop     ecx                                             ;
  3422                                                          ret                                                     ;return
