  3197                                                          jz      .40                                             ;no, skip ahead
  3198                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  3199                                  .40                     mov     cl,63                                           ;indicator column
  3200                                                          call    SetConsoleChar                                  ;display ASCII character
