  2826                                  ;       Description:    This routine places all characters in the given string to upper case.
  2827                                  ;
  2828                                  ;       In:             DS:EDX  string address
  2829                                  ;
  2830                                  ;       Out:            EDX     string address
  2831                                  ;
  2832                                  ;-----------------------------------------------------------------------------------------------------------------------
  2833                                  UpperCaseString         push    esi                                             ;save non-volatile regs
  2834                                                          mov     esi,edx                                         ;string address
  2835                                                          cld                                                     ;forward strings
  2836                                  .10                     lodsb                                                   ;string character
  2837                                                          test    al,al                                           ;null?
  2838                                                          jz      .20                                             ;yes, skip ahead
  2839                                                          cmp     al,EASCIILOWERA                                 ;lower-case? (lower bounds)
  2840                                                          jb      .10                                             ;no, continue
  2841                                                          cmp     al,EASCIILOWERZ                                 ;lower-case? (upper bounds)
  2842                                                          ja      .10                                             ;no, continue
  2843                                                          and     al,EASCIICASEMASK                               ;mask for upper case
