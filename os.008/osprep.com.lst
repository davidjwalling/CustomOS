  2473                                                          jz      irq1.140                                        ;yes, skip ahead
  2474                                                          in      al,EKEYBPORTDATA                                ;read scan code 2
  2475                                                          mov     [wbConsoleScan2],al                             ;save scan code 2
  2476                                                          call    WaitForKeyOutBuffer                             ;controller timeout?
