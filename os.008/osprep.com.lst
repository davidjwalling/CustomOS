  3225                                                          mov     al,EASCIISPACE                                  ;ASCII space
  3226                                                          test    bh,EKEYFLOCKSCROLL                              ;scroll-lock indicated?
  3227                                                          jz      .90                                             ;no, skip ahead
  3228                                                          mov     al,'S'                                          ;yes, indicate with 'S'
  3229                                  .90                     mov     cl,76                                           ;indicator column
