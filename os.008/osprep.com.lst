  3538                                  ;
  3539                                  ;       Routine:        ResetSystem
  3540                                  ;
  3541                                  ;       Description:    This routine restarts the system using the 8042 controller.
  3542                                  ;
  3543                                  ;       Out:            N/A     This routine does not return.
  3544                                  ;
  3545                                  ;-----------------------------------------------------------------------------------------------------------------------
  3546                                  ResetSystem             mov     ecx,001fffffh                                   ;delay to clear ints
  3547                                                          loop    $                                               ;clear interrupts
  3548                                                          mov     al,EKEYBCMDRESET                                ;mask out bit zero
  3549                                                          out     EKEYBPORTSTAT,al                                ;drive bit zero low
  3550                                  .10                     sti                                                     ;enable maskable interrupts
  3551                                                          hlt                                                     ;halt until interrupt
  3552                                                          jmp     .10                                             ;repeat until reset kicks in
  3553                                  ;-----------------------------------------------------------------------------------------------------------------------
  3554                                  ;
  3555                                  ;       Routine:        SetKeyboardLamps
  3556                                  ;
  3557                                  ;       Description:    This routine sends the set/reset mode indicators command to the keyboard device.
  3558                                  ;
  3559                                  ;       In:             BH      00000CNS (C:Caps Lock,N:Num Lock,S:Scroll Lock)
  3560                                  ;
  3561                                  ;-----------------------------------------------------------------------------------------------------------------------
  3562                                  SetKeyboardLamps        call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3563                                                          mov     al,EKEYBCMDLAMPS                                ;set/reset lamps command
  3564                                                          out     EKEYBPORTDATA,al                                ;send command to 8042
  3565                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3566                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3567                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3568                                                          mov     al,bh                                           ;set/reset lamps value
  3569                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  3570                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3571                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3572                                                          ret                                                     ;return
  3573                                  ;-----------------------------------------------------------------------------------------------------------------------
  3574                                  ;
  3575                                  ;       Routine:        WaitForKeyInBuffer
  3576                                  ;
  3577                                  ;       Description:    This routine waits for keyboard input buffer to be ready for input.
  3578                                  ;
  3579                                  ;       Out:            ZF      1 = Input buffer ready
  3580                                  ;                               0 = Input buffer not ready after timeout
  3581                                  ;
  3582                                  ;-----------------------------------------------------------------------------------------------------------------------
  3583                                  WaitForKeyInBuffer      push    ecx                                             ;save non-volatile regs
  3584                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3585                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3586                                                          test    al,EKEYBBITIN                                   ;is input buffer still full?
  3587                                                          loopnz  .10                                             ;yes, repeat till timeout
  3588                                                          pop     ecx                                             ;restore non-volatile regs
  3589                                                          ret                                                     ;return
  3590                                  ;-----------------------------------------------------------------------------------------------------------------------
  3591                                  ;
  3592                                  ;       Routine:        WaitForKeyOutBuffer
  3593                                  ;
  3594                                  ;       Description:    This routine waits for keyboard output buffer to have data to read.
  3595                                  ;
  3596                                  ;       Out:            ZF      1 = Output buffer has data from controller
  3597                                  ;                               0 = Output buffer empty after timeout
  3598                                  ;
  3599                                  ;-----------------------------------------------------------------------------------------------------------------------
  3600                                  WaitForKeyOutBuffer     push    ecx                                             ;save non-volatile regs
  3601                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3602                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3603                                                          test    al,EKEYBBITOUT                                  ;output buffer status bit
  3604                                                          loopz   .10                                             ;loop until output buffer bit
  3605                                                          pop     ecx                                             ;restore non-volatile regs
  3606                                                          ret                                                     ;return
