  2342                                  ;       Signal the end of the hardware interrupt.
  2343                                  ;
  2344                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  2345                                  ;
  2346                                  ;       Restore and return.
  2347                                  ;
  2348                                                          pop     ds                                              ;restore modified regs
  2349                                                          pop     edx                                             ;
  2350                                                          pop     eax                                             ;
  2351                                                          iretd                                                   ;return
