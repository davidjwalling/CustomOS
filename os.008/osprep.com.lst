   713                                  ;
   714                                  ;       Set the video mode to 80 column, 25 row, text.
   715                                  ;
   716 00000054 B80300                                          mov     ax,EBIOSFNSETVMODE<<8|EBIOSMODETEXT80           ;set mode function, 80x25 text mode
