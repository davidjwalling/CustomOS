  3520                                  ;
  3521                                  ;-----------------------------------------------------------------------------------------------------------------------
  3522                                  PutPrimaryEndOfInt      sti                                                     ;enable maskable interrupts
  3523                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  3524                                                          out     EPICPORTPRI,al                                  ;send EOI to primary PIC
  3525                                                          ret                                                     ;return
