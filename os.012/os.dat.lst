  3909                                  ;       Routine:        CompareMemory
  3910                                  ;
  3911                                  ;       Description:    This routine compares two byte arrays.
  3912                                  ;
  3913                                  ;       In:             DS:EDX  first source address
  3914                                  ;                       DS:EBX  second source address
  3915                                  ;                       ECX     comparison length
  3916                                  ;
  3917                                  ;       Out:            EDX     first source address
  3918                                  ;                       EBX     second source address
  3919                                  ;                       ECX     0       array 1 = array 2
  3920                                  ;                               <0      array 1 < array 2
  3921                                  ;                               >0      array 1 > array 2
  3922                                  ;
  3923                                  ;-----------------------------------------------------------------------------------------------------------------------
  3924                                  CompareMemory           push    esi                                             ;save non-volatile regs
  3925                                                          push    edi                                             ;
  3926                                                          push    es                                              ;
  3927                                                          push    ds                                              ;copy DS
  3928                                                          pop     es                                              ;... to ES
  3929                                                          mov     esi,edx                                         ;first source address
  3930                                                          mov     edi,ebx                                         ;second source address
  3931                                                          cld                                                     ;forward strings
  3932                                                          rep     cmpsb                                           ;compare bytes
  3933                                                          mov     al,0                                            ;default result
  3934                                                          jz      .10                                             ;branch if arrays equal
  3935                                                          mov     al,1                                            ;positive result
  3936                                                          jnc     .10                                             ;branch if target > source
  3937                                                          mov     al,-1                                           ;negative result
  3938                                  .10                     movsx   ecx,al                                          ;extend sign
  3939                                                          pop     es                                              ;restore non-volatile regs
  3940                                                          pop     edi                                             ;
  3941                                                          pop     esi                                             ;
  3942                                                          ret                                                     ;return
