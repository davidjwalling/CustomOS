  4406                                  ;
  4407                                  ;       Routine:        DecimalToUnsigned
  4408                                  ;
  4409                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ decimal string.
  4410                                  ;
  4411                                  ;       Input:          DS:EDX  null-terminated decimal string address
  4412                                  ;
  4413                                  ;       Output:         EAX     unsigned integer value
  4414                                  ;
  4415                                  ;-----------------------------------------------------------------------------------------------------------------------
  4416                                  DecimalToUnsigned       push    esi                                             ;save non-volatile regs
  4417                                                          mov     esi,edx                                         ;source address
  4418                                                          xor     edx,edx                                         ;zero total
  4419                                  .10                     lodsb                                                   ;source byte
  4420                                                          cmp     al,','                                          ;comma?
  4421                                                          je      .10                                             ;yes, ignore
  4422                                                          test    al,al                                           ;end of string?
  4423                                                          jz      .30                                             ;yes, done
  4424                                                          cmp     al,'.'                                          ;decimal point?
  4425                                                          je      .30                                             ;yes, done
  4426                                                          cmp     al,'0'                                          ;numeral?
  4427                                                          jb      .20                                             ;no, invalid string
  4428                                                          cmp     al,'9'                                          ;numeral?
  4429                                                          ja      .20                                             ;no, invalid string
  4430                                                          and     al,00Fh                                         ;mask ASCII zone
  4431                                                          push    eax                                             ;save numeral
  4432                                                          shl     edx,1                                           ;total * 2
  4433                                                          mov     eax,edx                                         ;total * 2
  4434                                                          shl     edx,2                                           ;total * 8
  4435                                                          add     edx,eax                                         ;total * 10
  4436                                                          pop     eax                                             ;restore numeral
  4437                                                          add     edx,eax                                         ;accumulate decimal digit
  4438                                                          xor     eax,eax                                         ;zero register
  4439                                                          jmp     .10                                             ;next
  4440                                  .20                     xor     edx,edx                                         ;zero result on error
  4441                                  .30                     mov     eax,edx                                         ;result
  4442                                                          pop     esi                                             ;restore non-volatile regs
  4443                                                          ret                                                     ;return
  4444                                  ;-----------------------------------------------------------------------------------------------------------------------
  4445                                  ;
  4446                                  ;       Routine:        HexadecimalToUnsigned
  4447                                  ;
  4448                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ hexadecimal string.
  4449                                  ;
  4450                                  ;       Input:          DS:EDX  null-terminated hexadecimal string address
  4451                                  ;
  4452                                  ;       Output:         EAX     unsigned integer value
  4453                                  ;
  4454                                  ;-----------------------------------------------------------------------------------------------------------------------
  4455                                  HexadecimalToUnsigned   push    esi                                             ;save non-volatile regs
  4456                                                          mov     esi,edx                                         ;source address
  4457                                                          xor     edx,edx                                         ;zero register
  4458                                  .10                     lodsb                                                   ;source byte
  4459                                                          test    al,al                                           ;end of string?
  4460                                                          jz      .30                                             ;yes, branch
  4461                                                          cmp     al,'9'                                          ;hexadecimal?
  4462                                                          jna     .20                                             ;no, skip ahead
  4463                                                          sub     al,37h                                          ;'A' = 41h, less 37h = 0Ah
  4464                                  .20                     and     eax,0fh                                         ;remove ascii zone
  4465                                                          shl     edx,4                                           ;previous total x 16
  4466                                                          add     edx,eax                                         ;add prior value x 16
  4467                                                          jmp     .10                                             ;next
  4468                                  .30                     mov     eax,edx                                         ;result
  4469                                                          pop     esi                                             ;restore non-volatile regs
  4470                                                          ret                                                     ;return
  4471                                  ;-----------------------------------------------------------------------------------------------------------------------
  4472                                  ;
  4473                                  ;       Routine:        UnsignedToDecimalString
  4474                                  ;
  4475                                  ;       Description:    This routine creates an ASCIIZ string representing the decimal value of 32-bit binary input.
  4476                                  ;
  4477                                  ;       Input:          BH      flags           bit 0: 1 = trim leading zeros
  4478                                  ;                                               bit 1: 1 = include comma grouping delimiters
  4479                                  ;                                               bit 4: 1 = non-zero digit found (internal)
  4480                                  ;                       ECX     32-bit binary
  4481                                  ;                       DS:EDX  output buffer address
  4482                                  ;
  4483                                  ;-----------------------------------------------------------------------------------------------------------------------
  4484                                  UnsignedToDecimalString push    ebx                                             ;save non-volatile regs
  4485                                                          push    ecx                                             ;
  4486                                                          push    edi                                             ;
  4487                                                          push    es                                              ;
  4488                                                          push    ds                                              ;load data selector
  4489                                                          pop     es                                              ;... into extra segment reg
  4490                                                          mov     edi,edx                                         ;output buffer address
  4491                                                          and     bh,00001111b                                    ;zero internal flags
  4492                                                          mov     edx,ecx                                         ;binary
  4493                                                          mov     ecx,1000000000                                  ;10^9 divisor
  4494                                                          call    .30                                             ;divide and store
  4495                                                          mov     ecx,100000000                                   ;10^8 divisor
  4496                                                          call    .10                                             ;divide and store
  4497                                                          mov     ecx,10000000                                    ;10^7 divisor
  4498                                                          call    .30                                             ;divide and store
  4499                                                          mov     ecx,1000000                                     ;10^6 divisor
  4500                                                          call    .30                                             ;divide and store
  4501                                                          mov     ecx,100000                                      ;10^5 divisor
  4502                                                          call    .10                                             ;divide and store
  4503                                                          mov     ecx,10000                                       ;10^4 divisor
  4504                                                          call    .30                                             ;divide and store
  4505                                                          mov     ecx,1000                                        ;10^3 divisor
  4506                                                          call    .30                                             ;divide and store
  4507                                                          mov     ecx,100                                         ;10^2 divisor
  4508                                                          call    .10                                             ;divide and store
  4509                                                          mov     ecx,10                                          ;10^2 divisor
  4510                                                          call    .30                                             ;divide and store
  4511                                                          mov     eax,edx                                         ;10^1 remainder
  4512                                                          call    .40                                             ;store
  4513                                                          xor     al,al                                           ;null terminator
  4514                                                          stosb
  4515                                                          pop     es                                              ;restore non-volatile regs
  4516                                                          pop     edi                                             ;
  4517                                                          pop     ecx                                             ;
  4518                                                          pop     ebx                                             ;
  4519                                                          ret                                                     ;return
  4520                                  .10                     test    bh,00000010b                                    ;comma group delims?
  4521                                                          jz      .30                                             ;no, branch
  4522                                                          test    bh,00000001b                                    ;trim leading zeros?
  4523                                                          jz      .20                                             ;no, store delim
  4524                                                          test    bh,00010000b                                    ;non-zero found?
  4525                                                          jz      .30                                             ;no, branch
  4526                                  .20                     mov     al,','                                          ;delimiter
  4527                                                          stosb                                                   ;store delimiter
  4528                                  .30                     mov     eax,edx                                         ;lo-orer dividend
  4529                                                          xor     edx,edx                                         ;zero hi-order
  4530                                                          div     ecx                                             ;divide by power of 10
  4531                                                          test    al,al                                           ;zero?
  4532                                                          jz      .50                                             ;yes, branch
  4533                                                          or      bh,00010000b                                    ;non-zero found
  4534                                  .40                     or      al,30h                                          ;ASCII zone
  4535                                                          stosb                                                   ;store digit
  4536                                                          ret                                                     ;return
  4537                                  .50                     test    bh,00000001b                                    ;trim leading zeros?
  4538                                                          jz      .40                                             ;no, store and continue
  4539                                                          test    bh,00010000b                                    ;non-zero found?
  4540                                                          jnz     .40                                             ;yes, store and continue
  4541                                                          ret                                                     ;return
