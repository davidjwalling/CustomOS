  4543                                  ;
  4544                                  ;       Routine:        UnsignedToHexadecimal
  4545                                  ;
  4546                                  ;       Description:    This routine creates an ASCIIZ string representing the hexadecimal value of binary input
  4547                                  ;
  4548                                  ;       Input:          DS:EDX  output buffer address
  4549                                  ;                       ECX     32-bit binary
  4550                                  ;
  4551                                  ;-----------------------------------------------------------------------------------------------------------------------
  4552                                  UnsignedToHexadecimal   push    edi                                             ;store non-volatile regs
  4553                                                          mov     edi,edx                                         ;output buffer address
  4554                                                          mov     edx,ecx                                         ;32-bit unsigned
  4555                                                          xor     ecx,ecx                                         ;zero register
  4556                                                          mov     cl,8                                            ;nybble count
  4557                                  .10                     rol     edx,4                                           ;next hi-order nybble in bits 0-3
  4558                                                          mov     al,dl                                           ;????bbbb
  4559                                                          and     al,0fh                                          ;mask out bits 4-7
  4560                                                          or      al,30h                                          ;mask in ascii zone
  4561                                                          cmp     al,3ah                                          ;A through F?
  4562                                                          jb      .20                                             ;no, skip ahead
  4563                                                          add     al,7                                            ;41h through 46h
  4564                                  .20                     stosb                                                   ;store hexnum
  4565                                                          loop    .10                                             ;next nybble
  4566                                                          xor     al,al                                           ;zero reg
  4567                                                          stosb                                                   ;null terminate
  4568                                                          pop     edi                                             ;restore non-volatile regs
  4569                                                          ret                                                     ;return
