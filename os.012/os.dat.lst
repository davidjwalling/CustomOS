  3086                                  ;       Routine:        PutDateString
  3087                                  ;
  3088                                  ;       Description:    This routine returns an ASCIIZ mm/dd/yyyy string at ds:edx from the date in the DATETIME
  3089                                  ;                       structure at ds:ebx.
  3090                                  ;
  3091                                  ;       In:             DS:EBX  DATETIME address
  3092                                  ;                       DS:EDX  output buffer address
  3093                                  ;
  3094                                  ;-----------------------------------------------------------------------------------------------------------------------
  3095                                  PutDateString           push    ecx                                             ;save non-volatile regs
  3096                                                          push    edi                                             ;
  3097                                                          push    es                                              ;
  3098                                                          push    ds                                              ;store data selector ...
  3099                                                          pop     es                                              ;... in extra segment reg
  3100                                                          mov     edi,edx                                         ;output buffer address
  3101                                                          mov     cl,10                                           ;divisor
  3102                                                          mov     edx,0002F3030h                                  ;ASCIIZ "00/" (reversed)
  3103                                                          movzx   eax,byte [ebx+DATETIME.month]                   ;month
  3104                                                          div     cl                                              ;AH = rem; AL = quotient
  3105                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  3106                                                          cld                                                     ;forward strings
  3107                                                          stosd                                                   ;store "mm/"nul
  3108                                                          dec     edi                                             ;address of terminator
  3109                                                          movzx   eax,byte [ebx+DATETIME.day]                     ;day
  3110                                                          div     cl                                              ;AH = rem; AL = quotient
  3111                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  3112                                                          stosd                                                   ;store "dd/"nul
  3113                                                          dec     edi                                             ;address of terminator
  3114                                                          movzx   eax,byte [ebx+DATETIME.century]                 ;century
  3115                                                          div     cl                                              ;AH = rem; AL = quotient
  3116                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  3117                                                          stosd                                                   ;store "cc/"null
  3118                                                          dec     edi                                             ;address of terminator
  3119                                                          dec     edi                                             ;address of delimiter
  3120                                                          movzx   eax,byte [ebx+DATETIME.year]                    ;year (yy)
  3121                                                          div     cl                                              ;AH = rem; AL = quotient
  3122                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  3123                                                          stosb                                                   ;store quotient
  3124                                                          mov     al,ah                                           ;remainder
  3125                                                          stosb                                                   ;store remainder
  3126                                                          xor     al,al                                           ;null terminator
  3127                                                          stosb                                                   ;store terminator
  3128                                                          pop     es                                              ;restore non-volatile regs
  3129                                                          pop     edi                                             ;
  3130                                                          pop     ecx                                             ;
  3131                                                          ret                                                     ;return
