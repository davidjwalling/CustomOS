  3944                                  ;
  3945                                  ;       Routine:        UpperCaseString
  3946                                  ;
  3947                                  ;       Description:    This routine places all characters in the given string to upper case.
  3948                                  ;
  3949                                  ;       In:             DS:EDX  string address
  3950                                  ;
  3951                                  ;       Out:            EDX     string address
  3952                                  ;
  3953                                  ;-----------------------------------------------------------------------------------------------------------------------
  3954                                  UpperCaseString         push    esi                                             ;save non-volatile regs
  3955                                                          mov     esi,edx                                         ;string address
  3956                                                          cld                                                     ;forward strings
  3957                                  .10                     lodsb                                                   ;string character
  3958                                                          test    al,al                                           ;null?
  3959                                                          jz      .20                                             ;yes, skip ahead
  3960                                                          cmp     al,EASCIILOWERA                                 ;lower-case? (lower bounds)
  3961                                                          jb      .10                                             ;no, continue
  3962                                                          cmp     al,EASCIILOWERZ                                 ;lower-case? (upper bounds)
  3963                                                          ja      .10                                             ;no, continue
  3964                                                          and     al,EASCIICASEMASK                               ;mask for upper case
  3965                                                          mov     [esi-1],al                                      ;upper character
  3966                                                          jmp     .10                                             ;continue
  3967                                  .20                     pop     esi                                             ;restore non-volatile regs
  3968                                                          ret                                                     ;return
