  2809                                                          cmp     al,maxtsvc                                      ;is our function out of range?
  2810                                                          jae     svc90                                           ;yes, skip ahead
  2811                                                          movzx   eax,al                                          ;function
  2812                                                          shl     eax,2                                           ;offset into table
  2813                                                          call    dword [cs:tsvc+eax]                             ;far call to indirect address
  2814                                  svc90                   iretd                                                   ;return from interrupt
