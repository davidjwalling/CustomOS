  4023                                  ;
  4024                                  ;       Routine:        GetConsoleString
  4025                                  ;
  4026                                  ;       Description:    This routine accepts keyboard input into a buffer.
  4027                                  ;
  4028                                  ;       In:             DS:EDX  target buffer address
  4029                                  ;                       ECX     maximum number of characters to accept
  4030                                  ;                       BH      echo to terminal
  4031                                  ;                       BL      terminating character
  4032                                  ;
  4033                                  ;-----------------------------------------------------------------------------------------------------------------------
  4034                                  GetConsoleString        push    ecx                                             ;save non-volatile regs
  4035                                                          push    esi                                             ;
  4036                                                          push    edi                                             ;
  4037                                                          push    es                                              ;
  4038                                                          push    ds                                              ;load data segment selector ...
  4039                                                          pop     es                                              ;... into extra segment register
  4040                                                          mov     edi,edx                                         ;edi = target buffer
  4041                                                          push    ecx                                             ;save maximum characters
  4042                                                          xor     al,al                                           ;zero register
  4043                                                          cld                                                     ;forward strings
  4044                                                          rep     stosb                                           ;zero fill buffer
  4045                                                          pop     ecx                                             ;maximum characters
  4046                                                          mov     edi,edx                                         ;edi = target buffer
  4047                                                          mov     esi,edx                                         ;esi = target buffer
  4048                                  .10                     jecxz   .50                                             ;exit if max-length is zero
  4049                                  .20                     call    GetConsoleChar                                  ;al = next input char
  4050                                                          cmp     al,bl                                           ;is this the terminator?
  4051                                                          je      .50                                             ;yes, exit
  4052                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  4053                                                          jne     .30                                             ;no, skip ahead
  4054                                                          cmp     esi,edi                                         ;at start of buffer?
  4055                                                          je      .20                                             ;yes, get next character
  4056                                                          dec     edi                                             ;backup target pointer
  4057                                                          mov     byte [edi],0                                    ;zero previous character
  4058                                                          inc     ecx                                             ;increment remaining chars
  4059                                                          test    bh,1                                            ;echo to console?
  4060                                                          jz      .20                                             ;no, get next character
  4061                                                          call    PreviousConsoleColumn                           ;backup console position
  4062                                                          mov     al,EASCIISPACE                                  ;ASCII space
  4063                                                          call    PutConsoleChar                                  ;write space to console
  4064                                                          call    PlaceCursor                                     ;position the cursor
  4065                                                          jmp     .20                                             ;get next character
  4066                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  4067                                                          jb      .20                                             ;no, get another character
  4068                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  4069                                                          ja      .20                                             ;no, get another character
  4070                                                          stosb                                                   ;store character in buffer
  4071                                                          test    bh,1                                            ;echo to console?
  4072                                                          jz      .40                                             ;no, skip ahead
  4073                                                          call    PutConsoleChar                                  ;write character to console
  4074                                                          call    NextConsoleColumn                               ;advance console position
  4075                                                          call    PlaceCursor                                     ;position the cursor
  4076                                  .40                     dec     ecx                                             ;decrement remaining chars
  4077                                                          jmp     .10                                             ;next
  4078                                  .50                     xor     al,al                                           ;null
  4079                                                          stosb                                                   ;terminate buffer
  4080                                                          pop     es                                              ;restore non-volatile regs
  4081                                                          pop     edi                                             ;
  4082                                                          pop     esi                                             ;
  4083                                                          pop     ecx                                             ;
  4084                                                          ret                                                     ;return
