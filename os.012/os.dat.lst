  4794                                                          mov     al,ERTCBASERAMHI                                ;base RAM high register
  4795                                                          out     ERTCREGPORT,al                                  ;select base RAM high register
  4796                                                          in      al,ERTCDATAPORT                                 ;read base RAM high (KB)
  4797                                                          mov     ah,al                                           ;save base RAM high
  4798                                                          mov     al,ERTCBASERAMLO                                ;base RAM low register
