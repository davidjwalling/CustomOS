  3045                                  ;       Routine:        GetYear
  3046                                  ;
  3047                                  ;       Description:    Return the four-digit year (century * 100 + year of century)
  3048                                  ;
  3049                                  ;       In:             DS:EBX  DATETIME address
  3050                                  ;
  3051                                  ;       Out:            ECX     year
  3052                                  ;
  3053                                  ;-----------------------------------------------------------------------------------------------------------------------
  3054                                  GetYear                 movzx   ecx,byte [ebx+DATETIME.century]                 ;century
  3055                                                          imul    ecx,100                                         ;century * 100
  3056                                                          movzx   eax,byte [ebx+DATETIME.year]                    ;year of century
  3057                                                          add     ecx,eax                                         ;year (YYYY)
  3058                                                          ret                                                     ;return
  3059                                  ;-----------------------------------------------------------------------------------------------------------------------
  3060                                  ;
  3061                                  ;       Routine:        IsLeapYear
  3062                                  ;
  3063                                  ;       Description:    This routine returns an indicator if the current year is a leap year.
  3064                                  ;
  3065                                  ;       In:             DS:EBX  DATETIME ADDRESS
  3066                                  ;
  3067                                  ;       Out:            ECX     0 = not a leap year
  3068                                  ;                               1 = leap year
  3069                                  ;
  3070                                  ;-----------------------------------------------------------------------------------------------------------------------
  3071                                  IsLeapYear              call    GetYear                                         ;ECX = YYYY
  3072                                                          mov     eax,ecx                                         ;EAX = YYYY
  3073                                                          xor     ecx,ecx                                         ;assume not leap year
  3074                                                          test    al,00000011b                                    ;multiple of four?
  3075                                                          jnz     .no                                             ;no, branch
  3076                                                          mov     dl,100                                          ;divisor
  3077                                                          div     dl                                              ;divide by 100
  3078                                                          test    ah,ah                                           ;multiple of 100?
  3079                                                          jnz     .yes                                            ;yes, branch
  3080                                                          test    al,00000011b                                    ;multiple of 400?
  3081                                                          jnz     .no                                             ;no, branch
  3082                                  .yes                    inc     ecx                                             ;indicate leap
  3083                                  .no                     ret                                                     ;return
