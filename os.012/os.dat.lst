  3435                                  ;
  3436                                  ;       Routine:        AllocateMemory
  3437                                  ;
  3438                                  ;       Description:    This routine allocates a memory block for the given task.
  3439                                  ;
  3440                                  ;       In:             ECX     bytes of memory to allocate
  3441                                  ;
  3442                                  ;       Out:            EAX     !0      address of user portion of newly allocated memory block
  3443                                  ;                               0       unable to allocate memory
  3444                                  ;
  3445                                  ;-----------------------------------------------------------------------------------------------------------------------
  3446                                  AllocateMemory          push    ebx                                             ;save non-volatile regs
  3447                                                          push    ecx                                             ;
  3448                                                          push    esi                                             ;
  3449                                                          push    ds                                              ;
  3450                                  ;
  3451                                  ;       Address kernel memory structures
  3452                                  ;
  3453                                                          push    EGDTOSDATA                                      ;load OS data GDT selector ...
  3454                                                          pop     ds                                              ;... into data segment reg
  3455                                                          mov     esi,wsConsoleMemRoot                            ;memory root structure address
  3456                                  ;
  3457                                  ;       Set requested size to minimum block size if requested size is too small.
  3458                                  ;
  3459                                                          cmp     ecx,EMEMMINSIZE                                 ;is requested size too small?
  3460                                                          jae     .10                                             ;no, branch
  3461                                                          mov     ecx,EMEMMINSIZE                                 ;set requested size to minimum
  3462                                  .10                     add     ecx,EMEMBLOCKLEN                                ;add header block length
  3463                                  ;
  3464                                  ;       Find the first free memory block large enough to satisfy the request.
  3465                                  ;
  3466                                                          mov     eax,[esi+MEMROOT.firstfree]                     ;first free block ptr
  3467                                  .20                     test    eax,eax                                         ;end of free block chain?
  3468                                                          jz      .220                                            ;yes, branch
  3469                                                          cmp     ecx,[eax+MEMBLOCK.bytes]                        ;free block big enough?
  3470                                                          jbe     .30                                             ;yes, branch
  3471                                                          mov     eax,[eax+MEMBLOCK.nextblock]                    ;next free block addr
  3472                                                          jmp     .20                                             ;continue
  3473                                  ;-----------------------------------------------------------------------------------------------------------------------
  3474                                  ;
  3475                                  ;       Address the previous and next free memory blocks.
  3476                                  ;
  3477                                  .30                     mov     ebx,[eax+MEMBLOCK.previousblock]                ;previous free block addr
  3478                                                          mov     edx,[eax+MEMBLOCK.nextblock]                    ;next free block addr
  3479                                  ;
  3480                                  ;       Remove the free memory block from the forward free memory block chain.
  3481                                  ;
  3482                                                          test    ebx,ebx                                         ;any previous free memory block?
  3483                                                          jz      .40                                             ;no, branch
  3484                                                          mov     [ebx+MEMBLOCK.nextblock],edx                    ;remove free block from forwrad chain
  3485                                                          jmp     .50                                             ;continue
  3486                                  .40                     mov     [esi+MEMROOT.firstfree],edx                     ;next free is now also the first free
  3487                                  ;
  3488                                  ;       Remove the free memory block from the reverse free memory block chain.
  3489                                  ;
  3490                                  .50                     test    edx,edx                                         ;any next free memory block?
  3491                                                          jz      .60                                             ;no, branch
  3492                                                          mov     [edx+MEMBLOCK.previousblock],ebx                ;remove free block from reverse chain
  3493                                                          jmp     .70                                             ;continue
  3494                                  .60                     mov     [esi+MEMROOT.lastfree],ebx                      ;previous free is now also the last free
  3495                                  ;-----------------------------------------------------------------------------------------------------------------------
  3496                                  ;
  3497                                  ;       Determine if the free memory block can be split.
  3498                                  ;
  3499                                  .70                     mov     ebx,[eax+MEMBLOCK.bytes]                        ;size of free memory block
  3500                                                          sub     ebx,ecx                                         ;subtract requested memory size
  3501                                                          cmp     ebx,EMEMMINSIZE                                 ;remaining block can stand alone?
  3502                                                          jb      .150                                            ;no, branch
  3503                                  ;
  3504                                  ;       We know that our block can be split to create a new free memory block. We update the size of our free memory
  3505                                  ;       block to the requested memory size. We update the next contiguous block pointer to point just past the end
  3506                                  ;       of the requested memory size.
  3507                                  ;
  3508                                                          mov     [eax+MEMBLOCK.bytes],ecx                        ;shorten memory block size
  3509                                                          mov     edx,eax                                         ;memory block address
  3510                                                          add     edx,ecx                                         ;address new new next contig block
  3511                                                          mov     ecx,[eax+MEMBLOCK.nextcontig]                   ;next contig block address
  3512                                                          mov     [eax+MEMBLOCK.nextcontig],edx                   ;update next contig block address
  3513                                  ;
  3514                                  ;       If there is a next contiguous block, we update that memory block's previous contig pointer to point to the new
  3515                                  ;       free block we are splitting off. If there is no next contiguous block, we update the last contig block pointer.
  3516                                  ;
  3517                                                          jecxz   .80                                             ;no next contig, branch
  3518                                                          mov     [ecx+MEMBLOCK.previouscontig],edx               ;update previous contig pointer
  3519                                                          jmp     .90                                             ;continue
  3520                                  .80                     mov     [esi+MEMROOT.lastcontig],edx                    ;update last contig pointer
  3521                                  ;
  3522                                  ;       Now that the contig block pointers have been updated, we initialize the new free block members.
  3523                                  ;
  3524                                  .90                     mov     [edx+MEMBLOCK.bytes],ebx                        ;set the block size
  3525                                                          mov     [edx+MEMBLOCK.nextcontig],ecx                   ;set the next contig block addr
  3526                                                          mov     [edx+MEMBLOCK.previouscontig],eax               ;set the previous contig block addr
  3527                                                          mov     ebx,EMEMFREECODE                                ;free memory signature
  3528                                                          mov     [edx+MEMBLOCK.signature],ebx                    ;set the block signature
  3529                                                          xor     ebx,ebx                                         ;zero register
  3530                                                          mov     [edx+MEMBLOCK.reserved],ebx                     ;set reserved
  3531                                                          mov     [edx+MEMBLOCK.owner],ebx                        ;set the owner
  3532                                  ;
  3533                                  ;       Find the proper location in the free block chain for the new free block
  3534                                  ;
  3535                                                          mov     ebx,[edx+MEMBLOCK.bytes]                        ;free block size
  3536                                                          mov     ecx,[esi+MEMROOT.firstfree]                     ;first free block addr
  3537                                  .100                    jecxz   .110                                            ;branch if at end of chain
  3538                                                          cmp     ebx,[ecx+MEMBLOCK.bytes]                        ;new block smaller or equal?
  3539                                                          jbe     .110                                            ;yes, branch
  3540                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next free block addr
  3541                                                          jmp     .100                                            ;continue
  3542                                  ;
  3543                                  ;       Having found the proper location for our new free block, we store the address of the following free block, or
  3544                                  ;       zero if our new free block is larger than any other, as our next free block. Then, we take the address of our
  3545                                  ;       next block's previous block or the global last-free block as our new previous block and update the previous
  3546                                  ;       block of hte next block, if there is one.
  3547                                  ;
  3548                                  .110                    mov     [edx+MEMBLOCK.nextblock],ecx                    ;set the new free block's next ptr
  3549                                                          mov     ebx,[esi+MEMROOT.lastfree]                      ;last free block addr
  3550                                                          jecxz   .120                                            ;branch if no next block
  3551                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next block's previous block
  3552                                                          mov     [ecx+MEMBLOCK.previousblock],edx                ;set the next block's previous block
  3553                                                          jmp     .130                                            ;continue
  3554                                  .120                    mov     [esi+MEMROOT.lastfree],edx                      ;set the new last free block
  3555                                  ;
  3556                                  ;       Store our previous block pointer. If we have a previous free block, update that block's next block pointer to
  3557                                  ;       point to the new block. Since the new block may now be the first or last user block, we update the first and/or
  3558                                  ;       last user block pointers if necessary.
  3559                                  ;
  3560                                  .130                    mov     [edx+MEMBLOCK.previousblock],ebx                ;set the previous block pointer
  3561                                                          test    ebx,ebx                                         ;is there a previous block?
  3562                                                          jz      .140                                            ;no, branch
  3563                                                          mov     [ebx+MEMBLOCK.nextblock],edx                    ;set the previous block's next ptr
  3564                                                          jmp     .150                                            ;continue
  3565                                  .140                    mov     [esi+MEMROOT.firstfree],edx                     ;set the new first free ptr
  3566                                  ;
  3567                                  ;       Update the newly allocated block's owner and signature.
  3568                                  ;
  3569                                  .150                    mov     edx,EMEMUSERCODE                                ;user memory signature
  3570                                                          mov     [eax+MEMBLOCK.signature],edx                    ;set the block signature
  3571                                                          xor     edx,edx                                         ;zero register
  3572                                                          str     dx                                              ;load the task state register
  3573                                                          mov     [eax+MEMBLOCK.owner],edx                        ;set the block owner
  3574                                  ;
  3575                                  ;       Remove the allocated block from the free block chain and insert it into the user block chain.
  3576                                  ;
  3577                                                          mov     ecx,[esi+MEMROOT.firsttask]                     ;first task block
  3578                                  .160                    jecxz   .180                                            ;branch if at end of chain
  3579                                                          cmp     edx,[ecx+MEMBLOCK.owner]                        ;does this block belong to the task?
  3580                                                          jb      .180                                            ;branch if block belongs to next task
  3581                                                          je      .170                                            ;branch if block belongs to this task
  3582                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next task block
  3583                                                          jmp     .160                                            ;continue
  3584                                  ;
  3585                                  ;       We have found the start of our task's user block chain or the start of the next task's user block chain. If we
  3586                                  ;       have found the next task's chain, then we have no other user memory for this task and we can simply add the
  3587                                  ;       block here. If we are at the start of our task's user block chain, then we need to further seek for the proper
  3588                                  ;       place to insert the block.
  3589                                  ;
  3590                                  .170                    mov     edx,[eax+MEMBLOCK.bytes]                        ;size of block in bytes
  3591                                                          cmp     edx,[ecx+MEMBLOCK.bytes]                        ;less or equal to chain block?
  3592                                                          jbe     .180                                            ;yes, branch
  3593                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next chain block address
  3594                                                          test    ecx,ecx                                         ;end of chain?
  3595                                                          jz      .180                                            ;yes, branch
  3596                                                          mov     edx,[eax+MEMBLOCK.owner]                        ;owning task
  3597                                                          cmp     edx,[ecx+MEMBLOCK.owner]                        ;same task?
  3598                                                          je      .170                                            ;yes, continue search
  3599                                  ;
  3600                                  ;       We have found the proper place in our task's user-block chain to insert our new user block. It may also be the
  3601                                  ;       end of the user-block chain. To insert our new user block, first we update the next-block pointer. Then, we load
  3602                                  ;       the next-block's previous-block pointer or the global last-user block pointer if we have no next-block. If we
  3603                                  ;       do have a previous-block, we update that block's next-block pointer.
  3604                                  ;
  3605                                  .180                    mov     [eax+MEMBLOCK.nextblock],ecx                    ;set the next task block
  3606                                                          mov     ebx,[esi+MEMROOT.lasttask]                      ;last task block
  3607                                                          jecxz   .190                                            ;branch if no next-task block
  3608                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next-task's previous-task block
  3609                                                          mov     [ecx+MEMBLOCK.previousblock],eax                ;update next-task block's previous-task
  3610                                                          jmp     .200                                            ;continue
  3611                                  .190                    mov     [esi+MEMROOT.lasttask],eax                      ;new block is the last user-block
  3612                                  ;
  3613                                  ;       Now wes tore our previous-block pointer and, if we have a previous-free block, we update that block's next-
  3614                                  ;       block pointer to point to our block. Since our block may now be the first or last user-block, we update the
  3615                                  ;       global first and/or last user-block pointers if necessary.
  3616                                  ;
  3617                                  .200                    mov     [eax+MEMBLOCK.previousblock],ebx                ;set the previous task block
  3618                                                          test    ebx,ebx                                         ;do we have a previous task block?
  3619                                                          jz      .210                                            ;no, branch
  3620                                                          mov     [ebx+MEMBLOCK.nextblock],eax                    ;set previous-block's next-task block
  3621                                                          jmp     .220                                            ;continue
  3622                                  .210                    mov     [esi+MEMROOT.firsttask],eax                     ;new block is the first user-block
  3623                                  ;
  3624                                  ;       Restore registers and return to caller.
  3625                                  ;
  3626                                  .220                    pop     ds                                              ;restore non-volatie regs
  3627                                                          pop     esi                                             ;
  3628                                                          pop     ecx                                             ;
  3629                                                          pop     ebx                                             ;
  3630                                                          ret                                                     ;return
  3631                                  ;-----------------------------------------------------------------------------------------------------------------------
  3632                                  ;
  3633                                  ;       Routine:        FreeMemory
  3634                                  ;
  3635                                  ;       Description:    This routine frees a memory block for the given task. The address provided in EDX points to the
  3636                                  ;                       memory block header. The memory block must be USER memory, not a FREE memory block. If the block
  3637                                  ;                       is adjacent to a contiguous FREE memory block, then the blocks are merged. The residual FREE
  3638                                  ;                       memory is repositioned in the FREE memory block chain according to size. The user portion of the
  3639                                  ;                       block, following the block header, is reset (wiped) with the memory wipe value.
  3640                                  ;
  3641                                  ;       In:             EDX     memory block to free, relative to EGDTOSDATA
  3642                                  ;
  3643                                  ;       Out:            EAX     -1      invalid memory block
  3644                                  ;                               0       memory block freed
  3645                                  ;
  3646                                  ;-----------------------------------------------------------------------------------------------------------------------
  3647                                  FreeMemory              push    ebx                                             ;save non-volatile regs
  3648                                                          push    ecx                                             ;
  3649                                                          push    esi                                             ;
  3650                                                          push    edi                                             ;
  3651                                                          push    ds                                              ;
  3652                                                          push    es                                              ;
  3653                                  ;
  3654                                  ;       Address the root memory structure
  3655                                  ;
  3656                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3657                                                          pop     es                                              ;... into extra segment reg
  3658                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3659                                                          pop     ds                                              ;... into data segment reg
  3660                                                          mov     esi,wsConsoleMemRoot                            ;memory root structure
  3661                                                          mov     edi,edx                                         ;memory block address
  3662                                  ;
  3663                                  ;       If the block is FREE, return success. Otherwise, if it is not USER, return with error.
  3664                                  ;
  3665                                                          xor     eax,eax                                         ;indicate success
  3666                                                          cmp     dword [edi+MEMBLOCK.signature],EMEMFREECODE     ;is the block FREE?
  3667                                                          je      .240                                            ;yes, branch
  3668                                                          dec     eax                                             ;indicate failure
  3669                                                          cmp     dword [edi+MEMBLOCK.signature],EMEMUSERCODE     ;is the block USER?
  3670                                                          jne     .240                                            ;no, branch
  3671                                  ;-----------------------------------------------------------------------------------------------------------------------
  3672                                  ;
  3673                                  ;       Unlink the USER memory block.
  3674                                  ;
  3675                                  ;-----------------------------------------------------------------------------------------------------------------------
  3676                                  ;
  3677                                  ;       Set the block signature. Reset owner.
  3678                                  ;
  3679                                                          mov     dword [edi+MEMBLOCK.signature],EMEMFREECODE     ;set FREE block signature
  3680                                                          xor     eax,eax                                         ;zero register
  3681                                                          mov     [edi+MEMBLOCK.owner],eax                        ;zero block owner
  3682                                  ;
  3683                                  ;       Wipe user area.
  3684                                  ;
  3685                                                          push    edi                                             ;save block address
  3686                                                          mov     ecx,[edi+MEMBLOCK.bytes]                        ;block size
  3687                                                          sub     ecx,EMEMBLOCKLEN                                ;subtract header size
  3688                                                          add     edi,EMEMBLOCKLEN                                ;point to user area
  3689                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3690                                                          rep     stosb                                           ;clear memory
  3691                                                          pop     edi                                             ;restore block address
  3692                                  ;
  3693                                  ;       Address the preceding and following USER memory blocks
  3694                                  ;
  3695                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;previous block pointer
  3696                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next block pointer
  3697                                  ;
  3698                                  ;       If a USER block precedes this block, update that block's next pointer. Otherwise, update the first task
  3699                                  ;       pointer to point to the USER block following this block.
  3700                                  ;
  3701                                                          test    ebx,ebx                                         ;is there a previous block?
  3702                                                          jz      .10                                             ;no, branch
  3703                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update previous block's next pointer
  3704                                                          jmp     .20                                             ;continue
  3705                                  .10                     mov     [esi+MEMROOT.firsttask],ecx                     ;update first USER pointer
  3706                                  ;
  3707                                  ;       If a USER block follows this block, update that block's previous pointer. Otherwise, update the last task
  3708                                  ;       pointer to point to the USER block preceding this block.
  3709                                  ;
  3710                                  .20                     jecxz   .30                                             ;branch if no next block
  3711                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next block's previous pointer
  3712                                                          jmp     .40                                             ;continue
  3713                                  .30                     mov     [esi+MEMROOT.lasttask],ebx                      ;update last USER pointer
  3714                                  ;-----------------------------------------------------------------------------------------------------------------------
  3715                                  ;
  3716                                  ;       Merge with a previous contiguous FREE memory block.
  3717                                  ;
  3718                                  ;-----------------------------------------------------------------------------------------------------------------------
  3719                                  ;
  3720                                  ;       Address the preceding and following contiguous memory blocks.
  3721                                  ;
  3722                                  .40                     mov     ebx,[edi+MEMBLOCK.previouscontig]               ;previous contiguous block ptr
  3723                                                          mov     ecx,[edi+MEMBLOCK.nextcontig]                   ;next contiguous block ptr
  3724                                  ;
  3725                                  ;       Verify we have a previous contiguous FREE block.
  3726                                  ;
  3727                                                          test    ebx,ebx                                         ;is there a previous block?
  3728                                                          jz      .100                                            ;no, branch
  3729                                                          cmp     dword [ebx+MEMBLOCK.signature],EMEMFREECODE     ;is the previous block FREE?
  3730                                                          jne     .100                                            ;no, branch
  3731                                  ;
  3732                                  ;       Update adjacent block's contiguous pointers.
  3733                                  ;
  3734                                                          mov     [ebx+MEMBLOCK.nextcontig],ecx                   ;update previous contig's next contig
  3735                                                          jecxz   .50                                             ;branch if no next contiguous block
  3736                                                          mov     [ecx+MEMBLOCK.previouscontig],ebx               ;update next congit's previous contig
  3737                                                          jmp     .60                                             ;continue
  3738                                  .50                     mov     [esi+MEMROOT.lastcontig],ebx                    ;update last contig pointer
  3739                                  ;
  3740                                  ;       Update the size of the merged FREE block.
  3741                                  ;
  3742                                  .60                     mov     eax,[edi+MEMBLOCK.bytes]                        ;current block size
  3743                                                          add     [ebx+MEMBLOCK.bytes],eax                        ;update previous block's size
  3744                                  ;
  3745                                  ;       Having merged our new free block into the previous free block, make the previous free block the current block
  3746                                  ;
  3747                                                          mov     ecx,EMEMBLOCKLEN                                ;block header length
  3748                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3749                                                          rep     stosb                                           ;clear memory header
  3750                                                          mov     edi,ebx                                         ;current block is now previous block
  3751                                  ;-----------------------------------------------------------------------------------------------------------------------
  3752                                  ;
  3753                                  ;       Unlink the previous contiguous FREE memory block
  3754                                  ;
  3755                                  ;-----------------------------------------------------------------------------------------------------------------------
  3756                                  ;
  3757                                  ;       Address the preceding and following USER memory blocks
  3758                                  ;
  3759                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;previous block pointer
  3760                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next block pointer
  3761                                  ;
  3762                                  ;       Update the previous block's next-block pointer if there is a previous block. Otherwise, update the first free
  3763                                  ;       block pointer.
  3764                                  ;
  3765                                                          test    ebx,ebx                                         ;is there a previous block?
  3766                                                          jz      .70                                             ;no, branch
  3767                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update previous block's next pointer
  3768                                                          jmp     .80                                             ;branch
  3769                                  .70                     mov     [esi+MEMROOT.firstfree],ecx                     ;update first FREE block pointer
  3770                                  ;
  3771                                  ;       Update the next block's previous-block pointer if there is a next block. Otherwise, update the last free block
  3772                                  ;       pointer.
  3773                                  ;
  3774                                  .80                     jecxz   .90                                             ;branch if no next block
  3775                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next block's previous pointer
  3776                                                          jmp     .100                                            ;continue
  3777                                  .90                     mov     [esi+MEMROOT.lastfree],ebx                      ;update last FREE block pointer
  3778                                  ;-----------------------------------------------------------------------------------------------------------------------
  3779                                  ;
  3780                                  ;       Merge with a following contiguous FREE memory block.
  3781                                  ;
  3782                                  ;-----------------------------------------------------------------------------------------------------------------------
  3783                                  ;
  3784                                  ;       Verify we have a following contiguous FREE block.
  3785                                  ;
  3786                                  .100                    mov     ecx,[edi+MEMBLOCK.nextcontig]                   ;next contiguous block ptr
  3787                                                          jecxz   .170                                            ;branch if no next contiguous block
  3788                                                          cmp     dword [ecx+MEMBLOCK.signature],EMEMFREECODE     ;is the next-contiguous block free?
  3789                                                          jne     .170                                            ;no, branch
  3790                                  ;
  3791                                  ;       Add the size of the following adjacent FREE block to this block's size.
  3792                                  ;
  3793                                                          mov     eax,[ecx+MEMBLOCK.bytes]                        ;next contiguous (free) block size
  3794                                                          add     [edi+MEMBLOCK.bytes],eax                        ;add size to this block's size
  3795                                  ;
  3796                                  ;       Unlink the following contiguous FREE block from the contiguous block chain.
  3797                                  ;
  3798                                                          mov     eax,[ecx+MEMBLOCK.nextcontig]                   ;following block's next-contig ptr
  3799                                                          mov     [edi+MEMBLOCK.nextcontig],eax                   ;update this block's next-contig ptr
  3800                                                          test    eax,eax                                         ;does a block follow the next contig blk
  3801                                                          jz      .110                                            ;no, branch
  3802                                                          mov     [eax+MEMBLOCK.previouscontig],edi               ;update following block's prev contig
  3803                                                          jmp     .120                                            ;continue
  3804                                  .110                    mov     [esi+MEMROOT.lastcontig],edi                    ;update last contig block ptr
  3805                                  ;-----------------------------------------------------------------------------------------------------------------------
  3806                                  ;
  3807                                  ;       Unlink the following contiguous FREE memory block
  3808                                  ;
  3809                                  ;-----------------------------------------------------------------------------------------------------------------------
  3810                                  ;
  3811                                  ;       Unlink the following adjacent FREE block from the FREE block chain.
  3812                                  ;
  3813                                  .120                    push    edi                                             ;save this block
  3814                                                          mov     edi,ecx                                         ;next contiguous block
  3815                                                          push    ecx                                             ;save next contiguous block
  3816                                  ;
  3817                                  ;       Address the preceding and following USER memory blocks
  3818                                  ;
  3819                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;next contig's previous block pointer
  3820                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next contig's next block pointer
  3821                                  ;
  3822                                  ;       Update the previous block's next-block pointer if there is a previous block. Otherwise, update the first free
  3823                                  ;       block pointer.
  3824                                  ;
  3825                                                          test    ebx,ebx                                         ;is there a previous block?
  3826                                                          jz      .130                                            ;no, branch
  3827                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update next contig's prev blk next-ptr
  3828                                                          jmp     .140                                            ;branch
  3829                                  .130                    mov     [esi+MEMROOT.firstfree],ecx                     ;update first FREE block pointer
  3830                                  ;
  3831                                  ;       Update the next block's previous-block pointer if there is a next block. Otherwise, update the last free block
  3832                                  ;       pointer.
  3833                                  ;
  3834                                  .140                    jecxz   .150                                            ;branch if no next block
  3835                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next contig's next blk prev-ptr
  3836                                                          jmp     .160                                            ;continue
  3837                                  .150                    mov     [esi+MEMROOT.lastfree],ebx                      ;update last FREE block pointer
  3838                                  ;
  3839                                  ;       Clear next contiguous block's header
  3840                                  ;
  3841                                  .160                    pop     edi                                             ;next congiguous block pointer
  3842                                                          mov     ecx,EMEMBLOCKLEN                                ;memory block header length
  3843                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3844                                                          rep     stosb                                           ;clear memory header
  3845                                                          pop     edi                                             ;this block's pointer
  3846                                  ;-----------------------------------------------------------------------------------------------------------------------
  3847                                  ;
  3848                                  ;       Insert the final FREE block back into the block chain.
  3849                                  ;
  3850                                  ;-----------------------------------------------------------------------------------------------------------------------
  3851                                  ;
  3852                                  ;       Walk the FREE memory chain until a block is found that is larger than or equal in size to the block being
  3853                                  ;       inserted. The block being inserted will be inserted before that block or after the last block found if none
  3854                                  ;       all are smaller in size.
  3855                                  ;
  3856                                  .170                    mov     ebx,[edi+MEMBLOCK.bytes]                        ;size of block
  3857                                                          mov     ecx,[esi+MEMROOT.firstfree]                     ;first free block ptr
  3858                                  .180                    jecxz   .190                                            ;exit if no ptr
  3859                                                          cmp     ebx,[ecx+MEMBLOCK.bytes]                        ;next block bigger?
  3860                                                          jb      .190                                            ;yes, branch
  3861                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next free memory block
  3862                                                          jmp     .180                                            ;continue
  3863                                  ;
  3864                                  ;       Set the next-block pointer. Determine the previous-block, which may be the last FREE block if we found no
  3865                                  ;       larger free block. Update the next block's previous block pointer.
  3866                                  ;
  3867                                  .190                    mov     [edi+MEMBLOCK.nextblock],ecx                    ;set the next block ptr
  3868                                                          mov     ebx,[esi+MEMROOT.lastfree]                      ;assume all blocks smaller
  3869                                                          jecxz   .200                                            ;branch if no block found
  3870                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next block's previous block ptr
  3871                                                          mov     [ecx+MEMBLOCK.previousblock],edi                ;update next block's previous ptr
  3872                                                          jmp     .210                                            ;continue
  3873                                  .200                    mov     [esi+MEMROOT.lastfree],edi                      ;this block is now the last free
  3874                                  ;
  3875                                  ;       Set our previous block pointer to either the previous pointer of the found block or the last free block.
  3876                                  ;       If there is no previous block pointer, then this block now the first FREE block. Otherwise update that block's
  3877                                  ;       next pointer.
  3878                                  ;
  3879                                  .210                    mov     [edi+MEMBLOCK.previousblock],ebx                ;set the previous block ptr
  3880                                                          test    ebx,ebx                                         ;do we have a previous block?
  3881                                                          jz      .220                                            ;no, branch
  3882                                                          mov     [ebx+MEMBLOCK.nextblock],edi                    ;update previous block's next block ptr
  3883                                                          jmp     .230                                            ;continue
  3884                                  .220                    mov     [esi+MEMROOT.firstfree],edi                     ;update first free ptr
  3885                                  ;
  3886                                  ;       The memory free has completed.
  3887                                  ;
  3888                                  .230                    xor     eax,eax                                         ;indicate success
  3889                                  ;
  3890                                  ;       Restore and return.
  3891                                  ;
  3892                                  .240                    pop     es                                              ;restore non-volatile regs
  3893                                                          pop     ds                                              ;
  3894                                                          pop     edi                                             ;
  3895                                                          pop     esi                                             ;
  3896                                                          pop     ecx                                             ;
  3897                                                          pop     ebx                                             ;
  3898                                                          ret                                                     ;return
