  4008                                  ;                       AH      keyboard scan code
  4009                                  ;
  4010                                  ;-----------------------------------------------------------------------------------------------------------------------
  4011                                  GetConsoleChar.10       call    Yield                                           ;pass control or halt
  4012                                  GetConsoleChar          call    GetMessage                                      ;get the next message
  4013                                                          or      eax,eax                                         ;do we have a message?
