  4332                                  .60                     mov     cl,62                                           ;indicator column
  4333                                                          call    SetConsoleChar                                  ;display ASCII character
  4334                                                          mov     al,EASCIISPACE                                  ;ASCII space
  4335                                                          test    bh,EKEYFLOCKCAPS                                ;caps-lock indicated?
  4336                                                          jz      .70                                             ;no, skip ahead
  4337                                                          mov     al,'C'                                          ;yes, indicate with 'C'
  4338                                  .70                     mov     cl,78                                           ;indicator column
  4339                                                          call    SetConsoleChar                                  ;display ASCII character
  4340                                                          mov     al,EASCIISPACE                                  ;ASCII space
  4341                                                          test    bh,EKEYFLOCKNUM                                 ;num-lock indicated?
  4342                                                          jz      .80                                             ;no, skip ahead
  4343                                                          mov     al,'N'                                          ;yes, indicate with 'N'
  4344                                  .80                     mov     cl,77                                           ;indicator column
  4345                                                          call    SetConsoleChar                                  ;display ASCII character
  4346                                                          mov     al,EASCIISPACE                                  ;ASCII space
