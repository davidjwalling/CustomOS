  4720                                  ;
  4721                                  ;       Routine:        SetConsoleChar
  4722                                  ;
  4723                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  4724                                  ;
  4725                                  ;       In:             AL      ASCII character
  4726                                  ;                       CL      column
  4727                                  ;                       CH      row
  4728                                  ;                       ES      CGA selector
  4729                                  ;
  4730                                  ;       Out:            EAX     last target address written (ES:)
  4731                                  ;                       CL      column + 1
  4732                                  ;
  4733                                  ;-----------------------------------------------------------------------------------------------------------------------
  4734                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  4735                                                          movzx   eax,ch                                          ;row
  4736                                                          mov     ah,ECONCOLS                                     ;cols/row
  4737                                                          mul     ah                                              ;row * cols/row
  4738                                                          add     al,cl                                           ;add column
  4739                                                          adc     ah,0                                            ;handle carry
  4740                                                          shl     eax,1                                           ;screen offset
  4741                                                          mov     [es:eax],dl                                     ;store character
  4742                                                          inc     cl                                              ;next column
  4743                                                          ret                                                     ;return
