  4086                                  ;
  4087                                  ;       Routine:        NextConsoleColumn
  4088                                  ;
  4089                                  ;       Description:    This routine advances the console position one column. The columnn is reset to zero and the row
  4090                                  ;                       incremented if the end of the current row is reached.
  4091                                  ;
  4092                                  ;       In:             DS      OS data selector
  4093                                  ;
  4094                                  ;-----------------------------------------------------------------------------------------------------------------------
  4095                                  NextConsoleColumn       mov     al,[wbConsoleColumn]                            ;current column
  4096                                                          inc     al                                              ;increment column
  4097                                                          mov     [wbConsoleColumn],al                            ;save column
  4098                                                          cmp     al,ECONCOLS                                     ;end of row?
  4099                                                          jb      .10                                             ;no, skip ahead
  4100                                                          call    FirstConsoleColumn                              ;reset column to start of row
  4101                                                          call    NextConsoleRow                                  ;line feed to next row
  4102                                  .10                     ret                                                     ;return
