  4104                                  ;
  4105                                  ;       Routine:        NextConsoleRow
  4106                                  ;
  4107                                  ;       Description:    This routine advances the console position one line. Scroll the screen one row if needed.
  4108                                  ;
  4109                                  ;       In:             DS      OS data selector
  4110                                  ;
  4111                                  ;-----------------------------------------------------------------------------------------------------------------------
  4112                                  NextConsoleRow          mov     al,[wbConsoleRow]                               ;current row
  4113                                                          inc     al                                              ;increment row
  4114                                                          mov     [wbConsoleRow],al                               ;save row
  4115                                                          cmp     al,ECONROWS                                     ;end of screen?
  4116                                                          jb      .10                                             ;no, skip ahead
  4117                                                          call    ScrollConsoleRow                                ;scroll up one row
  4118                                                          mov     al,[wbConsoleRow]                               ;row
  4119                                                          dec     al                                              ;decrement row
  4120                                                          mov     [wbConsoleRow],al                               ;save row
  4121                                  .10                     ret                                                     ;return
  4122                                  ;-----------------------------------------------------------------------------------------------------------------------
  4123                                  ;
  4124                                  ;       Routine:        PreviousConsoleColumn
  4125                                  ;
  4126                                  ;       Description:    This routine retreats the cursor one logical column. If the cursor was at the start of a row,
  4127                                  ;                       the column is set to the last position in the row and the row is decremented.
  4128                                  ;
  4129                                  ;       In:             DS      OS data selector
  4130                                  ;
  4131                                  ;-----------------------------------------------------------------------------------------------------------------------
  4132                                  PreviousConsoleColumn   mov     al,[wbConsoleColumn]                            ;current column
  4133                                                          or      al,al                                           ;start of row?
  4134                                                          jnz     .10                                             ;no, skip ahead
  4135                                                          mov     ah,[wbConsoleRow]                               ;current row
  4136                                                          or      ah,ah                                           ;top of screen?
  4137                                                          jz      .20                                             ;yes, exit with no change
  4138                                                          dec     ah                                              ;decrement row
  4139                                                          mov     [wbConsoleRow],ah                               ;save row
  4140                                                          mov     al,ECONCOLS                                     ;set maximum column
  4141                                  .10                     dec     al                                              ;decrement column
  4142                                                          mov     [wbConsoleColumn],al                            ;save column
  4143                                  .20                     ret                                                     ;return
