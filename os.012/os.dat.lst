  5320                                  ;       Routine:        ConDetermineCommand
  5321                                  ;
  5322                                  ;       Description:    This routine determines the command number for the command at DS:EDX.
  5323                                  ;
  5324                                  ;       input:          DS:EDX  command address
  5325                                  ;
  5326                                  ;       output:         EAX     >=0     = command nbr
  5327                                  ;                               0       = unknown command
  5328                                  ;
  5329                                  ;-----------------------------------------------------------------------------------------------------------------------
  5330                                  ConDetermineCommand     push    ebx                                             ;save non-volatile regs
  5331                                                          push    ecx                                             ;
  5332                                                          push    esi                                             ;
  5333                                                          push    edi                                             ;
  5334                                  
  5335                                                          upperCaseString                                         ;upper-case string at EDX
  5336                                  
  5337                                                          mov     esi,tConCmdTbl                                  ;commands table
  5338                                                          xor     edi,edi                                         ;intialize command number
  5339                                                          cld                                                     ;forward strings
  5340                                  .10                     lodsb                                                   ;command length
  5341                                                          movzx   ecx,al                                          ;command length
  5342                                                          jecxz   .20                                             ;branch if end of table
  5343                                                          mov     ebx,esi                                         ;table entry address
  5344                                                          add     esi,ecx                                         ;next table entry address
  5345                                  
  5346                                                          compareMemory                                           ;compare byte arrays at EDX, EBX
  5347                                  
  5348                                                          jecxz   .20                                             ;branch if equal
  5349                                                          inc     edi                                             ;increment command nbr
  5350                                                          jmp     .10                                             ;repeat
  5351                                  .20                     mov     eax,edi                                         ;command number
  5352                                                          pop     edi                                             ;restore non-volatile regs
  5353                                                          pop     esi                                             ;
  5354                                                          pop     ecx                                             ;
  5355                                                          pop     ebx                                             ;
  5356                                                          ret                                                     ;return
