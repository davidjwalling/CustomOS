  5522                                  ;
  5523                                  ;       Routine:        ConMem
  5524                                  ;
  5525                                  ;       Description:    This routine handles the MEMORY command and its MEM alias.
  5526                                  ;
  5527                                  ;       Input:          wzConsoleInBuffer contains parameter(s)
  5528                                  ;
  5529                                  ;-----------------------------------------------------------------------------------------------------------------------
  5530                                  ConMem                  push    ebx                                             ;save non-volatile regs
  5531                                                          push    esi                                             ;
  5532                                                          push    edi                                             ;
  5533                                  ;
  5534                                  ;       Update the source address if a parameter is given.
  5535                                  ;
  5536                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer address (params)
  5537                                                          mov     ebx,wzConsoleToken                              ;console command token address
  5538                                                          call    ConTakeToken                                    ;take first param as token
  5539                                                          cmp     byte [wzConsoleToken],0                         ;token found?
  5540                                                          je      .10                                             ;no, branch
  5541                                                          mov     edx,wzConsoleToken                              ;first param as token address
  5542                                  
  5543                                                          hexadecimalToUnsigned                                   ;convert string token to unsigned
  5544                                  
  5545                                                          mov     [wdConsoleMemBase],eax                          ;save console memory address
  5546                                  ;
  5547                                  ;       Setup source address and row count.
  5548                                  ;
  5549                                  .10                     mov     esi,[wdConsoleMemBase]                          ;source memory address
  5550                                                          xor     ecx,ecx                                         ;zero register
  5551                                                          mov     cl,16                                           ;row count
  5552                                  ;
  5553                                  ;       Start the row with the source address in hexadecimal.
  5554                                  ;
  5555                                  .20                     push    ecx                                             ;save remaining rows
  5556                                                          mov     edi,wzConsoleOutBuffer                          ;output buffer address
  5557                                                          mov     edx,edi                                         ;output buffer address
  5558                                                          mov     ecx,esi                                         ;console memory address
  5559                                  
  5560                                                          unsignedToHexadecimal                                   ;convert unsigned address to hex string
  5561                                  
  5562                                                          add     edi,8                                           ;end of memory addr hexnum
  5563                                                          mov     al,' '                                          ;ascii space
  5564                                                          stosb                                                   ;store delimiter
  5565                                  ;
  5566                                  ;       Output 16 ASCII hexadecimal byte values for the row.
  5567                                  ;
  5568                                                          xor     ecx,ecx                                         ;zero register
  5569                                                          mov     cl,16                                           ;loop count
  5570                                  .30                     push    ecx                                             ;save loop count
  5571                                                          lodsb                                                   ;memory byte
  5572                                                          mov     ah,al                                           ;memory byte
  5573                                                          shr     al,4                                            ;high-order in bits 3-0
  5574                                                          or      al,30h                                          ;apply ascii numeric zone
  5575                                                          cmp     al,3ah                                          ;numeric range?
  5576                                                          jb      .40                                             ;yes, skip ahead
  5577                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  5578                                  .40                     stosb                                                   ;store ascii hexadecimal of high-order
  5579                                                          mov     al,ah                                           ;low-order in bits 3-0
  5580                                                          and     al,0fh                                          ;mask out high-order bits
  5581                                                          or      al,30h                                          ;apply ascii numeric zone
  5582                                                          cmp     al,3ah                                          ;numeric range?
  5583                                                          jb      .50                                             ;yes, skip ahead
  5584                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  5585                                  .50                     stosb                                                   ;store ascii hexadecimal of low-order
  5586                                                          mov     al,' '                                          ;ascii space
  5587                                                          stosb                                                   ;store ascii space delimiter
  5588                                                          pop     ecx                                             ;loop count
  5589                                                          loop    .30                                             ;next
  5590                                  ;
  5591                                  ;       Output printable ASCII character section for the row.
  5592                                  ;
  5593                                                          sub     esi,16                                          ;reset source pointer
  5594                                                          mov     cl,16                                           ;loop count
  5595                                  .60                     lodsb                                                   ;source byte
  5596                                                          cmp     al,32                                           ;printable? (low-range test)
  5597                                                          jb      .70                                             ;no, skip ahead
  5598                                                          cmp     al,128                                          ;printable? (high-range test)
  5599                                                          jb      .80                                             ;yes, skip ahead
  5600                                  .70                     mov     al,' '                                          ;display space instead of printable
  5601                                  .80                     stosb                                                   ;store printable ascii byte
  5602                                                          loop    .60                                             ;next source byte
  5603                                                          xor     al,al                                           ;nul-terminator
  5604                                                          stosb                                                   ;terminate output line
  5605                                  ;
  5606                                  ;       Display constructed output buffer and newline.
  5607                                  ;
  5608                                                          putConsoleString wzConsoleOutBuffer                     ;display constructed output
  5609                                                          putConsoleString czNewLine                              ;display new line
  5610                                  ;
  5611                                  ;       Repeat until all lines displayed and preserve source address.
  5612                                  ;
  5613                                                          pop     ecx                                             ;remaining rows
  5614                                                          loop    .20                                             ;next row
  5615                                                          mov     [wdConsoleMemBase],esi                          ;update console memory address
  5616                                                          pop     edi                                             ;restore regs
  5617                                                          pop     esi                                             ;
  5618                                                          pop     ebx                                             ;
  5619                                                          ret                                                     ;return
