  4673                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  4674                                                          xor     edi,edi                                         ;target offset
  4675                                                          cld                                                     ;forward strings
  4676                                                          rep     stosd                                           ;reset screen body
  4677                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  4678                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  4679                                                          rep     stosd                                           ;reset OIA line
  4680                                                          xor     al,al                                           ;zero register
  4681                                                          mov     [wbConsoleRow],al                               ;reset console row
  4682                                                          mov     [wbConsoleColumn],al                            ;reset console column
  4683                                                          call    PlaceCursor                                     ;place cursor at current position
  4684                                                          pop     es                                              ;restore non-volatile regs
  4685                                                          pop     ds                                              ;
  4686                                                          pop     edi                                             ;
  4687                                                          pop     ecx                                             ;
