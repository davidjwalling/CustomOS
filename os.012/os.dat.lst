  4579                                  ;
  4580                                  ;       Routine:        GetMessage
  4581                                  ;
  4582                                  ;       Description:    This routine reads and removes a message from the message queue.
  4583                                  ;
  4584                                  ;       Out:            EAX     lo-order message data
  4585                                  ;                       EDX     hi-order message data
  4586                                  ;
  4587                                  ;                       CY      0 = message read
  4588                                  ;                               1 = no message to read
  4589                                  ;
  4590                                  ;-----------------------------------------------------------------------------------------------------------------------
  4591                                  GetMessage              push    ebx                                             ;save non-volatile regs
  4592                                                          push    ecx                                             ;
  4593                                                          push    ds                                              ;
  4594                                                          push    ELDTMQ                                          ;load message queue selector ...
  4595                                                          pop     ds                                              ;... into data segment register
  4596                                                          mov     ebx,[MQHead]                                    ;head ptr
  4597                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  4598                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  4599                                                          or      eax,edx                                         ;is queue empty?
  4600                                                          stc                                                     ;assume queue is emtpy
  4601                                                          jz      .20                                             ;yes, skip ahead
  4602                                                          xor     ecx,ecx                                         ;store zero
  4603                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  4604                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  4605                                                          add     ebx,8                                           ;next queue element
  4606                                                          and     ebx,03fch                                       ;at end of queue?
  4607                                                          jnz     .10                                             ;no, skip ahead
  4608                                                          mov     bl,8                                            ;reset to 1st entry
  4609                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  4610                                                          clc                                                     ;indicate message read
  4611                                  .20                     pop     ds                                              ;restore non-volatile regs
  4612                                                          pop     ecx                                             ;
  4613                                                          pop     ebx                                             ;
  4614                                                          ret                                                     ;return
  4615                                  ;-----------------------------------------------------------------------------------------------------------------------
  4616                                  ;
  4617                                  ;       Routine:        PutMessage
  4618                                  ;
  4619                                  ;       Description:    This routine adda a message to the message queue.
  4620                                  ;
  4621                                  ;       In:             ECX     hi-order data word
  4622                                  ;                       EDX     lo-order data word
  4623                                  ;
  4624                                  ;       Out:            CY      0 = success
  4625                                  ;                               1 = fail: queue is full
  4626                                  ;
  4627                                  ;-----------------------------------------------------------------------------------------------------------------------
  4628                                  PutMessage              push    ds                                              ;save non-volatile regs
  4629                                                          push    ELDTMQ                                          ;load task message queue selector ...
  4630                                                          pop     ds                                              ;... into data segment register
  4631                                                          mov     eax,[MQTail]                                    ;tail ptr
  4632                                                          cmp     dword [eax],0                                   ;is queue full?
  4633                                                          stc                                                     ;assume failure
  4634                                                          jne     .20                                             ;yes, cannot store
  4635                                                          mov     [eax],edx                                       ;store lo-order data
  4636                                                          mov     [eax+4],ecx                                     ;store hi-order data
  4637                                                          add     eax,8                                           ;next queue element adr
  4638                                                          and     eax,03fch                                       ;at end of queue?
  4639                                                          jnz     .10                                             ;no, skip ahead
  4640                                                          mov     al,8                                            ;reset to top of queue
  4641                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  4642                                                          clc                                                     ;indicate success
  4643                                  .20                     pop     ds                                              ;restore non-volatile regs
  4644                                                          ret                                                     ;return
