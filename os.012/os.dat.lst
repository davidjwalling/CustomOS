  5270                                  ;
  5271                                  ;       Routine:        ConTakeToken
  5272                                  ;
  5273                                  ;       Description:    This routine extracts the next token from the given source buffer.
  5274                                  ;
  5275                                  ;       In:             DS:EDX  source buffer address
  5276                                  ;                       DS:EBX  target buffer address
  5277                                  ;
  5278                                  ;       Out:            DS:EDX  source buffer address
  5279                                  ;                       DS:EBX  target buffer address
  5280                                  ;
  5281                                  ;       Command Form:   Line    = *3( *SP 1*ALNUM )
  5282                                  ;
  5283                                  ;-----------------------------------------------------------------------------------------------------------------------
  5284                                  ConTakeToken            push    esi                                             ;save non-volatile regs
  5285                                                          push    edi                                             ;
  5286                                                          push    es                                              ;
  5287                                                          push    ds                                              ;load data segment selector ...
  5288                                                          pop     es                                              ;... into extra segment reg
  5289                                                          mov     esi,edx                                         ;source buffer address
  5290                                                          mov     edi,ebx                                         ;target buffer address
  5291                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  5292                                                          cld                                                     ;forward strings
  5293                                  .10                     lodsb                                                   ;load byte
  5294                                                          cmp     al,EASCIISPACE                                  ;space?
  5295                                                          je      .10                                             ;yes, continue
  5296                                                          test    al,al                                           ;end of line?
  5297                                                          jz      .40                                             ;yes, branch
  5298                                  .20                     stosb                                                   ;store byte
  5299                                                          lodsb                                                   ;load byte
  5300                                                          test    al,al                                           ;end of line?
  5301                                                          jz      .40                                             ;no, continue
  5302                                                          cmp     al,EASCIISPACE                                  ;space?
  5303                                                          jne     .20                                             ;no, continue
  5304                                  .30                     lodsb                                                   ;load byte
  5305                                                          cmp     al,EASCIISPACE                                  ;space?
  5306                                                          je      .30                                             ;yes, continue
  5307                                                          dec     esi                                             ;pre-position
  5308                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  5309                                                          mov     edi,edx                                         ;source buffer address
  5310                                  .50                     lodsb                                                   ;remaining byte
  5311                                                          stosb                                                   ;move to front of buffer
  5312                                                          test    al,al                                           ;end of line?
  5313                                                          jnz     .50                                             ;no, continue
  5314                                                          pop     es                                              ;restore non-volatile regs
  5315                                                          pop     edi                                             ;
  5316                                                          pop     esi                                             ;
  5317                                                          ret                                                     ;return
