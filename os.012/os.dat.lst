  2379                                  ;
  2380                                  ;       Hardware Device Interupts
  2381                                  ;
  2382                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  2383                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  2384                                  ;       (BX=2028h).
  2385                                  ;
  2386                                  ;=======================================================================================================================
  2387                                  ;-----------------------------------------------------------------------------------------------------------------------
  2388                                  ;
  2389                                  ;       IRQ0    Clock Tick Interrupt
  2390                                  ;
  2391                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  2392                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  2393                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  2394                                  ;
  2395                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  2396                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  2397                                  ;
  2398                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  2399                                  ;       zero, the floppy disk motors are turned off.
  2400                                  ;
  2401                                  ;-----------------------------------------------------------------------------------------------------------------------
  2402                                                          menter  clocktick                                       ;clock tick interrupt
  2403                                                          push    eax                                             ;save non-volatile regs
  2404                                                          push    edx                                             ;
  2405                                                          push    ds                                              ;
  2406                                  ;
  2407                                  ;       Update the clock tick count and the elapsed days as needed.
  2408                                  ;
  2409                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2410                                                          pop     ds                                              ;... into data segment register
  2411                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  2412                                                          inc     eax                                             ;increment clock ticks
  2413                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  2414                                                          jb      irq0.10                                         ;no, skip ahead
  2415                                                          inc     byte [wbClockDays]                              ;increment clock days
  2416                                                          xor     eax,eax                                         ;reset clock ticks
  2417                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  2418                                  ;
  2419                                  ;       Decrement floppy disk motor timeout.
  2420                                  ;
  2421                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  2422                                                          je      irq0.20                                         ;yes, skip ahead
  2423                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  2424                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  2425                                  ;
  2426                                  ;       Turn off the floppy disk motor if appropriate.
  2427                                  ;
  2428                                                          sti                                                     ;enable maskable interrupts
  2429                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  2430                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  2431                                                          in      al,dx                                           ;FDC main status byte
  2432                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  2433                                                          jnz     irq0.15                                         ;wait while busy
  2434                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  2435                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  2436                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  2437                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  2438                                                          out     dx,al                                           ;turn motor off
  2439                                  ;
  2440                                  ;       Signal the end of the hardware interrupt.
  2441                                  ;
  2442                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  2443                                  ;
  2444                                  ;       Restore and return.
  2445                                  ;
  2446                                                          pop     ds                                              ;restore modified regs
  2447                                                          pop     edx                                             ;
  2448                                                          pop     eax                                             ;
  2449                                                          iretd                                                   ;return
