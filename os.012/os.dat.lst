  5031                                  ;=======================================================================================================================
  5032                                  ;
  5033                                  ;       Console Task
  5034                                  ;
  5035                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  5036                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  5037                                  ;       screen and responds to user commands.
  5038                                  ;
  5039                                  ;=======================================================================================================================
  5040                                  ;-----------------------------------------------------------------------------------------------------------------------
  5041                                  ;
  5042                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  5043                                  ;
  5044                                  ;       This is the stack for the console task. It supports 448 nested calls.
  5045                                  ;
  5046                                  ;-----------------------------------------------------------------------------------------------------------------------
  5047                                  section                 constack                                                ;console task stack
  5048                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  5049                                  ;-----------------------------------------------------------------------------------------------------------------------
  5050                                  ;
  5051                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  5052                                  ;
  5053                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  5054                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  5055                                  ;       16 descriptors. Six are initially defined.
  5056                                  ;
  5057                                  ;-----------------------------------------------------------------------------------------------------------------------
  5058                                  section                 conldt                                                  ;console local descriptors
  5059                                                          dq      004093004780007Fh                               ;04 TSS alias
  5060                                                          dq      004093004700007Fh                               ;0c LDT alias
  5061                                                          dq      00409300400006FFh                               ;14 stack
  5062                                                          dq      00CF93000000FFFFh                               ;1c data
  5063                                                          dq      00409B0050000FFFh                               ;24 code
  5064                                                          dq      00409300480007FFh                               ;2c message queue
  5065                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  5066                                  ;-----------------------------------------------------------------------------------------------------------------------
  5067                                  ;
  5068                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  5069                                  ;
  5070                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  5071                                  ;       segment. CS to console code.
  5072                                  ;
  5073                                  ;-----------------------------------------------------------------------------------------------------------------------
  5074                                  section                 contss                                                  ;console task state segment
  5075                                                          dd      0                                               ;00 back-link tss
  5076                                                          dd      0700h                                           ;04 esp ring 0
  5077                                                          dd      0014h                                           ;08 ss ring 0
  5078                                                          dd      0700h                                           ;0c esp ring 1
  5079                                                          dd      0014h                                           ;10 es ring 1
  5080                                                          dd      0700h                                           ;14 esp ring 2
  5081                                                          dd      0014h                                           ;18 ss ring 2
  5082                                                          dd      0                                               ;1c cr ring 3
  5083                                                          dd      0                                               ;20 eip
  5084                                                          dd      0200h                                           ;24 eflags
  5085                                                          dd      0                                               ;28 eax
  5086                                                          dd      0                                               ;2c ecx
  5087                                                          dd      0                                               ;30 edx
  5088                                                          dd      0                                               ;34 ebx
  5089                                                          dd      0700h                                           ;38 esp ring 3
  5090                                                          dd      0                                               ;3c ebp
  5091                                                          dd      0                                               ;40 esi
  5092                                                          dd      0                                               ;44 edi
  5093                                                          dd      001Ch                                           ;48 es
  5094                                                          dd      0024h                                           ;4c cs
  5095                                                          dd      0014h                                           ;50 ss ring 3
  5096                                                          dd      001Ch                                           ;54 ds
  5097                                                          dd      0                                               ;58 fs
  5098                                                          dd      0                                               ;5c gs
  5099                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  5100                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  5101                                  ;-----------------------------------------------------------------------------------------------------------------------
  5102                                  ;
  5103                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  5104                                  ;
  5105                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  5106                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  5107                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  5108                                  ;       event.
  5109                                  ;
  5110                                  ;-----------------------------------------------------------------------------------------------------------------------
  5111                                  section                 conmque                                                 ;console message queue
  5112                                                          dd      8                                               ;head pointer
  5113                                                          dd      8                                               ;tail pointer
  5114                                                          times   510 dd 0                                        ;queue elements
  5115                                  ;-----------------------------------------------------------------------------------------------------------------------
  5116                                  ;
  5117                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  5118                                  ;
  5119                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  5120                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  5121                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  5122                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  5123                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  5124                                  ;       board input, echoing to the console screen and responding to user commands.
  5125                                  ;
  5126                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  5127                                  ;
  5128                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  5129                                  ;                               |  Real Mode Interrupt Vectors                  |
  5130                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  5131                                  ;                               |  Reserved BIOS Memory Area                    |
  5132                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  5133                                  ;                               |  Shared Kernel Memory Area                    |
  5134                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  5135                                  ;                               |  Global Descriptor Table (GDT)                |
  5136                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  5137                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  5138                                  ;                       002000  +-----------------------------------------------+
  5139                                  ;                               |  Interrupt Handlers                           |
  5140                                  ;                               |  Kernel Function Library                      |
  5141                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  5142                                  ;                               |  Console Task Stack Area                      |
  5143                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  5144                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  5145                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  5146                                  ;                               |  Console Task Task State Segment (TSS)        |
  5147                                  ;                       004800  +-----------------------------------------------+
  5148                                  ;                               |  Console Task Message Queue                   |
  5149                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  5150                                  ;                               |  Console Task Code                            |
  5151                                  ;                               |  Console Task Constants                       |
  5152                                  ;                       006000  +===============================================+
  5153                                  ;
  5154                                  ;-----------------------------------------------------------------------------------------------------------------------
  5155                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  5156                                  ConCode                 call    ConInitializeData                               ;initialize console variables
  5157                                  
  5158                                                          clearConsoleScreen                                      ;clear the console screen
  5159                                                          putConsoleString czTitle                                ;display startup message
  5160                                                          putConsoleString czROMMem                               ;ROM memory label
  5161                                                          putConsoleString wzROMMemSize                           ;ROM memory amount
  5162                                                          putConsoleString czKB                                   ;Kilobytes
  5163                                                          putConsoleString czNewLine                              ;new line
  5164                                                          putConsoleString czBaseMem                              ;base memory label
  5165                                                          putConsoleString wzBaseMemSize                          ;base memory size
  5166                                                          putConsoleString czKB                                   ;Kilobytes
  5167                                                          putConsoleString czNewLine                              ;new line
  5168                                                          putConsoleString czExtendedMem                          ;extended memory label
  5169                                                          putConsoleString wzExtendedMemSize                      ;extended memory size
  5170                                                          putConsoleString czKB                                   ;Kilobytes
  5171                                                          putConsoleString czNewLine                              ;new line
  5172                                  .10                     putConsoleString czPrompt                               ;display input prompt
  5173                                                          placeCursor                                             ;set CRT cursor location
  5174                                                          getConsoleString wzConsoleInBuffer,79,1,13              ;accept keyboard input
  5175                                                          putConsoleString czNewLine                              ;newline
  5176                                  
  5177                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer
  5178                                                          mov     ebx,wzConsoleToken                              ;token buffer
  5179                                                          call    ConTakeToken                                    ;handle console input
  5180                                                          mov     edx,wzConsoleToken                              ;token buffer
  5181                                                          call    ConDetermineCommand                             ;determine command number
  5182                                                          cmp     eax,ECONJMPTBLCNT                               ;valid command number?
  5183                                                          jb      .20                                             ;yes, branch
  5184                                  
  5185                                                          putConsoleString czUnknownCommand                       ;display error message
  5186                                  
  5187                                                          jmp     .10                                             ;next command
  5188                                  .20                     shl     eax,2                                           ;index into jump table
  5189                                                          mov     edx,tConJmpTbl                                  ;jump table base address
  5190                                                          mov     eax,[edx+eax]                                   ;command handler routine address
  5191                                                          call    eax                                             ;call command handler
  5192                                                          jmp     .10                                             ;next command
  5193                                  ;-----------------------------------------------------------------------------------------------------------------------
  5194                                  ;
  5195                                  ;       Routine:        ConInitializeData
  5196                                  ;
  5197                                  ;       Description:    This routine initializes console task variables.
  5198                                  ;
  5199                                  ;-----------------------------------------------------------------------------------------------------------------------
