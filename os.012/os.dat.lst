  4690                                  ;
  4691                                  ;       Routine:        ScrollConsoleRow
  4692                                  ;
  4693                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  4694                                  ;
  4695                                  ;-----------------------------------------------------------------------------------------------------------------------
  4696                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  4697                                                          push    esi                                             ;
  4698                                                          push    edi                                             ;
  4699                                                          push    ds                                              ;
  4700                                                          push    es                                              ;
  4701                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4702                                                          pop     ds                                              ;... into DS
  4703                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4704                                                          pop     es                                              ;... into ES
  4705                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  4706                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  4707                                                          xor     edi,edi                                         ;EDI = target (line 1)
  4708                                                          cld                                                     ;forward strings
  4709                                                          rep     movsd                                           ;move 24 lines up
  4710                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  4711                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  4712                                                          rep     stosd                                           ;clear bottom row
  4713                                                          pop     es                                              ;restore non-volatile regs
  4714                                                          pop     ds                                              ;
  4715                                                          pop     edi                                             ;
  4716                                                          pop     esi                                             ;
  4717                                                          pop     ecx                                             ;
  4718                                                          ret                                                     ;return
