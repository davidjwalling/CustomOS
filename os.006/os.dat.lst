  2572                                                          or      ah,ah                                           ;top of screen?
  2573                                                          jz      .20                                             ;yes, exit with no change
  2574                                                          dec     ah                                              ;decrement row
  2575                                                          mov     [wbConsoleRow],ah                               ;save row
  2576                                                          mov     al,ECONCOLS                                     ;set maximum column
  2577                                  .10                     dec     al                                              ;decrement column
  2578                                                          mov     [wbConsoleColumn],al                            ;save column
  2579                                  .20                     ret                                                     ;return
