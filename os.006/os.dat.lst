   667 00000030 8EDB                                            mov     ds,bx                                           ;DS = 07b0 = psp
   668 00000032 8EC3                                            mov     es,bx                                           ;ES = 07b0 = psp
   669 00000034 8ED3                                            mov     ss,bx                                           ;SS = 07b0 = psp (ints disabled)
