  2513                                                          pop     es                                              ;... into extra segment register
  2514                                                          mov     esi,wbConsoleScan0                              ;scan codes address
  2515                                                          mov     bh,ECONOIAROW                                   ;OIA row
  2516                                                          mov     bl,0                                            ;starting column
  2517                                                          mov     ecx,6                                           ;maximum scan codes
  2518                                  .10                     push    ecx                                             ;save remaining count
  2519                                                          mov     ecx,ebx                                         ;row, column
  2520                                                          lodsb                                                   ;read scan code
  2521                                                          or      al,al                                           ;scan code present?
  2522                                                          jz      .20                                             ;no, skip ahead
  2523                                                          call    PutConsoleHexByte                               ;display scan code
  2524                                                          jmp     .30                                             ;continue
  2525                                  .20                     mov     al,' '                                          ;ASCII space
  2526                                                          call    SetConsoleChar                                  ;display space
  2527                                                          mov     al,' '                                          ;ASCII space
  2528                                                          call    SetConsoleChar                                  ;display space
  2529                                  .30                     add     bl,2                                            ;next column (+2)
  2530                                                          pop     ecx                                             ;restore remaining
  2531                                                          loop    .10                                             ;next code
