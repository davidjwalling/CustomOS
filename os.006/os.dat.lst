  1180                                  ;
  1181                                  ;       Diskette Directory                                                      @disk: 002600   @mem: n/a
  1182                                  ;
  1183                                  ;       The disk contains one copy of the diskette directory. Each directory entry is 32 bytes long. Our directory
  1184                                  ;       contains only one entry. Unused entries are set to all nulls. The directory immediately follows the second FAT
  1185                                  ;       copy.
  1186                                  ;
  1187                                  ;-----------------------------------------------------------------------------------------------------------------------
  1188                                  section                 dir                                                     ;diskette directory
  1189                                                          db      "OS      COM"                                   ;file name (must contain spaces)
  1190                                                          db      020h                                            ;attribute (archive bit set)
  1191                                                          times   10 db 0                                         ;unused
  1192                                                          dw      0h                                              ;time
  1193                                                          db      01000001b                                       ;mmm = 10 MOD 8 = 2; ddddd = 1
  1194                                                          db      01001001b                                       ;yyyyyyy = 2016-1980 = 36 = 24h; m/8 = 1
  1195                                                          dw      2                                               ;first cluster
  1196                                                          dd      05400h                                          ;file size
  1197                                                          times   (EBOOTDIRENTRIES*32)-($-$$) db 0h               ;zero fill to end of section
  1198                                  %endif
