  1997                                  ;
  1998                                  ;       IRQ1    Keyboard Interrupt
  1999                                  ;
  2000                                  ;       This handler is called when an IRQ1 hardware interrupt occurs, caused by a keyboard event. The scan-code(s)
  2001                                  ;       corresponding to the keyboard event are read and message events are appended to the message queue. Since this
  2002                                  ;       code is called in response to a hardware interrupt, no task switch occurs. We need to preseve the state of
  2003                                  ;       ALL modified registers upon return.
  2004                                  ;
  2005                                  ;-----------------------------------------------------------------------------------------------------------------------
  2006                                                          menter  keyboard                                        ;keyboard interrrupt
  2007                                                          push    eax                                             ;save non-volatile regs
  2008                                                          push    ebx                                             ;
  2009                                                          push    ecx                                             ;
  2010                                                          push    esi                                             ;
  2011                                                          push    ds                                              ;
  2012                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2013                                                          pop     ds                                              ;... into data segment register
  2014                                                          xor     al,al                                           ;zero
  2015                                                          mov     [wbConsoleScan0],al                             ;clear scan code 0
  2016                                                          mov     [wbConsoleScan1],al                             ;clear scan code 1
  2017                                                          mov     [wbConsoleScan2],al                             ;clear scan code 2
  2018                                                          mov     [wbConsoleScan3],al                             ;clear scan code 3
  2019                                                          mov     [wbConsoleScan4],al                             ;clear scan code 4
  2020                                                          mov     [wbConsoleScan5],al                             ;clear scan code 5
  2021                                                          mov     al,' '                                          ;space
  2022                                                          mov     [wbConsoleChar],al                              ;set character to space
  2023                                                          mov     al,EKEYFTIMEOUT                                 ;controller timeout flag
  2024                                                          not     al                                              ;controller timeout mask
  2025                                                          and     [wbConsoleStatus],al                            ;clear controller timeout flag
  2026                                                          mov     bl,[wbConsoleShift]                             ;shift flags
  2027                                                          mov     bh,[wbConsoleLock]                              ;lock flags
  2028                                                          call    WaitForKeyOutBuffer                             ;controller timeout?
  2029                                                          jz      irq1.140                                        ;yes, skip ahead
  2030                                                          in      al,EKEYBPORTDATA                                ;read scan code 0
  2031                                                          mov     [wbConsoleScan0],al                             ;save scan code 0
  2032                                                          mov     ah,al                                           ;copy scan code 0
  2033                                                          mov     al,EKEYFSHIFTLEFT                               ;left shift flag
  2034                                                          cmp     ah,EKEYBSHIFTLDOWN                              ;left shift key down code?
  2035                                                          je      irq1.30                                         ;yes, set flag
  2036                                                          cmp     ah,EKEYBSHIFTLUP                                ;left shift key up code?
  2037                                                          je      irq1.40                                         ;yes, reset flag
  2038                                                          mov     al,EKEYFSHIFTRIGHT                              ;right shift flag
  2039                                                          cmp     ah,EKEYBSHIFTRDOWN                              ;right shift key down code?
  2040                                                          je      irq1.30                                         ;yes, set flag
  2041                                                          cmp     ah,EKEYBSHIFTRUP                                ;right shift key up code?
  2042                                                          je      irq1.40                                         ;yes, reset flag
  2043                                                          mov     al,EKEYFCTRLLEFT                                ;left control flag
  2044                                                          cmp     ah,EKEYBCTRLDOWN                                ;control key down code?
  2045                                                          je      irq1.30                                         ;yes, set flag
  2046                                                          cmp     ah,EKEYBCTRLUP                                  ;control key up code?
  2047                                                          je      irq1.40                                         ;yes, reset flag
  2048                                                          mov     al,EKEYFALTLEFT                                 ;left alt flag
  2049                                                          cmp     ah,EKEYBALTDOWN                                 ;alt key down code?
  2050                                                          je      irq1.30                                         ;yes, set flag
  2051                                                          cmp     ah,EKEYBALTUP                                   ;alt key up code?
  2052                                                          je      irq1.40                                         ;yes, reset flag
  2053                                                          mov     al,EKEYFLOCKCAPS                                ;caps-lock flag
  2054                                                          cmp     ah,EKEYBCAPSDOWN                                ;caps-lock key down code?
  2055                                                          je      irq1.50                                         ;yes, toggle lamps and flags
  2056                                                          mov     al,EKEYFLOCKNUM                                 ;num-lock flag
  2057                                                          cmp     ah,EKEYBNUMDOWN                                 ;num-lock key down code?
  2058                                                          je      irq1.50                                         ;yes, toggle lamps and flags
  2059                                                          mov     al,EKEYFLOCKSCROLL                              ;scroll-lock flag
  2060                                                          cmp     ah,EKEYBSCROLLDOWN                              ;scroll-lock key down code?
  2061                                                          je      irq1.50                                         ;yes, toggle lamps and flags
  2062                                                          cmp     ah,EKEYBCODEEXT0                                ;extended scan code 0?
