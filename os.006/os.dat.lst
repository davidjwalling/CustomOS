  2638                                  ;
  2639                                  ;       Routine:        GetMessage
  2640                                  ;
  2641                                  ;       Description:    This routine reads and removes a message from the message queue.
  2642                                  ;
  2643                                  ;       Out:            EAX     lo-order message data
  2644                                  ;                       EDX     hi-order message data
  2645                                  ;
  2646                                  ;                       CY      0 = message read
  2647                                  ;                               1 = no message to read
  2648                                  ;
  2649                                  ;-----------------------------------------------------------------------------------------------------------------------
  2650                                  GetMessage              push    ebx                                             ;save non-volatile regs
  2651                                                          push    ecx                                             ;
  2652                                                          push    ds                                              ;
  2653                                                          push    ELDTMQ                                          ;load message queue selector ...
  2654                                                          pop     ds                                              ;... into data segment register
  2655                                                          mov     ebx,[MQHead]                                    ;head ptr
  2656                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  2657                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  2658                                                          or      eax,edx                                         ;is queue empty?
  2659                                                          stc                                                     ;assume queue is emtpy
  2660                                                          jz      .20                                             ;yes, skip ahead
  2661                                                          xor     ecx,ecx                                         ;store zero
  2662                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  2663                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  2664                                                          add     ebx,8                                           ;next queue element
  2665                                                          and     ebx,03FCh                                       ;at end of queue?
  2666                                                          jnz     .10                                             ;no, skip ahead
  2667                                                          mov     bl,8                                            ;reset to 1st entry
  2668                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  2669                                                          clc                                                     ;indicate message read
  2670                                  .20                     pop     ds                                              ;restore non-volatile regs
  2671                                                          pop     ecx                                             ;
  2672                                                          pop     ebx                                             ;
  2673                                                          ret                                                     ;return
  2674                                  ;-----------------------------------------------------------------------------------------------------------------------
  2675                                  ;
  2676                                  ;       Routine:        PutMessage
  2677                                  ;
  2678                                  ;       Description:    This routine adda a message to the message queue.
  2679                                  ;
  2680                                  ;       In:             ECX     hi-order data word
  2681                                  ;                       EDX     lo-order data word
  2682                                  ;
  2683                                  ;       Out:            CY      0 = success
  2684                                  ;                               1 = fail: queue is full
  2685                                  ;
  2686                                  ;-----------------------------------------------------------------------------------------------------------------------
  2687                                  PutMessage              push    ds                                              ;save non-volatile regs
  2688                                                          push    ELDTMQ                                          ;load task message queue selector ...
  2689                                                          pop     ds                                              ;... into data segment register
  2690                                                          mov     eax,[MQTail]                                    ;tail ptr
  2691                                                          cmp     dword [eax],0                                   ;is queue full?
  2692                                                          stc                                                     ;assume failure
  2693                                                          jne     .20                                             ;yes, cannot store
  2694                                                          mov     [eax],edx                                       ;store lo-order data
  2695                                                          mov     [eax+4],ecx                                     ;store hi-order data
  2696                                                          add     eax,8                                           ;next queue element adr
  2697                                                          and     eax,03FCh                                       ;at end of queue?
  2698                                                          jnz     .10                                             ;no, skip ahead
  2699                                                          mov     al,8                                            ;reset to top of queue
  2700                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  2701                                                          clc                                                     ;indicate success
  2702                                  .20                     pop     ds                                              ;restore non-volatile regs
  2703                                                          ret                                                     ;return
