  2802                                  ;
  2803                                  ;       Routine:        GetMessage
  2804                                  ;
  2805                                  ;       Description:    This routine reads and removes a message from the message queue.
  2806                                  ;
  2807                                  ;       Out:            EAX     lo-order message data
  2808                                  ;                       EDX     hi-order message data
  2809                                  ;
  2810                                  ;                       CY      0 = message read
  2811                                  ;                               1 = no message to read
  2812                                  ;
  2813                                  ;-----------------------------------------------------------------------------------------------------------------------
  2814                                  GetMessage              push    ebx                                             ;save non-volatile regs
  2815                                                          push    ecx                                             ;
  2816                                                          push    ds                                              ;
  2817                                                          push    ELDTMQ                                          ;load message queue selector ...
  2818                                                          pop     ds                                              ;... into data segment register
  2819                                                          mov     ebx,[MQHead]                                    ;head ptr
  2820                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  2821                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  2822                                                          or      eax,edx                                         ;is queue empty?
  2823                                                          stc                                                     ;assume queue is emtpy
  2824                                                          jz      .20                                             ;yes, skip ahead
  2825                                                          xor     ecx,ecx                                         ;store zero
  2826                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  2827                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  2828                                                          add     ebx,8                                           ;next queue element
  2829                                                          and     ebx,03fch                                       ;at end of queue?
  2830                                                          jnz     .10                                             ;no, skip ahead
  2831                                                          mov     bl,8                                            ;reset to 1st entry
  2832                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  2833                                                          clc                                                     ;indicate message read
  2834                                  .20                     pop     ds                                              ;restore non-volatile regs
  2835                                                          pop     ecx                                             ;
  2836                                                          pop     ebx                                             ;
  2837                                                          ret                                                     ;return
  2838                                  ;-----------------------------------------------------------------------------------------------------------------------
  2839                                  ;
  2840                                  ;       Routine:        PutMessage
  2841                                  ;
  2842                                  ;       Description:    This routine adda a message to the message queue.
  2843                                  ;
  2844                                  ;       In:             ECX     hi-order data word
  2845                                  ;                       EDX     lo-order data word
  2846                                  ;
  2847                                  ;       Out:            CY      0 = success
  2848                                  ;                               1 = fail: queue is full
  2849                                  ;
  2850                                  ;-----------------------------------------------------------------------------------------------------------------------
  2851                                  PutMessage              push    ds                                              ;save non-volatile regs
  2852                                                          push    ELDTMQ                                          ;load task message queue selector ...
  2853                                                          pop     ds                                              ;... into data segment register
  2854                                                          mov     eax,[MQTail]                                    ;tail ptr
  2855                                                          cmp     dword [eax],0                                   ;is queue full?
  2856                                                          stc                                                     ;assume failure
  2857                                                          jne     .20                                             ;yes, cannot store
  2858                                                          mov     [eax],edx                                       ;store lo-order data
  2859                                                          mov     [eax+4],ecx                                     ;store hi-order data
  2860                                                          add     eax,8                                           ;next queue element adr
  2861                                                          and     eax,03fch                                       ;at end of queue?
  2862                                                          jnz     .10                                             ;no, skip ahead
  2863                                                          mov     al,8                                            ;reset to top of queue
  2864                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  2865                                                          clc                                                     ;indicate success
  2866                                  .20                     pop     ds                                              ;restore non-volatile regs
  2867                                                          ret                                                     ;return
