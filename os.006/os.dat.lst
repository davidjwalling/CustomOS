  2358                                  ;
  2359                                  ;       Routine:        GetConsoleString
  2360                                  ;
  2361                                  ;       Description:    This routine accepts keyboard input into a buffer.
  2362                                  ;
  2363                                  ;       In:             DS:EDX  target buffer address
  2364                                  ;                       ECX     maximum number of characters to accept
  2365                                  ;                       BH      echo to terminal
  2366                                  ;                       BL      terminating character
  2367                                  ;
  2368                                  ;-----------------------------------------------------------------------------------------------------------------------
  2369                                  GetConsoleString        push    ecx                                             ;save non-volatile regs
  2370                                                          push    esi                                             ;
  2371                                                          push    edi                                             ;
  2372                                                          push    es                                              ;
  2373                                                          push    ds                                              ;load data segment selector ...
  2374                                                          pop     es                                              ;... into extra segment register
  2375                                                          mov     edi,edx                                         ;edi = target buffer
  2376                                                          push    ecx                                             ;save maximum characters
  2377                                                          xor     al,al                                           ;zero register
  2378                                                          cld                                                     ;forward strings
  2379                                                          rep     stosb                                           ;zero fill buffer
  2380                                                          pop     ecx                                             ;maximum characters
  2381                                                          mov     edi,edx                                         ;edi = target buffer
  2382                                                          mov     esi,edx                                         ;esi = target buffer
  2383                                  .10                     jecxz   .50                                             ;exit if max-length is zero
  2384                                  .20                     call    GetConsoleChar                                  ;al = next input char
  2385                                                          cmp     al,bl                                           ;is this the terminator?
  2386                                                          je      .50                                             ;yes, exit
  2387                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  2388                                                          jne     .30                                             ;no, skip ahead
  2389                                                          cmp     esi,edi                                         ;at start of buffer?
  2390                                                          je      .20                                             ;yes, get next character
  2391                                                          dec     edi                                             ;backup target pointer
  2392                                                          mov     byte [edi],0                                    ;zero previous character
  2393                                                          inc     ecx                                             ;increment remaining chars
  2394                                                          test    bh,1                                            ;echo to console?
  2395                                                          jz      .20                                             ;no, get next character
  2396                                                          call    PreviousConsoleColumn                           ;backup console position
  2397                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2398                                                          call    PutConsoleChar                                  ;write space to console
  2399                                                          call    PlaceCursor                                     ;position the cursor
  2400                                                          jmp     .20                                             ;get next character
  2401                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  2402                                                          jb      .20                                             ;no, get another character
  2403                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  2404                                                          ja      .20                                             ;no, get another character
  2405                                                          stosb                                                   ;store character in buffer
  2406                                                          test    bh,1                                            ;echo to console?
  2407                                                          jz      .40                                             ;no, skip ahead
  2408                                                          call    PutConsoleChar                                  ;write character to console
  2409                                                          call    NextConsoleColumn                               ;advance console position
  2410                                                          call    PlaceCursor                                     ;position the cursor
  2411                                  .40                     dec     ecx                                             ;decrement remaining chars
  2412                                                          jmp     .10                                             ;next
  2413                                  .50                     xor     al,al                                           ;null
  2414                                                          stosb                                                   ;terminate buffer
  2415                                                          pop     es                                              ;restore non-volatile regs
  2416                                                          pop     edi                                             ;
  2417                                                          pop     esi                                             ;
  2418                                                          pop     ecx                                             ;
  2419                                                          ret                                                     ;return
