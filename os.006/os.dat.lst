  2552                                                          jb      .10                                             ;no, skip ahead
  2553                                                          call    ScrollConsoleRow                                ;scroll up one row
  2554                                                          mov     al,[wbConsoleRow]                               ;row
  2555                                                          dec     al                                              ;decrement row
  2556                                                          mov     [wbConsoleRow],al                               ;save row
  2557                                  .10                     ret                                                     ;return
