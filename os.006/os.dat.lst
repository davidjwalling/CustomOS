  3023                                  ;
  3024                                  ;       Routine:        PutSecondaryEndOfInt
  3025                                  ;
  3026                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the secondary PIC.
  3027                                  ;
  3028                                  ;-----------------------------------------------------------------------------------------------------------------------
  3029                                  PutSecondaryEndOfInt    sti                                                     ;enable maskable interrupts
  3030                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  3031                                                          out     EPICPORTSEC,al                                  ;send EOI to secondary PIC
