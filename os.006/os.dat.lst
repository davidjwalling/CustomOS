  2533                                                          cmp     al,32                                           ;printable? (lower-bounds)
  2534                                                          jb      .40                                             ;no, skip ahead
  2535                                                          cmp     al,126                                          ;printable? (upper-bounds)
  2536                                                          ja      .40                                             ;no, skip ahead
  2537                                                          mov     ch,bh                                           ;OIA row
  2538                                                          mov     cl,40                                           ;character display column
  2539                                                          call    SetConsoleChar                                  ;display ASCII character
  2540                                  .40                     pop     es                                              ;restore non-volatile regs
  2541                                                          pop     ds                                              ;
  2542                                                          pop     esi                                             ;
  2543                                                          pop     ecx                                             ;
  2544                                                          pop     ebx                                             ;
  2545                                                          ret                                                     ;return
