   664 00000030 8EDB                                            mov     ds,bx                                           ;DS = 07b0 = psp
   665 00000032 8EC3                                            mov     es,bx                                           ;ES = 07b0 = psp
   666 00000034 8ED3                                            mov     ss,bx                                           ;SS = 07b0 = psp (ints disabled)
   667 00000036 BC0001                                          mov     sp,EBOOTSTACKTOP                                ;SP = 0100       (ints enabled)
   668                                  ;
