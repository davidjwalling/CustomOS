  2891                                                          pop     ds                                              ;... into DS register
  2892                                                          push    EGDTCGA                                         ;load CGA selector ...
  2893                                                          pop     es                                              ;... into ES register
  2894                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  2895                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  2896                                                          xor     edi,edi                                         ;target offset
  2897                                                          cld                                                     ;forward strings
  2898                                                          rep     stosd                                           ;reset screen body
  2899                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2900                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2901                                                          rep     stosd                                           ;reset OIA line
  2902                                                          xor     al,al                                           ;zero register
  2903                                                          mov     [wbConsoleRow],al                               ;reset console row
  2904                                                          mov     [wbConsoleColumn],al                            ;reset console column
  2905                                                          call    PlaceCursor                                     ;place cursor at current position
  2906                                                          pop     es                                              ;restore non-volatile regs
