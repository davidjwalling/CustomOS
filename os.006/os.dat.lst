  1841                                  ;-----------------------------------------------------------------------------------------------------------------------
  1842                                  ;
  1843                                  ;       IRQ0    Clock Tick Interrupt
  1844                                  ;
  1845                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  1846                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  1847                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  1848                                  ;
  1849                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  1850                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  1851                                  ;
  1852                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  1853                                  ;       zero, the floppy disk motors are turned off.
  1854                                  ;
  1855                                  ;-----------------------------------------------------------------------------------------------------------------------
  1856                                                          menter  clocktick                                       ;clock tick interrupt
  1857                                                          push    eax                                             ;save non-volatile regs
  1858                                                          push    edx                                             ;
  1859                                                          push    ds                                              ;
  1860                                  ;
  1861                                  ;       End the interrupt.
  1862                                  ;
  1863                                                          call    PutPrimaryEndOfInt                              ;send EOI to primary PIC
  1864                                  ;
  1865                                  ;       Update the clock tick count and the elapsed days as needed.
  1866                                  ;
  1867                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  1868                                                          pop     ds                                              ;... into data segment register
  1869                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  1870                                                          inc     eax                                             ;increment clock ticks
  1871                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  1872                                                          jb      irq0.10                                         ;no, skip ahead
  1873                                                          inc     byte [wbClockDays]                              ;increment clock days
  1874                                                          xor     eax,eax                                         ;reset clock ticks
  1875                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  1876                                  ;
  1877                                  ;       Decrement floppy disk motor timeout.
  1878                                  ;
  1879                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  1880                                                          je      irq0.20                                         ;yes, skip ahead
  1881                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  1882                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  1883                                  ;
  1884                                  ;       Turn off the floppy disk motor if appropriate.
  1885                                  ;
  1886                                                          sti                                                     ;enable maskable interrupts
  1887                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  1888                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  1889                                                          in      al,dx                                           ;FDC main status byte
  1890                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  1891                                                          jnz     irq0.15                                         ;wait while busy
  1892                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  1893                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  1894                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  1895                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  1896                                                          out     dx,al                                           ;turn motor off
  1897                                  ;
  1898                                  ;       Enable maskable interrupts.
  1899                                  ;
  1900                                  irq0.20                 sti                                                     ;enable maskable interrupts
  1901                                  ;
  1902                                  ;       Restore and return.
  1903                                  ;
  1904                                                          pop     ds                                              ;restore modified regs
  1905                                                          pop     edx                                             ;
  1906                                                          pop     eax                                             ;
  1907                                                          iretd                                                   ;return
