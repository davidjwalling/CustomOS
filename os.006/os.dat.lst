  2912                                  ;
  2913                                  ;       Routine:        ScrollConsoleRow
  2914                                  ;
  2915                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  2916                                  ;
  2917                                  ;-----------------------------------------------------------------------------------------------------------------------
  2918                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  2919                                                          push    esi                                             ;
  2920                                                          push    edi                                             ;
  2921                                                          push    ds                                              ;
  2922                                                          push    es                                              ;
  2923                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2924                                                          pop     ds                                              ;... into DS
  2925                                                          push    EGDTCGA                                         ;load CGA video selector ...
  2926                                                          pop     es                                              ;... into ES
  2927                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  2928                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  2929                                                          xor     edi,edi                                         ;EDI = target (line 1)
  2930                                                          cld                                                     ;forward strings
  2931                                                          rep     movsd                                           ;move 24 lines up
  2932                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  2933                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2934                                                          rep     stosd                                           ;clear bottom row
  2935                                                          pop     es                                              ;restore non-volatile regs
  2936                                                          pop     ds                                              ;
  2937                                                          pop     edi                                             ;
  2938                                                          pop     esi                                             ;
  2939                                                          pop     ecx                                             ;
  2940                                                          ret                                                     ;return
  2941                                  ;-----------------------------------------------------------------------------------------------------------------------
  2942                                  ;
  2943                                  ;       Routine:        SetConsoleChar
  2944                                  ;
  2945                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  2946                                  ;
  2947                                  ;       In:             AL      ASCII character
  2948                                  ;                       CL      column
  2949                                  ;                       CH      row
  2950                                  ;                       ES      CGA selector
  2951                                  ;
  2952                                  ;       Out:            EAX     last target address written (ES:)
  2953                                  ;                       CL      column + 1
  2954                                  ;
  2955                                  ;-----------------------------------------------------------------------------------------------------------------------
  2956                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  2957                                                          movzx   eax,ch                                          ;row
  2958                                                          mov     ah,ECONCOLS                                     ;cols/row
  2959                                                          mul     ah                                              ;row * cols/row
  2960                                                          add     al,cl                                           ;add column
  2961                                                          adc     ah,0                                            ;handle carry
  2962                                                          shl     eax,1                                           ;screen offset
  2963                                                          mov     [es:eax],dl                                     ;store character
  2964                                                          inc     cl                                              ;next column
  2965                                                          ret                                                     ;return
