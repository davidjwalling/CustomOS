  3033                                  ;-----------------------------------------------------------------------------------------------------------------------
  3034                                  ;
  3035                                  ;       Routine:        SetKeyboardLamps
  3036                                  ;
  3037                                  ;       Description:    This routine sends the set/reset mode indicators command to the keyboard device.
  3038                                  ;
  3039                                  ;       In:             BH      00000CNS (C:Caps Lock,N:Num Lock,S:Scroll Lock)
  3040                                  ;
  3041                                  ;-----------------------------------------------------------------------------------------------------------------------
  3042                                  SetKeyboardLamps        call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3043                                                          mov     al,EKEYBCMDLAMPS                                ;set/reset lamps command
  3044                                                          out     EKEYBPORTDATA,al                                ;send command to 8042
  3045                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3046                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3047                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3048                                                          mov     al,bh                                           ;set/reset lamps value
  3049                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  3050                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3051                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3052                                                          ret                                                     ;return
  3053                                  ;-----------------------------------------------------------------------------------------------------------------------
  3054                                  ;
  3055                                  ;       Routine:        WaitForKeyInBuffer
  3056                                  ;
  3057                                  ;       Description:    This routine waits for keyboard input buffer to be ready for input.
  3058                                  ;
  3059                                  ;       Out:            ZF      1 = Input buffer ready
  3060                                  ;                               0 = Input buffer not ready after timeout
  3061                                  ;
  3062                                  ;-----------------------------------------------------------------------------------------------------------------------
  3063                                  WaitForKeyInBuffer      push    ecx                                             ;save non-volatile regs
  3064                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3065                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3066                                                          test    al,EKEYBBITIN                                   ;is input buffer still full?
  3067                                                          loopnz  .10                                             ;yes, repeat till timeout
  3068                                                          pop     ecx                                             ;restore non-volatile regs
  3069                                                          ret                                                     ;return
  3070                                  ;-----------------------------------------------------------------------------------------------------------------------
  3071                                  ;
  3072                                  ;       Routine:        WaitForKeyOutBuffer
  3073                                  ;
  3074                                  ;       Description:    This routine waits for keyboard output buffer to have data to read.
  3075                                  ;
  3076                                  ;       Out:            ZF      1 = Output buffer has data from controller
  3077                                  ;                               0 = Output buffer empty after timeout
  3078                                  ;
  3079                                  ;-----------------------------------------------------------------------------------------------------------------------
  3080                                  WaitForKeyOutBuffer     push    ecx                                             ;save non-volatile regs
  3081                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3082                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3083                                                          test    al,EKEYBBITOUT                                  ;output buffer status bit
  3084                                                          loopz   .10                                             ;loop until output buffer bit
  3085                                                          pop     ecx                                             ;restore non-volatile regs
  3086                                                          ret                                                     ;return
  3087                                  ;-----------------------------------------------------------------------------------------------------------------------
