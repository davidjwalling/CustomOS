  2981                                  ;
  2982                                  ;       Routine:        PlaceCursor
  2983                                  ;
  2984                                  ;       Description:    This routine positions the cursor on the console.
  2985                                  ;
  2986                                  ;       In:             DS      OS data selector
  2987                                  ;
  2988                                  ;-----------------------------------------------------------------------------------------------------------------------
  2989                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  2990                                                          mov     al,[wbConsoleRow]                               ;AL = row
  2991                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  2992                                                          mul     ah                                              ;row offset
  2993                                                          add     al,[wbConsoleColumn]                            ;add column
  2994                                                          adc     ah,0                                            ;add overflow
  2995                                                          mov     ecx,eax                                         ;screen offset
  2996                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  2997                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  2998                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  2999                                                          out     dx,al                                           ;select register
  3000                                                          inc     edx                                             ;data port
  3001                                                          mov     al,ch                                           ;hi-order cursor loc
  3002                                                          out     dx,al                                           ;store hi-order loc
  3003                                                          dec     edx                                             ;register select port
  3004                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
  3005                                                          out     dx,al                                           ;select register
  3006                                                          inc     edx                                             ;data port
  3007                                                          mov     al,cl                                           ;lo-order cursor loc
  3008                                                          out     dx,al                                           ;store lo-order loc
  3009                                                          pop     ecx                                             ;restore non-volatile regs
  3010                                                          ret                                                     ;return
