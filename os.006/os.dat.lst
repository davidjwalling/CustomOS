  2492                                                          dec     edi                                             ;backup target pointer
  2493                                                          mov     byte [edi],0                                    ;zero previous character
  2494                                                          inc     ecx                                             ;increment remaining chars
  2495                                                          test    bh,1                                            ;echo to console?
  2496                                                          jz      .20                                             ;no, get next character
  2497                                                          call    PreviousConsoleColumn                           ;backup console position
  2498                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2499                                                          call    PutConsoleChar                                  ;write space to console
  2500                                                          call    PlaceCursor                                     ;position the cursor
  2501                                                          jmp     .20                                             ;get next character
  2502                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  2503                                                          jb      .20                                             ;no, get another character
  2504                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  2505                                                          ja      .20                                             ;no, get another character
  2506                                                          stosb                                                   ;store character in buffer
  2507                                                          test    bh,1                                            ;echo to console?
  2508                                                          jz      .40                                             ;no, skip ahead
  2509                                                          call    PutConsoleChar                                  ;write character to console
  2510                                                          call    NextConsoleColumn                               ;advance console position
  2511                                                          call    PlaceCursor                                     ;position the cursor
  2512                                  .40                     dec     ecx                                             ;decrement remaining chars
  2513                                                          jmp     .10                                             ;next
  2514                                  .50                     xor     al,al                                           ;null
  2515                                                          stosb                                                   ;terminate buffer
  2516                                                          pop     es                                              ;restore non-volatile regs
  2517                                                          pop     edi                                             ;
  2518                                                          pop     esi                                             ;
  2519                                                          pop     ecx                                             ;
  2520                                                          ret                                                     ;return
