  2815                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2816                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  2817                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  2818                                                          mov     al,bh                                           ;set/reset lamps value
  2819                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  2820                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  2821                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
