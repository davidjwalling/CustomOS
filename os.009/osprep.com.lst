  3819                                                          push    ecx                                             ;
  3820                                                          push    edi                                             ;
  3821                                                          push    es                                              ;
  3822                                                          push    ds                                              ;load data selector
  3823                                                          pop     es                                              ;... into extra segment reg
  3824                                                          mov     edi,edx                                         ;output buffer address
  3825                                                          and     bh,00001111b                                    ;zero internal flags
  3826                                                          mov     edx,ecx                                         ;binary
  3827                                                          mov     ecx,1000000000                                  ;10^9 divisor
  3828                                                          call    .30                                             ;divide and store
  3829                                                          mov     ecx,100000000                                   ;10^8 divisor
  3830                                                          call    .10                                             ;divide and store
  3831                                                          mov     ecx,10000000                                    ;10^7 divisor
  3832                                                          call    .30                                             ;divide and store
  3833                                                          mov     ecx,1000000                                     ;10^6 divisor
  3834                                                          call    .30                                             ;divide and store
  3835                                                          mov     ecx,100000                                      ;10^5 divisor
  3836                                                          call    .10                                             ;divide and store
  3837                                                          mov     ecx,10000                                       ;10^4 divisor
  3838                                                          call    .30                                             ;divide and store
  3839                                                          mov     ecx,1000                                        ;10^3 divisor
  3840                                                          call    .30                                             ;divide and store
  3841                                                          mov     ecx,100                                         ;10^2 divisor
  3842                                                          call    .10                                             ;divide and store
  3843                                                          mov     ecx,10                                          ;10^2 divisor
  3844                                                          call    .30                                             ;divide and store
  3845                                                          mov     eax,edx                                         ;10^1 remainder
  3846                                                          call    .40                                             ;store
  3847                                                          xor     al,al                                           ;null terminator
  3848                                                          stosb
  3849                                                          pop     es                                              ;restore non-volatile regs
  3850                                                          pop     edi                                             ;
  3851                                                          pop     ecx                                             ;
  3852                                                          pop     ebx                                             ;
  3853                                                          ret                                                     ;return
  3854                                  .10                     test    bh,00000010b                                    ;comma group delims?
  3855                                                          jz      .30                                             ;no, branch
  3856                                                          test    bh,00000001b                                    ;trim leading zeros?
  3857                                                          jz      .20                                             ;no, store delim
  3858                                                          test    bh,00010000b                                    ;non-zero found?
  3859                                                          jz      .30                                             ;no, branch
  3860                                  .20                     mov     al,','                                          ;delimiter
  3861                                                          stosb                                                   ;store delimiter
  3862                                  .30                     mov     eax,edx                                         ;lo-orer dividend
  3863                                                          xor     edx,edx                                         ;zero hi-order
  3864                                                          div     ecx                                             ;divide by power of 10
  3865                                                          test    al,al                                           ;zero?
  3866                                                          jz      .50                                             ;yes, branch
  3867                                                          or      bh,00010000b                                    ;non-zero found
  3868                                  .40                     or      al,30h                                          ;ASCII zone
  3869                                                          stosb                                                   ;store digit
  3870                                                          ret                                                     ;return
  3871                                  .50                     test    bh,00000001b                                    ;trim leading zeros?
  3872                                                          jz      .40                                             ;no, store and continue
  3873                                                          test    bh,00010000b                                    ;non-zero found?
  3874                                                          jnz     .40                                             ;yes, store and continue
  3875                                                          ret                                                     ;return
