  4173                                                          out     ERTCREGPORT,al                                  ;select day register
  4174                                                          in      al,ERTCDATAPORT                                 ;read day register
  4175                                                          stosb                                                   ;store day value
  4176                                                          mov     al,ERTCMONTHREG                                 ;month register
  4177                                                          out     ERTCREGPORT,al                                  ;select month register
  4178                                                          in      al,ERTCDATAPORT                                 ;read month register
  4179                                                          stosb                                                   ;store month value
  4180                                                          mov     al,ERTCYEARREG                                  ;year register
  4181                                                          out     ERTCREGPORT,al                                  ;select year register
  4182                                                          in      al,ERTCDATAPORT                                 ;read year register
