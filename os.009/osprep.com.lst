  2921                                  ;       Routine:        GetYear
  2922                                  ;
  2923                                  ;       Description:    Return the four-digit year (century * 100 + year of century)
  2924                                  ;
  2925                                  ;       In:             DS:EBX  DATETIME address
  2926                                  ;
  2927                                  ;       Out:            ECX     year
  2928                                  ;
  2929                                  ;-----------------------------------------------------------------------------------------------------------------------
  2930                                  GetYear                 movzx   ecx,byte [ebx+DATETIME.century]                 ;century
  2931                                                          imul    ecx,100                                         ;century * 100
  2932                                                          movzx   eax,byte [ebx+DATETIME.year]                    ;year of century
  2933                                                          add     ecx,eax                                         ;year (YYYY)
  2934                                                          ret                                                     ;return
  2935                                  ;-----------------------------------------------------------------------------------------------------------------------
  2936                                  ;
  2937                                  ;       Routine:        IsLeapYear
  2938                                  ;
  2939                                  ;       Description:    This routine returns an indicator if the current year is a leap year.
  2940                                  ;
  2941                                  ;       In:             DS:EBX  DATETIME ADDRESS
  2942                                  ;
  2943                                  ;       Out:            ECX     0 = not a leap year
  2944                                  ;                               1 = leap year
  2945                                  ;
  2946                                  ;-----------------------------------------------------------------------------------------------------------------------
  2947                                  IsLeapYear              call    GetYear                                         ;ECX = YYYY
  2948                                                          mov     eax,ecx                                         ;EAX = YYYY
  2949                                                          xor     ecx,ecx                                         ;assume not leap year
  2950                                                          test    al,00000011b                                    ;multiple of four?
  2951                                                          jnz     .no                                             ;no, branch
  2952                                                          mov     dl,100                                          ;divisor
  2953                                                          div     dl                                              ;divide by 100
  2954                                                          test    ah,ah                                           ;multiple of 100?
  2955                                                          jnz     .yes                                            ;yes, branch
  2956                                                          test    al,00000011b                                    ;multiple of 400?
  2957                                                          jnz     .no                                             ;no, branch
  2958                                  .yes                    inc     ecx                                             ;indicate leap
  2959                                  .no                     ret                                                     ;return
