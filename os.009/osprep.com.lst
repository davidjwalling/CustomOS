  3885                                  ;
  3886                                  ;       Routine:        GetMessage
  3887                                  ;
  3888                                  ;       Description:    This routine reads and removes a message from the message queue.
  3889                                  ;
  3890                                  ;       Out:            EAX     lo-order message data
  3891                                  ;                       EDX     hi-order message data
  3892                                  ;
  3893                                  ;                       CY      0 = message read
  3894                                  ;                               1 = no message to read
  3895                                  ;
  3896                                  ;-----------------------------------------------------------------------------------------------------------------------
  3897                                  GetMessage              push    ebx                                             ;save non-volatile regs
  3898                                                          push    ecx                                             ;
  3899                                                          push    ds                                              ;
  3900                                                          push    ELDTMQ                                          ;load message queue selector ...
  3901                                                          pop     ds                                              ;... into data segment register
  3902                                                          mov     ebx,[MQHead]                                    ;head ptr
  3903                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  3904                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  3905                                                          or      eax,edx                                         ;is queue empty?
  3906                                                          stc                                                     ;assume queue is emtpy
  3907                                                          jz      .20                                             ;yes, skip ahead
  3908                                                          xor     ecx,ecx                                         ;store zero
  3909                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  3910                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  3911                                                          add     ebx,8                                           ;next queue element
  3912                                                          and     ebx,03fch                                       ;at end of queue?
  3913                                                          jnz     .10                                             ;no, skip ahead
  3914                                                          mov     bl,8                                            ;reset to 1st entry
  3915                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  3916                                                          clc                                                     ;indicate message read
  3917                                  .20                     pop     ds                                              ;restore non-volatile regs
  3918                                                          pop     ecx                                             ;
  3919                                                          pop     ebx                                             ;
  3920                                                          ret                                                     ;return
  3921                                  ;-----------------------------------------------------------------------------------------------------------------------
  3922                                  ;
  3923                                  ;       Routine:        PutMessage
  3924                                  ;
  3925                                  ;       Description:    This routine adda a message to the message queue.
  3926                                  ;
  3927                                  ;       In:             ECX     hi-order data word
  3928                                  ;                       EDX     lo-order data word
  3929                                  ;
  3930                                  ;       Out:            CY      0 = success
  3931                                  ;                               1 = fail: queue is full
  3932                                  ;
  3933                                  ;-----------------------------------------------------------------------------------------------------------------------
  3934                                  PutMessage              push    ds                                              ;save non-volatile regs
  3935                                                          push    ELDTMQ                                          ;load task message queue selector ...
  3936                                                          pop     ds                                              ;... into data segment register
  3937                                                          mov     eax,[MQTail]                                    ;tail ptr
  3938                                                          cmp     dword [eax],0                                   ;is queue full?
  3939                                                          stc                                                     ;assume failure
  3940                                                          jne     .20                                             ;yes, cannot store
  3941                                                          mov     [eax],edx                                       ;store lo-order data
  3942                                                          mov     [eax+4],ecx                                     ;store hi-order data
  3943                                                          add     eax,8                                           ;next queue element adr
  3944                                                          and     eax,03fch                                       ;at end of queue?
  3945                                                          jnz     .10                                             ;no, skip ahead
  3946                                                          mov     al,8                                            ;reset to top of queue
  3947                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  3948                                                          clc                                                     ;indicate success
  3949                                  .20                     pop     ds                                              ;restore non-volatile regs
  3950                                                          ret                                                     ;return
