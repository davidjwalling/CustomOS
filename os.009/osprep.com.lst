  2962                                  ;       Routine:        PutDateString
  2963                                  ;
  2964                                  ;       Description:    This routine returns an ASCIIZ mm/dd/yyyy string at ds:edx from the date in the DATETIME
  2965                                  ;                       structure at ds:ebx.
  2966                                  ;
  2967                                  ;       In:             DS:EBX  DATETIME address
  2968                                  ;                       DS:EDX  output buffer address
  2969                                  ;
  2970                                  ;-----------------------------------------------------------------------------------------------------------------------
  2971                                  PutDateString           push    ecx                                             ;save non-volatile regs
  2972                                                          push    edi                                             ;
  2973                                                          push    es                                              ;
  2974                                                          push    ds                                              ;store data selector ...
  2975                                                          pop     es                                              ;... in extra segment reg
  2976                                                          mov     edi,edx                                         ;output buffer address
  2977                                                          mov     cl,10                                           ;divisor
  2978                                                          mov     edx,0002F3030h                                  ;ASCIIZ "00/" (reversed)
  2979                                                          movzx   eax,byte [ebx+DATETIME.month]                   ;month
  2980                                                          div     cl                                              ;AH = rem; AL = quotient
  2981                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  2982                                                          cld                                                     ;forward strings
  2983                                                          stosd                                                   ;store "mm/"nul
  2984                                                          dec     edi                                             ;address of terminator
  2985                                                          movzx   eax,byte [ebx+DATETIME.day]                     ;day
  2986                                                          div     cl                                              ;AH = rem; AL = quotient
  2987                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  2988                                                          stosd                                                   ;store "dd/"nul
  2989                                                          dec     edi                                             ;address of terminator
  2990                                                          movzx   eax,byte [ebx+DATETIME.century]                 ;century
  2991                                                          div     cl                                              ;AH = rem; AL = quotient
  2992                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  2993                                                          stosd                                                   ;store "cc/"null
  2994                                                          dec     edi                                             ;address of terminator
  2995                                                          dec     edi                                             ;address of delimiter
  2996                                                          movzx   eax,byte [ebx+DATETIME.year]                    ;year (yy)
  2997                                                          div     cl                                              ;AH = rem; AL = quotient
  2998                                                          or      eax,edx                                         ;apply ASCII zones and delimiter
  2999                                                          stosb                                                   ;store quotient
  3000                                                          mov     al,ah                                           ;remainder
  3001                                                          stosb                                                   ;store remainder
  3002                                                          xor     al,al                                           ;null terminator
  3003                                                          stosb                                                   ;store terminator
  3004                                                          pop     es                                              ;restore non-volatile regs
  3005                                                          pop     edi                                             ;
  3006                                                          pop     ecx                                             ;
  3007                                                          ret                                                     ;return
