  4464                                  ;
  4465                                  ;       Routine:        ConTakeToken
  4466                                  ;
  4467                                  ;       Description:    This routine extracts the next token from the given source buffer.
  4468                                  ;
  4469                                  ;       In:             DS:EDX  source buffer address
  4470                                  ;                       DS:EBX  target buffer address
  4471                                  ;
  4472                                  ;       Out:            DS:EDX  source buffer address
  4473                                  ;                       DS:EBX  target buffer address
  4474                                  ;
  4475                                  ;       Command Form:   Line    = *3( *SP 1*ALNUM )
  4476                                  ;
  4477                                  ;-----------------------------------------------------------------------------------------------------------------------
  4478                                  ConTakeToken            push    esi                                             ;save non-volatile regs
  4479                                                          push    edi                                             ;
  4480                                                          push    es                                              ;
  4481                                                          push    ds                                              ;load data segment selector ...
  4482                                                          pop     es                                              ;... into extra segment reg
  4483                                                          mov     esi,edx                                         ;source buffer address
  4484                                                          mov     edi,ebx                                         ;target buffer address
  4485                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  4486                                                          cld                                                     ;forward strings
  4487                                  .10                     lodsb                                                   ;load byte
  4488                                                          cmp     al,EASCIISPACE                                  ;space?
  4489                                                          je      .10                                             ;yes, continue
  4490                                                          test    al,al                                           ;end of line?
  4491                                                          jz      .40                                             ;yes, branch
  4492                                  .20                     stosb                                                   ;store byte
  4493                                                          lodsb                                                   ;load byte
  4494                                                          test    al,al                                           ;end of line?
  4495                                                          jz      .40                                             ;no, continue
  4496                                                          cmp     al,EASCIISPACE                                  ;space?
  4497                                                          jne     .20                                             ;no, continue
  4498                                  .30                     lodsb                                                   ;load byte
  4499                                                          cmp     al,EASCIISPACE                                  ;space?
  4500                                                          je      .30                                             ;yes, continue
  4501                                                          dec     esi                                             ;pre-position
  4502                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  4503                                                          mov     edi,edx                                         ;source buffer address
  4504                                  .50                     lodsb                                                   ;remaining byte
  4505                                                          stosb                                                   ;move to front of buffer
  4506                                                          test    al,al                                           ;end of line?
  4507                                                          jnz     .50                                             ;no, continue
  4508                                                          pop     es                                              ;restore non-volatile regs
  4509                                                          pop     edi                                             ;
  4510                                                          pop     esi                                             ;
  4511                                                          ret                                                     ;return
  4512                                  ;-----------------------------------------------------------------------------------------------------------------------
  4513                                  ;
  4514                                  ;       Routine:        ConDetermineCommand
  4515                                  ;
  4516                                  ;       Description:    This routine determines the command number for the command at DS:EDX.
  4517                                  ;
  4518                                  ;       input:          DS:EDX  command address
  4519                                  ;
  4520                                  ;       output:         EAX     >=0     = command nbr
  4521                                  ;                               0       = unknown command
  4522                                  ;
  4523                                  ;-----------------------------------------------------------------------------------------------------------------------
  4524                                  ConDetermineCommand     push    ebx                                             ;save non-volatile regs
  4525                                                          push    ecx                                             ;
  4526                                                          push    esi                                             ;
  4527                                                          push    edi                                             ;
  4528                                  
  4529                                                          upperCaseString                                         ;upper-case string at EDX
  4530                                  
  4531                                                          mov     esi,tConCmdTbl                                  ;commands table
  4532                                                          xor     edi,edi                                         ;intialize command number
  4533                                                          cld                                                     ;forward strings
  4534                                  .10                     lodsb                                                   ;command length
  4535                                                          movzx   ecx,al                                          ;command length
  4536                                                          jecxz   .20                                             ;branch if end of table
  4537                                                          mov     ebx,esi                                         ;table entry address
  4538                                                          add     esi,ecx                                         ;next table entry address
  4539                                  
  4540                                                          compareMemory                                           ;compare byte arrays at EDX, EBX
  4541                                  
  4542                                                          jecxz   .20                                             ;branch if equal
  4543                                                          inc     edi                                             ;increment command nbr
  4544                                                          jmp     .10                                             ;repeat
  4545                                  .20                     mov     eax,edi                                         ;command number
  4546                                                          pop     edi                                             ;restore non-volatile regs
  4547                                                          pop     esi                                             ;
  4548                                                          pop     ecx                                             ;
  4549                                                          pop     ebx                                             ;
  4550                                                          ret                                                     ;return
