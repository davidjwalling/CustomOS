   707                                  ;
   708                                  ;       Compute segment where os.com will be loaded.
   709                                  ;
   710 0000004A D3E8                                            shr     ax,cl                                           ;AX = 0150
   711 0000004C 01D8                                            add     ax,bx                                           ;AX = 0150 + 07b0 = 0900
   712 0000004E 83E810                                          sub     ax,16                                           ;AX = 08f0
