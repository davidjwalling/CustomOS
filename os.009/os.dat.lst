  3584                                  ;
  3585                                  ;       Routine:        PutPrimaryEndOfInt
  3586                                  ;
  3587                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the primary PIC.
  3588                                  ;
  3589                                  ;-----------------------------------------------------------------------------------------------------------------------
  3590                                  PutPrimaryEndOfInt      sti                                                     ;enable maskable interrupts
  3591                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  3592                                                          out     EPICPORTPRI,al                                  ;send EOI to primary PIC
  3593                                                          ret                                                     ;return
  3594                                  ;-----------------------------------------------------------------------------------------------------------------------
  3595                                  ;
  3596                                  ;       Routine:        PutSecondaryEndOfInt
  3597                                  ;
  3598                                  ;       Description:    This routine sends a non-specific end-of-interrupt signal to the secondary PIC.
  3599                                  ;
  3600                                  ;-----------------------------------------------------------------------------------------------------------------------
  3601                                  PutSecondaryEndOfInt    sti                                                     ;enable maskable interrupts
  3602                                                          mov     al,EPICEOI                                      ;non-specific end-of-interrupt
  3603                                                          out     EPICPORTSEC,al                                  ;send EOI to secondary PIC
  3604                                                          ret                                                     ;return
