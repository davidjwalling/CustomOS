  2913                                  ;
  2914                                  ;       Routine:        GetConsoleString
  2915                                  ;
  2916                                  ;       Description:    This routine accepts keyboard input into a buffer.
  2917                                  ;
  2918                                  ;       In:             DS:EDX  target buffer address
  2919                                  ;                       ECX     maximum number of characters to accept
  2920                                  ;                       BH      echo to terminal
  2921                                  ;                       BL      terminating character
  2922                                  ;
  2923                                  ;-----------------------------------------------------------------------------------------------------------------------
  2924                                  GetConsoleString        push    ecx                                             ;save non-volatile regs
  2925                                                          push    esi                                             ;
  2926                                                          push    edi                                             ;
  2927                                                          push    es                                              ;
  2928                                                          push    ds                                              ;load data segment selector ...
  2929                                                          pop     es                                              ;... into extra segment register
  2930                                                          mov     edi,edx                                         ;edi = target buffer
  2931                                                          push    ecx                                             ;save maximum characters
  2932                                                          xor     al,al                                           ;zero register
  2933                                                          cld                                                     ;forward strings
  2934                                                          rep     stosb                                           ;zero fill buffer
  2935                                                          pop     ecx                                             ;maximum characters
  2936                                                          mov     edi,edx                                         ;edi = target buffer
  2937                                                          mov     esi,edx                                         ;esi = target buffer
  2938                                  .10                     jecxz   .50                                             ;exit if max-length is zero
  2939                                  .20                     call    GetConsoleChar                                  ;al = next input char
  2940                                                          cmp     al,bl                                           ;is this the terminator?
  2941                                                          je      .50                                             ;yes, exit
  2942                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  2943                                                          jne     .30                                             ;no, skip ahead
  2944                                                          cmp     esi,edi                                         ;at start of buffer?
  2945                                                          je      .20                                             ;yes, get next character
  2946                                                          dec     edi                                             ;backup target pointer
  2947                                                          mov     byte [edi],0                                    ;zero previous character
  2948                                                          inc     ecx                                             ;increment remaining chars
  2949                                                          test    bh,1                                            ;echo to console?
  2950                                                          jz      .20                                             ;no, get next character
  2951                                                          call    PreviousConsoleColumn                           ;backup console position
  2952                                                          mov     al,EASCIISPACE                                  ;ASCII space
  2953                                                          call    PutConsoleChar                                  ;write space to console
  2954                                                          call    PlaceCursor                                     ;position the cursor
  2955                                                          jmp     .20                                             ;get next character
  2956                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  2957                                                          jb      .20                                             ;no, get another character
  2958                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  2959                                                          ja      .20                                             ;no, get another character
  2960                                                          stosb                                                   ;store character in buffer
  2961                                                          test    bh,1                                            ;echo to console?
  2962                                                          jz      .40                                             ;no, skip ahead
  2963                                                          call    PutConsoleChar                                  ;write character to console
  2964                                                          call    NextConsoleColumn                               ;advance console position
