  3975                                  ;
  3976                                  ;       Routine:        ConMem
  3977                                  ;
  3978                                  ;       Description:    This routine handles the MEMORY command and its MEM alias.
  3979                                  ;
  3980                                  ;       Input:          wzConsoleInBuffer contains parameter(s)
  3981                                  ;
  3982                                  ;-----------------------------------------------------------------------------------------------------------------------
  3983                                  ConMem                  push    ebx                                             ;save non-volatile regs
  3984                                                          push    esi                                             ;
  3985                                                          push    edi                                             ;
  3986                                  ;
  3987                                  ;       Update the source address if a parameter is given.
  3988                                  ;
  3989                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer address (params)
  3990                                                          mov     ebx,wzConsoleToken                              ;console command token address
  3991                                                          call    ConTakeToken                                    ;take first param as token
  3992                                                          cmp     byte [wzConsoleToken],0                         ;token found?
  3993                                                          je      .10                                             ;no, branch
  3994                                                          mov     edx,wzConsoleToken                              ;first param as token address
  3995                                                          hexadecimalToUnsigned                                   ;convert string token to unsigned
  3996                                                          mov     [wdConsoleMemBase],eax                          ;save console memory address
  3997                                  ;
  3998                                  ;       Setup source address and row count.
  3999                                  ;
  4000                                  .10                     mov     esi,[wdConsoleMemBase]                          ;source memory address
  4001                                                          xor     ecx,ecx                                         ;zero register
  4002                                                          mov     cl,16                                           ;row count
  4003                                  ;
  4004                                  ;       Start the row with the source address in hexadecimal.
  4005                                  ;
  4006                                  .20                     push    ecx                                             ;save remaining rows
  4007                                                          mov     edi,wzConsoleOutBuffer                          ;output buffer address
  4008                                                          mov     edx,edi                                         ;output buffer address
  4009                                                          mov     ecx,esi                                         ;console memory address
  4010                                                          unsignedToHexadecimal                                   ;convert unsigned address to hex string
  4011                                                          add     edi,8                                           ;end of memory addr hexnum
  4012                                                          mov     al,' '                                          ;ascii space
  4013                                                          stosb                                                   ;store delimiter
  4014                                  ;
  4015                                  ;       Output 16 ASCII hexadecimal byte values for the row.
  4016                                  ;
  4017                                                          xor     ecx,ecx                                         ;zero register
  4018                                                          mov     cl,16                                           ;loop count
  4019                                  .30                     push    ecx                                             ;save loop count
  4020                                                          lodsb                                                   ;memory byte
  4021                                                          mov     ah,al                                           ;memory byte
  4022                                                          shr     al,4                                            ;high-order in bits 3-0
  4023                                                          or      al,30h                                          ;apply ascii numeric zone
  4024                                                          cmp     al,3ah                                          ;numeric range?
  4025                                                          jb      .40                                             ;yes, skip ahead
  4026                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  4027                                  .40                     stosb                                                   ;store ascii hexadecimal of high-order
  4028                                                          mov     al,ah                                           ;low-order in bits 3-0
  4029                                                          and     al,0fh                                          ;mask out high-order bits
  4030                                                          or      al,30h                                          ;apply ascii numeric zone
  4031                                                          cmp     al,3ah                                          ;numeric range?
  4032                                                          jb      .50                                             ;yes, skip ahead
  4033                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  4034                                  .50                     stosb                                                   ;store ascii hexadecimal of low-order
  4035                                                          mov     al,' '                                          ;ascii space
  4036                                                          stosb                                                   ;store ascii space delimiter
  4037                                                          pop     ecx                                             ;loop count
  4038                                                          loop    .30                                             ;next
  4039                                  ;
  4040                                  ;       Output printable ASCII character section for the row.
  4041                                  ;
  4042                                                          sub     esi,16                                          ;reset source pointer
  4043                                                          mov     cl,16                                           ;loop count
  4044                                  .60                     lodsb                                                   ;source byte
  4045                                                          cmp     al,32                                           ;printable? (low-range test)
  4046                                                          jb      .70                                             ;no, skip ahead
  4047                                                          cmp     al,128                                          ;printable? (high-range test)
  4048                                                          jb      .80                                             ;yes, skip ahead
  4049                                  .70                     mov     al,' '                                          ;display space instead of printable
  4050                                  .80                     stosb                                                   ;store printable ascii byte
  4051                                                          loop    .60                                             ;next source byte
  4052                                                          xor     al,al                                           ;nul-terminator
  4053                                                          stosb                                                   ;terminate output line
  4054                                  ;
  4055                                  ;       Display constructed output buffer and newline.
  4056                                  ;
  4057                                                          putConsoleString wzConsoleOutBuffer                     ;display constructed output
  4058                                                          call    ConPutNewLine                                   ;display new line
  4059                                  ;
  4060                                  ;       Repeat until all lines displayed and preserve source address.
  4061                                  ;
  4062                                                          pop     ecx                                             ;remaining rows
  4063                                                          loop    .20                                             ;next row
  4064                                                          mov     [wdConsoleMemBase],esi                          ;update console memory address
  4065                                                          pop     edi                                             ;restore regs
  4066                                                          pop     esi                                             ;
  4067                                                          pop     ebx                                             ;
  4068                                                          ret                                                     ;return
