  3288                                  ;
  3289                                  ;       Routine:        HexadecimalToUnsigned
  3290                                  ;
  3291                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ hexadecimal string.
  3292                                  ;
  3293                                  ;       Input:          DS:EDX  null-terminated hexadecimal string address
  3294                                  ;
  3295                                  ;       Output:         EAX     unsigned integer value
  3296                                  ;
  3297                                  ;-----------------------------------------------------------------------------------------------------------------------
  3298                                  HexadecimalToUnsigned   push    esi                                             ;save non-volatile regs
  3299                                                          mov     esi,edx                                         ;source address
  3300                                                          xor     edx,edx                                         ;zero register
  3301                                  .10                     lodsb                                                   ;source byte
  3302                                                          test    al,al                                           ;end of string?
  3303                                                          jz      .30                                             ;yes, branch
  3304                                                          cmp     al,'9'                                          ;hexadecimal?
  3305                                                          jna     .20                                             ;no, skip ahead
  3306                                                          sub     al,037h                                         ;'A' = 41h, less 37h = 0Ah
  3307                                  .20                     and     eax,00Fh                                        ;remove ascii zone
  3308                                                          shl     edx,4                                           ;previous total x 16
  3309                                                          add     edx,eax                                         ;add prior value x 16
  3310                                                          jmp     .10                                             ;next
  3311                                  .30                     mov     eax,edx                                         ;result
  3312                                                          pop     esi                                             ;restore non-volatile regs
  3313                                                          ret                                                     ;return
