  3913                                  ;
  3914                                  ;       Routine:        ConDetermineCommand
  3915                                  ;
  3916                                  ;       Description:    This routine determines the command number for the command at DS:EDX.
  3917                                  ;
  3918                                  ;       input:          DS:EDX  command address
  3919                                  ;
  3920                                  ;       output:         EAX     >=0     = command nbr
  3921                                  ;                               0       = unknown command
  3922                                  ;
  3923                                  ;-----------------------------------------------------------------------------------------------------------------------
  3924                                  ConDetermineCommand     push    ebx                                             ;save non-volatile regs
  3925                                                          push    ecx                                             ;
  3926                                                          push    esi                                             ;
  3927                                                          push    edi                                             ;
  3928                                                          upperCaseString                                         ;upper-case string at EDX
  3929                                                          mov     esi,tConCmdTbl                                  ;commands table
  3930                                                          xor     edi,edi                                         ;intialize command number
  3931                                                          cld                                                     ;forward strings
  3932                                  .10                     lodsb                                                   ;command length
  3933                                                          movzx   ecx,al                                          ;command length
  3934                                                          jecxz   .20                                             ;branch if end of table
  3935                                                          mov     ebx,esi                                         ;table entry address
  3936                                                          add     esi,ecx                                         ;next table entry address
  3937                                                          compareMemory                                           ;compare byte arrays at EDX, EBX
  3938                                                          jecxz   .20                                             ;branch if equal
  3939                                                          inc     edi                                             ;increment command nbr
  3940                                                          jmp     .10                                             ;repeat
  3941                                  .20                     mov     eax,edi                                         ;command number
  3942                                                          pop     edi                                             ;restore non-volatile regs
  3943                                                          pop     esi                                             ;
  3944                                                          pop     ecx                                             ;
  3945                                                          pop     ebx                                             ;
  3946                                                          ret                                                     ;return
