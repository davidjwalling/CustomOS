  2798                                  ;
  2799                                  ;       Routine:        CompareMemory
  2800                                  ;
  2801                                  ;       Description:    This routine compares two byte arrays.
  2802                                  ;
  2803                                  ;       In:             DS:EDX  first source address
  2804                                  ;                       DS:EBX  second source address
  2805                                  ;                       ECX     comparison length
  2806                                  ;
  2807                                  ;       Out:            EDX     first source address
  2808                                  ;                       EBX     second source address
  2809                                  ;                       ECX     0       array 1 = array 2
  2810                                  ;                               <0      array 1 < array 2
  2811                                  ;                               >0      array 1 > array 2
  2812                                  ;
  2813                                  ;-----------------------------------------------------------------------------------------------------------------------
  2814                                  CompareMemory           push    esi                                             ;save non-volatile regs
  2815                                                          push    edi                                             ;
  2816                                                          push    es                                              ;
  2817                                                          push    ds                                              ;copy DS
  2818                                                          pop     es                                              ;... to ES
  2819                                                          mov     esi,edx                                         ;first source address
  2820                                                          mov     edi,ebx                                         ;second source address
  2821                                                          cld                                                     ;forward strings
  2822                                                          rep     cmpsb                                           ;compare bytes
  2823                                                          mov     al,0                                            ;default result
  2824                                                          jz      .10                                             ;branch if arrays equal
  2825                                                          mov     al,1                                            ;positive result
  2826                                                          jnc     .10                                             ;branch if target > source
  2827                                                          mov     al,-1                                           ;negative result
  2828                                  .10                     movsx   ecx,al                                          ;extend sign
  2829                                                          pop     es                                              ;restore non-volatile regs
  2830                                                          pop     edi                                             ;
  2831                                                          pop     esi                                             ;
  2832                                                          ret                                                     ;return
