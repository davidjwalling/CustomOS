  3351                                  ;
  3352                                  ;       Routine:        GetMessage
  3353                                  ;
  3354                                  ;       Description:    This routine reads and removes a message from the message queue.
  3355                                  ;
  3356                                  ;       Out:            EAX     lo-order message data
  3357                                  ;                       EDX     hi-order message data
  3358                                  ;
  3359                                  ;                       CY      0 = message read
  3360                                  ;                               1 = no message to read
  3361                                  ;
  3362                                  ;-----------------------------------------------------------------------------------------------------------------------
  3363                                  GetMessage              push    ebx                                             ;save non-volatile regs
  3364                                                          push    ecx                                             ;
  3365                                                          push    ds                                              ;
  3366                                                          push    ELDTMQ                                          ;load message queue selector ...
  3367                                                          pop     ds                                              ;... into data segment register
  3368                                                          mov     ebx,[MQHead]                                    ;head ptr
  3369                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  3370                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  3371                                                          or      eax,edx                                         ;is queue empty?
  3372                                                          stc                                                     ;assume queue is emtpy
  3373                                                          jz      .20                                             ;yes, skip ahead
  3374                                                          xor     ecx,ecx                                         ;store zero
  3375                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  3376                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  3377                                                          add     ebx,8                                           ;next queue element
  3378                                                          and     ebx,03FCh                                       ;at end of queue?
  3379                                                          jnz     .10                                             ;no, skip ahead
  3380                                                          mov     bl,8                                            ;reset to 1st entry
  3381                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  3382                                                          clc                                                     ;indicate message read
  3383                                  .20                     pop     ds                                              ;restore non-volatile regs
  3384                                                          pop     ecx                                             ;
  3385                                                          pop     ebx                                             ;
  3386                                                          ret                                                     ;return
  3387                                  ;-----------------------------------------------------------------------------------------------------------------------
  3388                                  ;
  3389                                  ;       Routine:        PutMessage
  3390                                  ;
  3391                                  ;       Description:    This routine adda a message to the message queue.
  3392                                  ;
  3393                                  ;       In:             ECX     hi-order data word
  3394                                  ;                       EDX     lo-order data word
  3395                                  ;
  3396                                  ;       Out:            CY      0 = success
  3397                                  ;                               1 = fail: queue is full
  3398                                  ;
  3399                                  ;-----------------------------------------------------------------------------------------------------------------------
  3400                                  PutMessage              push    ds                                              ;save non-volatile regs
  3401                                                          push    ELDTMQ                                          ;load task message queue selector ...
  3402                                                          pop     ds                                              ;... into data segment register
  3403                                                          mov     eax,[MQTail]                                    ;tail ptr
  3404                                                          cmp     dword [eax],0                                   ;is queue full?
  3405                                                          stc                                                     ;assume failure
  3406                                                          jne     .20                                             ;yes, cannot store
  3407                                                          mov     [eax],edx                                       ;store lo-order data
  3408                                                          mov     [eax+4],ecx                                     ;store hi-order data
  3409                                                          add     eax,8                                           ;next queue element adr
  3410                                                          and     eax,03FCh                                       ;at end of queue?
  3411                                                          jnz     .10                                             ;no, skip ahead
  3412                                                          mov     al,8                                            ;reset to top of queue
  3413                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  3414                                                          clc                                                     ;indicate success
  3415                                  .20                     pop     ds                                              ;restore non-volatile regs
  3416                                                          ret                                                     ;return
