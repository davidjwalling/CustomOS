  3315                                  ;
  3316                                  ;       Routine:        UnsignedToHexadecimal
  3317                                  ;
  3318                                  ;       Description:    This routine creates an ASCIIZ string representing the hexadecimal value of binary input
  3319                                  ;
  3320                                  ;       Input:          DS:EDX  output buffer address
  3321                                  ;                       ECX     32-bit binary
  3322                                  ;
  3323                                  ;-----------------------------------------------------------------------------------------------------------------------
  3324                                  UnsignedToHexadecimal   push    edi                                             ;store non-volatile regs
  3325                                                          mov     edi,edx                                         ;output buffer address
  3326                                                          mov     edx,ecx                                         ;32-bit unsigned
  3327                                                          xor     ecx,ecx                                         ;zero register
  3328                                                          mov     cl,8                                            ;nybble count
  3329                                  .10                     rol     edx,4                                           ;next hi-order nybble in bits 0-3
  3330                                                          mov     al,dl                                           ;????bbbb
  3331                                                          and     al,00Fh                                         ;mask out bits 4-7
  3332                                                          or      al,030h                                         ;mask in ascii zone
  3333                                                          cmp     al,03Ah                                         ;A through F?
  3334                                                          jb      .20                                             ;no, skip ahead
  3335                                                          add     al,7                                            ;41h through 46h
  3336                                  .20                     stosb                                                   ;store hexnum
  3337                                                          loop    .10                                             ;next nybble
  3338                                                          xor     al,al                                           ;zero reg
  3339                                                          stosb                                                   ;null terminate
  3340                                                          pop     edi                                             ;restore non-volatile regs
  3341                                                          ret                                                     ;return
