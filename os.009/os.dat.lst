  3553                                  ;
  3554                                  ;       Routine:        PlaceCursor
  3555                                  ;
  3556                                  ;       Description:    This routine positions the cursor on the console.
  3557                                  ;
  3558                                  ;       In:             DS      OS data selector
  3559                                  ;
  3560                                  ;-----------------------------------------------------------------------------------------------------------------------
  3561                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  3562                                                          mov     al,[wbConsoleRow]                               ;AL = row
  3563                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  3564                                                          mul     ah                                              ;row offset
  3565                                                          add     al,[wbConsoleColumn]                            ;add column
  3566                                                          adc     ah,0                                            ;add overflow
  3567                                                          mov     ecx,eax                                         ;screen offset
  3568                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  3569                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  3570                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  3571                                                          out     dx,al                                           ;select register
  3572                                                          inc     edx                                             ;data port
  3573                                                          mov     al,ch                                           ;hi-order cursor loc
  3574                                                          out     dx,al                                           ;store hi-order loc
  3575                                                          dec     edx                                             ;register select port
  3576                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
  3577                                                          out     dx,al                                           ;select register
  3578                                                          inc     edx                                             ;data port
  3579                                                          mov     al,cl                                           ;lo-order cursor loc
  3580                                                          out     dx,al                                           ;store lo-order loc
  3581                                                          pop     ecx                                             ;restore non-volatile regs
  3582                                                          ret                                                     ;return
