   982                                                          hlt                                                     ;wait for interrupt
   983                                                          jmp     .10                                             ;repeat
   984                                  .20                     cmp     al,EASCIIRETURN                                 ;Enter key pressed?
   985                                                          je      .30                                             ;yes, branch
   986                                                          cmp     al,EASCIIESCAPE                                 ;Escape key pressed?
   987                                                          jne     .10                                             ;no, repeat
   988                                                          jmp     .120                                            ;yes, exit program
