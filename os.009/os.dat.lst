  2834                                  ;
  2835                                  ;       Routine:        UpperCaseString
  2836                                  ;
  2837                                  ;       Description:    This routine places all characters in the given string to upper case.
  2838                                  ;
  2839                                  ;       In:             DS:EDX  string address
  2840                                  ;
  2841                                  ;       Out:            EDX     string address
  2842                                  ;
  2843                                  ;-----------------------------------------------------------------------------------------------------------------------
  2844                                  UpperCaseString         push    esi                                             ;save non-volatile regs
  2845                                                          mov     esi,edx                                         ;string address
  2846                                                          cld                                                     ;forward strings
  2847                                  .10                     lodsb                                                   ;string character
  2848                                                          test    al,al                                           ;null?
  2849                                                          jz      .20                                             ;yes, skip ahead
  2850                                                          cmp     al,EASCIILOWERA                                 ;lower-case? (lower bounds)
  2851                                                          jb      .10                                             ;no, continue
  2852                                                          cmp     al,EASCIILOWERZ                                 ;lower-case? (upper bounds)
  2853                                                          ja      .10                                             ;no, continue
  2854                                                          and     al,EASCIICASEMASK                               ;mask for upper case
  2855                                                          mov     [esi-1],al                                      ;upper character
  2856                                                          jmp     .10                                             ;continue
  2857                                  .20                     pop     esi                                             ;restore non-volatile regs
  2858                                                          ret                                                     ;return
