  3606                                  ;
  3607                                  ;       Routine:        ResetSystem
  3608                                  ;
  3609                                  ;       Description:    This routine restarts the system using the 8042 controller.
  3610                                  ;
  3611                                  ;       Out:            N/A     This routine does not return.
  3612                                  ;
  3613                                  ;-----------------------------------------------------------------------------------------------------------------------
  3614                                  ResetSystem             mov     ecx,001fffffh                                   ;delay to clear ints
  3615                                                          loop    $                                               ;clear interrupts
  3616                                                          mov     al,EKEYBCMDRESET                                ;mask out bit zero
  3617                                                          out     EKEYBPORTSTAT,al                                ;drive bit zero low
  3618                                  .10                     sti                                                     ;enable maskable interrupts
  3619                                                          hlt                                                     ;halt until interrupt
  3620                                                          jmp     .10                                             ;repeat until reset kicks in
  3621                                  ;-----------------------------------------------------------------------------------------------------------------------
  3622                                  ;
  3623                                  ;       Routine:        SetKeyboardLamps
  3624                                  ;
  3625                                  ;       Description:    This routine sends the set/reset mode indicators command to the keyboard device.
  3626                                  ;
  3627                                  ;       In:             BH      00000CNS (C:Caps Lock,N:Num Lock,S:Scroll Lock)
  3628                                  ;
  3629                                  ;-----------------------------------------------------------------------------------------------------------------------
  3630                                  SetKeyboardLamps        call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3631                                                          mov     al,EKEYBCMDLAMPS                                ;set/reset lamps command
  3632                                                          out     EKEYBPORTDATA,al                                ;send command to 8042
  3633                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3634                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3635                                                          call    WaitForKeyInBuffer                              ;wait for input buffer ready
  3636                                                          mov     al,bh                                           ;set/reset lamps value
  3637                                                          out     EKEYBPORTDATA,al                                ;send lamps value
  3638                                                          call    WaitForKeyOutBuffer                             ;wait for 8042 result
  3639                                                          in      al,EKEYBPORTDATA                                ;read 8042 'ACK' (0fah)
  3640                                                          ret                                                     ;return
  3641                                  ;-----------------------------------------------------------------------------------------------------------------------
  3642                                  ;
  3643                                  ;       Routine:        WaitForKeyInBuffer
  3644                                  ;
  3645                                  ;       Description:    This routine waits for keyboard input buffer to be ready for input.
  3646                                  ;
  3647                                  ;       Out:            ZF      1 = Input buffer ready
  3648                                  ;                               0 = Input buffer not ready after timeout
  3649                                  ;
  3650                                  ;-----------------------------------------------------------------------------------------------------------------------
  3651                                  WaitForKeyInBuffer      push    ecx                                             ;save non-volatile regs
  3652                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3653                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3654                                                          test    al,EKEYBBITIN                                   ;is input buffer still full?
  3655                                                          loopnz  .10                                             ;yes, repeat till timeout
  3656                                                          pop     ecx                                             ;restore non-volatile regs
  3657                                                          ret                                                     ;return
  3658                                  ;-----------------------------------------------------------------------------------------------------------------------
  3659                                  ;
  3660                                  ;       Routine:        WaitForKeyOutBuffer
  3661                                  ;
  3662                                  ;       Description:    This routine waits for keyboard output buffer to have data to read.
  3663                                  ;
  3664                                  ;       Out:            ZF      1 = Output buffer has data from controller
  3665                                  ;                               0 = Output buffer empty after timeout
  3666                                  ;
  3667                                  ;-----------------------------------------------------------------------------------------------------------------------
  3668                                  WaitForKeyOutBuffer     push    ecx                                             ;save non-volatile regs
  3669                                                          mov     ecx,EKEYBWAITLOOP                               ;keyboard controller timeout
  3670                                  .10                     in      al,EKEYBPORTSTAT                                ;keyboard status byte
  3671                                                          test    al,EKEYBBITOUT                                  ;output buffer status bit
  3672                                                          loopz   .10                                             ;loop until output buffer bit
  3673                                                          pop     ecx                                             ;restore non-volatile regs
  3674                                                          ret                                                     ;return
  3675                                  ;-----------------------------------------------------------------------------------------------------------------------
  3676                                  ;
  3677                                  ;       End of the Kernel Function Library
  3678                                  ;
  3679                                  ;-----------------------------------------------------------------------------------------------------------------------
  3680                                                          times   8192-($-$$) db 0h                               ;zero fill to end of section
  3681                                  ;=======================================================================================================================
  3682                                  ;
  3683                                  ;       Console Task
  3684                                  ;
  3685                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  3686                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  3687                                  ;       screen and responds to user commands.
  3688                                  ;
  3689                                  ;=======================================================================================================================
  3690                                  ;-----------------------------------------------------------------------------------------------------------------------
  3691                                  ;
  3692                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  3693                                  ;
  3694                                  ;       This is the stack for the console task. It supports 448 nested calls.
  3695                                  ;
  3696                                  ;-----------------------------------------------------------------------------------------------------------------------
  3697                                  section                 constack                                                ;console task stack
  3698                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  3699                                  ;-----------------------------------------------------------------------------------------------------------------------
  3700                                  ;
  3701                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  3702                                  ;
  3703                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  3704                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  3705                                  ;       16 descriptors. Six are initially defined.
  3706                                  ;
  3707                                  ;-----------------------------------------------------------------------------------------------------------------------
  3708                                  section                 conldt                                                  ;console local descriptors
  3709                                                          dq      004093004780007Fh                               ;04 TSS alias
  3710                                                          dq      004093004700007Fh                               ;0c LDT alias
  3711                                                          dq      00409300400006FFh                               ;14 stack
  3712                                                          dq      00CF93000000FFFFh                               ;1c data
  3713                                                          dq      00409B0050000FFFh                               ;24 code
  3714                                                          dq      00409300480007FFh                               ;2c message queue
  3715                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  3716                                  ;-----------------------------------------------------------------------------------------------------------------------
  3717                                  ;
  3718                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  3719                                  ;
  3720                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  3721                                  ;       segment. CS to console code.
  3722                                  ;
  3723                                  ;-----------------------------------------------------------------------------------------------------------------------
  3724                                  section                 contss                                                  ;console task state segment
  3725                                                          dd      0                                               ;00 back-link tss
  3726                                                          dd      0700h                                           ;04 esp ring 0
  3727                                                          dd      0014h                                           ;08 ss ring 0
  3728                                                          dd      0700h                                           ;0c esp ring 1
  3729                                                          dd      0014h                                           ;10 es ring 1
  3730                                                          dd      0700h                                           ;14 esp ring 2
  3731                                                          dd      0014h                                           ;18 ss ring 2
  3732                                                          dd      0                                               ;1c cr ring 3
  3733                                                          dd      0                                               ;20 eip
  3734                                                          dd      0200h                                           ;24 eflags
  3735                                                          dd      0                                               ;28 eax
  3736                                                          dd      0                                               ;2c ecx
  3737                                                          dd      0                                               ;30 edx
  3738                                                          dd      0                                               ;34 ebx
  3739                                                          dd      0700h                                           ;38 esp ring 3
  3740                                                          dd      0                                               ;3c ebp
  3741                                                          dd      0                                               ;40 esi
  3742                                                          dd      0                                               ;44 edi
  3743                                                          dd      001Ch                                           ;48 es
  3744                                                          dd      0024h                                           ;4c cs
  3745                                                          dd      0014h                                           ;50 ss ring 3
  3746                                                          dd      001Ch                                           ;54 ds
  3747                                                          dd      0                                               ;58 fs
  3748                                                          dd      0                                               ;5c gs
  3749                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  3750                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  3751                                  ;-----------------------------------------------------------------------------------------------------------------------
  3752                                  ;
  3753                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  3754                                  ;
  3755                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  3756                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  3757                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  3758                                  ;       event.
  3759                                  ;
  3760                                  ;-----------------------------------------------------------------------------------------------------------------------
  3761                                  section                 conmque                                                 ;console message queue
  3762                                                          dd      8                                               ;head pointer
  3763                                                          dd      8                                               ;tail pointer
  3764                                                          times   510 dd 0                                        ;queue elements
  3765                                  ;-----------------------------------------------------------------------------------------------------------------------
  3766                                  ;
  3767                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  3768                                  ;
  3769                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  3770                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  3771                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  3772                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  3773                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  3774                                  ;       board input, echoing to the console screen and responding to user commands.
  3775                                  ;
  3776                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  3777                                  ;
  3778                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  3779                                  ;                               |  Real Mode Interrupt Vectors                  |
  3780                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  3781                                  ;                               |  Reserved BIOS Memory Area                    |
  3782                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  3783                                  ;                               |  Shared Kernel Memory Area                    |
  3784                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  3785                                  ;                               |  Global Descriptor Table (GDT)                |
  3786                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  3787                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  3788                                  ;                       002000  +-----------------------------------------------+
  3789                                  ;                               |  Interrupt Handlers                           |
  3790                                  ;                               |  Kernel Function Library                      |
  3791                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  3792                                  ;                               |  Console Task Stack Area                      |
  3793                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  3794                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  3795                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  3796                                  ;                               |  Console Task Task State Segment (TSS)        |
  3797                                  ;                       004800  +-----------------------------------------------+
  3798                                  ;                               |  Console Task Message Queue                   |
  3799                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  3800                                  ;                               |  Console Task Code                            |
  3801                                  ;                               |  Console Task Constants                       |
  3802                                  ;                       006000  +===============================================+
  3803                                  ;
  3804                                  ;-----------------------------------------------------------------------------------------------------------------------
  3805                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  3806                                  ConCode                 call    ConInitializeData                               ;initialize console variables
  3807                                                          clearConsoleScreen                                      ;clear the console screen
  3808                                                          putConsoleString czTitle                                ;display startup message
  3809                                  .10                     putConsoleString czPrompt                               ;display input prompt
  3810                                                          placeCursor                                             ;set CRT cursor location
  3811                                                          getConsoleString wzConsoleInBuffer,79,1,13              ;accept keyboard input
  3812                                                          call    ConPutNewLine                                   ;newline
  3813                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer
  3814                                                          mov     ebx,wzConsoleToken                              ;token buffer
  3815                                                          call    ConTakeToken                                    ;handle console input
  3816                                                          mov     edx,wzConsoleToken                              ;token buffer
  3817                                                          call    ConDetermineCommand                             ;determine command number
  3818                                                          cmp     eax,ECONJMPTBLCNT                               ;valid command number?
  3819                                                          jb      .20                                             ;yes, branch
  3820                                                          putConsoleString czUnknownCommand                       ;display error message
  3821                                                          jmp     .10                                             ;next command
  3822                                  .20                     shl     eax,2                                           ;index into jump table
  3823                                                          mov     edx,tConJmpTbl                                  ;jump table base address
  3824                                                          mov     eax,[edx+eax]                                   ;command handler routine address
  3825                                                          call    eax                                             ;call command handler
  3826                                                          jmp     .10                                             ;next command
  3827                                  ;-----------------------------------------------------------------------------------------------------------------------
  3828                                  ;
  3829                                  ;       Routine:        ConInitializeData
  3830                                  ;
  3831                                  ;       Description:    This routine initializes console task variables.
  3832                                  ;
  3833                                  ;-----------------------------------------------------------------------------------------------------------------------
  3834                                  ConInitializeData       push    ecx                                             ;save non-volatile regs
  3835                                                          push    edi                                             ;
  3836                                                          push    es                                              ;
  3837                                  ;
  3838                                  ;       Initialize console work areas.
  3839                                  ;
  3840                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3841                                                          pop     es                                              ;... into extra segment register
  3842                                                          mov     edi,ECONDATA                                    ;OS console data address
  3843                                                          xor     al,al                                           ;initialization value
  3844                                                          mov     ecx,ECONDATALEN                                 ;size of OS console data
  3845                                                          cld                                                     ;forward strings
  3846                                                          rep     stosb                                           ;initialize data
  3847                                  ;
  3848                                  ;       Restore and return.
  3849                                  ;
  3850                                                          pop     es                                              ;restore non-volatile regs
  3851                                                          pop     edi                                             ;
  3852                                                          pop     ecx                                             ;
  3853                                                          ret                                                     ;return
  3854                                  ;-----------------------------------------------------------------------------------------------------------------------
  3855                                  ;
  3856                                  ;       Routine:        ConPutNewLine
  3857                                  ;
  3858                                  ;       Description:    Write a new-line to the console.
  3859                                  ;
  3860                                  ;-----------------------------------------------------------------------------------------------------------------------
  3861                                  ConPutNewLine           putConsoleString czNewLine                              ;write value to console
  3862                                                          ret                                                     ;return
  3863                                  ;-----------------------------------------------------------------------------------------------------------------------
  3864                                  ;
  3865                                  ;       Routine:        ConTakeToken
  3866                                  ;
  3867                                  ;       Description:    This routine extracts the next token from the given source buffer.
  3868                                  ;
  3869                                  ;       In:             DS:EDX  source buffer address
  3870                                  ;                       DS:EBX  target buffer address
  3871                                  ;
  3872                                  ;       Out:            DS:EDX  source buffer address
  3873                                  ;                       DS:EBX  target buffer address
  3874                                  ;
  3875                                  ;       Command Form:   Line    = *3( *SP 1*ALNUM )
  3876                                  ;
  3877                                  ;-----------------------------------------------------------------------------------------------------------------------
  3878                                  ConTakeToken            push    esi                                             ;save non-volatile regs
  3879                                                          push    edi                                             ;
  3880                                                          push    es                                              ;
  3881                                                          push    ds                                              ;load data segment selector ...
  3882                                                          pop     es                                              ;... into extra segment reg
  3883                                                          mov     esi,edx                                         ;source buffer address
  3884                                                          mov     edi,ebx                                         ;target buffer address
  3885                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  3886                                                          cld                                                     ;forward strings
  3887                                  .10                     lodsb                                                   ;load byte
  3888                                                          cmp     al,EASCIISPACE                                  ;space?
  3889                                                          je      .10                                             ;yes, continue
  3890                                                          test    al,al                                           ;end of line?
  3891                                                          jz      .40                                             ;yes, branch
  3892                                  .20                     stosb                                                   ;store byte
  3893                                                          lodsb                                                   ;load byte
  3894                                                          test    al,al                                           ;end of line?
  3895                                                          jz      .40                                             ;no, continue
  3896                                                          cmp     al,EASCIISPACE                                  ;space?
  3897                                                          jne     .20                                             ;no, continue
  3898                                  .30                     lodsb                                                   ;load byte
  3899                                                          cmp     al,EASCIISPACE                                  ;space?
  3900                                                          je      .30                                             ;yes, continue
  3901                                                          dec     esi                                             ;pre-position
  3902                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  3903                                                          mov     edi,edx                                         ;source buffer address
  3904                                  .50                     lodsb                                                   ;remaining byte
  3905                                                          stosb                                                   ;move to front of buffer
  3906                                                          test    al,al                                           ;end of line?
  3907                                                          jnz     .50                                             ;no, continue
  3908                                                          pop     es                                              ;restore non-volatile regs
  3909                                                          pop     edi                                             ;
  3910                                                          pop     esi                                             ;
