  3444                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  3445                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  3446                                                          xor     edi,edi                                         ;target offset
  3447                                                          cld                                                     ;forward strings
  3448                                                          rep     stosd                                           ;reset screen body
  3449                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  3450                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  3451                                                          rep     stosd                                           ;reset OIA line
  3452                                                          xor     al,al                                           ;zero register
  3453                                                          mov     [wbConsoleRow],al                               ;reset console row
  3454                                                          mov     [wbConsoleColumn],al                            ;reset console column
  3455                                                          call    PlaceCursor                                     ;place cursor at current position
  3456                                                          pop     es                                              ;restore non-volatile regs
  3457                                                          pop     ds                                              ;
  3458                                                          pop     edi                                             ;
  3459                                                          pop     ecx                                             ;
  3460                                                          ret                                                     ;return
  3461                                  ;-----------------------------------------------------------------------------------------------------------------------
  3462                                  ;
  3463                                  ;       Routine:        ScrollConsoleRow
  3464                                  ;
  3465                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  3466                                  ;
  3467                                  ;-----------------------------------------------------------------------------------------------------------------------
  3468                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  3469                                                          push    esi                                             ;
  3470                                                          push    edi                                             ;
  3471                                                          push    ds                                              ;
  3472                                                          push    es                                              ;
  3473                                                          push    EGDTCGA                                         ;load CGA video selector ...
  3474                                                          pop     ds                                              ;... into DS
  3475                                                          push    EGDTCGA                                         ;load CGA video selector ...
  3476                                                          pop     es                                              ;... into ES
  3477                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  3478                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  3479                                                          xor     edi,edi                                         ;EDI = target (line 1)
  3480                                                          cld                                                     ;forward strings
  3481                                                          rep     movsd                                           ;move 24 lines up
  3482                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  3483                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  3484                                                          rep     stosd                                           ;clear bottom row
  3485                                                          pop     es                                              ;restore non-volatile regs
  3486                                                          pop     ds                                              ;
  3487                                                          pop     edi                                             ;
  3488                                                          pop     esi                                             ;
  3489                                                          pop     ecx                                             ;
  3490                                                          ret                                                     ;return
  3491                                  ;-----------------------------------------------------------------------------------------------------------------------
  3492                                  ;
  3493                                  ;       Routine:        SetConsoleChar
  3494                                  ;
  3495                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  3496                                  ;
  3497                                  ;       In:             AL      ASCII character
  3498                                  ;                       CL      column
  3499                                  ;                       CH      row
  3500                                  ;                       ES      CGA selector
  3501                                  ;
  3502                                  ;       Out:            EAX     last target address written (ES:)
  3503                                  ;                       CL      column + 1
  3504                                  ;
  3505                                  ;-----------------------------------------------------------------------------------------------------------------------
  3506                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  3507                                                          movzx   eax,ch                                          ;row
  3508                                                          mov     ah,ECONCOLS                                     ;cols/row
  3509                                                          mul     ah                                              ;row * cols/row
  3510                                                          add     al,cl                                           ;add column
  3511                                                          adc     ah,0                                            ;handle carry
  3512                                                          shl     eax,1                                           ;screen offset
  3513                                                          mov     [es:eax],dl                                     ;store character
  3514                                                          inc     cl                                              ;next column
  3515                                                          ret                                                     ;return
  3516                                  ;-----------------------------------------------------------------------------------------------------------------------
  3517                                  ;
  3518                                  ;       Routine:        SetConsoleString
  3519                                  ;
  3520                                  ;       Description:    This routine outputs a sequence of ASCII character at the given row and column.
  3521                                  ;
  3522                                  ;       In:             ESI     source offset (DS:)
  3523                                  ;                       CL      column
  3524                                  ;                       CH      row
  3525                                  ;                       ES      CGA selector
  3526                                  ;
  3527                                  ;-----------------------------------------------------------------------------------------------------------------------
  3528                                  SetConsoleString        push    esi                                             ;save non-volatile regs
  3529                                                          cld                                                     ;forward strings
  3530                                  .10                     lodsb                                                   ;next ASCII character
  3531                                                          test    al,al                                           ;end of string?
  3532                                                          jz      .20                                             ;yes, branch
  3533                                                          call    SetConsoleChar                                  ;store character
  3534                                                          jmp     .10                                             ;continue
  3535                                  .20                     pop     esi                                             ;restore non-volatile regs
  3536                                                          ret                                                     ;return
