   495                                  ;
   496                                  ;	File Allocation Tables
   497                                  ;
   498                                  ;	The disk contains two copies of the File Allocation Table (FAT). On our disk, each FAT copy is 1200h bytes in
   499                                  ;	length. Each FAT entry contains the logical number of the next cluster. The first two entries are reserved. Our
   500                                  ;	OS.COM file here is 200h bytes in length. These 200h bytes contain familiar code that displays a message to the
   501                                  ;	screen. Our disk parameter table defines a cluster as containing one sector and each sector having 200h bytes.
   502                                  ;	Therefore, our FAT table must reserve only one cluster for OS.COM. The cluster used by OS.COM, then, will be
   503                                  ;	cluster 2. The entry value for this cluster is set to "0fffh" to indicate that it is the last cluster in the
   504                                  ;	chain.
   505                                  ;
   506                                  ;	Every three bytes encode two FAT entries as follows:
   507                                  ;
   508                                  ;	db	0abh,0cdh,0efh	;even cluster: 0dabh, odd cluster: 0efch
   509                                  ;
   510                                  ;=======================================================================================================================
   511                                  ;-----------------------------------------------------------------------------------------------------------------------
   512                                  ;
   513                                  ;	FAT copy 1								@disk: 000200	@mem: n/a
   514                                  ;
   515                                  ;-----------------------------------------------------------------------------------------------------------------------
   516                                  section			fat1							;first copy of FAT
   517 00000000 F0FFFFFF0F00            			db	0F0h,0FFh,0FFh,	0FFh,00Fh,000h
   518 00000006 00<rept>                			times	(9*512)-($-$$) db 0				;zero fill to end of section
   519                                  ;-----------------------------------------------------------------------------------------------------------------------
   520                                  ;
   521                                  ;	FAT copy 2								@disk: 001400	@mem: n/a
   522                                  ;
   523                                  ;-----------------------------------------------------------------------------------------------------------------------
   524                                  section			fat2							;second copy of FAT
   525 00000000 F0FFFFFF0F00            			db	0F0h,0FFh,0FFh,	0FFh,00Fh,000h
   526 00000006 00<rept>                			times	(9*512)-($-$$) db 0				;zero fill to end of section
   527                                  ;-----------------------------------------------------------------------------------------------------------------------
   528                                  ;
   529                                  ;	Diskette Directory							@disk: 002600	@mem: n/a
   530                                  ;
   531                                  ;	The disk contains one copy of the diskette directory. Each directory entry is 32 bytes long. Our directory
   532                                  ;	contains only one entry. Unused entries are set to all nulls. The directory immediately follows the second FAT
   533                                  ;	copy.
   534                                  ;
   535                                  ;-----------------------------------------------------------------------------------------------------------------------
   536                                  section			dir							;diskette directory
   537 00000000 4F5320202020202043-     			db	"OS      COM"					;file name (must contain spaces)
   537 00000009 4F4D               
   538 0000000B 20                      			db	020h						;attribute (archive bit set)
   539 0000000C 00<rept>                			times	10 db 0						;unused
   540 00000016 0000                    			dw	0h						;time
   541 00000018 41                      			db	01000001b					;mmm = 10 MOD 8 = 2; ddddd = 1
   542 00000019 49                      			db	01001001b					;yyyyyyy = 2016-1980 = 36 = 24h; m/8 = 1
   543 0000001A 0200                    			dw	2						;first cluster
   544 0000001C 00020000                			dd	200h						;file size
   545 00000020 00<rept>                			times	(224*32)-($-$$) db 0h				;zero fill to end of section
   546                                  %endif
