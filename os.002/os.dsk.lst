   584 00000000 F0FFFF03F0FF                                    db      0F0h,0FFh,0FFh, 003h,0F0h,0FFh
   585 00000006 00<rept>                                        times   (9*512)-($-$$) db 0                             ;zero fill to end of section
   586                                  ;-----------------------------------------------------------------------------------------------------------------------
   587                                  ;
   588                                  ;       FAT copy 2                                                              @disk: 001400   @mem: n/a
   589                                  ;
   590                                  ;-----------------------------------------------------------------------------------------------------------------------
