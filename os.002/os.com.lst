   433                                  			jz	BootReturn					;... yes, exit our loop
   434                                  			mov	ah,EBIOSFNTTYOUTPUT				;BIOS teletype function
   435                                  			int	EBIOSINTVIDEO					;call BIOS display interrupt
   436                                  			jmp	BootPrint					;repeat until done
   437                                  BootReturn		ret							;return to caller
