   546                                  wbReadCount             db      0                                               ;sectors to read
   547                                  cbReadCommand           db      EBIOSFNREADSECTOR                               ;BIOS read disk fn code
   548                                  wwDriveHead             equ     $                                               ;drive, head (word)
   549                                  wbDrive                 db      0                                               ;drive
