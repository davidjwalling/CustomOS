   949 0000000C 09A0000BC000            			db	009h,0A0h,000h,	00Bh,0C0h,000h
   950 00000012 0DE0000F0001            			db	00Dh,0E0h,000h,	00Fh,000h,001h
   951 00000018 112001134001            			db	011h,020h,001h,	013h,040h,001h
   952 0000001E 156001178001            			db	015h,060h,001h,	017h,080h,001h
   953 00000024 19A0011BC001            			db	019h,0A0h,001h,	01Bh,0C0h,001h
