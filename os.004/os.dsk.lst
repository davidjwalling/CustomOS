   960                                  ;
   961                                  ;	Diskette Directory							@disk: 002600	@mem: n/a
   962                                  ;
   963                                  ;	The disk contains one copy of the diskette directory. Each directory entry is 32 bytes long. Our directory
   964                                  ;	contains only one entry. Unused entries are set to all nulls. The directory immediately follows the second FAT
   965                                  ;	copy.
   966                                  ;
   967                                  ;-----------------------------------------------------------------------------------------------------------------------
   968                                  section			dir							;diskette directory
   969 00000000 4F5320202020202043-     			db	"OS      COM"					;file name (must contain spaces)
   969 00000009 4F4D               
   970 0000000B 20                      			db	20h						;attribute (archive bit set)
   971 0000000C 00<rept>                			times	10 db 0;					;unused
   972 00000016 0000                    			dw	0h						;time
   973 00000018 41                      			db	01000001b					;mmm = 10 MOD 8 = 2; ddddd = 1
   974 00000019 49                      			db	01001001b					;yyyyyyy = 2016-1980 = 36 = 24h; m/8 = 1
   975 0000001A 0200                    			dw	2						;first cluster
   976 0000001C 00520000                			dd	5200h						;file size
   977 00000020 00<rept>                			times	(224*32)-($-$$) db 0h				;zero fill to end of section
