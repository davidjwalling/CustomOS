   955 00000030 212002234002            			db	021h,020h,002h,	023h,040h,002h
   956 00000036 256002278002            			db	025h,060h,002h,	027h,080h,002h
   957 0000003C 29A002FF0F00            			db	029h,0A0h,002h,	0FFh,00Fh,000h
