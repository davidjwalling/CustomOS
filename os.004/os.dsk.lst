   760                                  			jne	.10						;no, repeat
   761                                  			jmp	.90						;yes, exit program
   762                                  ;
   763                                  ;	Display writing-sector message and patch the JMP instruction.
   764                                  ;
   765                                  .15			mov	si,czPrepMsg12					;writing-sector message address
   766                                  			call	BootPrint					;display message
   767                                  			mov	bx,Boot+1					;address of JMP instruction operand
   768                                  			mov	ax,01Bh						;address past disk parameter table
   769                                  			mov	[bx],ax						;update the JMP instruction
   770                                  ;
   771                                  ;	Try to read the boot sector.
   772                                  ;
   773                                  			mov	cx,EMAXTRIES					;try up to five times
   774                                  .20			push	cx						;save remaining tries
   775                                  			mov	bx,wcPrepInBuf					;input buffer address
   776                                  			mov	dx,0						;head zero, drive zero
   777                                  			mov	cx,1						;track zero, sector one
   778                                  			mov	ax,0201h					;read one sector
   779                                  			int	EBIOSINTDISKETTE				;attempt the read
   780                                  			pop	cx						;restore remaining retries
   781                                  			jnc	.30						;skip ahead if successful
   782                                  			loop	.20						;try again
   783                                  			mov	si,czPrepMsg20					;read-error message address
   784                                  			jmp	.50						;branch to error routine
   785                                  ;
   786                                  ;	Copy diskette parms from input buffer to output buffer.
   787                                  ;
   788                                  .30			mov	si,wcPrepInBuf					;input buffer address
   789                                  			add	si,11						;skip over JMP and system ID
   790                                  			mov	di,Boot						;output buffer address
   791                                  			add	di,11						;skip over JMP and system ID
   792                                  			mov	cx,19						;length of diskette parameters
   793                                  			cld							;forward string copies
   794                                  			rep	movsb						;copy diskette parameters
   795                                  ;
   796                                  ;	Try to write boot sector to diskette.
   797                                  ;
   798                                  			mov	cx,EMAXTRIES					;try up to five times
   799                                  .40			push	cx						;save remaining tries
   800                                  			mov	bx,Boot						;output buffer address
   801                                  			mov	dx,0						;head zero, drive zero
   802                                  			mov	cx,1						;track zero, sector one
   803                                  			mov	ax,0301h					;write one sector
   804                                  			int	EBIOSINTDISKETTE				;attempt the write
   805                                  			pop	cx						;restore remaining retries
   806                                  			jnc	.80						;skip ahead if successful
   807                                  			loop	.40						;try again
   808                                  			mov	si,czPrepMsg30					;write-error message address
   809                                  ;
   810                                  ;	Convert the error code to ASCII and display the error message.
   811                                  ;
   812                                  .50			push	ax						;save error code
   813                                  			mov	al,ah						;copy error code
   814                                  			mov	ah,0						;AX = error code
   815                                  			mov	dl,10h						;hexadecimal divisor
   816                                  			idiv	dl						;AL = hi-order, AH = lo-order
   817                                  			or	ax,3030h					;add ASCII zone digits
   818                                  			cmp	ah,3Ah						;AH ASCII numeral?
   819                                  			jb	.60						;yes, continue
   820                                  			add	ah,7						;no, make ASCII 'A'-'F'
   821                                  .60			cmp	al,3Ah						;al ASCII numeral?
   822                                  			jb	.70						;yes, continue
   823                                  			add	al,7						;no, make ASCII
   824                                  .70			mov	[si+17],ax					;put ASCII error code in message
   825                                  			call	BootPrint					;write error message
   826                                  			pop	ax						;restore error code
   827                                  ;
   828                                  ;	Display the completion message.
   829                                  ;
   830                                  .80			mov	si,czPrepMsgOK					;assume successful completion
   831                                  			mov	al,ah						;BIOS return code
   832                                  			cmp	al,0						;success?
   833                                  			je	.85						;yes, continue
   834                                  			mov	si,czPrepMsgErr1				;disk parameter error message
   835                                  			cmp	al,1						;disk parameter error?
   836                                  			je	.85						;yes, continue
   837                                  			mov	si,czPrepMsgErr2				;address mark not found message
   838                                  			cmp	al,2						;address mark not found?
   839                                  			je	.85						;yes, continue
   840                                  			mov	si,czPrepMsgErr3				;protected disk message
   841                                  			cmp	al,3						;protected disk?
   842                                  			je	.85						;yes, continue
   843                                  			mov	si,czPrepMsgErr6				;diskette removed message
   844                                  			cmp	al,6						;diskette removed?
   845                                  			je	.85						;yes, continue
   846                                  			mov	si,czPrepMsgErr80				;drive timed out message
   847                                  			cmp	al,80H						;drive timed out?
   848                                  			je	.85						;yes, continue
   849                                  			mov	si,czPrepMsgErrXX				;unknown error message
   850                                  .85			call	BootPrint					;display result message
   851                                  .90			mov	ax,4C00H					;terminate with zero result code
   852                                  			int	21h						;terminate DOS program
   853                                  			ret							;return (should not execute)
