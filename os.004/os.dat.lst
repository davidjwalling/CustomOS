  1443                                                          mint    notpresent                                      ;0b not-present
  1444                                                          mint    stacklimit                                      ;0c stack limit
  1445                                                          mint    protection                                      ;0d general protection fault
  1446                                                          mint    int14                                           ;0e (reserved)
  1447                                                          mint    int15                                           ;0f (reserved)
  1448                                                          mint    coproccalc                                      ;10 (reserved)
  1449                                                          mint    int17                                           ;11 (reserved)
  1450                                                          mint    int18                                           ;12 (reserved)
  1451                                                          mint    int19                                           ;13 (reserved)
  1452                                                          mint    int20                                           ;14 (reserved)
  1453                                                          mint    int21                                           ;15 (reserved)
  1454                                                          mint    int22                                           ;16 (reserved)
