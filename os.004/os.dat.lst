  2081                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  2082                                  ;
  2083                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  2084                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  2085                                  ;       16 descriptors. Six are initially defined.
  2086                                  ;
  2087                                  ;-----------------------------------------------------------------------------------------------------------------------
  2088                                  section                 conldt                                                  ;console local descriptors
  2089                                                          dq      004093004780007Fh                               ;04 TSS alias
  2090                                                          dq      004093004700007Fh                               ;0c LDT alias
  2091                                                          dq      00409300400006FFh                               ;14 stack
  2092                                                          dq      00CF93000000FFFFh                               ;1c data
  2093                                                          dq      00409B0050000FFFh                               ;24 code
  2094                                                          dq      00409300480007FFh                               ;2c message queue
  2095                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
