  2146                                  ;
  2147                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  2148                                  ;
  2149                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  2150                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  2151                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  2152                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  2153                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  2154                                  ;       board input, echoing to the console screen and responding to user commands.
  2155                                  ;
  2156                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  2157                                  ;
  2158                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  2159                                  ;                               |  Real Mode Interrupt Vectors                  |
  2160                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  2161                                  ;                               |  Reserved BIOS Memory Area                    |
  2162                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  2163                                  ;                               |  Shared Kernel Memory Area                    |
  2164                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  2165                                  ;                               |  Global Descriptor Table (GDT)                |
  2166                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  2167                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  2168                                  ;                       002000  +-----------------------------------------------+
  2169                                  ;                               |  Interrupt Handlers                           |
  2170                                  ;                               |  Kernel Function Library                      |
  2171                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  2172                                  ;                               |  Console Task Stack Area                      |
  2173                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  2174                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  2175                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  2176                                  ;                               |  Console Task Task State Segment (TSS)        |
  2177                                  ;                       004800  +-----------------------------------------------+
  2178                                  ;                               |  Console Task Message Queue                   |
  2179                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  2180                                  ;                               |  Console Task Code                            |
  2181                                  ;                               |  Console Task Constants                       |
  2182                                  ;                       006000  +===============================================+
  2183                                  ;
  2184                                  ;-----------------------------------------------------------------------------------------------------------------------
  2185                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  2186                                  ;
  2187                                  ;       Initialize console work areas to low values.
  2188                                  ;
  2189                                  ConCode                 mov     edi,ECONDATA                                    ;OS console data address
  2190                                                          xor     al,al                                           ;initialization value
  2191                                                          mov     ecx,ECONDATALEN                                 ;size of OS console data
  2192                                                          cld                                                     ;forward strings
  2193                                                          rep     stosb                                           ;initialize data
  2194                                  ;
  2195                                  ;       Initialize the active panel variables.
  2196                                  ;
  2197                                                          mov     eax,czPnlCon001                                 ;initial console panel
  2198                                                          mov     [wdConsolePanel],eax                            ;save panel template address
  2199                                  ;
  2200                                  ;       Address the console screen memory.
  2201                                  ;
  2202                                                          push    EGDTCGA                                         ;load CGA video selector...
  2203                                                          pop     es                                              ;...into extra segment reg
  2204                                  ;
  2205                                  ;       Initialize the Operator Information Area (OIA) (This is done once).
  2206                                  ;
  2207                                                          mov     edi,ECONROWS*ECONROWBYTES                       ;target offset
  2208                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2209                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2210                                                          rep     stosd                                           ;reset OIA
  2211                                  ;
  2212                                  ;       Clear the console rows. (This is done after every attention key).
  2213                                  ;
  2214                                  .20                     xor     edi,edi                                         ;target offset
  2215                                                          mov     ecx,ECONROWS*ECONROWDWORDS                      ;double-words to clear
  2216                                                          mov     eax,ECONCLEARDWORD                              ;initialization value
  2217                                                          rep     stosd                                           ;reset screen body
  2218                                  ;
  2219                                  ;       Reset the input field row and column. Address the panel template.
  2220                                  ;
  2221                                                          xor     eax,eax                                         ;zero register
  2222                                                          mov     [wdConsoleInput],eax                            ;zero input addr
  2223                                                          mov     [wbConsoleRow],al                               ;zero console row
  2224                                                          mov     [wbConsoleColumn],al                            ;zero console column
  2225                                  ;
  2226                                  ;       Load the field address. Exit loop if address is null.
  2227                                  ;
  2228                                                          mov     esi,[wdConsolePanel]                            ;panel template
  2229                                  .30                     lodsd                                                   ;field value addr
  2230                                                          test    eax,eax                                         ;end of panel?
  2231                                                          jz      .70                                             ;yes, exit loop
  2232                                                          mov     ebx,eax                                         ;field value addr
  2233                                  ;
  2234                                  ;       Load the field row, column, color and length.
  2235                                  ;
  2236                                                          lodsb                                                   ;attributes
  2237                                                          mov     ch,al                                           ;row
  2238                                                          lodsb                                                   ;column
  2239                                                          mov     cl,al                                           ;column
  2240                                                          lodsb                                                   ;color
  2241                                                          mov     dh,al                                           ;color
  2242                                                          lodsb                                                   ;length
  2243                                                          mov     dl,al                                           ;length
  2244                                  ;
  2245                                  ;       Test the row high-bit for input field indication
  2246                                  ;
  2247                                                          test    ch,080h                                         ;input field?
  2248                                                          jz      .40                                             ;no, branch
  2249                                                          and     ch,07Fh                                         ;clear input field indicator
  2250                                  ;
  2251                                  ;       Save the row and column if this is the first input field
  2252                                  ;
  2253                                                          mov     al,[wbConsoleRow]                               ;console row
  2254                                                          or      al,[wbConsoleColumn]                            ;already have an input field?
  2255                                                          jnz     .40                                             ;yes, branch
  2256                                                          mov     [wbConsoleRow],ch                               ;update console row
  2257                                                          mov     [wbConsoleColumn],cl                            ;update console column
  2258                                  ;
  2259                                  ;       Compute the target offset.
  2260                                  ;
  2261                                  .40                     movzx   eax,ch                                          ;row
  2262                                                          mov     ah,ECONCOLS                                     ;columns per row
  2263                                                          mul     ah                                              ;row offset
  2264                                                          add     al,cl                                           ;add column
  2265                                                          adc     ah,0                                            ;handle overflow
  2266                                                          shl     eax,1                                           ;two-bytes per column
  2267                                                          mov     edi,eax                                         ;target offset
  2268                                  ;
  2269                                  ;       Display the field contents
  2270                                  ;
  2271                                                          xchg    ebx,esi                                         ;swap panel and field addr
  2272                                                          movzx   ecx,dl                                          ;length
  2273                                                          mov     ah,dh                                           ;color
  2274                                  .50                     lodsb                                                   ;character
  2275                                                          test    al,al                                           ;end of value?
  2276                                                          jz      .60                                             ;yes, branch
  2277                                                          stosw                                                   ;store character and color
  2278                                                          loop    .50                                             ;next character
  2279                                  .60                     xchg    ebx,esi                                         ;swap panel and field addr
  2280                                                          jmp     short .30                                       ;next field
  2281                                  ;
  2282                                  ;       Place the cursor if we have an input field
  2283                                  ;
  2284                                  .70                     mov     ah,[wbConsoleRow]                               ;field row
  2285                                                          mov     al,[wbConsoleColumn]                            ;field column
  2286                                                          or      al,ah                                           ;input field?
  2287                                                          jz      .80                                             ;no, branch
  2288                                                          placeCursor                                             ;position the cursor
  2289                                  ;
  2290                                  ;       Enter halt loop
  2291                                  ;
  2292                                  .80                     sti                                                     ;enable interrupts
  2293                                                          hlt                                                     ;halt until interrupt
  2294                                                          jmp     .80                                             ;continue halt loop
  2295                                  ;-----------------------------------------------------------------------------------------------------------------------
  2296                                  ;
  2297                                  ;       Constants
  2298                                  ;
  2299                                  ;-----------------------------------------------------------------------------------------------------------------------
  2300                                  ;-----------------------------------------------------------------------------------------------------------------------
  2301                                  ;
  2302                                  ;       Panels
  2303                                  ;
  2304                                  ;       Notes:          1.      Each field MUST have an address of a constant or an input field.
  2305                                  ;                       2.      The constant text or input field MUST be at least the length of the field.
  2306                                  ;                       3.      Field constant text or field values MUST be comprised of printable characters.
  2307                                  ;
  2308                                  ;-----------------------------------------------------------------------------------------------------------------------
  2309                                  czPnlCon001             dd      czFldPnlIdCon001                                ;field text
  2310                                                          db      00,00,02h,06                                    ;flags+row, col, attr, length
  2311                                                          dd      czFldTitleCon001
  2312                                                          db      00,30,07h,20
  2313                                                          dd      czFldDatTmCon001
  2314                                                          db      00,63,02h,17
  2315                                                          dd      czFldPrmptCon001
  2316                                                          db      23,00,07h,01
  2317                                                          dd      wzConsoleInBuffer
  2318                                                          db      128+23,01,0Fh,79
  2319                                                          dd      0                                               ;end of panel
  2320                                  ;-----------------------------------------------------------------------------------------------------------------------
  2321                                  ;
  2322                                  ;       Strings
  2323                                  ;
  2324                                  ;-----------------------------------------------------------------------------------------------------------------------
  2325                                  czFldPnlIdCon001        db      "CON001"                                        ;main console panel id
  2326                                  czFldTitleCon001        db      "CustomOS Version 1.0"                          ;main console panel title
  2327                                  czFldDatTmCon001        db      "DD-MMM-YYYY HH:MM"                             ;panel date and time template
  2328                                  czFldPrmptCon001        db      ":"                                             ;command prompt
  2329                                                          times   4096-($-$$) db 0h                               ;zero fill to end of section
  2330                                  %endif
  2331                                  %ifdef BUILDDISK
  2332                                  ;-----------------------------------------------------------------------------------------------------------------------
  2333                                  ;
  2334                                  ;       Free Disk Space                                                         @disk: 009600   @mem:  n/a
