  2109                                                          dd      0014h                                           ;10 es ring 1
  2110                                                          dd      0700h                                           ;14 esp ring 2
  2111                                                          dd      0014h                                           ;18 ss ring 2
  2112                                                          dd      0                                               ;1c cr ring 3
  2113                                                          dd      0                                               ;20 eip
  2114                                                          dd      0200h                                           ;24 eflags
  2115                                                          dd      0                                               ;28 eax
  2116                                                          dd      0                                               ;2c ecx
  2117                                                          dd      0                                               ;30 edx
  2118                                                          dd      0                                               ;34 ebx
  2119                                                          dd      0700h                                           ;38 esp ring 3
  2120                                                          dd      0                                               ;3c ebp
  2121                                                          dd      0                                               ;40 esi
  2122                                                          dd      0                                               ;44 edi
  2123                                                          dd      001Ch                                           ;48 es
  2124                                                          dd      0024h                                           ;4c cs
  2125                                                          dd      0014h                                           ;50 ss ring 3
  2126                                                          dd      001Ch                                           ;54 ds
  2127                                                          dd      0                                               ;58 fs
