   924                                                          mov     bx,Boot                                         ;output buffer address
   925                                                          mov     dx,0                                            ;head zero, drive zero
   926                                                          mov     cx,1                                            ;track zero, sector one
   927                                                          mov     al,1                                            ;one sector
