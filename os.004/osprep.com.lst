  2022                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  2023                                                          mul     ah                                              ;row offset
  2024                                                          add     al,[wbConsoleColumn]                            ;add column
  2025                                                          adc     ah,0                                            ;add overflow
  2026                                                          mov     ecx,eax                                         ;screen offset
  2027                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  2028                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  2029                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  2030                                                          out     dx,al                                           ;select register
  2031                                                          inc     edx                                             ;data port
  2032                                                          mov     al,ch                                           ;hi-order cursor loc
  2033                                                          out     dx,al                                           ;store hi-order loc
  2034                                                          dec     edx                                             ;register select port
