  2013                                                          mov     al,[wbConsoleRow]                               ;AL = row
  2014                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  2015                                                          mul     ah                                              ;row offset
  2016                                                          add     al,[wbConsoleColumn]                            ;add column
  2017                                                          adc     ah,0                                            ;add overflow
  2018                                                          mov     ecx,eax                                         ;screen offset
  2019                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  2020                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  2021                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  2022                                                          out     dx,al                                           ;select register
  2023                                                          inc     edx                                             ;data port
  2024                                                          mov     al,ch                                           ;hi-order cursor loc
  2025                                                          out     dx,al                                           ;store hi-order loc
  2026                                                          dec     edx                                             ;register select port
  2027                                                          mov     al,ECRTCURLOCLO                                 ;crt cursor loc reg lo
