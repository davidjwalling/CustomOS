  1741                                  ;
  1742                                  ;       Hardware Device Interupts
  1743                                  ;
  1744                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  1745                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  1746                                  ;       (BX=2028h).
  1747                                  ;
  1748                                  ;=======================================================================================================================
  1749                                  ;-----------------------------------------------------------------------------------------------------------------------
  1750                                  ;
  1751                                  ;       IRQ0    Clock Tick Interrupt
  1752                                  ;
  1753                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  1754                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  1755                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  1756                                  ;
  1757                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  1758                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  1759                                  ;
  1760                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  1761                                  ;       zero, the floppy disk motors are turned off.
  1762                                  ;
  1763                                  ;-----------------------------------------------------------------------------------------------------------------------
  1764                                                          menter  clocktick                                       ;clock tick interrupt
  1765                                                          push    eax                                             ;save non-volatile regs
  1766                                                          push    edx                                             ;
  1767                                                          push    ds                                              ;
  1768                                  ;
  1769                                  ;       Update the clock tick count and the elapsed days as needed.
  1770                                  ;
  1771                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  1772                                                          pop     ds                                              ;... into data segment register
  1773                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  1774                                                          inc     eax                                             ;increment clock ticks
  1775                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  1776                                                          jb      irq0.10                                         ;no, skip ahead
  1777                                                          inc     byte [wbClockDays]                              ;increment clock days
  1778                                                          xor     eax,eax                                         ;reset clock ticks
  1779                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  1780                                  ;
  1781                                  ;       Decrement floppy disk motor timeout.
  1782                                  ;
  1783                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  1784                                                          je      irq0.20                                         ;yes, skip ahead
  1785                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  1786                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  1787                                  ;
  1788                                  ;       Turn off the floppy disk motor if appropriate.
  1789                                  ;
  1790                                                          sti                                                     ;enable maskable interrupts
  1791                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  1792                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  1793                                                          in      al,dx                                           ;FDC main status byte
  1794                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  1795                                                          jnz     irq0.15                                         ;wait while busy
  1796                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  1797                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  1798                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  1799                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  1800                                                          out     dx,al                                           ;turn motor off
