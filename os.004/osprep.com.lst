  2063                                  ;
  2064                                  ;       Console Task
  2065                                  ;
  2066                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  2067                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  2068                                  ;       screen and responds to user commands.
  2069                                  ;
  2070                                  ;=======================================================================================================================
  2071                                  ;-----------------------------------------------------------------------------------------------------------------------
  2072                                  ;
  2073                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  2074                                  ;
  2075                                  ;       This is the stack for the console task. It supports 448 nested calls.
  2076                                  ;
  2077                                  ;-----------------------------------------------------------------------------------------------------------------------
  2078                                  section                 constack                                                ;console task stack
  2079                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  2080                                  ;-----------------------------------------------------------------------------------------------------------------------
  2081                                  ;
  2082                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  2083                                  ;
  2084                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  2085                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  2086                                  ;       16 descriptors. Six are initially defined.
  2087                                  ;
  2088                                  ;-----------------------------------------------------------------------------------------------------------------------
  2089                                  section                 conldt                                                  ;console local descriptors
  2090                                                          dq      004093004780007Fh                               ;04 TSS alias
  2091                                                          dq      004093004700007Fh                               ;0c LDT alias
  2092                                                          dq      00409300400006FFh                               ;14 stack
  2093                                                          dq      00CF93000000FFFFh                               ;1c data
  2094                                                          dq      00409B0050000FFFh                               ;24 code
  2095                                                          dq      00409300480007FFh                               ;2c message queue
  2096                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  2097                                  ;-----------------------------------------------------------------------------------------------------------------------
  2098                                  ;
  2099                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  2100                                  ;
  2101                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  2102                                  ;       segment. CS to console code.
  2103                                  ;
  2104                                  ;-----------------------------------------------------------------------------------------------------------------------
  2105                                  section                 contss                                                  ;console task state segment
  2106                                                          dd      0                                               ;00 back-link tss
  2107                                                          dd      0700h                                           ;04 esp ring 0
  2108                                                          dd      0014h                                           ;08 ss ring 0
  2109                                                          dd      0700h                                           ;0c esp ring 1
  2110                                                          dd      0014h                                           ;10 es ring 1
  2111                                                          dd      0700h                                           ;14 esp ring 2
  2112                                                          dd      0014h                                           ;18 ss ring 2
  2113                                                          dd      0                                               ;1c cr ring 3
  2114                                                          dd      0                                               ;20 eip
  2115                                                          dd      0200h                                           ;24 eflags
  2116                                                          dd      0                                               ;28 eax
  2117                                                          dd      0                                               ;2c ecx
  2118                                                          dd      0                                               ;30 edx
  2119                                                          dd      0                                               ;34 ebx
  2120                                                          dd      0700h                                           ;38 esp ring 3
  2121                                                          dd      0                                               ;3c ebp
  2122                                                          dd      0                                               ;40 esi
  2123                                                          dd      0                                               ;44 edi
  2124                                                          dd      001Ch                                           ;48 es
  2125                                                          dd      0024h                                           ;4c cs
  2126                                                          dd      0014h                                           ;50 ss ring 3
  2127                                                          dd      001Ch                                           ;54 ds
  2128                                                          dd      0                                               ;58 fs
  2129                                                          dd      0                                               ;5c gs
  2130                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  2131                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  2132                                  ;-----------------------------------------------------------------------------------------------------------------------
  2133                                  ;
  2134                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  2135                                  ;
  2136                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  2137                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  2138                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  2139                                  ;       event.
  2140                                  ;
  2141                                  ;-----------------------------------------------------------------------------------------------------------------------
  2142                                  section                 conmque                                                 ;console message queue
  2143                                                          dd      8                                               ;head pointer
  2144                                                          dd      8                                               ;tail pointer
  2145                                                          times   510 dd 0                                        ;queue elements
  2146                                  ;-----------------------------------------------------------------------------------------------------------------------
  2147                                  ;
  2148                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  2149                                  ;
  2150                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  2151                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  2152                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  2153                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  2154                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  2155                                  ;       board input, echoing to the console screen and responding to user commands.
  2156                                  ;
  2157                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  2158                                  ;
  2159                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  2160                                  ;                               |  Real Mode Interrupt Vectors                  |
  2161                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  2162                                  ;                               |  Reserved BIOS Memory Area                    |
  2163                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  2164                                  ;                               |  Shared Kernel Memory Area                    |
  2165                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  2166                                  ;                               |  Global Descriptor Table (GDT)                |
  2167                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  2168                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  2169                                  ;                       002000  +-----------------------------------------------+
  2170                                  ;                               |  Interrupt Handlers                           |
  2171                                  ;                               |  Kernel Function Library                      |
  2172                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  2173                                  ;                               |  Console Task Stack Area                      |
  2174                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  2175                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  2176                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  2177                                  ;                               |  Console Task Task State Segment (TSS)        |
  2178                                  ;                       004800  +-----------------------------------------------+
  2179                                  ;                               |  Console Task Message Queue                   |
  2180                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  2181                                  ;                               |  Console Task Code                            |
  2182                                  ;                               |  Console Task Constants                       |
  2183                                  ;                       006000  +===============================================+
  2184                                  ;
  2185                                  ;-----------------------------------------------------------------------------------------------------------------------
  2186                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  2187                                  ;
  2188                                  ;       Initialize console work areas to low values.
  2189                                  ;
  2190                                  ConCode                 mov     edi,ECONDATA                                    ;OS console data address
  2191                                                          xor     al,al                                           ;initialization value
  2192                                                          mov     ecx,ECONDATALEN                                 ;size of OS console data
  2193                                                          cld                                                     ;forward strings
  2194                                                          rep     stosb                                           ;initialize data
  2195                                  ;
  2196                                  ;       Initialize the active panel variables.
  2197                                  ;
  2198                                                          mov     eax,czPnlCon001                                 ;initial console panel
  2199                                                          mov     [wdConsolePanel],eax                            ;save panel template address
  2200                                  ;
  2201                                  ;       Address the console screen memory.
  2202                                  ;
  2203                                                          push    EGDTCGA                                         ;load CGA video selector...
  2204                                                          pop     es                                              ;...into extra segment reg
  2205                                  ;
  2206                                  ;       Initialize the Operator Information Area (OIA) (This is done once).
  2207                                  ;
  2208                                                          mov     edi,ECONROWS*ECONROWBYTES                       ;target offset
  2209                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  2210                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  2211                                                          rep     stosd                                           ;reset OIA
  2212                                  ;
  2213                                  ;       Clear the console rows. (This is done after every attention key).
  2214                                  ;
  2215                                  .20                     xor     edi,edi                                         ;target offset
  2216                                                          mov     ecx,ECONROWS*ECONROWDWORDS                      ;double-words to clear
  2217                                                          mov     eax,ECONCLEARDWORD                              ;initialization value
  2218                                                          rep     stosd                                           ;reset screen body
  2219                                  ;
  2220                                  ;       Reset the input field row and column. Address the panel template.
  2221                                  ;
  2222                                                          xor     eax,eax                                         ;zero register
  2223                                                          mov     [wdConsoleInput],eax                            ;zero input addr
  2224                                                          mov     [wbConsoleRow],al                               ;zero console row
  2225                                                          mov     [wbConsoleColumn],al                            ;zero console column
  2226                                  ;
  2227                                  ;       Load the field address. Exit loop if address is null.
  2228                                  ;
  2229                                                          mov     esi,[wdConsolePanel]                            ;panel template
  2230                                  .30                     lodsd                                                   ;field value addr
  2231                                                          test    eax,eax                                         ;end of panel?
  2232                                                          jz      .70                                             ;yes, exit loop
  2233                                                          mov     ebx,eax                                         ;field value addr
  2234                                  ;
  2235                                  ;       Load the field row, column, color and length.
  2236                                  ;
  2237                                                          lodsb                                                   ;attributes
  2238                                                          mov     ch,al                                           ;row
  2239                                                          lodsb                                                   ;column
  2240                                                          mov     cl,al                                           ;column
  2241                                                          lodsb                                                   ;color
  2242                                                          mov     dh,al                                           ;color
  2243                                                          lodsb                                                   ;length
  2244                                                          mov     dl,al                                           ;length
  2245                                  ;
  2246                                  ;       Test the row high-bit for input field indication
  2247                                  ;
  2248                                                          test    ch,080h                                         ;input field?
  2249                                                          jz      .40                                             ;no, branch
  2250                                                          and     ch,07Fh                                         ;clear input field indicator
  2251                                  ;
  2252                                  ;       Save the row and column if this is the first input field
  2253                                  ;
  2254                                                          mov     al,[wbConsoleRow]                               ;console row
  2255                                                          or      al,[wbConsoleColumn]                            ;already have an input field?
  2256                                                          jnz     .40                                             ;yes, branch
  2257                                                          mov     [wbConsoleRow],ch                               ;update console row
  2258                                                          mov     [wbConsoleColumn],cl                            ;update console column
  2259                                  ;
  2260                                  ;       Compute the target offset.
  2261                                  ;
  2262                                  .40                     movzx   eax,ch                                          ;row
  2263                                                          mov     ah,ECONCOLS                                     ;columns per row
  2264                                                          mul     ah                                              ;row offset
  2265                                                          add     al,cl                                           ;add column
  2266                                                          adc     ah,0                                            ;handle overflow
  2267                                                          shl     eax,1                                           ;two-bytes per column
  2268                                                          mov     edi,eax                                         ;target offset
  2269                                  ;
  2270                                  ;       Display the field contents
  2271                                  ;
  2272                                                          xchg    ebx,esi                                         ;swap panel and field addr
  2273                                                          movzx   ecx,dl                                          ;length
  2274                                                          mov     ah,dh                                           ;color
  2275                                  .50                     lodsb                                                   ;character
  2276                                                          test    al,al                                           ;end of value?
  2277                                                          jz      .60                                             ;yes, branch
  2278                                                          stosw                                                   ;store character and color
  2279                                                          loop    .50                                             ;next character
  2280                                  .60                     xchg    ebx,esi                                         ;swap panel and field addr
  2281                                                          jmp     short .30                                       ;next field
  2282                                  ;
  2283                                  ;       Place the cursor if we have an input field
  2284                                  ;
  2285                                  .70                     mov     ah,[wbConsoleRow]                               ;field row
  2286                                                          mov     al,[wbConsoleColumn]                            ;field column
  2287                                                          or      al,ah                                           ;input field?
  2288                                                          jz      .80                                             ;no, branch
  2289                                                          placeCursor                                             ;position the cursor
  2290                                  ;
  2291                                  ;       Enter halt loop
  2292                                  ;
  2293                                  .80                     sti                                                     ;enable interrupts
  2294                                                          hlt                                                     ;halt until interrupt
  2295                                                          jmp     .80                                             ;continue halt loop
