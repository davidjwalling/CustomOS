  1968                                                          cmp     al,maxtsvc                                      ;is our function out of range?
  1969                                                          jae     svc90                                           ;yes, skip ahead
  1970                                                          movzx   eax,al                                          ;function
  1971                                                          shl     eax,2                                           ;offset into table
  1972                                                          call    dword [cs:tsvc+eax]                             ;far call to indirect address
  1973                                  svc90                   iretd                                                   ;return from interrupt
