  3652                                  .10                     call    SetConsoleChar                                  ;display ASCII character
  3653                                                          mov     al,bl                                           ;byte value
  3654                                                          and     al,0fh                                          ;lo-order nybble
  3655                                                          or      al,30h                                          ;apply ASCII zone
  3656                                                          cmp     al,03ah                                         ;numeric?
  3657                                                          jb      .20                                             ;yes, skip ahead
