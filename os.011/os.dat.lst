  3874                                  ;
  3875                                  ;       Routine:        DecimalToUnsigned
  3876                                  ;
  3877                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ decimal string.
  3878                                  ;
  3879                                  ;       Input:          DS:EDX  null-terminated decimal string address
  3880                                  ;
  3881                                  ;       Output:         EAX     unsigned integer value
  3882                                  ;
  3883                                  ;-----------------------------------------------------------------------------------------------------------------------
  3884                                  DecimalToUnsigned       push    esi                                             ;save non-volatile regs
  3885                                                          mov     esi,edx                                         ;source address
  3886                                                          xor     edx,edx                                         ;zero total
  3887                                  .10                     lodsb                                                   ;source byte
  3888                                                          cmp     al,','                                          ;comma?
  3889                                                          je      .10                                             ;yes, ignore
  3890                                                          test    al,al                                           ;end of string?
  3891                                                          jz      .30                                             ;yes, done
  3892                                                          cmp     al,'.'                                          ;decimal point?
  3893                                                          je      .30                                             ;yes, done
  3894                                                          cmp     al,'0'                                          ;numeral?
  3895                                                          jb      .20                                             ;no, invalid string
  3896                                                          cmp     al,'9'                                          ;numeral?
  3897                                                          ja      .20                                             ;no, invalid string
  3898                                                          and     al,00Fh                                         ;mask ASCII zone
  3899                                                          push    eax                                             ;save numeral
  3900                                                          shl     edx,1                                           ;total * 2
  3901                                                          mov     eax,edx                                         ;total * 2
  3902                                                          shl     edx,2                                           ;total * 8
  3903                                                          add     edx,eax                                         ;total * 10
  3904                                                          pop     eax                                             ;restore numeral
  3905                                                          add     edx,eax                                         ;accumulate decimal digit
  3906                                                          xor     eax,eax                                         ;zero register
  3907                                                          jmp     .10                                             ;next
  3908                                  .20                     xor     edx,edx                                         ;zero result on error
  3909                                  .30                     mov     eax,edx                                         ;result
  3910                                                          pop     esi                                             ;restore non-volatile regs
  3911                                                          ret                                                     ;return
  3912                                  ;-----------------------------------------------------------------------------------------------------------------------
  3913                                  ;
  3914                                  ;       Routine:        HexadecimalToUnsigned
  3915                                  ;
  3916                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ hexadecimal string.
  3917                                  ;
  3918                                  ;       Input:          DS:EDX  null-terminated hexadecimal string address
  3919                                  ;
  3920                                  ;       Output:         EAX     unsigned integer value
  3921                                  ;
  3922                                  ;-----------------------------------------------------------------------------------------------------------------------
  3923                                  HexadecimalToUnsigned   push    esi                                             ;save non-volatile regs
  3924                                                          mov     esi,edx                                         ;source address
  3925                                                          xor     edx,edx                                         ;zero register
  3926                                  .10                     lodsb                                                   ;source byte
  3927                                                          test    al,al                                           ;end of string?
  3928                                                          jz      .30                                             ;yes, branch
  3929                                                          cmp     al,'9'                                          ;hexadecimal?
  3930                                                          jna     .20                                             ;no, skip ahead
  3931                                                          sub     al,37h                                          ;'A' = 41h, less 37h = 0Ah
  3932                                  .20                     and     eax,0fh                                         ;remove ascii zone
  3933                                                          shl     edx,4                                           ;previous total x 16
  3934                                                          add     edx,eax                                         ;add prior value x 16
  3935                                                          jmp     .10                                             ;next
  3936                                  .30                     mov     eax,edx                                         ;result
  3937                                                          pop     esi                                             ;restore non-volatile regs
  3938                                                          ret                                                     ;return
