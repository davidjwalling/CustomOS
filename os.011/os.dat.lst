  4429                                  ;
  4430                                  ;       Console Task
  4431                                  ;
  4432                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  4433                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  4434                                  ;       screen and responds to user commands.
  4435                                  ;
  4436                                  ;=======================================================================================================================
  4437                                  ;-----------------------------------------------------------------------------------------------------------------------
  4438                                  ;
  4439                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  4440                                  ;
  4441                                  ;       This is the stack for the console task. It supports 448 nested calls.
  4442                                  ;
  4443                                  ;-----------------------------------------------------------------------------------------------------------------------
  4444                                  section                 constack                                                ;console task stack
  4445                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  4446                                  ;-----------------------------------------------------------------------------------------------------------------------
  4447                                  ;
  4448                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  4449                                  ;
  4450                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  4451                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  4452                                  ;       16 descriptors. Six are initially defined.
  4453                                  ;
  4454                                  ;-----------------------------------------------------------------------------------------------------------------------
  4455                                  section                 conldt                                                  ;console local descriptors
  4456                                                          dq      004093004780007Fh                               ;04 TSS alias
  4457                                                          dq      004093004700007Fh                               ;0c LDT alias
  4458                                                          dq      00409300400006FFh                               ;14 stack
  4459                                                          dq      00CF93000000FFFFh                               ;1c data
  4460                                                          dq      00409B0050000FFFh                               ;24 code
  4461                                                          dq      00409300480007FFh                               ;2c message queue
  4462                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  4463                                  ;-----------------------------------------------------------------------------------------------------------------------
  4464                                  ;
  4465                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  4466                                  ;
  4467                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  4468                                  ;       segment. CS to console code.
  4469                                  ;
  4470                                  ;-----------------------------------------------------------------------------------------------------------------------
  4471                                  section                 contss                                                  ;console task state segment
  4472                                                          dd      0                                               ;00 back-link tss
  4473                                                          dd      0700h                                           ;04 esp ring 0
  4474                                                          dd      0014h                                           ;08 ss ring 0
  4475                                                          dd      0700h                                           ;0c esp ring 1
  4476                                                          dd      0014h                                           ;10 es ring 1
  4477                                                          dd      0700h                                           ;14 esp ring 2
  4478                                                          dd      0014h                                           ;18 ss ring 2
  4479                                                          dd      0                                               ;1c cr ring 3
  4480                                                          dd      0                                               ;20 eip
  4481                                                          dd      0200h                                           ;24 eflags
  4482                                                          dd      0                                               ;28 eax
  4483                                                          dd      0                                               ;2c ecx
  4484                                                          dd      0                                               ;30 edx
  4485                                                          dd      0                                               ;34 ebx
  4486                                                          dd      0700h                                           ;38 esp ring 3
  4487                                                          dd      0                                               ;3c ebp
  4488                                                          dd      0                                               ;40 esi
  4489                                                          dd      0                                               ;44 edi
  4490                                                          dd      001Ch                                           ;48 es
  4491                                                          dd      0024h                                           ;4c cs
  4492                                                          dd      0014h                                           ;50 ss ring 3
  4493                                                          dd      001Ch                                           ;54 ds
  4494                                                          dd      0                                               ;58 fs
  4495                                                          dd      0                                               ;5c gs
  4496                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  4497                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  4498                                  ;-----------------------------------------------------------------------------------------------------------------------
  4499                                  ;
  4500                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  4501                                  ;
  4502                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  4503                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  4504                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  4505                                  ;       event.
  4506                                  ;
  4507                                  ;-----------------------------------------------------------------------------------------------------------------------
  4508                                  section                 conmque                                                 ;console message queue
  4509                                                          dd      8                                               ;head pointer
  4510                                                          dd      8                                               ;tail pointer
  4511                                                          times   510 dd 0                                        ;queue elements
  4512                                  ;-----------------------------------------------------------------------------------------------------------------------
  4513                                  ;
  4514                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  4515                                  ;
  4516                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  4517                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  4518                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  4519                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  4520                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  4521                                  ;       board input, echoing to the console screen and responding to user commands.
  4522                                  ;
  4523                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  4524                                  ;
  4525                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  4526                                  ;                               |  Real Mode Interrupt Vectors                  |
  4527                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  4528                                  ;                               |  Reserved BIOS Memory Area                    |
  4529                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  4530                                  ;                               |  Shared Kernel Memory Area                    |
  4531                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  4532                                  ;                               |  Global Descriptor Table (GDT)                |
  4533                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  4534                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  4535                                  ;                       002000  +-----------------------------------------------+
  4536                                  ;                               |  Interrupt Handlers                           |
  4537                                  ;                               |  Kernel Function Library                      |
  4538                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  4539                                  ;                               |  Console Task Stack Area                      |
  4540                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  4541                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  4542                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  4543                                  ;                               |  Console Task Task State Segment (TSS)        |
  4544                                  ;                       004800  +-----------------------------------------------+
  4545                                  ;                               |  Console Task Message Queue                   |
  4546                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  4547                                  ;                               |  Console Task Code                            |
  4548                                  ;                               |  Console Task Constants                       |
  4549                                  ;                       006000  +===============================================+
  4550                                  ;
  4551                                  ;-----------------------------------------------------------------------------------------------------------------------
  4552                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  4553                                  ConCode                 call    ConInitializeData                               ;initialize console variables
  4554                                  
  4555                                                          clearConsoleScreen                                      ;clear the console screen
  4556                                                          putConsoleString czTitle                                ;display startup message
  4557                                                          putConsoleString czROMMem                               ;ROM memory label
  4558                                                          putConsoleString wzROMMemSize                           ;ROM memory amount
  4559                                                          putConsoleString czKB                                   ;Kilobytes
  4560                                                          putConsoleString czNewLine                              ;new line
  4561                                                          putConsoleString czBaseMem                              ;base memory label
  4562                                                          putConsoleString wzBaseMemSize                          ;base memory size
  4563                                                          putConsoleString czKB                                   ;Kilobytes
  4564                                                          putConsoleString czNewLine                              ;new line
  4565                                                          putConsoleString czExtendedMem                          ;extended memory label
  4566                                                          putConsoleString wzExtendedMemSize                      ;extended memory size
  4567                                                          putConsoleString czKB                                   ;Kilobytes
  4568                                                          putConsoleString czNewLine                              ;new line
  4569                                  .10                     putConsoleString czPrompt                               ;display input prompt
  4570                                                          placeCursor                                             ;set CRT cursor location
  4571                                                          getConsoleString wzConsoleInBuffer,79,1,13              ;accept keyboard input
  4572                                                          putConsoleString czNewLine                              ;newline
  4573                                  
  4574                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer
  4575                                                          mov     ebx,wzConsoleToken                              ;token buffer
