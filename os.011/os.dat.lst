  4920                                  
  4921                                                          unsignedToHexadecimal                                   ;convert unsigned address to hex string
  4922                                  
  4923                                                          add     edi,8                                           ;end of memory addr hexnum
  4924                                                          mov     al,' '                                          ;ascii space
  4925                                                          stosb                                                   ;store delimiter
  4926                                  ;
  4927                                  ;       Output 16 ASCII hexadecimal byte values for the row.
  4928                                  ;
  4929                                                          xor     ecx,ecx                                         ;zero register
  4930                                                          mov     cl,16                                           ;loop count
  4931                                  .30                     push    ecx                                             ;save loop count
  4932                                                          lodsb                                                   ;memory byte
  4933                                                          mov     ah,al                                           ;memory byte
  4934                                                          shr     al,4                                            ;high-order in bits 3-0
  4935                                                          or      al,30h                                          ;apply ascii numeric zone
  4936                                                          cmp     al,3ah                                          ;numeric range?
  4937                                                          jb      .40                                             ;yes, skip ahead
  4938                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  4939                                  .40                     stosb                                                   ;store ascii hexadecimal of high-order
  4940                                                          mov     al,ah                                           ;low-order in bits 3-0
  4941                                                          and     al,0fh                                          ;mask out high-order bits
  4942                                                          or      al,30h                                          ;apply ascii numeric zone
  4943                                                          cmp     al,3ah                                          ;numeric range?
  4944                                                          jb      .50                                             ;yes, skip ahead
  4945                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  4946                                  .50                     stosb                                                   ;store ascii hexadecimal of low-order
  4947                                                          mov     al,' '                                          ;ascii space
  4948                                                          stosb                                                   ;store ascii space delimiter
  4949                                                          pop     ecx                                             ;loop count
  4950                                                          loop    .30                                             ;next
  4951                                  ;
  4952                                  ;       Output printable ASCII character section for the row.
  4953                                  ;
  4954                                                          sub     esi,16                                          ;reset source pointer
  4955                                                          mov     cl,16                                           ;loop count
  4956                                  .60                     lodsb                                                   ;source byte
  4957                                                          cmp     al,32                                           ;printable? (low-range test)
  4958                                                          jb      .70                                             ;no, skip ahead
  4959                                                          cmp     al,128                                          ;printable? (high-range test)
  4960                                                          jb      .80                                             ;yes, skip ahead
  4961                                  .70                     mov     al,' '                                          ;display space instead of printable
  4962                                  .80                     stosb                                                   ;store printable ascii byte
  4963                                                          loop    .60                                             ;next source byte
  4964                                                          xor     al,al                                           ;nul-terminator
  4965                                                          stosb                                                   ;terminate output line
