  2350                                  ;
  2351                                  ;       Hardware Device Interupts
  2352                                  ;
  2353                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  2354                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  2355                                  ;       (BX=2028h).
  2356                                  ;
  2357                                  ;=======================================================================================================================
  2358                                  ;-----------------------------------------------------------------------------------------------------------------------
  2359                                  ;
  2360                                  ;       IRQ0    Clock Tick Interrupt
  2361                                  ;
  2362                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  2363                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  2364                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  2365                                  ;
  2366                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  2367                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  2368                                  ;
  2369                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  2370                                  ;       zero, the floppy disk motors are turned off.
  2371                                  ;
  2372                                  ;-----------------------------------------------------------------------------------------------------------------------
  2373                                                          menter  clocktick                                       ;clock tick interrupt
  2374                                                          push    eax                                             ;save non-volatile regs
  2375                                                          push    edx                                             ;
  2376                                                          push    ds                                              ;
  2377                                  ;
  2378                                  ;       Update the clock tick count and the elapsed days as needed.
  2379                                  ;
  2380                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2381                                                          pop     ds                                              ;... into data segment register
  2382                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  2383                                                          inc     eax                                             ;increment clock ticks
  2384                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  2385                                                          jb      irq0.10                                         ;no, skip ahead
  2386                                                          inc     byte [wbClockDays]                              ;increment clock days
  2387                                                          xor     eax,eax                                         ;reset clock ticks
  2388                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  2389                                  ;
  2390                                  ;       Decrement floppy disk motor timeout.
  2391                                  ;
  2392                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  2393                                                          je      irq0.20                                         ;yes, skip ahead
  2394                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  2395                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  2396                                  ;
  2397                                  ;       Turn off the floppy disk motor if appropriate.
  2398                                  ;
  2399                                                          sti                                                     ;enable maskable interrupts
  2400                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  2401                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  2402                                                          in      al,dx                                           ;FDC main status byte
  2403                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  2404                                                          jnz     irq0.15                                         ;wait while busy
  2405                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  2406                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  2407                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  2408                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  2409                                                          out     dx,al                                           ;turn motor off
  2410                                  ;
  2411                                  ;       Signal the end of the hardware interrupt.
  2412                                  ;
  2413                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  2414                                  ;
  2415                                  ;       Restore and return.
  2416                                  ;
  2417                                                          pop     ds                                              ;restore modified regs
  2418                                                          pop     edx                                             ;
  2419                                                          pop     eax                                             ;
  2420                                                          iretd                                                   ;return
