  4578                                                          call    ConDetermineCommand                             ;determine command number
  4579                                                          cmp     eax,ECONJMPTBLCNT                               ;valid command number?
  4580                                                          jb      .20                                             ;yes, branch
  4581                                  
  4582                                                          putConsoleString czUnknownCommand                       ;display error message
  4583                                  
  4584                                                          jmp     .10                                             ;next command
  4585                                  .20                     shl     eax,2                                           ;index into jump table
  4586                                                          mov     edx,tConJmpTbl                                  ;jump table base address
  4587                                                          mov     eax,[edx+eax]                                   ;command handler routine address
  4588                                                          call    eax                                             ;call command handler
  4589                                                          jmp     .10                                             ;next command
