  2903                                  ;
  2904                                  ;       Routine:        AllocateMemory
  2905                                  ;
  2906                                  ;       Description:    This routine allocates a memory block for the given task.
  2907                                  ;
  2908                                  ;       In:             ECX     bytes of memory to allocate
  2909                                  ;
  2910                                  ;       Out:            EAX     !0      address of user portion of newly allocated memory block
  2911                                  ;                               0       unable to allocate memory
  2912                                  ;
  2913                                  ;-----------------------------------------------------------------------------------------------------------------------
  2914                                  AllocateMemory          push    ebx                                             ;save non-volatile regs
  2915                                                          push    ecx                                             ;
  2916                                                          push    esi                                             ;
  2917                                                          push    ds                                              ;
  2918                                  ;
  2919                                  ;       Address kernel memory structures
  2920                                  ;
  2921                                                          push    EGDTOSDATA                                      ;load OS data GDT selector ...
  2922                                                          pop     ds                                              ;... into data segment reg
  2923                                                          mov     esi,wsConsoleMemRoot                            ;memory root structure address
  2924                                  ;
  2925                                  ;       Set requested size to minimum block size if requested size is too small.
  2926                                  ;
  2927                                                          cmp     ecx,EMEMMINSIZE                                 ;is requested size too small?
  2928                                                          jae     .10                                             ;no, branch
  2929                                                          mov     ecx,EMEMMINSIZE                                 ;set requested size to minimum
  2930                                  .10                     add     ecx,EMEMBLOCKLEN                                ;add header block length
  2931                                  ;
  2932                                  ;       Find the first free memory block large enough to satisfy the request.
  2933                                  ;
  2934                                                          mov     eax,[esi+MEMROOT.firstfree]                     ;first free block ptr
  2935                                  .20                     test    eax,eax                                         ;end of free block chain?
  2936                                                          jz      .220                                            ;yes, branch
  2937                                                          cmp     ecx,[eax+MEMBLOCK.bytes]                        ;free block big enough?
  2938                                                          jbe     .30                                             ;yes, branch
  2939                                                          mov     eax,[eax+MEMBLOCK.nextblock]                    ;next free block addr
  2940                                                          jmp     .20                                             ;continue
  2941                                  ;-----------------------------------------------------------------------------------------------------------------------
