  3940                                  ;
  3941                                  ;       Routine:        UnsignedToDecimalString
  3942                                  ;
  3943                                  ;       Description:    This routine creates an ASCIIZ string representing the decimal value of 32-bit binary input.
  3944                                  ;
  3945                                  ;       Input:          BH      flags           bit 0: 1 = trim leading zeros
  3946                                  ;                                               bit 1: 1 = include comma grouping delimiters
  3947                                  ;                                               bit 4: 1 = non-zero digit found (internal)
  3948                                  ;                       ECX     32-bit binary
  3949                                  ;                       DS:EDX  output buffer address
  3950                                  ;
  3951                                  ;-----------------------------------------------------------------------------------------------------------------------
  3952                                  UnsignedToDecimalString push    ebx                                             ;save non-volatile regs
  3953                                                          push    ecx                                             ;
  3954                                                          push    edi                                             ;
  3955                                                          push    es                                              ;
  3956                                                          push    ds                                              ;load data selector
  3957                                                          pop     es                                              ;... into extra segment reg
  3958                                                          mov     edi,edx                                         ;output buffer address
  3959                                                          and     bh,00001111b                                    ;zero internal flags
  3960                                                          mov     edx,ecx                                         ;binary
  3961                                                          mov     ecx,1000000000                                  ;10^9 divisor
  3962                                                          call    .30                                             ;divide and store
  3963                                                          mov     ecx,100000000                                   ;10^8 divisor
  3964                                                          call    .10                                             ;divide and store
  3965                                                          mov     ecx,10000000                                    ;10^7 divisor
  3966                                                          call    .30                                             ;divide and store
  3967                                                          mov     ecx,1000000                                     ;10^6 divisor
  3968                                                          call    .30                                             ;divide and store
  3969                                                          mov     ecx,100000                                      ;10^5 divisor
  3970                                                          call    .10                                             ;divide and store
  3971                                                          mov     ecx,10000                                       ;10^4 divisor
  3972                                                          call    .30                                             ;divide and store
  3973                                                          mov     ecx,1000                                        ;10^3 divisor
  3974                                                          call    .30                                             ;divide and store
  3975                                                          mov     ecx,100                                         ;10^2 divisor
  3976                                                          call    .10                                             ;divide and store
  3977                                                          mov     ecx,10                                          ;10^2 divisor
  3978                                                          call    .30                                             ;divide and store
  3979                                                          mov     eax,edx                                         ;10^1 remainder
  3980                                                          call    .40                                             ;store
  3981                                                          xor     al,al                                           ;null terminator
  3982                                                          stosb
  3983                                                          pop     es                                              ;restore non-volatile regs
  3984                                                          pop     edi                                             ;
  3985                                                          pop     ecx                                             ;
  3986                                                          pop     ebx                                             ;
  3987                                                          ret                                                     ;return
  3988                                  .10                     test    bh,00000010b                                    ;comma group delims?
  3989                                                          jz      .30                                             ;no, branch
  3990                                                          test    bh,00000001b                                    ;trim leading zeros?
  3991                                                          jz      .20                                             ;no, store delim
  3992                                                          test    bh,00010000b                                    ;non-zero found?
  3993                                                          jz      .30                                             ;no, branch
  3994                                  .20                     mov     al,','                                          ;delimiter
  3995                                                          stosb                                                   ;store delimiter
  3996                                  .30                     mov     eax,edx                                         ;lo-orer dividend
  3997                                                          xor     edx,edx                                         ;zero hi-order
  3998                                                          div     ecx                                             ;divide by power of 10
  3999                                                          test    al,al                                           ;zero?
  4000                                                          jz      .50                                             ;yes, branch
  4001                                                          or      bh,00010000b                                    ;non-zero found
  4002                                  .40                     or      al,30h                                          ;ASCII zone
  4003                                                          stosb                                                   ;store digit
  4004                                                          ret                                                     ;return
  4005                                  .50                     test    bh,00000001b                                    ;trim leading zeros?
  4006                                                          jz      .40                                             ;no, store and continue
  4007                                                          test    bh,00010000b                                    ;non-zero found?
  4008                                                          jnz     .40                                             ;yes, store and continue
  4009                                                          ret                                                     ;return
