  4011                                  ;
  4012                                  ;       Routine:        UnsignedToHexadecimal
  4013                                  ;
  4014                                  ;       Description:    This routine creates an ASCIIZ string representing the hexadecimal value of binary input
  4015                                  ;
  4016                                  ;       Input:          DS:EDX  output buffer address
  4017                                  ;                       ECX     32-bit binary
  4018                                  ;
  4019                                  ;-----------------------------------------------------------------------------------------------------------------------
  4020                                  UnsignedToHexadecimal   push    edi                                             ;store non-volatile regs
  4021                                                          mov     edi,edx                                         ;output buffer address
  4022                                                          mov     edx,ecx                                         ;32-bit unsigned
  4023                                                          xor     ecx,ecx                                         ;zero register
  4024                                                          mov     cl,8                                            ;nybble count
  4025                                  .10                     rol     edx,4                                           ;next hi-order nybble in bits 0-3
  4026                                                          mov     al,dl                                           ;????bbbb
  4027                                                          and     al,0fh                                          ;mask out bits 4-7
  4028                                                          or      al,30h                                          ;mask in ascii zone
  4029                                                          cmp     al,3ah                                          ;A through F?
  4030                                                          jb      .20                                             ;no, skip ahead
  4031                                                          add     al,7                                            ;41h through 46h
  4032                                  .20                     stosb                                                   ;store hexnum
  4033                                                          loop    .10                                             ;next nybble
  4034                                                          xor     al,al                                           ;zero reg
  4035                                                          stosb                                                   ;null terminate
  4036                                                          pop     edi                                             ;restore non-volatile regs
  4037                                                          ret                                                     ;return
