  3491                                  ;
  3492                                  ;       Routine:        GetConsoleString
  3493                                  ;
  3494                                  ;       Description:    This routine accepts keyboard input into a buffer.
  3495                                  ;
  3496                                  ;       In:             DS:EDX  target buffer address
  3497                                  ;                       ECX     maximum number of characters to accept
  3498                                  ;                       BH      echo to terminal
  3499                                  ;                       BL      terminating character
  3500                                  ;
  3501                                  ;-----------------------------------------------------------------------------------------------------------------------
  3502                                  GetConsoleString        push    ecx                                             ;save non-volatile regs
  3503                                                          push    esi                                             ;
  3504                                                          push    edi                                             ;
  3505                                                          push    es                                              ;
  3506                                                          push    ds                                              ;load data segment selector ...
  3507                                                          pop     es                                              ;... into extra segment register
  3508                                                          mov     edi,edx                                         ;edi = target buffer
  3509                                                          push    ecx                                             ;save maximum characters
  3510                                                          xor     al,al                                           ;zero register
  3511                                                          cld                                                     ;forward strings
  3512                                                          rep     stosb                                           ;zero fill buffer
  3513                                                          pop     ecx                                             ;maximum characters
  3514                                                          mov     edi,edx                                         ;edi = target buffer
  3515                                                          mov     esi,edx                                         ;esi = target buffer
  3516                                  .10                     jecxz   .50                                             ;exit if max-length is zero
  3517                                  .20                     call    GetConsoleChar                                  ;al = next input char
  3518                                                          cmp     al,bl                                           ;is this the terminator?
  3519                                                          je      .50                                             ;yes, exit
  3520                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  3521                                                          jne     .30                                             ;no, skip ahead
  3522                                                          cmp     esi,edi                                         ;at start of buffer?
  3523                                                          je      .20                                             ;yes, get next character
  3524                                                          dec     edi                                             ;backup target pointer
  3525                                                          mov     byte [edi],0                                    ;zero previous character
  3526                                                          inc     ecx                                             ;increment remaining chars
  3527                                                          test    bh,1                                            ;echo to console?
  3528                                                          jz      .20                                             ;no, get next character
  3529                                                          call    PreviousConsoleColumn                           ;backup console position
  3530                                                          mov     al,EASCIISPACE                                  ;ASCII space
  3531                                                          call    PutConsoleChar                                  ;write space to console
  3532                                                          call    PlaceCursor                                     ;position the cursor
  3533                                                          jmp     .20                                             ;get next character
  3534                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  3535                                                          jb      .20                                             ;no, get another character
  3536                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  3537                                                          ja      .20                                             ;no, get another character
  3538                                                          stosb                                                   ;store character in buffer
  3539                                                          test    bh,1                                            ;echo to console?
  3540                                                          jz      .40                                             ;no, skip ahead
  3541                                                          call    PutConsoleChar                                  ;write character to console
  3542                                                          call    NextConsoleColumn                               ;advance console position
  3543                                                          call    PlaceCursor                                     ;position the cursor
  3544                                  .40                     dec     ecx                                             ;decrement remaining chars
  3545                                                          jmp     .10                                             ;next
  3546                                  .50                     xor     al,al                                           ;null
  3547                                                          stosb                                                   ;terminate buffer
  3548                                                          pop     es                                              ;restore non-volatile regs
  3549                                                          pop     edi                                             ;
  3550                                                          pop     esi                                             ;
  3551                                                          pop     ecx                                             ;
  3552                                                          ret                                                     ;return
