  3412                                  ;
  3413                                  ;       Routine:        UpperCaseString
  3414                                  ;
  3415                                  ;       Description:    This routine places all characters in the given string to upper case.
  3416                                  ;
  3417                                  ;       In:             DS:EDX  string address
  3418                                  ;
  3419                                  ;       Out:            EDX     string address
  3420                                  ;
  3421                                  ;-----------------------------------------------------------------------------------------------------------------------
  3422                                  UpperCaseString         push    esi                                             ;save non-volatile regs
  3423                                                          mov     esi,edx                                         ;string address
  3424                                                          cld                                                     ;forward strings
  3425                                  .10                     lodsb                                                   ;string character
  3426                                                          test    al,al                                           ;null?
  3427                                                          jz      .20                                             ;yes, skip ahead
  3428                                                          cmp     al,EASCIILOWERA                                 ;lower-case? (lower bounds)
  3429                                                          jb      .10                                             ;no, continue
  3430                                                          cmp     al,EASCIILOWERZ                                 ;lower-case? (upper bounds)
  3431                                                          ja      .10                                             ;no, continue
  3432                                                          and     al,EASCIICASEMASK                               ;mask for upper case
  3433                                                          mov     [esi-1],al                                      ;upper character
  3434                                                          jmp     .10                                             ;continue
  3435                                  .20                     pop     esi                                             ;restore non-volatile regs
  3436                                                          ret                                                     ;return
