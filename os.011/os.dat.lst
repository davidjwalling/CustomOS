  3470                                  ;
  3471                                  ;       Routine:        GetConsoleChar
  3472                                  ;
  3473                                  ;       Description:    This routine waits for EMSGKEYCHAR message and return character code.
  3474                                  ;
  3475                                  ;       Out:            AL      ASCII character code
  3476                                  ;                       AH      keyboard scan code
  3477                                  ;
  3478                                  ;-----------------------------------------------------------------------------------------------------------------------
  3479                                  GetConsoleChar.10       call    Yield                                           ;pass control or halt
  3480                                  GetConsoleChar          call    GetMessage                                      ;get the next message
  3481                                                          or      eax,eax                                         ;do we have a message?
  3482                                                          jz      GetConsoleChar.10                               ;no, skip ahead
  3483                                                          push    eax                                             ;save key codes
  3484                                                          and     eax,0FFFF0000h                                  ;mask for message type
  3485                                                          cmp     eax,EMSGKEYCHAR                                 ;key-char message?
  3486                                                          pop     eax                                             ;restore key codes
