  4682                                                          push    edi                                             ;
  4683                                                          push    es                                              ;
  4684                                                          push    ds                                              ;load data segment selector ...
  4685                                                          pop     es                                              ;... into extra segment reg
  4686                                                          mov     esi,edx                                         ;source buffer address
  4687                                                          mov     edi,ebx                                         ;target buffer address
  4688                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  4689                                                          cld                                                     ;forward strings
  4690                                  .10                     lodsb                                                   ;load byte
  4691                                                          cmp     al,EASCIISPACE                                  ;space?
  4692                                                          je      .10                                             ;yes, continue
  4693                                                          test    al,al                                           ;end of line?
  4694                                                          jz      .40                                             ;yes, branch
  4695                                  .20                     stosb                                                   ;store byte
  4696                                                          lodsb                                                   ;load byte
  4697                                                          test    al,al                                           ;end of line?
  4698                                                          jz      .40                                             ;no, continue
  4699                                                          cmp     al,EASCIISPACE                                  ;space?
  4700                                                          jne     .20                                             ;no, continue
  4701                                  .30                     lodsb                                                   ;load byte
  4702                                                          cmp     al,EASCIISPACE                                  ;space?
  4703                                                          je      .30                                             ;yes, continue
  4704                                                          dec     esi                                             ;pre-position
  4705                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  4706                                                          mov     edi,edx                                         ;source buffer address
  4707                                  .50                     lodsb                                                   ;remaining byte
  4708                                                          stosb                                                   ;move to front of buffer
  4709                                                          test    al,al                                           ;end of line?
  4710                                                          jnz     .50                                             ;no, continue
  4711                                                          pop     es                                              ;restore non-volatile regs
  4712                                                          pop     edi                                             ;
  4713                                                          pop     esi                                             ;
  4714                                                          ret                                                     ;return
