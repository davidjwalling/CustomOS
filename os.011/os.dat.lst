  4127                                  ;       Routine:        ClearConsoleScreen
  4128                                  ;
  4129                                  ;       Description:    This routine clears the console (CGA) screen.
  4130                                  ;
  4131                                  ;-----------------------------------------------------------------------------------------------------------------------
  4132                                  ClearConsoleScreen      push    ecx                                             ;save non-volatile regs
  4133                                                          push    edi                                             ;
  4134                                                          push    ds                                              ;
  4135                                                          push    es                                              ;
  4136                                                          push    EGDTOSDATA                                      ;load OS Data selector ...
  4137                                                          pop     ds                                              ;... into DS register
  4138                                                          push    EGDTCGA                                         ;load CGA selector ...
  4139                                                          pop     es                                              ;... into ES register
  4140                                                          mov     eax,ECONCLEARDWORD                              ;initializtion value
  4141                                                          mov     ecx,ECONROWDWORDS*(ECONROWS)                    ;double-words to clear
  4142                                                          xor     edi,edi                                         ;target offset
  4143                                                          cld                                                     ;forward strings
  4144                                                          rep     stosd                                           ;reset screen body
  4145                                                          mov     eax,ECONOIADWORD                                ;OIA attribute and space
  4146                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  4147                                                          rep     stosd                                           ;reset OIA line
  4148                                                          xor     al,al                                           ;zero register
  4149                                                          mov     [wbConsoleRow],al                               ;reset console row
  4150                                                          mov     [wbConsoleColumn],al                            ;reset console column
  4151                                                          call    PlaceCursor                                     ;place cursor at current position
  4152                                                          pop     es                                              ;restore non-volatile regs
  4153                                                          pop     ds                                              ;
  4154                                                          pop     edi                                             ;
  4155                                                          pop     ecx                                             ;
  4156                                                          ret                                                     ;return
