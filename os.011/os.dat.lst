  2780                                                          cmp     al,maxtsvc                                      ;is our function out of range?
  2781                                                          jae     svc90                                           ;yes, skip ahead
  2782                                                          movzx   eax,al                                          ;function
  2783                                                          shl     eax,2                                           ;offset into table
  2784                                                          call    dword [cs:tsvc+eax]                             ;far call to indirect address
  2785                                  svc90                   iretd                                                   ;return from interrupt
