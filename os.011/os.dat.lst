  4158                                  ;
  4159                                  ;       Routine:        ScrollConsoleRow
  4160                                  ;
  4161                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  4162                                  ;
  4163                                  ;-----------------------------------------------------------------------------------------------------------------------
  4164                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  4165                                                          push    esi                                             ;
  4166                                                          push    edi                                             ;
  4167                                                          push    ds                                              ;
  4168                                                          push    es                                              ;
  4169                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4170                                                          pop     ds                                              ;... into DS
  4171                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4172                                                          pop     es                                              ;... into ES
  4173                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  4174                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  4175                                                          xor     edi,edi                                         ;EDI = target (line 1)
  4176                                                          cld                                                     ;forward strings
  4177                                                          rep     movsd                                           ;move 24 lines up
  4178                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  4179                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  4180                                                          rep     stosd                                           ;clear bottom row
  4181                                                          pop     es                                              ;restore non-volatile regs
  4182                                                          pop     ds                                              ;
  4183                                                          pop     edi                                             ;
  4184                                                          pop     esi                                             ;
  4185                                                          pop     ecx                                             ;
  4186                                                          ret                                                     ;return
