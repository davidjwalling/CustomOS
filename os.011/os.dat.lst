  4300                                  ;
  4301                                  ;       Routine:        PlaceCursor
  4302                                  ;
  4303                                  ;       Description:    This routine positions the cursor on the console.
  4304                                  ;
  4305                                  ;       In:             DS      OS data selector
  4306                                  ;
  4307                                  ;-----------------------------------------------------------------------------------------------------------------------
  4308                                  PlaceCursor             push    ecx                                             ;save non-volatile regs
  4309                                                          mov     al,[wbConsoleRow]                               ;AL = row
  4310                                                          mov     ah,ECONCOLS                                     ;AH = cols/row
  4311                                                          mul     ah                                              ;row offset
  4312                                                          add     al,[wbConsoleColumn]                            ;add column
  4313                                                          adc     ah,0                                            ;add overflow
  4314                                                          mov     ecx,eax                                         ;screen offset
  4315                                                          mov     dl,ECRTPORTLO                                   ;crt controller port lo
  4316                                                          mov     dh,ECRTPORTHI                                   ;crt controller port hi
  4317                                                          mov     al,ECRTCURLOCHI                                 ;crt cursor loc reg hi
  4318                                                          out     dx,al                                           ;select register
  4319                                                          inc     edx                                             ;data port
