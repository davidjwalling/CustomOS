  4047                                  ;
  4048                                  ;       Routine:        GetMessage
  4049                                  ;
  4050                                  ;       Description:    This routine reads and removes a message from the message queue.
  4051                                  ;
  4052                                  ;       Out:            EAX     lo-order message data
  4053                                  ;                       EDX     hi-order message data
  4054                                  ;
  4055                                  ;                       CY      0 = message read
  4056                                  ;                               1 = no message to read
  4057                                  ;
  4058                                  ;-----------------------------------------------------------------------------------------------------------------------
  4059                                  GetMessage              push    ebx                                             ;save non-volatile regs
  4060                                                          push    ecx                                             ;
  4061                                                          push    ds                                              ;
  4062                                                          push    ELDTMQ                                          ;load message queue selector ...
  4063                                                          pop     ds                                              ;... into data segment register
  4064                                                          mov     ebx,[MQHead]                                    ;head ptr
  4065                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  4066                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  4067                                                          or      eax,edx                                         ;is queue empty?
  4068                                                          stc                                                     ;assume queue is emtpy
  4069                                                          jz      .20                                             ;yes, skip ahead
  4070                                                          xor     ecx,ecx                                         ;store zero
  4071                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  4072                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  4073                                                          add     ebx,8                                           ;next queue element
  4074                                                          and     ebx,03fch                                       ;at end of queue?
  4075                                                          jnz     .10                                             ;no, skip ahead
  4076                                                          mov     bl,8                                            ;reset to 1st entry
  4077                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  4078                                                          clc                                                     ;indicate message read
  4079                                  .20                     pop     ds                                              ;restore non-volatile regs
  4080                                                          pop     ecx                                             ;
  4081                                                          pop     ebx                                             ;
  4082                                                          ret                                                     ;return
  4083                                  ;-----------------------------------------------------------------------------------------------------------------------
  4084                                  ;
  4085                                  ;       Routine:        PutMessage
  4086                                  ;
  4087                                  ;       Description:    This routine adda a message to the message queue.
  4088                                  ;
  4089                                  ;       In:             ECX     hi-order data word
  4090                                  ;                       EDX     lo-order data word
  4091                                  ;
  4092                                  ;       Out:            CY      0 = success
  4093                                  ;                               1 = fail: queue is full
  4094                                  ;
  4095                                  ;-----------------------------------------------------------------------------------------------------------------------
  4096                                  PutMessage              push    ds                                              ;save non-volatile regs
  4097                                                          push    ELDTMQ                                          ;load task message queue selector ...
  4098                                                          pop     ds                                              ;... into data segment register
  4099                                                          mov     eax,[MQTail]                                    ;tail ptr
  4100                                                          cmp     dword [eax],0                                   ;is queue full?
  4101                                                          stc                                                     ;assume failure
  4102                                                          jne     .20                                             ;yes, cannot store
  4103                                                          mov     [eax],edx                                       ;store lo-order data
  4104                                                          mov     [eax+4],ecx                                     ;store hi-order data
  4105                                                          add     eax,8                                           ;next queue element adr
  4106                                                          and     eax,03fch                                       ;at end of queue?
  4107                                                          jnz     .10                                             ;no, skip ahead
  4108                                                          mov     al,8                                            ;reset to top of queue
  4109                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  4110                                                          clc                                                     ;indicate success
  4111                                  .20                     pop     ds                                              ;restore non-volatile regs
  4112                                                          ret                                                     ;return
