  3554                                  ;
  3555                                  ;       Routine:        NextConsoleColumn
  3556                                  ;
  3557                                  ;       Description:    This routine advances the console position one column. The columnn is reset to zero and the row
  3558                                  ;                       incremented if the end of the current row is reached.
  3559                                  ;
  3560                                  ;       In:             DS      OS data selector
  3561                                  ;
  3562                                  ;-----------------------------------------------------------------------------------------------------------------------
  3563                                  NextConsoleColumn       mov     al,[wbConsoleColumn]                            ;current column
  3564                                                          inc     al                                              ;increment column
  3565                                                          mov     [wbConsoleColumn],al                            ;save column
  3566                                                          cmp     al,ECONCOLS                                     ;end of row?
  3567                                                          jb      .10                                             ;no, skip ahead
  3568                                                          call    FirstConsoleColumn                              ;reset column to start of row
  3569                                                          call    NextConsoleRow                                  ;line feed to next row
  3570                                  .10                     ret                                                     ;return
  3571                                  ;-----------------------------------------------------------------------------------------------------------------------
  3572                                  ;
  3573                                  ;       Routine:        NextConsoleRow
  3574                                  ;
  3575                                  ;       Description:    This routine advances the console position one line. Scroll the screen one row if needed.
  3576                                  ;
  3577                                  ;       In:             DS      OS data selector
  3578                                  ;
  3579                                  ;-----------------------------------------------------------------------------------------------------------------------
  3580                                  NextConsoleRow          mov     al,[wbConsoleRow]                               ;current row
  3581                                                          inc     al                                              ;increment row
  3582                                                          mov     [wbConsoleRow],al                               ;save row
  3583                                                          cmp     al,ECONROWS                                     ;end of screen?
  3584                                                          jb      .10                                             ;no, skip ahead
  3585                                                          call    ScrollConsoleRow                                ;scroll up one row
  3586                                                          mov     al,[wbConsoleRow]                               ;row
  3587                                                          dec     al                                              ;decrement row
  3588                                                          mov     [wbConsoleRow],al                               ;save row
  3589                                  .10                     ret                                                     ;return
  3590                                  ;-----------------------------------------------------------------------------------------------------------------------
  3591                                  ;
  3592                                  ;       Routine:        PreviousConsoleColumn
  3593                                  ;
  3594                                  ;       Description:    This routine retreats the cursor one logical column. If the cursor was at the start of a row,
  3595                                  ;                       the column is set to the last position in the row and the row is decremented.
  3596                                  ;
  3597                                  ;       In:             DS      OS data selector
  3598                                  ;
  3599                                  ;-----------------------------------------------------------------------------------------------------------------------
  3600                                  PreviousConsoleColumn   mov     al,[wbConsoleColumn]                            ;current column
  3601                                                          or      al,al                                           ;start of row?
  3602                                                          jnz     .10                                             ;no, skip ahead
  3603                                                          mov     ah,[wbConsoleRow]                               ;current row
  3604                                                          or      ah,ah                                           ;top of screen?
  3605                                                          jz      .20                                             ;yes, exit with no change
  3606                                                          dec     ah                                              ;decrement row
  3607                                                          mov     [wbConsoleRow],ah                               ;save row
  3608                                                          mov     al,ECONCOLS                                     ;set maximum column
  3609                                  .10                     dec     al                                              ;decrement column
  3610                                                          mov     [wbConsoleColumn],al                            ;save column
  3611                                  .20                     ret                                                     ;return
