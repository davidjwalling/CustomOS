  4188                                  ;
  4189                                  ;       Routine:        SetConsoleChar
  4190                                  ;
  4191                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  4192                                  ;
  4193                                  ;       In:             AL      ASCII character
  4194                                  ;                       CL      column
  4195                                  ;                       CH      row
  4196                                  ;                       ES      CGA selector
  4197                                  ;
  4198                                  ;       Out:            EAX     last target address written (ES:)
  4199                                  ;                       CL      column + 1
  4200                                  ;
  4201                                  ;-----------------------------------------------------------------------------------------------------------------------
  4202                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  4203                                                          movzx   eax,ch                                          ;row
  4204                                                          mov     ah,ECONCOLS                                     ;cols/row
  4205                                                          mul     ah                                              ;row * cols/row
  4206                                                          add     al,cl                                           ;add column
  4207                                                          adc     ah,0                                            ;handle carry
  4208                                                          shl     eax,1                                           ;screen offset
  4209                                                          mov     [es:eax],dl                                     ;store character
  4210                                                          inc     cl                                              ;next column
  4211                                                          ret                                                     ;return
