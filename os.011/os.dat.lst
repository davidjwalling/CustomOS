  4911                                                          xor     ecx,ecx                                         ;zero register
  4912                                                          mov     cl,16                                           ;row count
  4913                                  ;
  4914                                  ;       Start the row with the source address in hexadecimal.
  4915                                  ;
  4916                                  .20                     push    ecx                                             ;save remaining rows
  4917                                                          mov     edi,wzConsoleOutBuffer                          ;output buffer address
  4918                                                          mov     edx,edi                                         ;output buffer address
