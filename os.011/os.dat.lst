  3376                                  ;
  3377                                  ;       Routine:        CompareMemory
  3378                                  ;
  3379                                  ;       Description:    This routine compares two byte arrays.
  3380                                  ;
  3381                                  ;       In:             DS:EDX  first source address
  3382                                  ;                       DS:EBX  second source address
  3383                                  ;                       ECX     comparison length
  3384                                  ;
  3385                                  ;       Out:            EDX     first source address
  3386                                  ;                       EBX     second source address
  3387                                  ;                       ECX     0       array 1 = array 2
  3388                                  ;                               <0      array 1 < array 2
  3389                                  ;                               >0      array 1 > array 2
  3390                                  ;
  3391                                  ;-----------------------------------------------------------------------------------------------------------------------
  3392                                  CompareMemory           push    esi                                             ;save non-volatile regs
  3393                                                          push    edi                                             ;
  3394                                                          push    es                                              ;
  3395                                                          push    ds                                              ;copy DS
  3396                                                          pop     es                                              ;... to ES
  3397                                                          mov     esi,edx                                         ;first source address
  3398                                                          mov     edi,ebx                                         ;second source address
  3399                                                          cld                                                     ;forward strings
  3400                                                          rep     cmpsb                                           ;compare bytes
  3401                                                          mov     al,0                                            ;default result
  3402                                                          jz      .10                                             ;branch if arrays equal
  3403                                                          mov     al,1                                            ;positive result
  3404                                                          jnc     .10                                             ;branch if target > source
  3405                                                          mov     al,-1                                           ;negative result
  3406                                  .10                     movsx   ecx,al                                          ;extend sign
  3407                                                          pop     es                                              ;restore non-volatile regs
  3408                                                          pop     edi                                             ;
  3409                                                          pop     esi                                             ;
  3410                                                          ret                                                     ;return
