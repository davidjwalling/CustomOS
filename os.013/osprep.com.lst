  4094                                  .20                     call    GetConsoleChar                                  ;al = next input char
  4095                                                          cmp     al,bl                                           ;is this the terminator?
  4096                                                          je      .50                                             ;yes, exit
  4097                                                          cmp     al,EASCIIBACKSPACE                              ;is this a backspace?
  4098                                                          jne     .30                                             ;no, skip ahead
  4099                                                          cmp     esi,edi                                         ;at start of buffer?
  4100                                                          je      .20                                             ;yes, get next character
  4101                                                          dec     edi                                             ;backup target pointer
  4102                                                          mov     byte [edi],0                                    ;zero previous character
  4103                                                          inc     ecx                                             ;increment remaining chars
  4104                                                          test    bh,1                                            ;echo to console?
  4105                                                          jz      .20                                             ;no, get next character
  4106                                                          call    PreviousConsoleColumn                           ;backup console position
  4107                                                          mov     al,EASCIISPACE                                  ;ASCII space
  4108                                                          call    PutConsoleChar                                  ;write space to console
  4109                                                          call    PlaceCursor                                     ;position the cursor
  4110                                                          jmp     .20                                             ;get next character
  4111                                  .30                     cmp     al,EASCIISPACE                                  ;printable? (lower bounds)
  4112                                                          jb      .20                                             ;no, get another character
  4113                                                          cmp     al,EASCIITILDE                                  ;printable? (upper bounds)
  4114                                                          ja      .20                                             ;no, get another character
  4115                                                          stosb                                                   ;store character in buffer
  4116                                                          test    bh,1                                            ;echo to console?
  4117                                                          jz      .40                                             ;no, skip ahead
  4118                                                          call    PutConsoleChar                                  ;write character to console
  4119                                                          call    NextConsoleColumn                               ;advance console position
  4120                                                          call    PlaceCursor                                     ;position the cursor
  4121                                  .40                     dec     ecx                                             ;decrement remaining chars
  4122                                                          jmp     .10                                             ;next
  4123                                  .50                     xor     al,al                                           ;null
  4124                                                          stosb                                                   ;terminate buffer
  4125                                                          pop     es                                              ;restore non-volatile regs
  4126                                                          pop     edi                                             ;
  4127                                                          pop     esi                                             ;
  4128                                                          pop     ecx                                             ;
  4129                                                          ret                                                     ;return
