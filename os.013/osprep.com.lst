  4589                                  ;       Routine:        UnsignedToHexadecimal
  4590                                  ;
  4591                                  ;       Description:    This routine creates an ASCIIZ string representing the hexadecimal value of binary input
  4592                                  ;
  4593                                  ;       Input:          DS:EDX  output buffer address
  4594                                  ;                       ECX     32-bit binary
  4595                                  ;
  4596                                  ;-----------------------------------------------------------------------------------------------------------------------
  4597                                  UnsignedToHexadecimal   push    edi                                             ;store non-volatile regs
  4598                                                          mov     edi,edx                                         ;output buffer address
  4599                                                          mov     edx,ecx                                         ;32-bit unsigned
  4600                                                          xor     ecx,ecx                                         ;zero register
  4601                                                          mov     cl,8                                            ;nybble count
  4602                                  .10                     rol     edx,4                                           ;next hi-order nybble in bits 0-3
  4603                                                          mov     al,dl                                           ;????bbbb
  4604                                                          and     al,0fh                                          ;mask out bits 4-7
  4605                                                          or      al,30h                                          ;mask in ascii zone
  4606                                                          cmp     al,3ah                                          ;A through F?
  4607                                                          jb      .20                                             ;no, skip ahead
  4608                                                          add     al,7                                            ;41h through 46h
  4609                                  .20                     stosb                                                   ;store hexnum
  4610                                                          loop    .10                                             ;next nybble
  4611                                                          xor     al,al                                           ;zero reg
  4612                                                          stosb                                                   ;null terminate
  4613                                                          pop     edi                                             ;restore non-volatile regs
  4614                                                          ret                                                     ;return
