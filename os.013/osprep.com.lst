  3953                                  ;
  3954                                  ;       Routine:        CompareMemory
  3955                                  ;
  3956                                  ;       Description:    This routine compares two byte arrays.
  3957                                  ;
  3958                                  ;       In:             DS:EDX  first source address
  3959                                  ;                       DS:EBX  second source address
  3960                                  ;                       ECX     comparison length
  3961                                  ;
  3962                                  ;       Out:            EDX     first source address
  3963                                  ;                       EBX     second source address
  3964                                  ;                       ECX     0       array 1 = array 2
  3965                                  ;                               <0      array 1 < array 2
  3966                                  ;                               >0      array 1 > array 2
  3967                                  ;
  3968                                  ;-----------------------------------------------------------------------------------------------------------------------
  3969                                  CompareMemory           push    esi                                             ;save non-volatile regs
  3970                                                          push    edi                                             ;
  3971                                                          push    es                                              ;
  3972                                                          push    ds                                              ;copy DS
  3973                                                          pop     es                                              ;... to ES
  3974                                                          mov     esi,edx                                         ;first source address
  3975                                                          mov     edi,ebx                                         ;second source address
  3976                                                          cld                                                     ;forward strings
  3977                                                          rep     cmpsb                                           ;compare bytes
  3978                                                          mov     al,0                                            ;default result
  3979                                                          jz      .10                                             ;branch if arrays equal
  3980                                                          mov     al,1                                            ;positive result
  3981                                                          jnc     .10                                             ;branch if target > source
  3982                                                          mov     al,-1                                           ;negative result
  3983                                  .10                     movsx   ecx,al                                          ;extend sign
  3984                                                          pop     es                                              ;restore non-volatile regs
  3985                                                          pop     edi                                             ;
  3986                                                          pop     esi                                             ;
  3987                                                          ret                                                     ;return
