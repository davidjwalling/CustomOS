  4624                                  ;
  4625                                  ;       Routine:        GetMessage
  4626                                  ;
  4627                                  ;       Description:    This routine reads and removes a message from the message queue.
  4628                                  ;
  4629                                  ;       Out:            EAX     lo-order message data
  4630                                  ;                       EDX     hi-order message data
  4631                                  ;
  4632                                  ;                       CY      0 = message read
  4633                                  ;                               1 = no message to read
  4634                                  ;
  4635                                  ;-----------------------------------------------------------------------------------------------------------------------
  4636                                  GetMessage              push    ebx                                             ;save non-volatile regs
  4637                                                          push    ecx                                             ;
  4638                                                          push    ds                                              ;
  4639                                                          push    ELDTMQ                                          ;load message queue selector ...
  4640                                                          pop     ds                                              ;... into data segment register
  4641                                                          mov     ebx,[MQHead]                                    ;head ptr
  4642                                                          mov     eax,[ebx]                                       ;lo-order 32 bits
  4643                                                          mov     edx,[ebx+4]                                     ;hi-order 32 bits
  4644                                                          or      eax,edx                                         ;is queue empty?
  4645                                                          stc                                                     ;assume queue is emtpy
  4646                                                          jz      .20                                             ;yes, skip ahead
  4647                                                          xor     ecx,ecx                                         ;store zero
  4648                                                          mov     [ebx],ecx                                       ;... in lo-order dword
  4649                                                          mov     [ebx+4],ecx                                     ;... in hi-order dword
  4650                                                          add     ebx,8                                           ;next queue element
  4651                                                          and     ebx,03fch                                       ;at end of queue?
  4652                                                          jnz     .10                                             ;no, skip ahead
  4653                                                          mov     bl,8                                            ;reset to 1st entry
  4654                                  .10                     mov     [MQHead],ebx                                    ;save new head ptr
  4655                                                          clc                                                     ;indicate message read
  4656                                  .20                     pop     ds                                              ;restore non-volatile regs
  4657                                                          pop     ecx                                             ;
  4658                                                          pop     ebx                                             ;
  4659                                                          ret                                                     ;return
  4660                                  ;-----------------------------------------------------------------------------------------------------------------------
  4661                                  ;
  4662                                  ;       Routine:        PutMessage
  4663                                  ;
  4664                                  ;       Description:    This routine adda a message to the message queue.
  4665                                  ;
  4666                                  ;       In:             ECX     hi-order data word
  4667                                  ;                       EDX     lo-order data word
  4668                                  ;
  4669                                  ;       Out:            CY      0 = success
  4670                                  ;                               1 = fail: queue is full
  4671                                  ;
  4672                                  ;-----------------------------------------------------------------------------------------------------------------------
  4673                                  PutMessage              push    ds                                              ;save non-volatile regs
  4674                                                          push    ELDTMQ                                          ;load task message queue selector ...
  4675                                                          pop     ds                                              ;... into data segment register
  4676                                                          mov     eax,[MQTail]                                    ;tail ptr
  4677                                                          cmp     dword [eax],0                                   ;is queue full?
  4678                                                          stc                                                     ;assume failure
  4679                                                          jne     .20                                             ;yes, cannot store
  4680                                                          mov     [eax],edx                                       ;store lo-order data
  4681                                                          mov     [eax+4],ecx                                     ;store hi-order data
  4682                                                          add     eax,8                                           ;next queue element adr
  4683                                                          and     eax,03fch                                       ;at end of queue?
  4684                                                          jnz     .10                                             ;no, skip ahead
  4685                                                          mov     al,8                                            ;reset to top of queue
  4686                                  .10                     mov     [MQTail],eax                                    ;save new tail ptr
  4687                                                          clc                                                     ;indicate success
  4688                                  .20                     pop     ds                                              ;restore non-volatile regs
  4689                                                          ret                                                     ;return
