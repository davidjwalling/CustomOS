  5234                                                          mov     edx,tConJmpTbl                                  ;jump table base address
  5235                                                          mov     eax,[edx+eax]                                   ;command handler routine address
  5236                                                          call    eax                                             ;call command handler
  5237                                                          jmp     .10                                             ;next command
