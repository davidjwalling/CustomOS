  4451                                  ;
  4452                                  ;       Routine:        DecimalToUnsigned
  4453                                  ;
  4454                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ decimal string.
  4455                                  ;
  4456                                  ;       Input:          DS:EDX  null-terminated decimal string address
  4457                                  ;
  4458                                  ;       Output:         EAX     unsigned integer value
  4459                                  ;
  4460                                  ;-----------------------------------------------------------------------------------------------------------------------
  4461                                  DecimalToUnsigned       push    esi                                             ;save non-volatile regs
  4462                                                          mov     esi,edx                                         ;source address
  4463                                                          xor     edx,edx                                         ;zero total
  4464                                  .10                     lodsb                                                   ;source byte
  4465                                                          cmp     al,','                                          ;comma?
  4466                                                          je      .10                                             ;yes, ignore
  4467                                                          test    al,al                                           ;end of string?
  4468                                                          jz      .30                                             ;yes, done
  4469                                                          cmp     al,'.'                                          ;decimal point?
  4470                                                          je      .30                                             ;yes, done
  4471                                                          cmp     al,'0'                                          ;numeral?
  4472                                                          jb      .20                                             ;no, invalid string
  4473                                                          cmp     al,'9'                                          ;numeral?
  4474                                                          ja      .20                                             ;no, invalid string
  4475                                                          and     al,00Fh                                         ;mask ASCII zone
  4476                                                          push    eax                                             ;save numeral
  4477                                                          shl     edx,1                                           ;total * 2
  4478                                                          mov     eax,edx                                         ;total * 2
  4479                                                          shl     edx,2                                           ;total * 8
  4480                                                          add     edx,eax                                         ;total * 10
  4481                                                          pop     eax                                             ;restore numeral
  4482                                                          add     edx,eax                                         ;accumulate decimal digit
  4483                                                          xor     eax,eax                                         ;zero register
  4484                                                          jmp     .10                                             ;next
  4485                                  .20                     xor     edx,edx                                         ;zero result on error
  4486                                  .30                     mov     eax,edx                                         ;result
  4487                                                          pop     esi                                             ;restore non-volatile regs
  4488                                                          ret                                                     ;return
