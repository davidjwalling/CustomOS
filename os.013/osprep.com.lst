  5568                                  ;       Routine:        ConMem
  5569                                  ;
  5570                                  ;       Description:    This routine handles the MEMORY command and its MEM alias.
  5571                                  ;
  5572                                  ;       Input:          wzConsoleInBuffer contains parameter(s)
  5573                                  ;
  5574                                  ;-----------------------------------------------------------------------------------------------------------------------
  5575                                  ConMem                  push    ebx                                             ;save non-volatile regs
  5576                                                          push    esi                                             ;
  5577                                                          push    edi                                             ;
  5578                                  ;
  5579                                  ;       Update the source address if a parameter is given.
  5580                                  ;
  5581                                                          mov     edx,wzConsoleInBuffer                           ;console input buffer address (params)
  5582                                                          mov     ebx,wzConsoleToken                              ;console command token address
  5583                                                          call    ConTakeToken                                    ;take first param as token
  5584                                                          cmp     byte [wzConsoleToken],0                         ;token found?
  5585                                                          je      .10                                             ;no, branch
  5586                                                          mov     edx,wzConsoleToken                              ;first param as token address
  5587                                  
  5588                                                          hexadecimalToUnsigned                                   ;convert string token to unsigned
  5589                                  
  5590                                                          mov     [wdConsoleMemBase],eax                          ;save console memory address
  5591                                  ;
  5592                                  ;       Setup source address and row count.
  5593                                  ;
  5594                                  .10                     mov     esi,[wdConsoleMemBase]                          ;source memory address
  5595                                                          xor     ecx,ecx                                         ;zero register
  5596                                                          mov     cl,16                                           ;row count
  5597                                  ;
  5598                                  ;       Start the row with the source address in hexadecimal.
  5599                                  ;
  5600                                  .20                     push    ecx                                             ;save remaining rows
  5601                                                          mov     edi,wzConsoleOutBuffer                          ;output buffer address
  5602                                                          mov     edx,edi                                         ;output buffer address
  5603                                                          mov     ecx,esi                                         ;console memory address
  5604                                  
  5605                                                          unsignedToHexadecimal                                   ;convert unsigned address to hex string
  5606                                  
  5607                                                          add     edi,8                                           ;end of memory addr hexnum
  5608                                                          mov     al,' '                                          ;ascii space
  5609                                                          stosb                                                   ;store delimiter
  5610                                  ;
  5611                                  ;       Output 16 ASCII hexadecimal byte values for the row.
  5612                                  ;
  5613                                                          xor     ecx,ecx                                         ;zero register
  5614                                                          mov     cl,16                                           ;loop count
  5615                                  .30                     push    ecx                                             ;save loop count
  5616                                                          lodsb                                                   ;memory byte
  5617                                                          mov     ah,al                                           ;memory byte
  5618                                                          shr     al,4                                            ;high-order in bits 3-0
  5619                                                          or      al,30h                                          ;apply ascii numeric zone
  5620                                                          cmp     al,3ah                                          ;numeric range?
  5621                                                          jb      .40                                             ;yes, skip ahead
  5622                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  5623                                  .40                     stosb                                                   ;store ascii hexadecimal of high-order
  5624                                                          mov     al,ah                                           ;low-order in bits 3-0
  5625                                                          and     al,0fh                                          ;mask out high-order bits
  5626                                                          or      al,30h                                          ;apply ascii numeric zone
  5627                                                          cmp     al,3ah                                          ;numeric range?
  5628                                                          jb      .50                                             ;yes, skip ahead
  5629                                                          add     al,7                                            ;adjust ascii for 'A'-'F'
  5630                                  .50                     stosb                                                   ;store ascii hexadecimal of low-order
  5631                                                          mov     al,' '                                          ;ascii space
  5632                                                          stosb                                                   ;store ascii space delimiter
  5633                                                          pop     ecx                                             ;loop count
  5634                                                          loop    .30                                             ;next
  5635                                  ;
  5636                                  ;       Output printable ASCII character section for the row.
  5637                                  ;
  5638                                                          sub     esi,16                                          ;reset source pointer
  5639                                                          mov     cl,16                                           ;loop count
  5640                                  .60                     lodsb                                                   ;source byte
  5641                                                          cmp     al,32                                           ;printable? (low-range test)
  5642                                                          jb      .70                                             ;no, skip ahead
  5643                                                          cmp     al,128                                          ;printable? (high-range test)
  5644                                                          jb      .80                                             ;yes, skip ahead
  5645                                  .70                     mov     al,' '                                          ;display space instead of printable
  5646                                  .80                     stosb                                                   ;store printable ascii byte
  5647                                                          loop    .60                                             ;next source byte
  5648                                                          xor     al,al                                           ;nul-terminator
  5649                                                          stosb                                                   ;terminate output line
  5650                                  ;
  5651                                  ;       Display constructed output buffer and newline.
  5652                                  ;
  5653                                                          putConsoleString wzConsoleOutBuffer                     ;display constructed output
  5654                                                          putConsoleString czNewLine                              ;display new line
  5655                                  ;
  5656                                  ;       Repeat until all lines displayed and preserve source address.
  5657                                  ;
  5658                                                          pop     ecx                                             ;remaining rows
  5659                                                          loop    .20                                             ;next row
  5660                                                          mov     [wdConsoleMemBase],esi                          ;update console memory address
  5661                                                          pop     edi                                             ;restore regs
  5662                                                          pop     esi                                             ;
  5663                                                          pop     ebx                                             ;
  5664                                                          ret                                                     ;return
