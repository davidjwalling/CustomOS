  4736                                  ;       Routine:        ScrollConsoleRow
  4737                                  ;
  4738                                  ;       Description:    This routine scrolls the console (text) screen up one row.
  4739                                  ;
  4740                                  ;-----------------------------------------------------------------------------------------------------------------------
  4741                                  ScrollConsoleRow        push    ecx                                             ;save non-volatile regs
  4742                                                          push    esi                                             ;
  4743                                                          push    edi                                             ;
  4744                                                          push    ds                                              ;
  4745                                                          push    es                                              ;
  4746                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4747                                                          pop     ds                                              ;... into DS
  4748                                                          push    EGDTCGA                                         ;load CGA video selector ...
  4749                                                          pop     es                                              ;... into ES
  4750                                                          mov     ecx,ECONROWDWORDS*(ECONROWS-1)                  ;double-words to move
  4751                                                          mov     esi,ECONROWBYTES                                ;ESI = source (line 2)
  4752                                                          xor     edi,edi                                         ;EDI = target (line 1)
  4753                                                          cld                                                     ;forward strings
  4754                                                          rep     movsd                                           ;move 24 lines up
  4755                                                          mov     eax,ECONCLEARDWORD                              ;attribute and ASCII space
  4756                                                          mov     ecx,ECONROWDWORDS                               ;double-words per row
  4757                                                          rep     stosd                                           ;clear bottom row
  4758                                                          pop     es                                              ;restore non-volatile regs
  4759                                                          pop     ds                                              ;
  4760                                                          pop     edi                                             ;
