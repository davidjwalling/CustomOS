  5889                                  ;       Description:    This routine interprets the PCI vendor and device IDs.
  5890                                  ;
  5891                                  ;       In:             DS:EBX  PCI structure address
  5892                                  ;
  5893                                  ;-----------------------------------------------------------------------------------------------------------------------
  5894                                  ConInterpretPCIData     mov     eax,czApple
  5895                                                          cmp     word [ebx+PCI.configdata_lo],EPCIVENDORAPPLE    ;Apple?
  5896                                                          jne     .10                                             ;no, branch
  5897                                                          mov     edx,czUSBController
  5898                                                          cmp     word [ebx+PCI.configdata_hi],EPCIAPPLEUSB       ;USB?
  5899                                                          je      .40                                             ;yes, branch
  5900                                                          mov     edx,czOther                                     ;other
  5901                                                          jmp     .40                                             ;continue
  5902                                  .10                     mov     eax,czIntel                                     ;Intel
  5903                                                          cmp     word [ebx+PCI.configdata_lo],EPCIVENDORINTEL    ;Intel?
  5904                                                          jne     .20                                             ;no, branch
  5905                                                          mov     edx,czPro1000MT                                 ;Pro/1000 MT
  5906                                                          cmp     word [ebx+PCI.configdata_hi],EPCIINTELPRO1000MT ;Pro/1000 MT?
  5907                                                          je      .40                                             ;yes, branch
  5908                                                          mov     edx,czPCIAndMem                                 ;PCI and Memory
  5909                                                          cmp     word [ebx+PCI.configdata_hi],EPCIINTELPCIMEM    ;PCI and Memory?
  5910                                                          je      .40                                             ;yes, branch
  5911                                                          mov     edx,czAurealAD1881                              ;Aureal 1881 SOUNDMAX
  5912                                                          cmp     word [ebx+PCI.configdata_hi],EPCIINTELAD1881    ;Aureal 1881 SOUNDMAX?
  5913                                                          je      .40                                             ;yes, branch
  5914                                                          mov     edx,czPIIX3PCItoIDEBridge                       ;PIIX3 PCI-to-IDE Bridge
  5915                                                          cmp     word [ebx+PCI.configdata_hi],EPCIINTELPIIX3     ;PIIX3 PCI-to-IDE Bridge?
  5916                                                          je      .40                                             ;yes, branch
  5917                                                          mov     edx,cz82371ABBusMaster                          ;82371AB Bus Master
  5918                                                          cmp     word [ebx+PCI.configdata_hi],EPCIINTEL82371AB   ;82371AB Bua Master?
