  3479                                  ;-----------------------------------------------------------------------------------------------------------------------
  3480                                  ;
  3481                                  ;       Routine:        AllocateMemory
  3482                                  ;
  3483                                  ;       Description:    This routine allocates a memory block for the given task.
  3484                                  ;
  3485                                  ;       In:             ECX     bytes of memory to allocate
  3486                                  ;
  3487                                  ;       Out:            EAX     !0      address of user portion of newly allocated memory block
  3488                                  ;                               0       unable to allocate memory
  3489                                  ;
  3490                                  ;-----------------------------------------------------------------------------------------------------------------------
  3491                                  AllocateMemory          push    ebx                                             ;save non-volatile regs
  3492                                                          push    ecx                                             ;
  3493                                                          push    esi                                             ;
  3494                                                          push    ds                                              ;
  3495                                  ;
  3496                                  ;       Address kernel memory structures
  3497                                  ;
  3498                                                          push    EGDTOSDATA                                      ;load OS data GDT selector ...
  3499                                                          pop     ds                                              ;... into data segment reg
  3500                                                          mov     esi,wsConsoleMemRoot                            ;memory root structure address
  3501                                  ;
  3502                                  ;       Set requested size to minimum block size if requested size is too small.
  3503                                  ;
  3504                                                          cmp     ecx,EMEMMINSIZE                                 ;is requested size too small?
  3505                                                          jae     .10                                             ;no, branch
  3506                                                          mov     ecx,EMEMMINSIZE                                 ;set requested size to minimum
  3507                                  .10                     add     ecx,EMEMBLOCKLEN                                ;add header block length
  3508                                  ;
  3509                                  ;       Find the first free memory block large enough to satisfy the request.
  3510                                  ;
  3511                                                          mov     eax,[esi+MEMROOT.firstfree]                     ;first free block ptr
  3512                                  .20                     test    eax,eax                                         ;end of free block chain?
  3513                                                          jz      .220                                            ;yes, branch
  3514                                                          cmp     ecx,[eax+MEMBLOCK.bytes]                        ;free block big enough?
  3515                                                          jbe     .30                                             ;yes, branch
  3516                                                          mov     eax,[eax+MEMBLOCK.nextblock]                    ;next free block addr
  3517                                                          jmp     .20                                             ;continue
  3518                                  ;-----------------------------------------------------------------------------------------------------------------------
  3519                                  ;
  3520                                  ;       Address the previous and next free memory blocks.
  3521                                  ;
  3522                                  .30                     mov     ebx,[eax+MEMBLOCK.previousblock]                ;previous free block addr
  3523                                                          mov     edx,[eax+MEMBLOCK.nextblock]                    ;next free block addr
  3524                                  ;
  3525                                  ;       Remove the free memory block from the forward free memory block chain.
  3526                                  ;
  3527                                                          test    ebx,ebx                                         ;any previous free memory block?
  3528                                                          jz      .40                                             ;no, branch
  3529                                                          mov     [ebx+MEMBLOCK.nextblock],edx                    ;remove free block from forwrad chain
  3530                                                          jmp     .50                                             ;continue
  3531                                  .40                     mov     [esi+MEMROOT.firstfree],edx                     ;next free is now also the first free
  3532                                  ;
  3533                                  ;       Remove the free memory block from the reverse free memory block chain.
  3534                                  ;
  3535                                  .50                     test    edx,edx                                         ;any next free memory block?
  3536                                                          jz      .60                                             ;no, branch
  3537                                                          mov     [edx+MEMBLOCK.previousblock],ebx                ;remove free block from reverse chain
  3538                                                          jmp     .70                                             ;continue
  3539                                  .60                     mov     [esi+MEMROOT.lastfree],ebx                      ;previous free is now also the last free
  3540                                  ;-----------------------------------------------------------------------------------------------------------------------
  3541                                  ;
  3542                                  ;       Determine if the free memory block can be split.
  3543                                  ;
  3544                                  .70                     mov     ebx,[eax+MEMBLOCK.bytes]                        ;size of free memory block
  3545                                                          sub     ebx,ecx                                         ;subtract requested memory size
  3546                                                          cmp     ebx,EMEMMINSIZE                                 ;remaining block can stand alone?
  3547                                                          jb      .150                                            ;no, branch
  3548                                  ;
  3549                                  ;       We know that our block can be split to create a new free memory block. We update the size of our free memory
  3550                                  ;       block to the requested memory size. We update the next contiguous block pointer to point just past the end
  3551                                  ;       of the requested memory size.
  3552                                  ;
  3553                                                          mov     [eax+MEMBLOCK.bytes],ecx                        ;shorten memory block size
  3554                                                          mov     edx,eax                                         ;memory block address
  3555                                                          add     edx,ecx                                         ;address new new next contig block
  3556                                                          mov     ecx,[eax+MEMBLOCK.nextcontig]                   ;next contig block address
  3557                                                          mov     [eax+MEMBLOCK.nextcontig],edx                   ;update next contig block address
  3558                                  ;
  3559                                  ;       If there is a next contiguous block, we update that memory block's previous contig pointer to point to the new
  3560                                  ;       free block we are splitting off. If there is no next contiguous block, we update the last contig block pointer.
  3561                                  ;
  3562                                                          jecxz   .80                                             ;no next contig, branch
  3563                                                          mov     [ecx+MEMBLOCK.previouscontig],edx               ;update previous contig pointer
  3564                                                          jmp     .90                                             ;continue
  3565                                  .80                     mov     [esi+MEMROOT.lastcontig],edx                    ;update last contig pointer
  3566                                  ;
  3567                                  ;       Now that the contig block pointers have been updated, we initialize the new free block members.
  3568                                  ;
  3569                                  .90                     mov     [edx+MEMBLOCK.bytes],ebx                        ;set the block size
  3570                                                          mov     [edx+MEMBLOCK.nextcontig],ecx                   ;set the next contig block addr
  3571                                                          mov     [edx+MEMBLOCK.previouscontig],eax               ;set the previous contig block addr
  3572                                                          mov     ebx,EMEMFREECODE                                ;free memory signature
  3573                                                          mov     [edx+MEMBLOCK.signature],ebx                    ;set the block signature
  3574                                                          xor     ebx,ebx                                         ;zero register
  3575                                                          mov     [edx+MEMBLOCK.reserved],ebx                     ;set reserved
  3576                                                          mov     [edx+MEMBLOCK.owner],ebx                        ;set the owner
  3577                                  ;
  3578                                  ;       Find the proper location in the free block chain for the new free block
  3579                                  ;
  3580                                                          mov     ebx,[edx+MEMBLOCK.bytes]                        ;free block size
  3581                                                          mov     ecx,[esi+MEMROOT.firstfree]                     ;first free block addr
  3582                                  .100                    jecxz   .110                                            ;branch if at end of chain
  3583                                                          cmp     ebx,[ecx+MEMBLOCK.bytes]                        ;new block smaller or equal?
  3584                                                          jbe     .110                                            ;yes, branch
  3585                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next free block addr
  3586                                                          jmp     .100                                            ;continue
  3587                                  ;
  3588                                  ;       Having found the proper location for our new free block, we store the address of the following free block, or
  3589                                  ;       zero if our new free block is larger than any other, as our next free block. Then, we take the address of our
  3590                                  ;       next block's previous block or the global last-free block as our new previous block and update the previous
  3591                                  ;       block of hte next block, if there is one.
  3592                                  ;
  3593                                  .110                    mov     [edx+MEMBLOCK.nextblock],ecx                    ;set the new free block's next ptr
  3594                                                          mov     ebx,[esi+MEMROOT.lastfree]                      ;last free block addr
  3595                                                          jecxz   .120                                            ;branch if no next block
  3596                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next block's previous block
  3597                                                          mov     [ecx+MEMBLOCK.previousblock],edx                ;set the next block's previous block
  3598                                                          jmp     .130                                            ;continue
  3599                                  .120                    mov     [esi+MEMROOT.lastfree],edx                      ;set the new last free block
  3600                                  ;
  3601                                  ;       Store our previous block pointer. If we have a previous free block, update that block's next block pointer to
  3602                                  ;       point to the new block. Since the new block may now be the first or last user block, we update the first and/or
  3603                                  ;       last user block pointers if necessary.
  3604                                  ;
  3605                                  .130                    mov     [edx+MEMBLOCK.previousblock],ebx                ;set the previous block pointer
  3606                                                          test    ebx,ebx                                         ;is there a previous block?
  3607                                                          jz      .140                                            ;no, branch
  3608                                                          mov     [ebx+MEMBLOCK.nextblock],edx                    ;set the previous block's next ptr
  3609                                                          jmp     .150                                            ;continue
  3610                                  .140                    mov     [esi+MEMROOT.firstfree],edx                     ;set the new first free ptr
  3611                                  ;
  3612                                  ;       Update the newly allocated block's owner and signature.
  3613                                  ;
  3614                                  .150                    mov     edx,EMEMUSERCODE                                ;user memory signature
  3615                                                          mov     [eax+MEMBLOCK.signature],edx                    ;set the block signature
  3616                                                          xor     edx,edx                                         ;zero register
  3617                                                          str     dx                                              ;load the task state register
  3618                                                          mov     [eax+MEMBLOCK.owner],edx                        ;set the block owner
  3619                                  ;
  3620                                  ;       Remove the allocated block from the free block chain and insert it into the user block chain.
  3621                                  ;
  3622                                                          mov     ecx,[esi+MEMROOT.firsttask]                     ;first task block
  3623                                  .160                    jecxz   .180                                            ;branch if at end of chain
  3624                                                          cmp     edx,[ecx+MEMBLOCK.owner]                        ;does this block belong to the task?
  3625                                                          jb      .180                                            ;branch if block belongs to next task
  3626                                                          je      .170                                            ;branch if block belongs to this task
  3627                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next task block
  3628                                                          jmp     .160                                            ;continue
  3629                                  ;
  3630                                  ;       We have found the start of our task's user block chain or the start of the next task's user block chain. If we
  3631                                  ;       have found the next task's chain, then we have no other user memory for this task and we can simply add the
  3632                                  ;       block here. If we are at the start of our task's user block chain, then we need to further seek for the proper
  3633                                  ;       place to insert the block.
  3634                                  ;
  3635                                  .170                    mov     edx,[eax+MEMBLOCK.bytes]                        ;size of block in bytes
  3636                                                          cmp     edx,[ecx+MEMBLOCK.bytes]                        ;less or equal to chain block?
  3637                                                          jbe     .180                                            ;yes, branch
  3638                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next chain block address
  3639                                                          test    ecx,ecx                                         ;end of chain?
  3640                                                          jz      .180                                            ;yes, branch
  3641                                                          mov     edx,[eax+MEMBLOCK.owner]                        ;owning task
  3642                                                          cmp     edx,[ecx+MEMBLOCK.owner]                        ;same task?
  3643                                                          je      .170                                            ;yes, continue search
  3644                                  ;
  3645                                  ;       We have found the proper place in our task's user-block chain to insert our new user block. It may also be the
  3646                                  ;       end of the user-block chain. To insert our new user block, first we update the next-block pointer. Then, we load
  3647                                  ;       the next-block's previous-block pointer or the global last-user block pointer if we have no next-block. If we
  3648                                  ;       do have a previous-block, we update that block's next-block pointer.
  3649                                  ;
  3650                                  .180                    mov     [eax+MEMBLOCK.nextblock],ecx                    ;set the next task block
  3651                                                          mov     ebx,[esi+MEMROOT.lasttask]                      ;last task block
  3652                                                          jecxz   .190                                            ;branch if no next-task block
  3653                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next-task's previous-task block
  3654                                                          mov     [ecx+MEMBLOCK.previousblock],eax                ;update next-task block's previous-task
  3655                                                          jmp     .200                                            ;continue
  3656                                  .190                    mov     [esi+MEMROOT.lasttask],eax                      ;new block is the last user-block
  3657                                  ;
  3658                                  ;       Now wes tore our previous-block pointer and, if we have a previous-free block, we update that block's next-
  3659                                  ;       block pointer to point to our block. Since our block may now be the first or last user-block, we update the
  3660                                  ;       global first and/or last user-block pointers if necessary.
  3661                                  ;
  3662                                  .200                    mov     [eax+MEMBLOCK.previousblock],ebx                ;set the previous task block
  3663                                                          test    ebx,ebx                                         ;do we have a previous task block?
  3664                                                          jz      .210                                            ;no, branch
  3665                                                          mov     [ebx+MEMBLOCK.nextblock],eax                    ;set previous-block's next-task block
  3666                                                          jmp     .220                                            ;continue
  3667                                  .210                    mov     [esi+MEMROOT.firsttask],eax                     ;new block is the first user-block
  3668                                  ;
  3669                                  ;       Restore registers and return to caller.
  3670                                  ;
  3671                                  .220                    pop     ds                                              ;restore non-volatie regs
  3672                                                          pop     esi                                             ;
  3673                                                          pop     ecx                                             ;
  3674                                                          pop     ebx                                             ;
  3675                                                          ret                                                     ;return
  3676                                  ;-----------------------------------------------------------------------------------------------------------------------
  3677                                  ;
  3678                                  ;       Routine:        FreeMemory
  3679                                  ;
  3680                                  ;       Description:    This routine frees a memory block for the given task. The address provided in EDX points to the
  3681                                  ;                       memory block header. The memory block must be USER memory, not a FREE memory block. If the block
  3682                                  ;                       is adjacent to a contiguous FREE memory block, then the blocks are merged. The residual FREE
  3683                                  ;                       memory is repositioned in the FREE memory block chain according to size. The user portion of the
  3684                                  ;                       block, following the block header, is reset (wiped) with the memory wipe value.
  3685                                  ;
  3686                                  ;       In:             EDX     memory block to free, relative to EGDTOSDATA
  3687                                  ;
  3688                                  ;       Out:            EAX     -1      invalid memory block
  3689                                  ;                               0       memory block freed
  3690                                  ;
  3691                                  ;-----------------------------------------------------------------------------------------------------------------------
  3692                                  FreeMemory              push    ebx                                             ;save non-volatile regs
  3693                                                          push    ecx                                             ;
  3694                                                          push    esi                                             ;
  3695                                                          push    edi                                             ;
  3696                                                          push    ds                                              ;
  3697                                                          push    es                                              ;
  3698                                  ;
  3699                                  ;       Address the root memory structure
  3700                                  ;
  3701                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3702                                                          pop     es                                              ;... into extra segment reg
  3703                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  3704                                                          pop     ds                                              ;... into data segment reg
  3705                                                          mov     esi,wsConsoleMemRoot                            ;memory root structure
  3706                                                          mov     edi,edx                                         ;memory block address
  3707                                  ;
  3708                                  ;       If the block is FREE, return success. Otherwise, if it is not USER, return with error.
  3709                                  ;
  3710                                                          xor     eax,eax                                         ;indicate success
  3711                                                          cmp     dword [edi+MEMBLOCK.signature],EMEMFREECODE     ;is the block FREE?
  3712                                                          je      .240                                            ;yes, branch
  3713                                                          dec     eax                                             ;indicate failure
  3714                                                          cmp     dword [edi+MEMBLOCK.signature],EMEMUSERCODE     ;is the block USER?
  3715                                                          jne     .240                                            ;no, branch
  3716                                  ;-----------------------------------------------------------------------------------------------------------------------
  3717                                  ;
  3718                                  ;       Unlink the USER memory block.
  3719                                  ;
  3720                                  ;-----------------------------------------------------------------------------------------------------------------------
  3721                                  ;
  3722                                  ;       Set the block signature. Reset owner.
  3723                                  ;
  3724                                                          mov     dword [edi+MEMBLOCK.signature],EMEMFREECODE     ;set FREE block signature
  3725                                                          xor     eax,eax                                         ;zero register
  3726                                                          mov     [edi+MEMBLOCK.owner],eax                        ;zero block owner
  3727                                  ;
  3728                                  ;       Wipe user area.
  3729                                  ;
  3730                                                          push    edi                                             ;save block address
  3731                                                          mov     ecx,[edi+MEMBLOCK.bytes]                        ;block size
  3732                                                          sub     ecx,EMEMBLOCKLEN                                ;subtract header size
  3733                                                          add     edi,EMEMBLOCKLEN                                ;point to user area
  3734                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3735                                                          rep     stosb                                           ;clear memory
  3736                                                          pop     edi                                             ;restore block address
  3737                                  ;
  3738                                  ;       Address the preceding and following USER memory blocks
  3739                                  ;
  3740                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;previous block pointer
  3741                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next block pointer
  3742                                  ;
  3743                                  ;       If a USER block precedes this block, update that block's next pointer. Otherwise, update the first task
  3744                                  ;       pointer to point to the USER block following this block.
  3745                                  ;
  3746                                                          test    ebx,ebx                                         ;is there a previous block?
  3747                                                          jz      .10                                             ;no, branch
  3748                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update previous block's next pointer
  3749                                                          jmp     .20                                             ;continue
  3750                                  .10                     mov     [esi+MEMROOT.firsttask],ecx                     ;update first USER pointer
  3751                                  ;
  3752                                  ;       If a USER block follows this block, update that block's previous pointer. Otherwise, update the last task
  3753                                  ;       pointer to point to the USER block preceding this block.
  3754                                  ;
  3755                                  .20                     jecxz   .30                                             ;branch if no next block
  3756                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next block's previous pointer
  3757                                                          jmp     .40                                             ;continue
  3758                                  .30                     mov     [esi+MEMROOT.lasttask],ebx                      ;update last USER pointer
  3759                                  ;-----------------------------------------------------------------------------------------------------------------------
  3760                                  ;
  3761                                  ;       Merge with a previous contiguous FREE memory block.
  3762                                  ;
  3763                                  ;-----------------------------------------------------------------------------------------------------------------------
  3764                                  ;
  3765                                  ;       Address the preceding and following contiguous memory blocks.
  3766                                  ;
  3767                                  .40                     mov     ebx,[edi+MEMBLOCK.previouscontig]               ;previous contiguous block ptr
  3768                                                          mov     ecx,[edi+MEMBLOCK.nextcontig]                   ;next contiguous block ptr
  3769                                  ;
  3770                                  ;       Verify we have a previous contiguous FREE block.
  3771                                  ;
  3772                                                          test    ebx,ebx                                         ;is there a previous block?
  3773                                                          jz      .100                                            ;no, branch
  3774                                                          cmp     dword [ebx+MEMBLOCK.signature],EMEMFREECODE     ;is the previous block FREE?
  3775                                                          jne     .100                                            ;no, branch
  3776                                  ;
  3777                                  ;       Update adjacent block's contiguous pointers.
  3778                                  ;
  3779                                                          mov     [ebx+MEMBLOCK.nextcontig],ecx                   ;update previous contig's next contig
  3780                                                          jecxz   .50                                             ;branch if no next contiguous block
  3781                                                          mov     [ecx+MEMBLOCK.previouscontig],ebx               ;update next congit's previous contig
  3782                                                          jmp     .60                                             ;continue
  3783                                  .50                     mov     [esi+MEMROOT.lastcontig],ebx                    ;update last contig pointer
  3784                                  ;
  3785                                  ;       Update the size of the merged FREE block.
  3786                                  ;
  3787                                  .60                     mov     eax,[edi+MEMBLOCK.bytes]                        ;current block size
  3788                                                          add     [ebx+MEMBLOCK.bytes],eax                        ;update previous block's size
  3789                                  ;
  3790                                  ;       Having merged our new free block into the previous free block, make the previous free block the current block
  3791                                  ;
  3792                                                          mov     ecx,EMEMBLOCKLEN                                ;block header length
  3793                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3794                                                          rep     stosb                                           ;clear memory header
  3795                                                          mov     edi,ebx                                         ;current block is now previous block
  3796                                  ;-----------------------------------------------------------------------------------------------------------------------
  3797                                  ;
  3798                                  ;       Unlink the previous contiguous FREE memory block
  3799                                  ;
  3800                                  ;-----------------------------------------------------------------------------------------------------------------------
  3801                                  ;
  3802                                  ;       Address the preceding and following USER memory blocks
  3803                                  ;
  3804                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;previous block pointer
  3805                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next block pointer
  3806                                  ;
  3807                                  ;       Update the previous block's next-block pointer if there is a previous block. Otherwise, update the first free
  3808                                  ;       block pointer.
  3809                                  ;
  3810                                                          test    ebx,ebx                                         ;is there a previous block?
  3811                                                          jz      .70                                             ;no, branch
  3812                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update previous block's next pointer
  3813                                                          jmp     .80                                             ;branch
  3814                                  .70                     mov     [esi+MEMROOT.firstfree],ecx                     ;update first FREE block pointer
  3815                                  ;
  3816                                  ;       Update the next block's previous-block pointer if there is a next block. Otherwise, update the last free block
  3817                                  ;       pointer.
  3818                                  ;
  3819                                  .80                     jecxz   .90                                             ;branch if no next block
  3820                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next block's previous pointer
  3821                                                          jmp     .100                                            ;continue
  3822                                  .90                     mov     [esi+MEMROOT.lastfree],ebx                      ;update last FREE block pointer
  3823                                  ;-----------------------------------------------------------------------------------------------------------------------
  3824                                  ;
  3825                                  ;       Merge with a following contiguous FREE memory block.
  3826                                  ;
  3827                                  ;-----------------------------------------------------------------------------------------------------------------------
  3828                                  ;
  3829                                  ;       Verify we have a following contiguous FREE block.
  3830                                  ;
  3831                                  .100                    mov     ecx,[edi+MEMBLOCK.nextcontig]                   ;next contiguous block ptr
  3832                                                          jecxz   .170                                            ;branch if no next contiguous block
  3833                                                          cmp     dword [ecx+MEMBLOCK.signature],EMEMFREECODE     ;is the next-contiguous block free?
  3834                                                          jne     .170                                            ;no, branch
  3835                                  ;
  3836                                  ;       Add the size of the following adjacent FREE block to this block's size.
  3837                                  ;
  3838                                                          mov     eax,[ecx+MEMBLOCK.bytes]                        ;next contiguous (free) block size
  3839                                                          add     [edi+MEMBLOCK.bytes],eax                        ;add size to this block's size
  3840                                  ;
  3841                                  ;       Unlink the following contiguous FREE block from the contiguous block chain.
  3842                                  ;
  3843                                                          mov     eax,[ecx+MEMBLOCK.nextcontig]                   ;following block's next-contig ptr
  3844                                                          mov     [edi+MEMBLOCK.nextcontig],eax                   ;update this block's next-contig ptr
  3845                                                          test    eax,eax                                         ;does a block follow the next contig blk
  3846                                                          jz      .110                                            ;no, branch
  3847                                                          mov     [eax+MEMBLOCK.previouscontig],edi               ;update following block's prev contig
  3848                                                          jmp     .120                                            ;continue
  3849                                  .110                    mov     [esi+MEMROOT.lastcontig],edi                    ;update last contig block ptr
  3850                                  ;-----------------------------------------------------------------------------------------------------------------------
  3851                                  ;
  3852                                  ;       Unlink the following contiguous FREE memory block
  3853                                  ;
  3854                                  ;-----------------------------------------------------------------------------------------------------------------------
  3855                                  ;
  3856                                  ;       Unlink the following adjacent FREE block from the FREE block chain.
  3857                                  ;
  3858                                  .120                    push    edi                                             ;save this block
  3859                                                          mov     edi,ecx                                         ;next contiguous block
  3860                                                          push    ecx                                             ;save next contiguous block
  3861                                  ;
  3862                                  ;       Address the preceding and following USER memory blocks
  3863                                  ;
  3864                                                          mov     ebx,[edi+MEMBLOCK.previousblock]                ;next contig's previous block pointer
  3865                                                          mov     ecx,[edi+MEMBLOCK.nextblock]                    ;next contig's next block pointer
  3866                                  ;
  3867                                  ;       Update the previous block's next-block pointer if there is a previous block. Otherwise, update the first free
  3868                                  ;       block pointer.
  3869                                  ;
  3870                                                          test    ebx,ebx                                         ;is there a previous block?
  3871                                                          jz      .130                                            ;no, branch
  3872                                                          mov     [ebx+MEMBLOCK.nextblock],ecx                    ;update next contig's prev blk next-ptr
  3873                                                          jmp     .140                                            ;branch
  3874                                  .130                    mov     [esi+MEMROOT.firstfree],ecx                     ;update first FREE block pointer
  3875                                  ;
  3876                                  ;       Update the next block's previous-block pointer if there is a next block. Otherwise, update the last free block
  3877                                  ;       pointer.
  3878                                  ;
  3879                                  .140                    jecxz   .150                                            ;branch if no next block
  3880                                                          mov     [ecx+MEMBLOCK.previousblock],ebx                ;update next contig's next blk prev-ptr
  3881                                                          jmp     .160                                            ;continue
  3882                                  .150                    mov     [esi+MEMROOT.lastfree],ebx                      ;update last FREE block pointer
  3883                                  ;
  3884                                  ;       Clear next contiguous block's header
  3885                                  ;
  3886                                  .160                    pop     edi                                             ;next congiguous block pointer
  3887                                                          mov     ecx,EMEMBLOCKLEN                                ;memory block header length
  3888                                                          mov     al,EMEMWIPEBYTE                                 ;memory wipe byte
  3889                                                          rep     stosb                                           ;clear memory header
  3890                                                          pop     edi                                             ;this block's pointer
  3891                                  ;-----------------------------------------------------------------------------------------------------------------------
  3892                                  ;
  3893                                  ;       Insert the final FREE block back into the block chain.
  3894                                  ;
  3895                                  ;-----------------------------------------------------------------------------------------------------------------------
  3896                                  ;
  3897                                  ;       Walk the FREE memory chain until a block is found that is larger than or equal in size to the block being
  3898                                  ;       inserted. The block being inserted will be inserted before that block or after the last block found if none
  3899                                  ;       all are smaller in size.
  3900                                  ;
  3901                                  .170                    mov     ebx,[edi+MEMBLOCK.bytes]                        ;size of block
  3902                                                          mov     ecx,[esi+MEMROOT.firstfree]                     ;first free block ptr
  3903                                  .180                    jecxz   .190                                            ;exit if no ptr
  3904                                                          cmp     ebx,[ecx+MEMBLOCK.bytes]                        ;next block bigger?
  3905                                                          jb      .190                                            ;yes, branch
  3906                                                          mov     ecx,[ecx+MEMBLOCK.nextblock]                    ;next free memory block
  3907                                                          jmp     .180                                            ;continue
  3908                                  ;
  3909                                  ;       Set the next-block pointer. Determine the previous-block, which may be the last FREE block if we found no
  3910                                  ;       larger free block. Update the next block's previous block pointer.
  3911                                  ;
  3912                                  .190                    mov     [edi+MEMBLOCK.nextblock],ecx                    ;set the next block ptr
  3913                                                          mov     ebx,[esi+MEMROOT.lastfree]                      ;assume all blocks smaller
  3914                                                          jecxz   .200                                            ;branch if no block found
  3915                                                          mov     ebx,[ecx+MEMBLOCK.previousblock]                ;next block's previous block ptr
  3916                                                          mov     [ecx+MEMBLOCK.previousblock],edi                ;update next block's previous ptr
  3917                                                          jmp     .210                                            ;continue
  3918                                  .200                    mov     [esi+MEMROOT.lastfree],edi                      ;this block is now the last free
  3919                                  ;
  3920                                  ;       Set our previous block pointer to either the previous pointer of the found block or the last free block.
  3921                                  ;       If there is no previous block pointer, then this block now the first FREE block. Otherwise update that block's
  3922                                  ;       next pointer.
  3923                                  ;
  3924                                  .210                    mov     [edi+MEMBLOCK.previousblock],ebx                ;set the previous block ptr
  3925                                                          test    ebx,ebx                                         ;do we have a previous block?
  3926                                                          jz      .220                                            ;no, branch
  3927                                                          mov     [ebx+MEMBLOCK.nextblock],edi                    ;update previous block's next block ptr
  3928                                                          jmp     .230                                            ;continue
  3929                                  .220                    mov     [esi+MEMROOT.firstfree],edi                     ;update first free ptr
  3930                                  ;
  3931                                  ;       The memory free has completed.
  3932                                  ;
  3933                                  .230                    xor     eax,eax                                         ;indicate success
  3934                                  ;
  3935                                  ;       Restore and return.
  3936                                  ;
  3937                                  .240                    pop     es                                              ;restore non-volatile regs
  3938                                                          pop     ds                                              ;
  3939                                                          pop     edi                                             ;
  3940                                                          pop     esi                                             ;
  3941                                                          pop     ecx                                             ;
  3942                                                          pop     ebx                                             ;
  3943                                                          ret                                                     ;return
