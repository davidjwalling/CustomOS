  3989                                  ;
  3990                                  ;       Routine:        UpperCaseString
  3991                                  ;
  3992                                  ;       Description:    This routine places all characters in the given string to upper case.
  3993                                  ;
  3994                                  ;       In:             DS:EDX  string address
  3995                                  ;
  3996                                  ;       Out:            EDX     string address
  3997                                  ;
  3998                                  ;-----------------------------------------------------------------------------------------------------------------------
  3999                                  UpperCaseString         push    esi                                             ;save non-volatile regs
  4000                                                          mov     esi,edx                                         ;string address
  4001                                                          cld                                                     ;forward strings
  4002                                  .10                     lodsb                                                   ;string character
  4003                                                          test    al,al                                           ;null?
  4004                                                          jz      .20                                             ;yes, skip ahead
  4005                                                          cmp     al,EASCIILOWERA                                 ;lower-case? (lower bounds)
  4006                                                          jb      .10                                             ;no, continue
  4007                                                          cmp     al,EASCIILOWERZ                                 ;lower-case? (upper bounds)
  4008                                                          ja      .10                                             ;no, continue
  4009                                                          and     al,EASCIICASEMASK                               ;mask for upper case
  4010                                                          mov     [esi-1],al                                      ;upper character
  4011                                                          jmp     .10                                             ;continue
  4012                                  .20                     pop     esi                                             ;restore non-volatile regs
  4013                                                          ret                                                     ;return
