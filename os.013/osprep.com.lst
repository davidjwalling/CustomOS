  4517                                  ;
  4518                                  ;       Routine:        UnsignedToDecimalString
  4519                                  ;
  4520                                  ;       Description:    This routine creates an ASCIIZ string representing the decimal value of 32-bit binary input.
  4521                                  ;
  4522                                  ;       Input:          BH      flags           bit 0: 1 = trim leading zeros
  4523                                  ;                                               bit 1: 1 = include comma grouping delimiters
  4524                                  ;                                               bit 4: 1 = non-zero digit found (internal)
  4525                                  ;                       ECX     32-bit binary
  4526                                  ;                       DS:EDX  output buffer address
  4527                                  ;
  4528                                  ;-----------------------------------------------------------------------------------------------------------------------
  4529                                  UnsignedToDecimalString push    ebx                                             ;save non-volatile regs
  4530                                                          push    ecx                                             ;
  4531                                                          push    edi                                             ;
  4532                                                          push    es                                              ;
  4533                                                          push    ds                                              ;load data selector
  4534                                                          pop     es                                              ;... into extra segment reg
  4535                                                          mov     edi,edx                                         ;output buffer address
  4536                                                          and     bh,00001111b                                    ;zero internal flags
  4537                                                          mov     edx,ecx                                         ;binary
  4538                                                          mov     ecx,1000000000                                  ;10^9 divisor
  4539                                                          call    .30                                             ;divide and store
  4540                                                          mov     ecx,100000000                                   ;10^8 divisor
  4541                                                          call    .10                                             ;divide and store
  4542                                                          mov     ecx,10000000                                    ;10^7 divisor
  4543                                                          call    .30                                             ;divide and store
  4544                                                          mov     ecx,1000000                                     ;10^6 divisor
  4545                                                          call    .30                                             ;divide and store
  4546                                                          mov     ecx,100000                                      ;10^5 divisor
  4547                                                          call    .10                                             ;divide and store
  4548                                                          mov     ecx,10000                                       ;10^4 divisor
  4549                                                          call    .30                                             ;divide and store
  4550                                                          mov     ecx,1000                                        ;10^3 divisor
  4551                                                          call    .30                                             ;divide and store
  4552                                                          mov     ecx,100                                         ;10^2 divisor
  4553                                                          call    .10                                             ;divide and store
  4554                                                          mov     ecx,10                                          ;10^2 divisor
  4555                                                          call    .30                                             ;divide and store
  4556                                                          mov     eax,edx                                         ;10^1 remainder
  4557                                                          call    .40                                             ;store
  4558                                                          xor     al,al                                           ;null terminator
  4559                                                          stosb
  4560                                                          pop     es                                              ;restore non-volatile regs
  4561                                                          pop     edi                                             ;
  4562                                                          pop     ecx                                             ;
  4563                                                          pop     ebx                                             ;
  4564                                                          ret                                                     ;return
  4565                                  .10                     test    bh,00000010b                                    ;comma group delims?
  4566                                                          jz      .30                                             ;no, branch
  4567                                                          test    bh,00000001b                                    ;trim leading zeros?
  4568                                                          jz      .20                                             ;no, store delim
  4569                                                          test    bh,00010000b                                    ;non-zero found?
  4570                                                          jz      .30                                             ;no, branch
  4571                                  .20                     mov     al,','                                          ;delimiter
  4572                                                          stosb                                                   ;store delimiter
  4573                                  .30                     mov     eax,edx                                         ;lo-orer dividend
  4574                                                          xor     edx,edx                                         ;zero hi-order
  4575                                                          div     ecx                                             ;divide by power of 10
  4576                                                          test    al,al                                           ;zero?
  4577                                                          jz      .50                                             ;yes, branch
  4578                                                          or      bh,00010000b                                    ;non-zero found
  4579                                  .40                     or      al,30h                                          ;ASCII zone
  4580                                                          stosb                                                   ;store digit
  4581                                                          ret                                                     ;return
  4582                                  .50                     test    bh,00000001b                                    ;trim leading zeros?
  4583                                                          jz      .40                                             ;no, store and continue
  4584                                                          test    bh,00010000b                                    ;non-zero found?
  4585                                                          jnz     .40                                             ;yes, store and continue
  4586                                                          ret                                                     ;return
