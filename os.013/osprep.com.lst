  5821                                                          mov     dl,EPCIPORTCONFIGADDRLO                         ;PCI configuration address port lo-order
  5822                                                          mov     eax,[ebx+PCI.selector]                          ;PCI selector
  5823                                                          out     dx,eax                                          ;select bus, device, function, reg
  5824                                                          mov     dh,EPCIPORTCONFIGDATAHI                         ;PCI configuraiton data port hi-order
  5825                                                          mov     dl,EPCIPORTCONFIGDATALO                         ;PCI configuration data port lo-order
  5826                                                          in      eax,dx                                          ;read register
