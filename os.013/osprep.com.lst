  3089                                  ;
  3090                                  ;       Routine:        GetYear
  3091                                  ;
  3092                                  ;       Description:    Return the four-digit year (century * 100 + year of century)
  3093                                  ;
  3094                                  ;       In:             DS:EBX  DATETIME address
  3095                                  ;
  3096                                  ;       Out:            ECX     year
  3097                                  ;
  3098                                  ;-----------------------------------------------------------------------------------------------------------------------
  3099                                  GetYear                 movzx   ecx,byte [ebx+DATETIME.century]                 ;century
  3100                                                          imul    ecx,100                                         ;century * 100
  3101                                                          movzx   eax,byte [ebx+DATETIME.year]                    ;year of century
  3102                                                          add     ecx,eax                                         ;year (YYYY)
  3103                                                          ret                                                     ;return
  3104                                  ;-----------------------------------------------------------------------------------------------------------------------
  3105                                  ;
  3106                                  ;       Routine:        IsLeapYear
  3107                                  ;
  3108                                  ;       Description:    This routine returns an indicator if the current year is a leap year.
  3109                                  ;
  3110                                  ;       In:             DS:EBX  DATETIME ADDRESS
  3111                                  ;
  3112                                  ;       Out:            ECX     0 = not a leap year
  3113                                  ;                               1 = leap year
  3114                                  ;
  3115                                  ;-----------------------------------------------------------------------------------------------------------------------
  3116                                  IsLeapYear              call    GetYear                                         ;ECX = YYYY
  3117                                                          mov     eax,ecx                                         ;EAX = YYYY
  3118                                                          xor     ecx,ecx                                         ;assume not leap year
  3119                                                          test    al,00000011b                                    ;multiple of four?
  3120                                                          jnz     .no                                             ;no, branch
  3121                                                          mov     dl,100                                          ;divisor
  3122                                                          div     dl                                              ;divide by 100
  3123                                                          test    ah,ah                                           ;multiple of 100?
  3124                                                          jnz     .yes                                            ;yes, branch
