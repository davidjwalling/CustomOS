  5787                                  ;
  5788                                  ;       Routine:        ConBuildPCISelector
  5789                                  ;
  5790                                  ;       Description:    This routine sets the selector member of a PCI based on the bus, device and function.
  5791                                  ;
  5792                                  ;       In:             DS:EBX  PCI structure address
  5793                                  ;
  5794                                  ;       Out:            EAX     bus, device, function, register selector
  5795                                  ;
  5796                                  ;-----------------------------------------------------------------------------------------------------------------------
  5797                                  ConBuildPCISelector     mov     ah,[ebx+PCI.bus]                                ;AH = bbbb bbbb
  5798                                                          mov     dl,[ebx+PCI.device]                             ;DL = ???d dddd
  5799                                                          shl     dl,3                                            ;DL = dddd d000
  5800                                                          mov     al,[ebx+PCI.function]                           ;AL = ???? ?fff
  5801                                                          and     al,007h                                         ;AL = 0000 0fff
  5802                                                          or      al,dl                                           ;AL = dddd dfff
  5803                                                          movzx   eax,ax                                          ;0000 0000 0000 0000 bbbb bbbb dddd dfff
  5804                                                          shl     eax,8                                           ;0000 0000 bbbb bbbb dddd dfff 0000 0000
  5805                                                          mov     al,[ebx+PCI.register]                           ;0000 0000 bbbb bbbb dddd dfff rrrr rrrr
  5806                                                          or      eax,080000000h                                  ;1000 0000 bbbb bbbb dddd dfff rrrr rrrr
  5807                                                          mov     [ebx+PCI.selector],eax                          ;set selector
  5808                                                          ret                                                     ;return
