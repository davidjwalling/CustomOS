  4080                                                          push    esi                                             ;
  4081                                                          push    edi                                             ;
  4082                                                          push    es                                              ;
  4083                                                          push    ds                                              ;load data segment selector ...
  4084                                                          pop     es                                              ;... into extra segment register
  4085                                                          mov     edi,edx                                         ;edi = target buffer
  4086                                                          push    ecx                                             ;save maximum characters
  4087                                                          xor     al,al                                           ;zero register
  4088                                                          cld                                                     ;forward strings
  4089                                                          rep     stosb                                           ;zero fill buffer
