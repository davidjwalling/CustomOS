  5830                                  ;
  5831                                  ;       Routine:        ConBuildPCIIdent
  5832                                  ;
  5833                                  ;       Description:    This routine constructs a PCI identification string from the current PCI Bus, Device, and
  5834                                  ;                       Function code values.
  5835                                  ;
  5836                                  ;       In:             DS:EBX  PCI structure address
  5837                                  ;                       DS:EDX  output buffer address 999.99.9\0
  5838                                  ;
  5839                                  ;-----------------------------------------------------------------------------------------------------------------------
  5840                                  ConBuildPCIIdent        push    edi                                             ;save non-volatile regs
  5841                                                          push    es                                              ;
  5842                                  ;
  5843                                  ;       Establish addressability
  5844                                  ;
  5845                                                          push    ds                                              ;load data segment...
  5846                                                          pop     es                                              ;...into extra segment reg
  5847                                  ;
  5848                                  ;       Build identifier string (bus.device.function)
  5849                                  ;
  5850                                                          mov     edi,edx                                         ;output buffer address
  5851                                                          mov     al,[ebx+PCI.bus]                                ;current PCI bus (0-255)
  5852                                                          xor     ah,ah                                           ;zero high-order dividend
  5853                                                          mov     cl,100                                          ;divisor (10^2)
  5854                                                          div     cl                                              ;AL=100's, AH=bus MOD 100
  5855                                                          or      al,30h                                          ;apply ASCII zone
  5856                                                          cld                                                     ;forward strings
  5857                                                          stosb                                                   ;store 100's digit
  5858                                                          mov     al,ah                                           ;bus MOD 100
  5859                                                          xor     ah,ah                                           ;zero high-order dividend
  5860                                                          mov     cl,10                                           ;divisor (10^1)
  5861                                                          div     cl                                              ;AL=10's, AH=1's
  5862                                                          or      ax,3030h                                        ;apply ASCII zone
  5863                                                          stosw                                                   ;store 10's and 1's
  5864                                                          mov     al,EASCIIPERIOD                                 ;ASCII period delimiter
  5865                                                          stosb                                                   ;store delimiter
  5866                                                          mov     al,[ebx+PCI.device]                             ;current PCI device (0-15)
  5867                                                          xor     ah,ah                                           ;zero high order dividend
  5868                                                          mov     cl,10                                           ;divisor (10^1)
  5869                                                          div     cl                                              ;AL=10's, AH=1's
  5870                                                          or      ax,3030h                                        ;apply ASCII zone
  5871                                                          stosw                                                   ;store 10's and 1's
  5872                                                          mov     al,EASCIIPERIOD                                 ;ASCII period delimiter
  5873                                                          stosb                                                   ;store delimiter
  5874                                                          mov     al,[ebx+PCI.function]                           ;current PCI function (0-7)
  5875                                                          or      al,30h                                          ;apply ASCII zone
  5876                                                          stosb                                                   ;store 1's
  5877                                                          xor     al,al                                           ;null terminator
  5878                                                          stosb                                                   ;store terminator
  5879                                  ;
  5880                                  ;       Restore and return.
  5881                                  ;
  5882                                                          pop     es                                              ;restore non-volatile regs
  5883                                                          pop     edi                                             ;
  5884                                                          ret                                                     ;return
