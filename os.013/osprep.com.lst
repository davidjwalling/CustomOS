  2424                                  ;
  2425                                  ;       Hardware Device Interupts
  2426                                  ;
  2427                                  ;       The next 16 interrupts are defined as our hardware interrupts. These interrupts vectors (20h-2Fh) are mapped to
  2428                                  ;       the hardware interrupts IRQ0-IRQF by the BIOS when the call to the BIOS is made invoking BIOS function 89h
  2429                                  ;       (BX=2028h).
  2430                                  ;
  2431                                  ;=======================================================================================================================
  2432                                  ;-----------------------------------------------------------------------------------------------------------------------
  2433                                  ;
  2434                                  ;       IRQ0    Clock Tick Interrupt
  2435                                  ;
  2436                                  ;       PC compatible systems contain or emulate the function of the Intel 8253 Programmable Interval Timer (PIT).
  2437                                  ;       Channel 0 of this chip decrements an internal counter to zero and then issues a hardware interrupt. The default
  2438                                  ;       rate at which IRQ0 occurs is approximately 18.2 times per second or, more accurately, 1,573,040 times per day.
  2439                                  ;
  2440                                  ;       Every time IRQ0 occurs, a counter at 40:6c is incremented. When the number of ticks reaches the maximum for one
  2441                                  ;       day, the counter is set to zero and the number of days counter at 40:70 is incremented.
  2442                                  ;
  2443                                  ;       This handler also decrements the floppy drive motor count at 40:40 if it is not zero. When this count reaches
  2444                                  ;       zero, the floppy disk motors are turned off.
  2445                                  ;
  2446                                  ;-----------------------------------------------------------------------------------------------------------------------
  2447                                                          menter  clocktick                                       ;clock tick interrupt
  2448                                                          push    eax                                             ;save non-volatile regs
  2449                                                          push    edx                                             ;
  2450                                                          push    ds                                              ;
  2451                                  ;
  2452                                  ;       Update the clock tick count and the elapsed days as needed.
  2453                                  ;
  2454                                                          push    EGDTOSDATA                                      ;load OS data selector ...
  2455                                                          pop     ds                                              ;... into data segment register
  2456                                                          mov     eax,[wdClockTicks]                              ;EAX = clock ticks
  2457                                                          inc     eax                                             ;increment clock ticks
  2458                                                          cmp     eax,EPITDAYTICKS                                ;clock ticks per day?
  2459                                                          jb      irq0.10                                         ;no, skip ahead
  2460                                                          inc     byte [wbClockDays]                              ;increment clock days
  2461                                                          xor     eax,eax                                         ;reset clock ticks
  2462                                  irq0.10                 mov     dword [wdClockTicks],eax                        ;save clock ticks
  2463                                  ;
  2464                                  ;       Decrement floppy disk motor timeout.
  2465                                  ;
  2466                                                          cmp     byte [wbFDCMotor],0                             ;floppy motor timeout?
  2467                                                          je      irq0.20                                         ;yes, skip ahead
  2468                                                          dec     byte [wbFDCMotor]                               ;decrement motor timeout
  2469                                                          jnz     irq0.20                                         ;skip ahead if non-zero
  2470                                  ;
  2471                                  ;       Turn off the floppy disk motor if appropriate.
  2472                                  ;
  2473                                                          sti                                                     ;enable maskable interrupts
  2474                                  irq0.15                 mov     dh,EFDCPORTHI                                   ;FDC controller port hi
  2475                                                          mov     dl,EFDCPORTLOSTAT                               ;FDC main status register
  2476                                                          in      al,dx                                           ;FDC main status byte
  2477                                                          test    al,EFDCSTATBUSY                                 ;test FDC main status for busy
  2478                                                          jnz     irq0.15                                         ;wait while busy
  2479                                                          mov     al,EFDCMOTOROFF                                 ;motor-off / enable/ DMA setting
  2480                                                          mov     byte [wbFDCControl],al                          ;save motor-off setting
  2481                                                          mov     dh,EFDCPORTHI                                   ;FDC port hi
  2482                                                          mov     dl,EFDCPORTLOOUT                                ;FDC digital output register
  2483                                                          out     dx,al                                           ;turn motor off
  2484                                  ;
  2485                                  ;       Signal the end of the hardware interrupt.
  2486                                  ;
  2487                                  irq0.20                 call    PutPrimaryEndOfInt                              ;send end-of-interrupt to PIC
  2488                                  ;
  2489                                  ;       Restore and return.
  2490                                  ;
  2491                                                          pop     ds                                              ;restore modified regs
  2492                                                          pop     edx                                             ;
  2493                                                          pop     eax                                             ;
  2494                                                          iretd                                                   ;return
