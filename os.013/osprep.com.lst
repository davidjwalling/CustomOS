  5315                                  ;
  5316                                  ;       Routine:        ConTakeToken
  5317                                  ;
  5318                                  ;       Description:    This routine extracts the next token from the given source buffer.
  5319                                  ;
  5320                                  ;       In:             DS:EDX  source buffer address
  5321                                  ;                       DS:EBX  target buffer address
  5322                                  ;
  5323                                  ;       Out:            DS:EDX  source buffer address
  5324                                  ;                       DS:EBX  target buffer address
  5325                                  ;
  5326                                  ;       Command Form:   Line    = *3( *SP 1*ALNUM )
  5327                                  ;
  5328                                  ;-----------------------------------------------------------------------------------------------------------------------
  5329                                  ConTakeToken            push    esi                                             ;save non-volatile regs
  5330                                                          push    edi                                             ;
  5331                                                          push    es                                              ;
  5332                                                          push    ds                                              ;load data segment selector ...
  5333                                                          pop     es                                              ;... into extra segment reg
  5334                                                          mov     esi,edx                                         ;source buffer address
  5335                                                          mov     edi,ebx                                         ;target buffer address
  5336                                                          mov     byte [edi],0                                    ;null-terminate target buffer
  5337                                                          cld                                                     ;forward strings
  5338                                  .10                     lodsb                                                   ;load byte
  5339                                                          cmp     al,EASCIISPACE                                  ;space?
  5340                                                          je      .10                                             ;yes, continue
  5341                                                          test    al,al                                           ;end of line?
  5342                                                          jz      .40                                             ;yes, branch
  5343                                  .20                     stosb                                                   ;store byte
  5344                                                          lodsb                                                   ;load byte
  5345                                                          test    al,al                                           ;end of line?
  5346                                                          jz      .40                                             ;no, continue
  5347                                                          cmp     al,EASCIISPACE                                  ;space?
  5348                                                          jne     .20                                             ;no, continue
  5349                                  .30                     lodsb                                                   ;load byte
  5350                                                          cmp     al,EASCIISPACE                                  ;space?
  5351                                                          je      .30                                             ;yes, continue
  5352                                                          dec     esi                                             ;pre-position
  5353                                  .40                     mov     byte [edi],0                                    ;terminate buffer
  5354                                                          mov     edi,edx                                         ;source buffer address
  5355                                  .50                     lodsb                                                   ;remaining byte
  5356                                                          stosb                                                   ;move to front of buffer
  5357                                                          test    al,al                                           ;end of line?
  5358                                                          jnz     .50                                             ;no, continue
  5359                                                          pop     es                                              ;restore non-volatile regs
  5360                                                          pop     edi                                             ;
  5361                                                          pop     esi                                             ;
  5362                                                          ret                                                     ;return
