  5076                                  ;=======================================================================================================================
  5077                                  ;
  5078                                  ;       Console Task
  5079                                  ;
  5080                                  ;       The only task defined in the kernel is the console task. This task consists of code, data, stack, and task state
  5081                                  ;       segments and a local descriptor table. The console task accepts and echos user keyboard input to the console
  5082                                  ;       screen and responds to user commands.
  5083                                  ;
  5084                                  ;=======================================================================================================================
  5085                                  ;-----------------------------------------------------------------------------------------------------------------------
  5086                                  ;
  5087                                  ;       Console Stack                                                           @disk: 007600   @mem:  004000
  5088                                  ;
  5089                                  ;       This is the stack for the console task. It supports 448 nested calls.
  5090                                  ;
  5091                                  ;-----------------------------------------------------------------------------------------------------------------------
  5092                                  section                 constack                                                ;console task stack
  5093                                                          times   1792-($-$$) db 0h                               ;zero fill to end of section
  5094                                  ;-----------------------------------------------------------------------------------------------------------------------
  5095                                  ;
  5096                                  ;       Console Local Descriptor Table                                          @disk: 007d00   @mem:  004700
  5097                                  ;
  5098                                  ;       This is the LDT for the console task. It defines the stack, code, data and queue segments as well as data
  5099                                  ;       aliases for the TSS LDT. Data aliases allow inspection and altering of the TSS and LDT. This LDT can hold up to
  5100                                  ;       16 descriptors. Six are initially defined.
  5101                                  ;
  5102                                  ;-----------------------------------------------------------------------------------------------------------------------
  5103                                  section                 conldt                                                  ;console local descriptors
  5104                                                          dq      004093004780007Fh                               ;04 TSS alias
  5105                                                          dq      004093004700007Fh                               ;0c LDT alias
  5106                                                          dq      00409300400006FFh                               ;14 stack
  5107                                                          dq      00CF93000000FFFFh                               ;1c data
  5108                                                          dq      00409B0050000FFFh                               ;24 code
  5109                                                          dq      00409300480007FFh                               ;2c message queue
  5110                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  5111                                  ;-----------------------------------------------------------------------------------------------------------------------
  5112                                  ;
  5113                                  ;       Console Task State Segment                                              @disk: 007d80   @mem:  004780
  5114                                  ;
  5115                                  ;       This is the TSS for the console task. All rings share the same stack. DS and ES are set to the console data
  5116                                  ;       segment. CS to console code.
  5117                                  ;
  5118                                  ;-----------------------------------------------------------------------------------------------------------------------
  5119                                  section                 contss                                                  ;console task state segment
  5120                                                          dd      0                                               ;00 back-link tss
  5121                                                          dd      0700h                                           ;04 esp ring 0
  5122                                                          dd      0014h                                           ;08 ss ring 0
  5123                                                          dd      0700h                                           ;0c esp ring 1
  5124                                                          dd      0014h                                           ;10 es ring 1
  5125                                                          dd      0700h                                           ;14 esp ring 2
  5126                                                          dd      0014h                                           ;18 ss ring 2
  5127                                                          dd      0                                               ;1c cr ring 3
  5128                                                          dd      0                                               ;20 eip
  5129                                                          dd      0200h                                           ;24 eflags
  5130                                                          dd      0                                               ;28 eax
  5131                                                          dd      0                                               ;2c ecx
  5132                                                          dd      0                                               ;30 edx
  5133                                                          dd      0                                               ;34 ebx
  5134                                                          dd      0700h                                           ;38 esp ring 3
  5135                                                          dd      0                                               ;3c ebp
  5136                                                          dd      0                                               ;40 esi
  5137                                                          dd      0                                               ;44 edi
  5138                                                          dd      001Ch                                           ;48 es
  5139                                                          dd      0024h                                           ;4c cs
  5140                                                          dd      0014h                                           ;50 ss ring 3
  5141                                                          dd      001Ch                                           ;54 ds
  5142                                                          dd      0                                               ;58 fs
  5143                                                          dd      0                                               ;5c gs
  5144                                                          dd      EGDTCONSOLELDT                                  ;60 ldt selector in gdt
  5145                                                          times   128-($-$$) db 0h                                ;zero fill to end of section
  5146                                  ;-----------------------------------------------------------------------------------------------------------------------
  5147                                  ;
  5148                                  ;       Console Message Queue                                                   @disk: 007e00   @mem: 004800
  5149                                  ;
  5150                                  ;       The console message queue is 2048 bytes of memory organized as a queue of 510 double words (4 bytes each) and
  5151                                  ;       two double word values that act as indices. The queue is a FIFO that is fed by the keyboard hardware interrupt
  5152                                  ;       handler and consumed by a service routine called from a task. Each queue entry defines an input (keystroke)
  5153                                  ;       event.
  5154                                  ;
  5155                                  ;-----------------------------------------------------------------------------------------------------------------------
  5156                                  section                 conmque                                                 ;console message queue
  5157                                                          dd      8                                               ;head pointer
  5158                                                          dd      8                                               ;tail pointer
  5159                                                          times   510 dd 0                                        ;queue elements
  5160                                  ;-----------------------------------------------------------------------------------------------------------------------
  5161                                  ;
  5162                                  ;       Console Code                                                            @disk: 008600   @mem: 005000
  5163                                  ;
  5164                                  ;       This is the code for the console task. The task is defined in the GDT in two descriptors, the Local Descriptor
  5165                                  ;       Table (LDT) at 0050h and the Task State Segment (TSS) at 0058h. Jumping to or calling a TSS selector causes a
  5166                                  ;       task switch, giving control to the code for the task at the CS:IP defined in the TSS for the current ring level.
  5167                                  ;       The initial CS:IP in the Console TSS is 24h:0, where 24h is a selector in the LDT. This selector points to the
  5168                                  ;       concode section, loaded into memory 5000h by the Loader. The console task is dedicated to accepting user key-
  5169                                  ;       board input, echoing to the console screen and responding to user commands.
  5170                                  ;
  5171                                  ;       When control reaches this section, our addressability is set up according to the following diagram.
  5172                                  ;
  5173                                  ;       DS,ES --------> 000000  +-----------------------------------------------+ DS,ES:0000
  5174                                  ;                               |  Real Mode Interrupt Vectors                  |
  5175                                  ;                       000400  +-----------------------------------------------+ DS,ES:0400
  5176                                  ;                               |  Reserved BIOS Memory Area                    |
  5177                                  ;                       000800  +-----------------------------------------------+ DS,ES:0800
  5178                                  ;                               |  Shared Kernel Memory Area                    |
  5179                                  ;                       001000  +-----------------------------------------------+               <-- GDTR
  5180                                  ;                               |  Global Descriptor Table (GDT)                |
  5181                                  ;                       001800  +-----------------------------------------------+               <-- IDTR
  5182                                  ;                               |  Interrupt Descriptor Table (IDT)             |
  5183                                  ;                       002000  +-----------------------------------------------+
  5184                                  ;                               |  Interrupt Handlers                           |
  5185                                  ;                               |  Kernel Function Library                      |
  5186                                  ;       SS -----------> 004000  +===============================================+ SS:0000
  5187                                  ;                               |  Console Task Stack Area                      |
  5188                                  ;       SS:SP --------> 004700  +-----------------------------------------------+ SS:0700       <-- LDTR = GDT.SEL 0050h
  5189                                  ;                               |  Console Task Local Descriptor Table (LDT)    |
  5190                                  ;                       004780  +-----------------------------------------------+               <-- TR  = GDT.SEL 0058h
  5191                                  ;                               |  Console Task Task State Segment (TSS)        |
  5192                                  ;                       004800  +-----------------------------------------------+
  5193                                  ;                               |  Console Task Message Queue                   |
  5194                                  ;       CS,CS:IP -----> 005000  +-----------------------------------------------+ CS:0000
  5195                                  ;                               |  Console Task Code                            |
  5196                                  ;                               |  Console Task Constants                       |
  5197                                  ;                       006000  +===============================================+
  5198                                  ;
  5199                                  ;-----------------------------------------------------------------------------------------------------------------------
  5200                                  section                 concode vstart=05000h                                   ;labels relative to 5000h
  5201                                  ConCode                 call    ConInitializeData                               ;initialize console variables
  5202                                  
