  4490                                  ;
  4491                                  ;       Routine:        HexadecimalToUnsigned
  4492                                  ;
  4493                                  ;       Description:    This routine returns an unsigned integer of the value of the input ASCIIZ hexadecimal string.
  4494                                  ;
  4495                                  ;       Input:          DS:EDX  null-terminated hexadecimal string address
  4496                                  ;
  4497                                  ;       Output:         EAX     unsigned integer value
  4498                                  ;
  4499                                  ;-----------------------------------------------------------------------------------------------------------------------
  4500                                  HexadecimalToUnsigned   push    esi                                             ;save non-volatile regs
  4501                                                          mov     esi,edx                                         ;source address
  4502                                                          xor     edx,edx                                         ;zero register
  4503                                  .10                     lodsb                                                   ;source byte
  4504                                                          test    al,al                                           ;end of string?
  4505                                                          jz      .30                                             ;yes, branch
  4506                                                          cmp     al,'9'                                          ;hexadecimal?
  4507                                                          jna     .20                                             ;no, skip ahead
  4508                                                          sub     al,37h                                          ;'A' = 41h, less 37h = 0Ah
  4509                                  .20                     and     eax,0fh                                         ;remove ascii zone
  4510                                                          shl     edx,4                                           ;previous total x 16
  4511                                                          add     edx,eax                                         ;add prior value x 16
  4512                                                          jmp     .10                                             ;next
  4513                                  .30                     mov     eax,edx                                         ;result
  4514                                                          pop     esi                                             ;restore non-volatile regs
  4515                                                          ret                                                     ;return
