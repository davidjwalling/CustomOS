  4782                                                          mul     ah                                              ;row * cols/row
  4783                                                          add     al,cl                                           ;add column
  4784                                                          adc     ah,0                                            ;handle carry
  4785                                                          shl     eax,1                                           ;screen offset
  4786                                                          mov     [es:eax],dl                                     ;store character
  4787                                                          inc     cl                                              ;next column
  4788                                                          ret                                                     ;return
