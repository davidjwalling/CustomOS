  5209                                                          putConsoleString czBaseMem                              ;base memory label
  5210                                                          putConsoleString wzBaseMemSize                          ;base memory size
  5211                                                          putConsoleString czKB                                   ;Kilobytes
  5212                                                          putConsoleString czNewLine                              ;new line
  5213                                                          putConsoleString czExtendedMem                          ;extended memory label
  5214                                                          putConsoleString wzExtendedMemSize                      ;extended memory size
  5215                                                          putConsoleString czKB                                   ;Kilobytes
  5216                                                          putConsoleString czNewLine                              ;new line
  5217                                  .10                     putConsoleString czPrompt                               ;display input prompt
  5218                                                          placeCursor                                             ;set CRT cursor location
  5219                                                          getConsoleString wzConsoleInBuffer,79,1,13              ;accept keyboard input
  5220                                                          putConsoleString czNewLine                              ;newline
  5221                                  
