  4766                                  ;       Routine:        SetConsoleChar
  4767                                  ;
  4768                                  ;       Description:    This routine outputs an ASCII character at the given row and column.
  4769                                  ;
  4770                                  ;       In:             AL      ASCII character
  4771                                  ;                       CL      column
  4772                                  ;                       CH      row
  4773                                  ;                       ES      CGA selector
  4774                                  ;
  4775                                  ;       Out:            EAX     last target address written (ES:)
  4776                                  ;                       CL      column + 1
  4777                                  ;
  4778                                  ;-----------------------------------------------------------------------------------------------------------------------
  4779                                  SetConsoleChar          mov     dl,al                                           ;ASCII character
  4780                                                          movzx   eax,ch                                          ;row
